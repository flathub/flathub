{
    "app-id": "com.CalculaPro.app",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "23.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "calcula-pro",
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--filesystem=home",
        "--device=dri"
    ],
    "modules": [
        {
            "name": "Calcula Pro",
            "buildsystem": "simple",
            "build-commands": [
                "dotnet publish -r linux-x64 -c \"Release\" --output \"./Calcula-Pro-1.8.4/OPS/obj/desktop/linux/bin\" /p:PublishReadyToRun=true /p:PublishSingleFile=true --self-contained",
                "dotnet publish -r linux-arm64 -c \"Release\" --output \"./Calcula-Pro-1.8.4/OPS/obj/desktop/linux/bin\" /p:PublishReadyToRun=true /p:PublishSingleFile=true --self-contained"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/alexware69/Calcula-Pro/archive/refs/tags/v1.8.4.tar.gz"
                },
                {
                    "type": "file",
                    "path": "./Calcula-Pro-1.8.4/OPS/desktop-file.desktop"
                },
                {
                    "type": "file",
                    "path": "./Calcula-Pro-1.8.4/OPS/wwwroot/Images/ops-win.png"
                }
            ]
        }
    ]
}

