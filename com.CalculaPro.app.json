{
    "app-id": "com.CalculaPro.app",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "23.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "calcula-pro",
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--filesystem=home",
        "--device=dri"
    ],
    "modules": [
        {
            "name": "Calcula Pro",
            "buildsystem": "simple",
            "build-commands": [
                "dotnet publish -r linux-x64 -c \"Release\" --output \"./Calcula-Pro/OPS/obj/desktop/linux/bin\" /p:PublishReadyToRun=true /p:PublishSingleFile=true --self-contained",
                "dotnet publish -r linux-arm64 -c \"Release\" --output \"./Calcula-Pro/OPS/obj/desktop/linux/bin\" /p:PublishReadyToRun=true /p:PublishSingleFile=true --self-contained",
                "npx electron-builder --config=./Calcula-Pro/OPS/obj/desktop/linux/bin/electron-builder.json --linux --x64 -c.electronVersion=23.2.0",
                "npx electron-builder --config=./Calcula-Pro/OPS/obj/desktop/linux/bin/electron-builder.json --linux --arm64 -c.electronVersion=23.2.0"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/alexware69/Calcula-Pro"
                    "commit": "684839a1d9eb97a7c48b92e4665cd27ee488b126"
                },
                {
                    "type": "file",
                    "path": "./Calcula-Pro/OPS/desktop-file.desktop"
                },
                {
                    "type": "file",
                    "path": "./Calcula-Pro/OPS/wwwroot/Images/ops-win.png"
                }
            ]
        }
    ]
}

