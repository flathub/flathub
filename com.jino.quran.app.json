{
  "app-id": "com.jino.quran.app",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "24.08",
  "sdk": "org.freedesktop.Sdk",
  "command": "quran",
  "finish-args": [
    "--share=network",
    "--share=ipc",
    "--socket=x11",
    "--socket=wayland",
    "--device=dri",
    "--talk-name=org.freedesktop.Notifications",
    "--filesystem=xdg-documents",
    "--filesystem=xdg-download",
    "--filesystem=home"
  ],
  "modules": [
    {
      "name": "quran-app",
      "buildsystem": "simple",
      "build-commands": [
        "mkdir -p /app/lib/com.jino.quran.app",
        "cp -r . /app/lib/com.jino.quran.app/",
        "mkdir -p /app/bin",
        "ln -s /app/lib/com.jino.quran.app/quran /app/bin/quran",
        "mkdir -p /app/share/applications",
        "cp com.jino.quran.app.desktop /app/share/applications/",
        "mkdir -p /app/share/icons/hicolor/512x512/apps",
        "cp quran.png /app/share/icons/hicolor/512x512/apps/com.jino.quran.app.png",
        "install -Dm644 com.jino.quran.app.metainfo.xml /app/share/metainfo/com.jino.quran.app.metainfo.xml"
      ],
      "sources": [
        {
          "type": "dir",
          "path": "build_output"
        },
        {
            "type": "script",
            "dest-filename": "quran",
            "commands": [
                "exec /app/lib/com.jino.quran.app/quran \"$@\""
            ]
        },
        {
            "type": "file",
            "path": "com.jino.quran.app.metainfo.xml"
        },
        {
            "type": "file",
            "path": "quran.png"
        },
        {
            "type": "file",
            "path": "com.jino.quran.app.desktop"
        }
      ]
    }
  ]
}
