{
    "app-id": "io.github.DenysMb.Kontainer",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.9",
    "sdk": "org.kde.Sdk",
    "command": "kontainer",
    "finish-args": [
        "--share=ipc",
        "--socket=wayland",
        "--socket=session-bus",
        "--device=dri",
        "--env=DISPLAY=:0",
        "--filesystem=home",
        "--talk-name=org.freedesktop.Flatpak"
    ],
    "modules": [
        {
            "name": "kontainer",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/DenysMb/Kontainer.git",
                    "branch": "main"
                }
            ]
        }
    ]
}