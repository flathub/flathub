{
  "name": "hidapi",
  "buildsystem": "simple",
  "build-commands": [
    "./bootstrap",
    "./configure --prefix=/app",
    "make",
    "make install"
  ],
  "cleanup": [
    "/lib/*.la",
    "/lib/pkgconfig",
    "/include"
  ],
  "sources": [
    {
      "type": "git",
      "url": "https://github.com/libusb/hidapi.git",
      "tag": "hidapi-0.11.0",
      "commit": "0ec60c03cbe87cdbfb9fb199c7536fdcbc0a94b8"
    }
  ],
  "post-install": [
    "mkdir -p /app/share/licenses/hidapi/",
    "install -Dm644 LICENSE.txt LICENSE-bsd.txt LICENSE-orig.txt /app/share/licenses/hidapi/"
  ]
}
