{
    "id" : "io.github.mezoahmedii.Picker",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "46",
    "sdk" : "org.gnome.Sdk",
    "command" : "picker",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
    	{
            "name": "blueprint-compiler",
            "buildsystem": "meson",
            "cleanup": ["*"],
            "sources": [
    		{
      		    "type": "git",
      		    "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler",
                    "tag": "v0.12.0"
    		}
	    ]
	},
        {
            "name" : "Picker",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/mezoahmedii/picker.git",
                    "tag": "v1.0.1"
                }
            ]
        }
    ]
}
