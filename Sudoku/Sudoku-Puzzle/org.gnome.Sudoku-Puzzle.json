{
  "app-id": "org.gnome.Sudoku-Puzzle",
  "runtime": "org.gnome.Platform",
  "runtime-version": "3.26",
  "sdk": "org.gnome.Sdk",
  "command": "sudoku-puzzle",
  "sdk-extensions": [
    "org.freedesktop.Sdk.Extension.openjdk9"
  ],
  "finish-args": [
    "--share=network",
    "--share=ipc",
    "--socket=x11",
    "--socket=wayland",
    "--filesystem=xdg-run/dconf",
    "--filesystem=~/.config/dconf:ro",
    "--talk-name=ca.desrt.dconf",
    "--env=DCONF_USER_CONFIG_DIR=.config/dconf"
  ],
  "build-options": {
    "append-path": "/usr/lib/sdk/openjdk9/bin",
    "cflags": "-O2 -g",
    "cxxflags": "-O2 -g",
    "env": {
      "V": "1"
    }
  },
  "cleanup": [
    "/include",
    "/lib/pkgconfig",
    "/man",
    "/share/doc",
    "/share/gtk-doc",
    "/share/man",
    "/share/pkgconfig",

    "*.la",
    "*.a"
  ],
  "modules": [
    {
      "name": "openjdk",
      "buildsystem": "simple",
      "build-commands": [
        "/usr/lib/sdk/openjdk9/install.sh"
      ]
    },
    {
      "name": "sudoku-puzzle",
      "buildsystem": "simple",
      "build-commands": [
	"rm -rf ./bin/META-INF"
      ],
      "post-install": [
	"install -d /app/share/Sudoku",	
	"install -m644 ./bin/* /app/share/Sudoku",
	"install -d /app/share/applications",
        "install -m644 ./org.gnome.Sudoku-Puzzle.desktop /app/share/applications/org.gnome.Sudoku-Puzzle.desktop",
        "install -d /app/share/icons/hicolor/128x128/apps",
        "install -m644 ./org.gnome.Sudoku-Puzzle.png /app/share/icons/hicolor/128x128/apps/org.gnome.Sudoku-Puzzle.png",
	"chmod 666 /app/share/Sudoku/sudoku.txt",
	"install -d /app/bin",
	"install sudoku-puzzle /app/bin/sudoku-puzzle"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/panossot/Sudoku-puzzle"
        },
        {
          "type": "file",
          "path": "org.gnome.Sudoku-Puzzle.desktop"
        },
        {
          "type": "file",
          "path": "org.gnome.Sudoku-Puzzle.png"
        },
        {
          "type": "script",
          "dest-filename": "sudoku-puzzle",
          "commands": ["cd /app/share/Sudoku/ && /app/jre/bin/java GUI"]
        }
      ]
    }
  ]
}
