<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>cpm.muezzin.app</id>
  
  <name>Muezzin</name>
  <summary>Islamic prayer times application</summary>
  <url type="homepage">https://heroicgameslauncher.com</url>
  <url type="bugtracker">https://github.com/DBChoco/Muezzin/issues</url>
  <url type="reddit">https://www.reddit.com/r/Muezzin/</url>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>MIT</project_license>
  
  <description>
    <p>
      Islamic prayer times application that is highly customizable, free and open source.
    </p>
  </description>

  <launchable type="desktop-id">com.muezzin.app.desktop</launchable>
  <screenshots>
    <screenshot type="default">
      <caption>Main Screen - Light Mode</caption>
      <image>https://github.com/DBChoco/Muezzin/blob/master/screenshots/lightMode.png?raw=true</image>
    </screenshot>
    <screenshot>
      <caption>Main Screen - Dark Mode</caption>
      <image>https://github.com/DBChoco/Muezzin/blob/master/screenshots/darkMode.png?raw=true</image>
    </screenshot>
    <screenshot>
      <caption>Settings Screen</caption>
      <image>https://github.com/DBChoco/Muezzin/blob/master/screenshots/settingsDark.png?raw=true</image>
    </screenshot>
  </screenshots>
  <releases>
    <release version="v0.1.7" date="31/03/2022">
        <description>
            <p>General</p>
            <ul>
                <li>New in-app icons (Font-Awesome upgrade 4.7 > 6).</li>
                <li>Auto-updater is now disabled. Replaced it with a custom made update notifier.</li>
                <li>Prayer times table is now dynamic (changes size with windows size).</li>
                <li>App menu is now enabled with debugging options and hard reset.</li>
                <li>Added Urdu language</li>
            </ul>
            <p>BugFixes</p>
            <ul>
                <li>Fixed time showing as 00:00 when 1 minute left.</li>
                <li>Removed a few unnecessary modules</li>
            </ul>
        </description>
      </release>
  </releases>
</component>
