{
    "app-id": "org.syphon.Syphon",
    "runtime": "org.gnome.Platform",
    "runtime-version": "41",
    "sdk": "org.gnome.Sdk",
    "command": "syphon",
    "separate-locales": false,
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--share=network",
        "--device=all",
        "--filesystem=xdg-download",
        "--talk-name=org.freedesktop.Notifications",
        "--own-name=org.syphon.Syphon"
    ],
    "modules": [
        {
            "name": "libjsoncpp",
            "buildsystem": "cmake",
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=release",
                "-DBUILD_SHARED_LIBS=ON"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/open-source-parsers/jsoncpp/archive/refs/tags/1.9.5.tar.gz",
                }
            ]
        },
        {
            "name": "olm",
            "buildsystem": "cmake",
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.matrix.org/matrix-org/olm.git",
                    "tag": "3.2.8"
                }
            ]
        },
        {
            "name": "syphon",
            "buildsystem": "simple",
            "only-arches": [
                "x86_64"
            ],
            "build-commands": [
                "ls syphon",
                "cp -r syphon /app/syphon",
                "chmod +x /app/syphon/syphon",
                "install -Dm644 logo.svg /app/share/icons/hicolor/scalable/apps/org.syphon.Syphon.svg",
                "mkdir /app/bin",
                "ln -s /app/syphon/syphon /app/bin/syphon",
                "install -Dm644 org.syphon.Syphon.desktop /app/share/applications/org.syphon.Syphon.desktop",
                "install -Dm644 org.syphon.Syphon.metainfo.xml /app/share/appdata/org.syphon.Syphon.metainfo.xml"
            ],
            "sources": [
                {
                    "type": "archive",
                    "only-arches": [
                        "x86_64"
                    ],
                    "url": "https://github.com/syphon-org/syphon/releases/download/0.2.3/syphon.linux.x64.tar.gz",
                    "dest": "syphon",
                    "sha256": "7b4a2f5929b04131eb9b74e28cf97a1ef70c3ac3e3224e41092f12ac42c7c6fa",
                    "x-checker-data": {
                        "type": "json",
                        "is-main-source": true,
                        "url": "https://gitlab.com/api/v4/projects/famedly%2Ffluffychat/releases/",
                        "version-query": ".[0] | .tag_name | sub(\"v\";\"\")",
                        "url-query": ".[0] | .assets  | .links[] | select(.name==\"fluffychat-linux-x86.tar.gz\") | .url"
                    }
                },
                {
                    "type": "file",
                    "path": "org.syphon.Syphon.metainfo.xml"
                },
                {
                    "type": "file",
                    "path": "org.syphon.Syphon.desktop"
                },
                {
                    "type": "file",
                    "path": "logo.svg"
                }
            ]
        }
    ]
}
