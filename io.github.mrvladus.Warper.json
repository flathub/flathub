{
  "id": "io.github.mrvladus.Warper",
  "runtime": "org.gnome.Platform",
  "runtime-version": "47",
  "sdk": "org.gnome.Sdk",
  "command": "warper",
  "finish-args": [
    "--device=dri",
    "--socket=wayland",
    "--socket=fallback-x11",
    "--share=ipc",
    "--talk-name=org.freedesktop.Flatpak"
  ],
  "cleanup": [
    "/include",
    "/lib/pkgconfig",
    "/man",
    "/share/aclocal",
    "/share/gtk-doc",
    "/share/man",
    "/share/pkgconfig",
    "/share/vala",
    "*.la",
    "*.a"
  ],
  "modules": [
    {
      "name": "libportal",
      "buildsystem": "meson",
      "config-opts": [
        "-Dbackend-gtk4=disabled",
        "-Dbackend-gtk3=disabled",
        "-Dintrospection=false",
        "-Dvapi=false",
        "-Ddocs=false",
        "-Dtests=false"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/flatpak/libportal.git",
          "tag": "0.9.0"
        }
      ]
    },
    {
      "name": "warper",
      "buildsystem": "meson",
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/mrvladus/Warper.git",
          "commit": "971d1ccfe967766332416ef2721abeaba87295d2"
        }
      ]
    }
  ]
}
