{
    "app-id" : "org.jabref.jabref",
    "runtime" : "org.freedesktop.Platform",
    "runtime-version" : "19.08",
    "sdk" : "org.freedesktop.Sdk",
    "command" : "JabRef-launcher",
        "finish-args" : [
        "--socket=x11",
        "--share=network",
        "--filesystem=home",
        "--device=dri"
    ],
    "modules" : [
        {
            "name" : "JabRef",
            "buildsystem" : "simple",
            "build-commands" : [
                "tar -xzf JabRef-5.0-portable_linux.tar.gz --directory=/app/ --strip-components=1",
                "install -D -m0644 /app/lib/JabRef.png /app/share/icons/hicolor/64x64/apps/org.jabref.jabref.png",
                "install -D -m0644 org.jabref.jabref.desktop /app/share/applications/org.jabref.jabref.desktop",
                "install -D -m0644 org.jabref.jabref.appdata.xml /app/share/metainfo/org.jabref.jabref.appdata.xml",
                "install -D -m0755 JabRef-launcher /app/bin/JabRef-launcher"
            ],
            "sources" : [
                {
                    "type" : "file",
                    "url": "https://github.com/JabRef/jabref/releases/download/v5.0/JabRef-5.0-portable_linux.tar.gz",
                    "sha256": "2231df4a429e819f795483419bb40242ad1f0dc2a7893e546e62649b6a275e6c"
                },
                {
                    "type": "file",
                    "path": "org.jabref.jabref.desktop"
                },
                {
                    "type": "file",
                    "path": "JabRef-launcher"
                },
                {
                    "type": "file",
                    "path": "org.jabref.jabref.appdata.xml"
                }
            ]
        }
    ]
}
