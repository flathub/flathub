{
    "name": "python3-scipy",
    "buildsystem": "simple",
    "build-commands": [
        "python3 setup.py build -j 0",
        "python3 setup.py install --prefix=/app --root=/ --optimize=1"
    ],
    "build-options": {
        "env": {
            "ATLAS": "None",
            "BLAS": "/app/lib",
            "LAPACK": "/app/lib",
            "LDFLAGS": "-shared"
        }
    },
