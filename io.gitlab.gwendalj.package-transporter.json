{
    "app-id" : "io.gitlab.gwendalj.package-transporter",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "44",
    "sdk" : "org.gnome.Sdk",
    "command" : "package-transporter",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
        "--filesystem=/var/lib/flatpak/app:ro",
        "--filesystem=~/.var/app/:ro"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
          "name": "blueprint-compiler",
          "buildsystem": "meson",
          "sources": [
            {
              "type": "git",
              "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler",
              "tag": "v0.10.0"
            }
          ],
          "cleanup": [
            "*"
          ]
        },
        {
            "name" : "package-transporter",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.com/GwendalJ/package-transporter",
                    "commit": "65d27e42e1d02d7ac54cc66fdb91025729b732c9"
                }
            ]
        }
    ]
}

