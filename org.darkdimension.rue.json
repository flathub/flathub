{
	"id": "org.darkdimension.rue",
	"runtime": "org.freedesktop.Platform",
	"runtime-version": "20.08",
	"sdk": "org.freedesktop.Sdk",
	"command": "rue",
	"modules": [
		"shared-modules/glew/glew.json",
		"shared-modules/glu/glu-9.json",
		{
			"name": "avdl",
			"buildsystem": "simple",
			"build-commands": [
				"make prefix=${FLATPAK_DEST}",
				"make prefix=${FLATPAK_DEST} install"
			],
			"sources": [
				{
					"type": "archive",
					"url": "https://github.com/tomtsagk/avdl/archive/refs/tags/v0.1.3.tar.gz",
					"sha256": "538197493d1c4e50484b35329da197ae5476767b6e273ad6236f307a63b78d73"
				}
			],
			"cleanup": [
				"/bin/avdl",
				"/include",
				"/lib/libavdl-cengine.a",
				"/share/avdl"
			]
		},
		{
			"name": "rue",
			"buildsystem": "simple",
			"build-commands": [
				"make prefix=${FLATPAK_DEST} avdlargs=\"-L ${FLATPAK_DEST}/lib\"",
				"make prefix=${FLATPAK_DEST} install"
			],
			"sources": [
				{
					"type": "archive",
					"url": "https://github.com/tomtsagk/rue/archive/refs/tags/v0.0.8.tar.gz",
					"sha256": "baa63a3dd23de0356013a27c54df9cecc96d7a3fb2bb4121260cf0f9967845c0"
				}
			]
		}
	],
	"finish-args": [
		"--device=dri",
		"--socket=x11",
		"--share=ipc",
		"--socket=pulseaudio"
	]
}
