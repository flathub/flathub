{
  "app-id": "org.davmail.DavMail",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "1.6",
  "sdk": "org.freedesktop.Sdk",
  "sdk-extensions": [
    "org.freedesktop.Sdk.Extension.openjdk10"
  ],
  "finish-args": [
    /* couldn't get persist to work, needs access to .davmail.properties and davmail.log, could patch source... */
    "--filesystem=home",
    /* X11 access */
    "--socket=x11",
    "--share=ipc",
    /* Network access */
    "--share=network",
    "--env=JAVA_HOME=/app/jre"
  ],
  "build-options" : {
    "append-path": "/usr/lib/sdk/openjdk10/bin"
  },
  /* Could be done during the build below, but these are all related to relocation */
  "cleanup-commands": [
    "sed -i 's,/usr,/app,g'                        /app/bin/davmail",
    "sed -i 's,exec java,exec /app/jre/bin/java,g' /app/bin/davmail",
    "sed -i 's,/usr,/app,g'                        /app/share/applications/org.davmail.DavMail.desktop",
    "sed -i 's,Icon=.*,Icon=org.davmail.DavMail,g' /app/share/applications/org.davmail.DavMail.desktop"
  ],
  "modules": [
    {
      "name": "openjdk",
        "buildsystem": "simple",
        "build-commands": [
          "/usr/lib/sdk/openjdk10/install.sh"
        ]
    },
    {
      "name": "davmail",
      "buildsystem": "simple",
      "build-commands": [
        "sed -i s,-trunk,-2652, build.xml", /* version hack, update this when url changes */
        "ant/bin/ant prepare-dist",
        "install -Dp -m 755 src/bin/davmail /app/bin/davmail",
        "install -Dp -m 644 src/contribs/rpm/SOURCES/davmail.desktop /app/share/applications/org.davmail.DavMail.desktop",
        "install -Dp -m 644 dist/davmail.png /app/share/icons/hicolor/128x128/apps/org.davmail.DavMail.png",
        "install -Dp -m 644 org.davmail.DavMail.appdata.xml --target-directory=/app/share/appdata",
        "install -Dp -m 644 dist/davmail.jar /app/share/davmail/davmail.jar",
        "mkdir -p /app/share/davmail/lib",
        "find dist -name *.jar -exec install -Dp -m 644 \"{}\" /app/share/davmail/lib/ \\;"
      ],
      "sources" : [
        {
          "type": "archive",
          /* TODO: better url? */
          "url": "https://downloads.sourceforge.net/project/davmail/davmail/4.9.0/davmail-src-4.9.0-2652.tgz?r=https%3A%2F%2Fsourceforge.net%2Fprojects%2Fdavmail%2Ffiles%2Fdavmail%2F4.9.0%2Fdavmail-src-4.9.0-2652.tgz%2Fdownload&ts=1538020799&use_mirror=versaweb",
          "sha256": "b812a33b2d8cb9a45e57be0625fd8441b912d1053d545d5012251d5fe6fc9fb9"
        },
        {
          "type": "patch",
          "path": "0001-Show-main-window-on-Fedora-Gnome.patch"
        },
        {
          "type": "patch",
          "path": "0002-desktop-file-remove-deprecations-and-duplicate-main-.patch"
        },
        {
          "type": "archive",
          "url": "https://archive.apache.org/dist/ant/binaries/apache-ant-1.10.2-bin.tar.xz",
          "sha256": "361c8ad2ed8341416e323e7c28af10a8297170a80fdffba294a5c2031527bb6c",
          "dest": "ant"
        },
        {
          "type": "file",
          "path": "org.davmail.DavMail.appdata.xml"
        }
      ],
      "cleanup": [
        "swt*.jar",
        "libgrowl*.jar",
        "winrun4j*.jar"
      ]
    }
  ]
}
