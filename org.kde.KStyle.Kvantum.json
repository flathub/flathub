{
    "id": "org.kde.KStyle.Kvantum",
    "runtime": "org.kde.Platform",
    "build-extension": true,
    "sdk": "org.kde.Sdk",
    "command": "kvantummanager",
    "runtime-version": "5.12",
    "separate-locales": false,
    "appstream-compose": false,
    "finish-args": [
        "--socket=x11",
        "--env=QT_QPA_PLATFORM=",
        "--own-name=org.kde.*",
        "--filesystem=home"
    ],
    "modules": [
        {
            "name": "kvantum",
            "buildsystem": "qmake",
            "config-opts": [
                "PREFIX=${FLATPAK_DEST}"
            ],
            "build-commands": [
                "install -Dm755 -t ${FLATPAK_DEST}/styles/ style/libkvantum.so"
            ],
            "subdir": "Kvantum",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/tsujan/Kvantum/archive/V0.16.1.tar.gz",
                    "sha256": "61d4a56567075d353c427e811349008e27bcaaac4806f1e5e8dc3fe1ad20e936"
                }
            ]
        },
        {
            "name": "desktop",
            "buildsystem": "simple",
            "build-commands": [
                "install -Dm 644 -t /app/share/applications org.kde.KStyle.Kvantum.desktop",
                "install -Dm 644 -t /usr/local/share/icons/hicolor/scalable/apps org.kde.KStyle.Kvantum.svg"
                ]
        },
        {
            "name": "appdata",
            "buildsystem": "simple",
            "build-commands": [
                "install -Dm644 ${FLATPAK_ID}.appdata.xml -t ${FLATPAK_DEST}/share/appdata/",
                "appstream-compose --basename=${FLATPAK_ID} --prefix=${FLATPAK_DEST} --origin=flatpak ${FLATPAK_ID}"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "org.kde.KStyle.Kvantum.appdata.xml"
                }
            ]
        }
    ]
}
