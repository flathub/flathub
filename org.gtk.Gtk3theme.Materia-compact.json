{
  "id": "org.gtk.Gtk3theme.Materia-compact",
  "branch": "3.22",
  "runtime": "org.gnome.Sdk",
  "build-extension": true,
  "sdk": "org.gnome.Sdk",
  "runtime-version": "3.26",
  "appstream-compose": false,
  "separate-locales": false,
  "modules": [
    {
      "name": "Materia-compact",
      "buildsystem": "simple",
      "build-commands": [
        "mkdir -pm 755 /usr/share/runtime/share/themes/Materia-compact/gtk-3.0",
        "cp src/gtk/3.0/gtk-compact.css /usr/share/runtime/share/themes/Materia-compact/gtk-3.0/gtk.css",
        "cp src/gtk/3.0/gtk-dark-compact.css /usr/share/runtime/share/themes/Materia-compact/gtk-3.0/gtk-dark.css",
        "cp -r src/gtk/assets /usr/share/runtime/share/themes/Materia-compact/gtk-3.0"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/nana-4/materia-theme/archive/v20181125.tar.gz",
          "sha256": "50066e40cbfc8e00a995fb73522d1cb6b21b236fa03b4463d9e25a0f5c4fe5bc"
        }
      ]
    },
    {
      "name": "appdata",
      "buildsystem": "simple",
      "build-commands": [
        "mkdir -p ${FLATPAK_DEST}/share/appdata",
        "cp org.gtk.Gtk3theme.Materia-compact.appdata.xml ${FLATPAK_DEST}/share/appdata",
        "appstream-compose --basename=org.gtk.Gtk3theme.Materia-compact --prefix=${FLATPAK_DEST} --origin=flatpak org.gtk.Gtk3theme.Materia-compact"
      ],
      "sources": [
        {
          "type": "file",
          "path": "org.gtk.Gtk3theme.Materia-compact.appdata.xml"
        }
      ]
    }
  ]
}
