{
  "id": "com.axosoft.GitKraken",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "1.6",
  "sdk": "org.freedesktop.Sdk",
  "base": "io.atom.electron.BaseApp",
  "base-version": "stable",
  "command": "gitkraken",
  "tags": [
    "proprietary"
  ],
  "separate-locales": false,
  "finish-args": [
    "--share=ipc",
    "--socket=x11",
    "--socket=wayland",
    "--share=network",
    "--device=dri",
    "--filesystem=host",
    "--talk-name=org.freedesktop.Notifications",
    "--talk-name=org.freedesktop.secrets",
    "--env=LD_LIBRARY_PATH=/app/lib"
  ],
  "build-options": {
    "cflags": "-O2 -g -pipe -fstack-protector-strong -D_FORTIFY_SOURCE=2",
    "cxxflags": "-O2 -g -pipe -fstack-protector-strong -D_FORTIFY_SOURCE=2",
    "ldflags": "-fstack-protector-strong -Wl,-z,relro,-z,now"
  },
  "cleanup": [
    "/include",
    "/lib/pkgconfig",
    "/share/pkgconfig",
    "/share/aclocal",
    "/man",
    "/share/man",
    "/share/gtk-doc",
    "/share/doc",
    "*.la",
    "*.a"
  ],
  "modules": [
    {
      "name": "libXScrnSaver",
      "config-opts": [
        "--disable-static"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://www.x.org/releases/individual/lib/libXScrnSaver-1.2.2.tar.bz2",
          "sha256": "8ff1efa7341c7f34bcf9b17c89648d6325ddaae22e3904e091794e0b4426ce1d"
        }
      ]
    },
    {
      "name": "libsecret",
      "config-opts": [
        "--disable-manpages",
        "--disable-gtk-doc",
        "--disable-static",
        "--disable-introspection"
      ],
      "cleanup": [
        "/bin",
        "/include",
        "/lib/pkgconfig",
        "/share/gtk-doc",
        "*.la"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://ftp.gnome.org/pub/GNOME/sources/libsecret/0.18/libsecret-0.18.6.tar.xz",
          "sha256": "5efbc890ba41a323ffe0599cd260fd12bd8eb62a04aa1bd1b2762575d253d66f"
        },
        {
          "type": "shell",
          "commands": [
            "autoreconf -f"
          ]
        }
      ]
    },
    {
      "name": "xkbfile",
      "cleanup": [
        "/include",
        "/lib/*.la",
        "/lib/pkgconfig"
      ],
      "config-opts": [
        "--disable-static"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://www.x.org/releases/individual/lib/libxkbfile-1.0.9.tar.bz2",
          "sha256": "51817e0530961975d9513b773960b4edd275f7d5c72293d5a151ed4f42aeb16a"
        }
      ]
    },
    {
      "name": "libcurl-gnutls",
      "config-opts": [
        "--disable-ldap",
        "--disable-ldaps",
        "--disable-manual",
        "--enable-ipv6",
        "--enable-threaded-resolver",
        "--without-gssapi",
        "--without-libidn",
        "--without-ssl",
        "--with-gnutls=/usr",
        "--with-ca-bundle='/etc/ssl/certs/ca-certificates.crt'"
      ],
      "cleanup": [
        "/bin"
      ],
      "post-install": [
        "mv /app/lib/libcurl{,-gnutls}.so.4.5.0",
        "rm /app/lib/libcurl.so*",
        "ln -s /app/lib/libcurl-gnutls.so.4.5.0 /app/lib/libcurl-gnutls.so.4"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://curl.haxx.se/download/curl-7.60.0.tar.xz",
          "sha256": "8736ff8ded89ddf7e926eec7b16f82597d029fc1469f3a551f1fafaac164e6a0"
        }
      ]
    },
    {
      "name": "gitkraken",
      "buildsystem": "simple",
      "build-commands": [
        "install -Dm755 apply_extra /app/bin/apply_extra",
        "install -Dm755 gitkraken.sh /app/bin/gitkraken",
        "install -Dm644 com.axosoft.GitKraken.png /app/share/icons/hicolor/512x512/apps/com.axosoft.GitKraken.png",
        "install -Dm644 com.axosoft.GitKraken.appdata.xml /app/share/appdata/com.axosoft.GitKraken.appdata.xml",
        "install -Dm644 gitkraken.desktop /app/share/applications/com.axosoft.GitKraken.desktop"
      ],
      "sources": [
        {
          "type": "script",
          "dest-filename": "apply_extra",
          "commands": [
            "tar -xf gitkraken.tar.gz",
            "rm -f gitkraken.tar.gz"
          ]
        },
        {
          "type": "script",
          "commands": [
            "exec env /app/extra/gitkraken/gitkraken"
          ],
          "dest-filename": "gitkraken.sh"
        },
        {
          "type": "file",
          "path": "com.axosoft.GitKraken.appdata.xml"
        },
        {
          "type": "file",
          "path": "gitkraken.desktop"
        },
        {
          "type": "file",
          "path": "com.axosoft.GitKraken.png"
        },
        {
          "type": "extra-data",
          "filename": "gitkraken.tar.gz",
          "only-arches": [
            "x86_64"
          ],
          "url": "https://release.gitkraken.com/linux/gitkraken-amd64.tar.gz",
          "sha256": "6fb741d76c391cce10edbba10c3f3da0566ff4905501a2a864931d824505d504",
          "size": 90188334
        }
      ]
    }
  ]
}
