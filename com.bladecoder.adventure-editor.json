{
    "app-id" : "com.bladecoder.adventure-editor",
    "runtime" : "org.freedesktop.Platform",
    "runtime-version" : "1.6",
    "sdk" : "org.freedesktop.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.openjdk9"
    ],
    "command" : "adventure-editor",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=x11",
        "--socket=pulseaudio",
        "--device=dri",
        "--filesystem=home",
         "--env=PATH=/usr/bin:/app/bin:/app/jre/bin",
         "--env=JAVA_HOME=/app/jre"
    ],
    "modules" : [
        {
            "name": "xorg-xrandr",
            "sources": [
                {
                    "type": "archive",
                    "sha256": "1059ff7a9ad0df8e00a765ffa4e08a505304c02663112da370ac7082030b980e",
                    "url": "http://xorg.freedesktop.org/releases/individual/app/xrandr-1.3.5.tar.bz2"
                },
                {
                     "type": "shell",
                     "commands": [ "autoreconf -fi" ]
                }
            ]
        },
        {
            "name": "openjdk",
            "buildsystem": "simple",
            "build-commands": [
              "/usr/lib/sdk/openjdk9/install.sh"
            ]
        },
        {
            "name": "adventure-editor",
            "buildsystem": "simple",
            "build-commands": [
                "install -D bin/adventure-editor /app/bin/adventure-editor",
                "install -D lib/*.jar /app/lib",
                "install -Dm644 com.bladecoder.adventure-editor.png /app/share/icons/hicolor/96x96/apps/com.bladecoder.adventure-editor.png",
                "install -Dm644 com.bladecoder.adventure-editor.svg /app/share/icons/hicolor/scalable/apps/com.bladecoder.adventure-editor.svg",
                "install -Dm644 com.bladecoder.adventure-editor.desktop /app/share/applications/com.bladecoder.adventure-editor.desktop",
                "install -Dm644 com.bladecoder.adventure-editor.appdata.xml /app/share/appdata/com.bladecoder.adventure-editor.appdata.xml"
            ],
            "sources" : [
                {
                    "type": "archive",
                    "sha256": "340782d5f88247510ca5a43571feb378c1067eb04c16d1fb06a71c2a103ab3b8",
                    "url" : "https://github.com/bladecoder/bladecoder-adventure-engine/releases/download/v2.0.0/adventure-editor-2.0.0.zip"
                },
                {
                    "type": "file",
                    "path": "com.bladecoder.adventure-editor.appdata.xml"
                },
                {
                    "type": "file",
                    "path": "com.bladecoder.adventure-editor.desktop"
                },
                {
                    "type": "file",
                    "path": "com.bladecoder.adventure-editor.png"
                },
                {
                    "type": "file",
                    "path": "com.bladecoder.adventure-editor.svg"
                }
            ]
        }
    ]
}
