{
  "app-id": "com.github.alexkdeveloper.web-app-creator",
  "runtime": "org.gnome.Platform",
  "runtime-version": "42",
  "sdk": "org.gnome.Sdk",
  "command": "com.github.alexkdeveloper.web-app-creator",
  "finish-args": [
     "--device=dri",
     "--share=ipc",
     "--socket=fallback-x11",
     "--socket=wayland",
     "--filesystem=home:ro",
     "--filesystem=xdg-data/applications:create"
  ],
  "cleanup": [
     "/include",
     "/lib/pkgconfig",
     "/man",
     "/share/doc",
     "/share/gtk-doc",
     "/share/man",
     "/share/pkgconfig",
     "/share/vala",
     "*.la",
     "*.a"
  ],
  "modules": [
        {
        "name": "Web App Creator",
        "buildsystem": "meson",
        "sources": [
            {
                "type" : "git",
                "url" : "https://github.com/alexkdeveloper/web-app-creator.git",
                "tag": "1.0.0",
                "commit": "a228a5b104c5de7b9e2f682aac9daa57d67a1528"
            }
        ]
      }
  ]
}
