{
  "app-id": "org.example.NotifyHub",
  "runtime": "org.gnome.Platform",
  "runtime-version": "47",
  "sdk": "org.gnome.Sdk",
  "command": "notifyhub",
  "finish-args": [
    "--device=all",
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--talk-name=org.freedesktop.Notifications",
    "--talk-name=org.freedesktop.DBus",
    "--filesystem=host:ro"
  ],
  "modules": [
    {
      "name": "notifyhub",
      "buildsystem": "meson",
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/Leeuw-Maluleka/notifyhub.git",
          "tag": "v0.1.0"
        }
      ],
      "post-install": [
        "glib-compile-schemas /app/share/glib-2.0/schemas"
      ]
    }
  ]
}
