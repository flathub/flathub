{
    "id": "page.tesk.Refine",
    "runtime": "org.gnome.Platform",
    "runtime-version": "47",
    "sdk": "org.gnome.Sdk",
    "command": "start-refine.sh",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--talk-name=ca.desrt.dconf",
        "--talk-name=org.freedesktop.Flatpak",
        "--filesystem=xdg-run/dconf",
        "--filesystem=xdg-config/dconf",
        "--filesystem=host-os:ro",
        "--env=GIO_EXTRA_MODULES=/app/lib/gio/modules/",
        "--device=dri"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "blueprint-compiler",
            "buildsystem": "meson",
            "cleanup": [
                "*"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler",
                    "tag": "v0.14.0"
                }
            ]
        },
        {
            "name": "libportal",
            "buildsystem": "meson",
            "config-opts": [
                "-Dtests=false",
                "-Dbackend-gtk3=disabled",
                "-Dbackend-gtk4=enabled",
                "-Dbackend-qt5=disabled",
                "-Ddocs=false"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/flatpak/libportal/releases/download/0.8.1/libportal-0.8.1.tar.xz",
                    "sha256": "281e54e4f8561125a65d20658f1462ab932b2b1258c376fed2137718441825ac"
                }
            ]
        },
        {
            "name": "dconf",
            "buildsystem": "meson",
            "config-opts": [
                "-Dbash_completion=false",
                "-Dman=false"
            ],
            "cleanup": [
                "/include",
                "/lib/pkgconfig",
                "/libexec",
                "/share/dbus-1"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/dconf/0.40/dconf-0.40.0.tar.xz",
                    "sha256": "cf7f22a4c9200421d8d3325c5c1b8b93a36843650c9f95d6451e20f0bcb24533"
                },
                {
                    "type": "patch",
                    "path": "dconf-override.patch"
                }
            ]
        },
        {
            "name": "libsass",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/lazka/libsass.git",
                    "commit": "aac79dccd3c8f7e8f22125f87a119f3b1ee9d487"
                }
            ]
        },
        {
            "name": "sassc",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/lazka/sassc.git",
                    "commit": "a1950c2d95ea4c051feb90bb1f43559fbb54bf36"
                }
            ]
        },
        {
            "name": "libadwaita",
            "buildsystem": "meson",
            "config-opts": [
                "-Dexamples=false",
                "-Dtests=false"
            ],
            "cleanup": [
                "/include",
                "/lib/pkgconfig",
                "/libexec",
                "/share/dbus-1"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/GNOME/libadwaita.git",
                    "commit": "2ea59b267b2e10d18050f395d861a58b96ad9b5c"
                }
            ]
        },
        {
            "name": "refine",
            "builddir": true,
            "buildsystem": "meson",
            "post-install": [
                "install -Dm 755 ../start-refine.sh /app/bin/start-refine.sh",
                "desktop-file-edit --set-key='Exec' --set-value='start-refine.sh' /app/share/applications/$FLATPAK_ID.desktop"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/TheEvilSkeleton/Refine.git",
                    "tag": "0.1.0",
                    "commit": "8b8595bcf2c7c40ac36754bca3563d6e76235299"
                },
                {
                    "type": "file",
                    "path": "start-refine.sh"
                }
            ]
        }
    ]
}