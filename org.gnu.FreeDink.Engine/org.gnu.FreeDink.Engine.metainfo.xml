<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop">
  <id>org.gnu.FreeDink.Engine</id>
  <name>GNU FreeDink</name>
  <summary>Free, enhanced reimplementation of the Dink Smallwood engine</summary>

  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-3.0-or-later</project_license>

  <description>
    <p>
      GNU FreeDink is a free and portable game engine for the classic
      action role-playing game Dink Smallwood. It runs the original game,
      supports fan-made D-Mods, and includes a complete free replacement
      for the original game data.
    </p>
    <p>
      This Flatpak ships the free game data by default and lets players
      drop original Dink data and additional D-Mods into their home
      directory without modifying the sandbox.
    </p>
  </description>

  <launchable type="desktop-id">org.gnu.FreeDink.Engine.desktop</launchable>

  <categories>
    <category>Game</category>
    <category>AdventureGame</category>
    <category>RolePlaying</category>
  </categories>

  <keywords>
    <keyword>Dink</keyword>
    <keyword>RPG</keyword>
    <keyword>Action</keyword>
    <keyword>FreeDink</keyword>
  </keywords>

  <url type="homepage">https://www.gnu.org/software/freedink/</url>
  <url type="bugtracker">https://savannah.gnu.org/bugs/?group=freedink</url>

  <provides>
    <binary>freedink-wrapper</binary>
  </provides>

  <content_rating type="oars-1.1">
    <content_attribute id="violence-cartoon">moderate</content_attribute>
    <content_attribute id="violence-fantasy">moderate</content_attribute>
    <content_attribute id="drugs-alcohol">moderate</content_attribute>
    <content_attribute id="language-humor">moderate</content_attribute>
  </content_rating>

  <releases>
    <release version="109.6" date="2019-01-20">
      <description>
        <p>Stable engine release corresponding to the tarball shipped here.</p>
      </description>
    </release>
  </releases>
</component>
