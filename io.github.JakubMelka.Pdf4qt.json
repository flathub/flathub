{
    "app-id": "io.github.JakubMelka.Pdf4qt",
    "runtime": "org.kde.Sdk",
    "runtime-version": "6.5",
    "sdk": "org.kde.Sdk",
    "command": "/app/bin/Pdf4QtViewerProfi",
    "build-options": {
	"build-args": [ "--share=network" ]
	},
    "finish-args": [
        "--socket=x11",
        "--socket=wayland",
        "--device=dri",
        "--share=ipc",
        "--filesystem=xdg-config/kdeglobals:ro"
    ],
    "cleanup": [
        "/pdf4qt",
        "/vcpkg"
    ],
    "modules": [
        {
            "name": "PDF4QT",
            "buildsystem": "simple",
            "build-commands": [
                "./build_pdf4qt.sh"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/JakubMelka/PDF4QT/archive/refs/tags/v1.3.5.tar.gz",
                    "sha256": "18f908cffc4e303b3866aa12545708126068fadeea0afaea42aff4f9094e481f",
                    "dest": "pdf4qt"
                },
                {
                    "type": "file",
                    "path": "build_pdf4qt.sh",
                    "dest-filename": "build_pdf4qt.sh"
                }
            ]
        }
    ]
}

