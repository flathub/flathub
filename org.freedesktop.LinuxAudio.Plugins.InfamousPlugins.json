{
    "id": "org.freedesktop.LinuxAudio.Plugins.InfamousPlugins",
    "runtime": "org.freedesktop.LinuxAudio.BaseExtension",
    "runtime-version": "stable",
    "sdk": "org.freedesktop.Sdk//24.08",
    "build-extension": true,
    "branch": "24.08",
    "build-options": {
        "prefix": "/app/extensions/Plugins/InfamousPlugins",
        "prepend-path": "/app/extensions/Plugins/InfamousPlugins/bin",
        "prepend-ld-library-path": "/app/extensions/Plugins/InfamousPlugins/lib",
        "prepend-pkg-config-path": "/app/extensions/Plugins/InfamousPlugins/lib/pkgconfig"
    },
    "cleanup": [
        "/lib/lv2"
    ],
    "modules": [
        "shared-modules/linux-audio/lv2.json",
        "shared-modules/linux-audio/fftw3f-static.json",
        {
            "name": "ntk",
            "buildsystem": "simple",
            "build-commands": [
                "python3 ./waf configure --prefix=${FLATPAK_DEST} --libdir=lib",
                "python3 ./waf",
                "python3 ./waf install"
            ],
            "cleanup": [
                "/lib",
                "/include",
                "/bin"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://git.kx.studio/non/ntk/archive/v1.3.1001.tar.gz",
                    "sha256": "bd11c27b0db7dc57b9f7d878256292e67612c9e06c6c4e3dd8e71033b34acaa5"
                },
                {
                    "type": "file",
                    "url": "https://waf.io/waf-2.0.25",
                    "dest-filename": "waf",
                    "sha256": "21199cd220ccf60434133e1fd2ab8c8e5217c3799199c82722543970dc8e38d5"
                },
                {
                    "type": "patch",
                    "path": "patches/ntk-static.diff"
                }
            ]
        },
        {
            "name": "zita-resampler",
            "buildsystem": "simple",
            "build-options": {
                "env": {
                    "PREFIX": "${FLATPAK_DEST}"
                }
            },
            "build-commands": [
                "make -C source LIBDIR=$PREFIX/lib -j  $FLATPAK_BUILDER_N_JOBS",
                "make -C source LIBDIR=$PREFIX/lib install"
            ],
            "cleanup": [
                "/include",
                "*.so",
                "*.a"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://web.archive.org/web/20200218012756/http://kokkinizita.linuxaudio.org/linuxaudio/downloads/zita-resampler-1.6.2.tar.bz2",
                    "sha256": "233baefee297094514bfc9063e47f848e8138dc7c959d9cd957b36019b98c5d7"
                },
                {
                    "type": "patch",
                    "path": "patches/zita-resampler-make.patch"
                }
            ]
        },
        {
            "name": "infamousplugins",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DLIBDIR=${FLATPAK_DEST}"
            ],
            "post-install": [
                "strip ${FLATPAK_DEST}/lv2/*.lv2/*.so",
                "install -Dm644 org.freedesktop.LinuxAudio.Plugins.InfamousPlugins.metainfo.xml -t ${FLATPAK_DEST}/share/metainfo"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/ssj71/infamousPlugins/archive/v0.3.2.tar.gz",
                    "sha256": "4c83e3d80e501ae72cb891fccf2cfe286fb506aaf6ce2c067a5b7a2dd272e4b4"
                },
                {
                    "type": "file",
                    "path": "org.freedesktop.LinuxAudio.Plugins.InfamousPlugins.metainfo.xml"
                }
            ]
        }
    ]
}
