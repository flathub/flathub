{
    "app-id" : "me.dusansimic.DynamicWallpaper",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "42",
    "sdk" : "org.gnome.Sdk",
    "command" : "me.dusansimic.DynamicWallpaper",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
        "--filesystem=xdg-data/backgrounds",
        "--filesystem=xdg-data/gnome-background-properties"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "dynamic-wallpaper",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/dusansimic/dynamic-wallpaper",
										"tag" : "v0.0.1",
										"commit" : "9cc27b273a900e3ee8777887bb27bd531a6e91ea"
                }
            ]
        }
    ]
}
