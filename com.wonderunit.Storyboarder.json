{
    "app-id" : "com.wonderunit.Storyboarder",
    "runtime" : "org.freedesktop.Platform",
    "runtime-version" : "21.08",
    "sdk" : "org.freedesktop.Sdk",
    "command" : "storyboarder",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--filesystem=xdg-desktop",
        "--filesystem=xdg-documents",
        "--filesystem=xdg-pictures"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "storyboarder",
            "buildsystem" : "simple",
            "sources" : [
                {
                    "type" : "file",
                    "url" : "https://github.com/wonderunit/storyboarder/releases/download/v3.0.0/Storyboarder-3.0.0-linux-amd64.deb",
                    "sha256":"614dc9f7bd42941748f97568107bf1b4c697878868442ee90dad9e7c186283ce",
                    "dest-filename":"storyboarder.deb",
                    "only-arches":[
                        "x86_64"
                    ],
                    "x-checker-data":{
                        "type": "json",
                        "url": "https://api.github.com/repos/wonderunit/storyboarder/releases/latest",
                        "tag-query": ".tag_name",
                        "version-query": ".tag_name",
                        "timestamp-query": ".published_at",
                        "url-query": "[.assets[] | select(.name|test(\"Storyboarder-.+-amd64.deb$\"))][0] | .browser_download_url"
                    }
                }
            ],
            "build-commands" : [
                "ar x storyboarder.deb",
                "tar xf data.tar.xz",
                "mkdir -p /app/opt",
                "cp -rvf opt/* /app/opt",
                "mkdir -p /app/share",
                "mkdir -p /app/share/icons",
                "cp -rvf usr/share/icons/* /app/share/icons/hicolor",
                "find /app/share/icons/hicolor -name storyboarder.png -exec rename storyboarder.png com.wonderunit.Storyboarder.png '{}' \\;"
            ]
        },
    	{
            "name" : "storyboarder-appstream",
            "buildsystem" : "simple",
            "sources" : [
                {
                    "type" : "file",
                    "path" : "com.wonderunit.Storyboarder.appdata.xml"
                },
                {
                    "type" : "file",
                    "path" : "com.wonderunit.Storyboarder.desktop"
                }
            ],
            "build-commands" : [
                "mkdir -p /app/share/metainfo",
                "cp -vf com.wonderunit.Storyboarder.appdata.xml /app/share/metainfo/com.wonderunit.Storyboarder.appdata.xml",
                "mkdir -p /app/share/applications",
                "cp -vf com.wonderunit.Storyboarder.desktop /app/share/applications/com.wonderunit.Storyboarder.desktop"
            ]
        },
        {
            "name" : "executable",
            "buildsystem" : "simple",
            "sources" : [
                {
                    "type" : "script",
                    "commands" : [
                        "cd /app/opt/Storyboarder; ./storyboarder --no-sandbox"
                    ],
                    "dest-filename" : "storyboarder"
                }
            ],
            "build-commands" : [
                "mkdir -p /app/bin",
                "cp storyboarder /app/bin"
            ]
        }
    ]
}
