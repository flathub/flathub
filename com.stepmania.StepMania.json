{
    "app-id" : "com.stepmania.StepMania",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "3.28",
    "sdk" : "org.gnome.Sdk",
    "command" : "stepmania",
    "finish-args" : [
        "--device=all",
        "--share=ipc",
        "--share=network",
        "--socket=pulseaudio",
        "--socket=wayland",
        "--socket=x11",
        "--filesystem=xdg-run/dconf",
        "--filesystem=~/.config/dconf:ro",
        "--talk-name=ca.desrt.dconf",
        "--env=DCONF_USER_CONFIG_DIR=.config/dconf"
    ],
    "modules" : [
        "libmad/libmad.json",
        "shared-modules/glu/glu-9.0.0.json",
        "shared-modules/glew/glew.json",
        "shared-modules/udev/udev-175.json",
        {
            "name" : "stepmania",
            "buildsystem" : "cmake-ninja",
            "config-opts" : [
                "-DWITH_FFMPEG:BOOL=OFF"
            ],
            "post-install": [
                "mkdir -p /app/bin/",
                "ln -s /app/stepmania-5.1/stepmania /app/bin/stepmania",
                "install -m644 -p -D icons/hicolor/256x256/apps/stepmania-ssc.png /app/share/icons/hicolor/256x256/apps/com.stepmania.StepMania.png",
                "install -m644 -p -D icons/hicolor/scalable/apps/stepmania-ssc.svg /app/share/icons/hicolor/scalable/apps/com.stepmania.StepMania.svg",
                "install -m644 -p -D stepmania.desktop /app/share/applications/com.stepmania.StepMania.desktop",
                "install -m644 -p -D com.stepmania.StepMania.appdata.xml /app/share/appdata/com.stepmania.StepMania.appdata.xml",
                "desktop-file-edit --set-icon=com.stepmania.StepMania /app/share/applications/com.stepmania.StepMania.desktop"
            ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://github.com/stepmania/stepmania/archive/v5.1.0-b2.tar.gz",
                    "sha256" : "2e311df9b661ba287b046ce377eb0b41e426b73e169841df99fc9fe2baa89310"
                },
                {
                    "type": "file",
                    "path": "com.stepmania.StepMania.appdata.xml"
                }
            ]
        }
    ]
}
