<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
    <id>com.alpineclient.AlpineClient</id>

    <name>Alpine Client</name>
    <summary>A lightweight Minecraft mod-pack</summary>
    <icon type="remote">https://api.alpineclientprod.com/uploads/dark_diamond_logo_256_15af794bce.png</icon>

    <url type="homepage">https://alpineclient.com/</url>
    <url type="faq">https://alpineclient.com/#faq</url>
    <url type="help">https://discord.alpineclient.com/</url>

    <developer id="co.crystaldev">
        <name>Crystal Development, LLC</name>
    </developer>

    <metadata_license>MIT</metadata_license>
    <project_license>MPL-2.0</project_license>

    <branding>
        <color type="primary" scheme_preference="light">#f1f7ed</color>
        <color type="primary" scheme_preference="dark">#a62639</color>
    </branding>

    <description>
        <p>
            Alpine Client is an all-in-one modpack for Minecraft that offers
            a multitude of enhancements and optimizations to improve your gameplay.
            It brings together popular mods, exclusive features, player cosmetics,
            and multi-version support to curate the ultimate player experience.
        </p>
    </description>

    <categories>
        <category>Game</category>
    </categories>

    <launchable type="desktop-id">com.alpineclient.AlpineClient.desktop</launchable>
    <screenshots>
        <screenshot type="default">
            <image type="source" width="1128" height="709">https://api.alpineclientprod.com/uploads/launcher_home_8c99bea736.png</image>
            <caption>Home screen</caption>
        </screenshot>
        <screenshot>
            <image type="source" width="1128" height="709">https://api.alpineclientprod.com/uploads/launcher_version_selector_aee910f0f8.png</image>
            <caption>Minecraft version selector</caption>
        </screenshot>
        <screenshot>
            <image type="source" width="1080" height="675">https://api.alpineclientprod.com/uploads/alpine_gui_6484ddc907.png</image>
            <caption>In-game module GUI</caption>
        </screenshot>
        <screenshot>
            <image type="source" width="1080" height="675">https://api.alpineclientprod.com/uploads/alpine_gui_2_21a0a85cff.png</image>
            <caption>In-game module settings</caption>
        </screenshot>
    </screenshots>

    <recommends>
        <memory>4096</memory>
    </recommends>
    <requires>
        <internet>always</internet>
    </requires>
    <supports>
        <control>pointing</control>
        <control>keyboard</control>
        <control>gamepad</control>
    </supports>


    <content_rating type="oars-1.1">
        <content_attribute id="violence-cartoon">moderate</content_attribute>
        <content_attribute id="social-chat">intense</content_attribute>
    </content_rating>

    <releases>
        <release version="1.6.0" date="2024-06-17">
            <url>https://alpineclient.com/news/15</url>
        </release>
    </releases>

</component>