<?xml version="1.0" encoding="UTF-8"?>
<application>
  <id type="desktop">org.gnomeradio.Radio</id>
  <name>GNOME Radio</name>
  <summary>Listen to National Public Radio</summary>
  <licence>CC0</licence>
  <description>
    <p>
      GNOME Radio is a Free Software program that allows you easily
      listen to National Public Radio (NPR) broadcasts under GNOME.
    </p>
    <p>
      GNOME Radio is developed on the GNOME desktop platform and
      it requires GTK4, Clutter and GStreamer 1.0 for playback.
    </p>
    <p>    
    Enjoy National Public Radio (NPR) broadcasts.
    </p>
  </description>
  <content_rating type="oars-1.1">
    <content_attribute id="social-audio">moderate</content_attribute>
  </content_rating>
  <releases type="external" url="http://www.gnomeradio.org/~ole/radio/org.gnomeradio.Radio.releases.xml" />
  <url type="homepage">https://wiki.gnome.org/Apps/Radio</url>
  <screenshots>
    <screenshot type="default">https://gitlab.gnome.org/ole/gnome-radio/-/blob/main/data/screenshots/gnome-radio-screenshot.png</screenshot>
  </screenshots>
  <updatecontact>ole@aamot.org</updatecontact>
</application>
