{
    "app-id": "org.gnome.NautilusPreviewer",
    "runtime": "org.gnome.Platform",
    "runtime-version": "41",
    "sdk": "org.gnome.Sdk",
    "command": "sushi",
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.a"
    ],
    "finish-args": [
        "--socket=pulseaudio",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--share=ipc",
        "--share=network",
        "--device=dri",
        "--talk-name=org.freedesktop.FileManager1",
        "--filesystem=home:ro"
    ],
    "modules": [
        {
            "name": "popplerdata",
            "no-autogen": true,
            "make-install-args": [
                "prefix=/app"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://poppler.freedesktop.org/poppler-data-0.4.11.tar.gz",
                    "sha256": "2cec05cd1bb03af98a8b06a1e22f6e6e1a65b1e2f3816cb3069bb0874825f08c"
                }
            ]
        },
        {
            "name": "poppler",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_INSTALL_LIBDIR=/app/lib",
                "-DCMAKE_INSTALL_INCLUDEDIR=/app/include",
                "-DENABLE_LIBOPENJPEG=none",
                "-DENABLE_BOOST=OFF",
                "-DENABLE_CPP=OFF",
                "-DBUILD_GTK_TESTS=OFF",
                "-DBUILD_CPP_TESTS=OFF"
            ],
            "cleanup": [
                "/bin"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://poppler.freedesktop.org/poppler-21.10.0.tar.xz",
                    "sha256": "964b5b16290fbec3fae57c2a5bcdea49bb0736bd750c3a3711c47995c9efc394"
                }
            ]
        },
        {
            "name": "evince",
            "buildsystem": "meson",
            "cleanup": [
                "/share/GConf",
                "/share/help"
            ],
            "config-opts": [
                "-Dnautilus=false",
                "-Dviewer=false",
                "-Dpreviewer=false",
                "-Ddbus=false",
                "-Dintrospection=true",
                "-Dcomics=disabled",
                "-Dgspell=disabled"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/evince/41/evince-41.2.tar.xz",
                    "sha256": "95abad0d6feeac9560db3ab80ba7c5eabb1fdf1ca0e3b3c93339af05453a24d8"
                }
            ]
        },
        {
            "name": "gtksourceview",
            "buildsystem": "meson",
            "config-opts": [ "-Dvapi=false" ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/gtksourceview/5.2/gtksourceview-5.2.0.tar.xz",
                    "sha256": "c9b34fa02654f56ce22fa08827d89db4ba81631b2e6d7d31ea65d13c729430e9"
                }
            ]
        },
        {
            "name": "sushi",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/sushi/41/sushi-41.0.tar.xz",
                    "sha256": "9b7525690ce436624efa0a605773493432cd0ef6b8f464982e8b844eda9898ee"
                }
            ]
        }
    ]
}
