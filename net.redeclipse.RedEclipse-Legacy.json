{
    "app-id": "net.redeclipse.RedEclipse-Legacy",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "24.08",
    "sdk": "org.freedesktop.Sdk",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--share=network",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        /* Red Eclipse does not respect XDG base directories */
        "--persist=.redeclipse"
    ],
    "command": "redeclipse",
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/aclocal",
        "/share/man",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "redeclipse",
            "buildsystem": "cmake-ninja",
            "no-make-install": true,
            "subdir": "src",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/redeclipse/base/releases/download/v1.6.0/redeclipse_1.6.0_nix.tar.bz2",
                    "sha256": "48a947e858587116b7d177cf18148d0d9e40b1c5b481e2c955baed68cffc2849"
                },
                {
                    "type": "file",
                    "path": "net.redeclipse.RedEclipse-Legacy.appdata.xml"
                },
                {
                    "type": "file",
                    "url": "https://raw.githubusercontent.com/redeclipse/base/3d8c349c0651a9f5121c96bcd62f9d536c9306b8/src/install/nix/redeclipse.desktop.am",
                    "sha256": "8060b6cfb23ebb191da0b3aa8267b156f0a3812ed7fea9266efecacbc9c962fe"
                },
                {
                    "type": "file",
                    "path": "redeclipse.sh"
                }
            ],
            "post-install": [
                "install -Dm755 ../redeclipse.sh /app/bin/redeclipse",
                "install -Dm755 redeclipse_linux /app/share/redeclipse/redeclipse",
                "install -Dm755 redeclipse_server_linux /app/share/redeclipse/redeclipse_server",
                "install -Dm755 genkey_linux /app/share/redeclipse/genkey",
                "cp -r ../config /app/share/redeclipse/",
                "cp -r ../data /app/share/redeclipse/",
                "cp -r ../doc /app/share/redeclipse/",
                "install -Dm644 ../net.redeclipse.RedEclipse-Legacy.appdata.xml /app/share/appdata/net.redeclipse.RedEclipse-Legacy.appdata.xml",
                "install -Dm644 ../redeclipse.desktop.am /app/share/applications/net.redeclipse.RedEclipse-Legacy.desktop",
                "install -Dm644 ../src/install/nix/redeclipse_x128.png /app/share/icons/hicolor/128x128/apps/net.redeclipse.RedEclipse-Legacy.png",
                "desktop-file-edit --set-name=Red Eclipse Legacy /app/share/applications/net.redeclipse.RedEclipse-Legacy.desktop",
                "desktop-file-edit --set-icon=net.redeclipse.RedEclipse-Legacy /app/share/applications/net.redeclipse.RedEclipse-Legacy.desktop",
                "desktop-file-edit --set-exec=redeclipse /app/share/applications/net.redeclipse.RedEclipse-Legacy.desktop"
        ]
        }
    ]
}
