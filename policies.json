{
  "policies": {
    "DisplayMenuBar" : "never",
    "Extensions": {
      "Install": ["https://github.com/gamingdoom/open-in-default-browser/releases/download/continuous/open_in_default_browser-1.0.zip"]
    },
    "Handlers": {
      "schemes": {
        "open": {
          "action": "useHelperApp",
          "ask": false,
          "handlers": [{
            "name": "default-browser",
            "path": "/tmp/open-in-default-browser"
          }]
        }
      }
   }
  }
}