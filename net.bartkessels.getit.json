{
	"app-id": "net.bartkessels.getit",
	"runtime": "org.gnome.Platform",
	"runtime-version": "3.24",
	"sdk": "org.gnome.Sdk",
	"command": "getit",
	"finish-args": [
		"--socket=x11",
		"--share=ipc",
		"--socket=wayland",
		"--share=network",
		"--filesystem=xdg-run/dconf",
		"--filesystem=~/.config/dconf:ro",
		"--talk-name=ca.desrt.dconf",
		"--env=DCONF_USER_CONFIG_DIR=.config/dconf"
	],
	"build-options": {
		"cflags": "-O2 -g",
		"cxxflags": "-O2 -g",
		"env": {
			"V": "1"
		}
	},
	"cleanup": [
		"/include",
		"/lib/pkgconfig",
		"/man",
		"/share/doc",
		"/share/gtk-doc",
		"/share/man",
		"/share/pkgconfig",
		"*.la",
		"*.a"
	],
	"modules": [
		{
			"name": "gtksourceview-3.0",
			"sources": [
				{
					"type": "archive",
					"url": "https://git.gnome.org/browse/gtksourceview/snapshot/gtksourceview-3.24.6.tar.xz",
					"sha256": "f96e7de24e4fffe08a73f76d8b6ea7f878f122509ee869ab1fbf3c64ee29fb3b"
				}
			]
		},
		{
			"name": "json-glib",
			"sources": [
				{
					"type": "archive",
					"url": "https://gitlab.gnome.org/GNOME/json-glib/repository/1.4.2/archive.tar.gz",
					"sha256": "be83ab7eb09b0125be01e1a38bb0bc6073aa23d1a60bde1b6f4b7d9194649a89"
				}
			]
		},
		{
			"name": "getit",
			"buildsystem": "meson",
			"builddir": true,
			"sources": [
				{
					"type": "git",
					"tag": "4.0.6",
					"commit": "c41223c533a13565ad9d0212f233e1070afdb6a1",
					"url": "https://github.com/bartkessels/getit"
				}
			]
		}
	]
}
