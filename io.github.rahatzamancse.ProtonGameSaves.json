{
    "app-id": "io.github.rahatzamancse.ProtonGameSaves",
    "runtime": "org.gnome.Platform",
    "runtime-version": "48",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command": "proton-game-saves",
    "finish-args": [
        "--share=ipc",
        "--socket=wayland",
        "--socket=fallback-x11",
        "--filesystem=~/.steam:rw"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin",
        "env": {
            "CARGO_HOME": "/run/build/proton_game_saves/cargo"
        }
    },
    "modules": [
        {
            "name": "proton_game_saves",
            "buildsystem": "simple",
            "build-commands": [
                "cargo --offline fetch --manifest-path Cargo.toml --verbose",
                "cargo --offline build --release --verbose",
                "install -Dm755 ./target/release/proton_game_saves /app/bin/proton-game-saves",
                "install -Dm644 ./resources/${FLATPAK_ID}.metainfo.xml /app/share/metainfo/${FLATPAK_ID}.metainfo.xml",
                "install -Dm644 ./packaging/flatpak/${FLATPAK_ID}.desktop /app/share/applications/${FLATPAK_ID}.desktop",
                "install -Dm644 ./resources/${FLATPAK_ID}.svg /app/share/icons/hicolor/scalable/apps/${FLATPAK_ID}.svg",
                "install -Dm644 ./src/styles/app.css /app/share/proton-game-saves/styles/app.css",
                "install -Dm644 ./resources/pic1.png /app/share/metainfo/${FLATPAK_ID}/pic1.png",
                "install -Dm644 ./resources/pic2.png /app/share/metainfo/${FLATPAK_ID}/pic2.png"
            ],
            "sources": [
                {
                    "type": "archive",
                    "path": "https://github.com/rahatzamancse/ProtonGameSaves/archive/v0.1.0.tar.gz",
                    "sha256": "c88a60da7659a681a0cbaf3f3c5abc5334ac6888489c4d2c62442cb02bb5a999"
                },
                "generated-sources.json"
            ]
        }
    ]
}
