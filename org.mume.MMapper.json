{
  "app-id": "org.mume.MMapper",
  "runtime": "org.kde.Platform",
  "runtime-version": "6.9",
  "sdk": "org.kde.Sdk",
  "finish-args": [
    "--share=network",
    "--socket=wayland",
    "--socket=fallback-x11",
    "--share=ipc",
    "--device=dri",
    "--filesystem=xdg-documents"
  ],
  "command": "mmapper",
  "cleanup": [
    "*.a",
    "/arda.xml",
    "/images",
    "/include",
    "/lib/cmake",
    "/lib/pkgconfig",
    "/mkspecs"
  ],
  "modules": [
    {
      "name": "glm",
      "buildsystem": "simple",
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/g-truc/glm.git",
          "tag": "0.9.9.7"
        }
      ],
      "build-commands": [
        "mkdir -p /app/include/glm",
        "cp -r glm/* /app/include/glm/"
      ]
    },
    {
      "name": "immer",
      "buildsystem": "simple",
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/arximboldi/immer.git",
          "tag": "v0.8.1"
        }
      ],
      "build-commands": [
        "cp -r immer /app/include/"
      ]
    },
    {
      "name": "libsecret",
      "buildsystem": "meson",
      "config-opts": [
        "-Dmanpage=false",
        "-Dvapi=false",
        "-Dgtk_doc=false",
        "-Dintrospection=false"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://download.gnome.org/sources/libsecret/0.21/libsecret-0.21.4.tar.xz",
          "sha256": "163d08d783be6d4ab9a979ceb5a4fecbc1d9660d3c34168c581301cd53912b20",
          "x-checker-data": {
            "type": "gnome",
            "name": "libsecret",
            "stable-only": true
          }
        }
      ]
    },
    {
      "name": "qtkeychain",
      "buildsystem": "cmake-ninja",
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/frankosterfeld/qtkeychain/archive/0.15.tar.gz",
          "sha256": "2bf85c721315f69f6b486323a2833c2f38b9c1807941bbb3ac16cf11c5b26588",
          "x-checker-data": {
            "type": "anitya",
            "project-id": 4138,
            "stable-only": true,
            "url-template": "https://github.com/frankosterfeld/qtkeychain/archive/$version.tar.gz"
          }
        }
      ],
      "config-opts": [
        "-DBUILD_TRANSLATIONS=OFF",
        "-DBUILD_WITH_QT6=ON"
      ]
    },
    {
      "name": "map",
      "buildsystem": "simple",
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/MUME/arda.git",
          "tag": "42"
        }
      ],
      "build-commands": [
        "cp arda.xml /app/"
      ]
    },
    {
      "name": "images",
      "buildsystem": "simple",
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/MUME/images.git",
          "commit": "235b9d6c4d66304f52af16bae982b3e0ae7f4738"
        }
      ],
      "build-commands": [
        "mkdir -p /app/images",
        "cp -r . /app/images/"
      ]
    },
    {
      "name": "mmapper",
      "buildsystem": "cmake-ninja",
      "builddir": true,
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/MUME/MMapper.git",
          "commit": "39b6e45a19042cf1c10c26d5b99f394c646df1ba"
        }
      ],
      "config-opts": [
        "-DCMAKE_BUILD_TYPE=Release",
        "-DWITH_WEBSOCKET=ON",
        "-DWITH_QTKEYCHAIN=ON",
        "-DWITH_MAP=/app/arda.xml",
        "-DWITH_IMAGES=/app/images/",
        "-DWITH_TESTS=OFF",
        "-DWITH_UPDATER=OFF"
      ]
    }
  ]
}
