{
    "app-id": "com.orsan.Turtlico",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.34",
    "sdk": "org.gnome.Sdk",
    "command": "turtlico",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--filesystem=xdg-run/dconf",
        "--filesystem=~/.config/dconf:ro",
        "--filesystem=host",
        "--talk-name=ca.desrt.dconf",
        "--talk-name=org.freedesktop.Flatpak",
        "--env=DCONF_USER_CONFIG_DIR=.config/dconf"
    ],
    "build-options": {
        "cflags": "-O2 -g",
        "cxxflags": "-O2 -g",
        "env": {
            "V": "1"
        }
    },
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/lib/debug",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "/share/vala",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name" : "gtksourceview",
            "builddir": true,
            "buildsystem": "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/gtksourceview.git"
                }
            ]
	},
        {
            "name": "turtlico",
            "builddir": true,
            "buildsystem": "meson",
            "config-opts" : [
                "-Dflatpak=true"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.com/turtlico/turtlico.git",
		    "tag": "0.1",
		    "commit": "78737a38930a732e86e33dfaf92a83e64dd164ae"
                }
            ]
        }
    ]
}
