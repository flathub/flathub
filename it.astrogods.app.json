{
  "app-id": "it.astrogods.app",
  "runtime": "org.gnome.Platform",
  "runtime-version": "48",
  "sdk": "org.gnome.Sdk",
  "command": "astrogods",
  "finish-args": [
    "--share=ipc",
    "--share=network",
    "--socket=x11",
    "--device=dri",
    "--env=GDK_BACKEND=x11"
  ],
  "modules": [
    {
      "name": "astrogods",
      "buildsystem": "simple",
      "build-commands": [
        "mkdir -p /app/astrogods",
        "cp astrogods /app/astrogods/",
        "cp -r lib /app/astrogods/",
        "cp -r data /app/astrogods/",
        "chmod 755 /app/astrogods/astrogods",
        "mkdir -p /app/bin",
        "ln -s /app/astrogods/astrogods /app/bin/astrogods",
        "install -Dm644 share/applications/it.astrogods.app.desktop /app/share/applications/it.astrogods.app.desktop",
        "install -Dm644 share/metainfo/it.astrogods.app.metainfo.xml /app/share/metainfo/it.astrogods.app.metainfo.xml",
        "cp -r share/icons /app/share/"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/arcangelo7/astrogods-linux/releases/download/4.4.0/linux-x64-4.4.0.tar.gz",
          "sha256": "48fde3ff06b3c6eaa628acd9e2358ab20d59bf6a34731c22b9a0f539ca261e57"
        }
      ]
    }
  ]
}
