{
  "app-id": "org.gnome.gitlab.johannesjh.favagtk",
  "runtime": "org.gnome.Platform",
  "runtime-version": "42",
  "sdk": "org.gnome.Sdk",
  "command": "favagtk",
  "finish-args": [
    "--share=network",
    "--share=ipc",
    "--socket=fallback-x11",
    "--device=dri",
    "--socket=wayland"
  ],
  "cleanup": [
    "/include",
    "/lib/pkgconfig",
    "/man",
    "/share/doc",
    "/share/gtk-doc",
    "/share/man",
    "/share/pkgconfig",
    "*.la",
    "*.a"
  ],
  "modules": [
    /* shared module, a gtk4 compatible version of webkitgtk is required */
    "requirements/webkitgtk.json",

    /* shared module, tricky because of the many compile-time dependencies */
    "requirements/python3-scikit-learn.json",

    /* main application dependencies, generated using pip-compile and flatpak-pip-generator */
    "requirements/python3-main.json",

    /* blueprint compiler for .ui files */
    "requirements/blueprint-compiler.json",

    /* the actual favagtk application */
    {
      "name": "favagtk",
      "buildsystem": "meson",
      "config-opts": ["-Dprofile=release"],
      "sources": [
        {
          "type": "git",
          "url": "https://gitlab.gnome.org/johannesjh/favagtk.git",
          "tag": "v0.2.0",
          "commit": "f13e46f9dbebd4138c58f06bdbe4473a10796320"
        }
      ]
    }
  ]
}
