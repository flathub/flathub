{
  "app-id": "com.electron.nuru-browser",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "22.08",
  "sdk": "org.freedesktop.Sdk",
  "command": "nuru-browser",
  "finish-args": [
    "--share=network",
    "--socket=x11",
    "--socket=wayland",
    "--socket=pulseaudio",
    "--talk-name=org.freedesktop.Notifications",
    "--env=NODE_ENV=production"
  ],
  "modules": [
    {
      "name": "nuru-browser",
      "buildsystem": "simple",
      "build-commands": [
        "npm install",
        "npm run build:prod",
        "install -Dm755 dist/linux-unpacked/nuru-browser /app/bin/nuru-browser"
      ],
      "sources": [
        { "type": "dir", "path": "." }
      ]
    }
  ]
}
