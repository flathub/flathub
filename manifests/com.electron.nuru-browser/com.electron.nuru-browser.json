{
  "app-id": "com.electron.nuru-browser",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "23.08",
  "sdk": "org.freedesktop.Sdk",
  "sdk-extensions": ["org.freedesktop.Sdk.Extension.nodejs"],
  "command": "nuru-browser",
  "finish-args": [
    "--share=network",
    "--socket=x11",
    "--socket=wayland",
    "--socket=pulseaudio",
    "--talk-name=org.freedesktop.Notifications",
    "--filesystem=xdg-run/pipewire-0",
    "--filesystem=~/.config/nuru-browser",
    "--env=NODE_ENV=production"
  ],
  "cleanup": ["/node_modules", "/dist"],
  "modules": [
    {
      "name": "nuru-browser",
      "buildsystem": "simple",
      "build-commands": [
        "npm install --production",
        "npm run build:prod",
        "install -Dm755 dist/linux-unpacked/nuru-browser /app/bin/nuru-browser"
      ],
      "sources": [
        { "type": "dir", "path": "." }
      ]
    },
    {
      "name": "desktop-file",
      "buildsystem": "simple",
      "build-commands": [
        "install -Dm644 NuruBrowser.desktop /app/share/applications/com.electron.nuru-browser.desktop",
        "install -Dm644 logo/Nuru.png /app/share/icons/hicolor/128x128/apps/com.electron.nuru-browser.png"
      ],
      "sources": [
        { "type": "dir", "path": "." }
      ]
    }
  ]
}
