<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>io.github.manoelmsnsi.LinuxWhatsappFlatpak</id>

  <name>WhatsApp GTK</name>
  <summary>Cliente nativo do WhatsApp Web em GTK</summary>

  <description>
    <p>
      WhatsApp GTK é um cliente leve e nativo para WhatsApp Web,
      construído com GTK e WebKit2.
    </p>
  </description>

  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-3.0-or-later</project_license>

  <launchable type="desktop-id">
    io.github.manoelmsnsi.LinuxWhatsappFlatpak.desktop
  </launchable>

  <developer id="io.github.manoelmsnsi">
    <name>Manoel Messias</name>
  </developer>

  <url type="homepage">https://github.com/manoelmsnsi/linux-whatsapp-flatpak</url>
  <url type="bugtracker">https://github.com/manoelmsnsi/linux-whatsapp-flatpak/issues</url>
  <url type="vcs-browser">https://github.com/manoelmsnsi/linux-whatsapp-flatpak</url>

  <content_rating type="oars-1.1">
    <content_attribute id="social-chat">intense</content_attribute>
    <content_attribute id="social-audio">intense</content_attribute>
  </content_rating>

  <categories>
    <category>Network</category>
    <category>InstantMessaging</category>
  </categories>

  <screenshots>
    <screenshot type="default">
      <image>https://raw.githubusercontent.com/manoelmsnsi/linux-whatsapp-flatpak/main/screenshots/chat.png</image>
      <caption>WhatsApp chat interface</caption>
    </screenshot>
    <screenshot>
      <image>https://raw.githubusercontent.com/manoelmsnsi/linux-whatsapp-flatpak/main/screenshots/qr-code.png</image>
      <caption>QR Code login screen</caption>
    </screenshot>
  </screenshots>

  <releases>
    <release version="1.0.0" date="2025-12-29">
      <description>
        <p>Initial release</p>
        <ul>
          <li>WhatsApp Web wrapper using GTK3 and WebKit2</li>
          <li>Native notifications support</li>
          <li>Audio and video calls support</li>
          <li>File download to XDG Downloads folder</li>
        </ul>
      </description>
    </release>
  </releases>
</component>
