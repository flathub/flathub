{
    "id": "org.freedesktop.LinuxAudio.Lv2Plugins.Ninjas2",
    "runtime": "org.freedesktop.LinuxAudio.BaseExtension",
    "sdk": "org.freedesktop.Sdk//19.08",
    "runtime-version": "19.08",
    "build-extension": true,
    "appstream-compose": false,
    "branch": "19.08",
    "build-options": {
        "prefix": "/app/extensions/Lv2Plugins/Ninjas2"
    },
    "modules": [
        {
            "name": "ninjas2",
            "buildsystem": "simple",
            "build-options": {
                "env": {
                    "BUILD_VST2": "false"
                }
            },
            "build-commands": [
                "make"
            ],
            "post_install": [
                "install -Dm644 --target-directory=${FLATPAK_DEST}/lv2/ninjas2.lv2 bin/ninjas2.lv2/*",
                "install -Dm644 --target-directory=${FLATPAK_DEST}/share/metainfo org.freedesktop.LinuxAudio.Lv2Plugins.Ninjas2.metainfo.xml",
                "appstream-compose --basename=org.freedesktop.LinuxAudio.Lv2Plugins.Ninjas2 --prefix=${FLATPAK_DEST} --origin=flatpak org.freedesktop.LinuxAudio.Lv2Plugins.Ninjas2",
                "install -Dm755 -t ${FLATPAK_DEST}/share/ninjas2 LICENSE"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/clearly-broken-software/ninjas2/releases/download/v0.2.0/ninjas2-v0.2.0-source.zip",
                    "sha256": "0fea7041e759212fd8f36fc5b64a98c1968080a2e6733ef1ddce391bd2970045"
                },
                {
                    "type": "file",
                    "path": "org.freedesktop.LinuxAudio.Lv2Plugins.Ninjas2.metainfo.xml"
                }
            ]
        }
    ]
}
