{
	"id": "ht.sr.git.shrimple.Ouch",
	"runtime": "org.gnome.Platform",
	"runtime-version": "46",
	"sdk": "org.gnome.Sdk",
	"sdk-extensions": [
		"org.freedesktop.Sdk.Extension.rust-stable"
	],
	"command": "ouch",
	"finish-args": [
		"--share=network",
		"--share=ipc",
		"--socket=fallback-x11",
		"--device=dri",
		"--socket=wayland",
		"--filesystem=home"
	],
	"build-options": {
		"append-path": "/usr/lib/sdk/rust-stable/bin",
		"build-args": [
			"--share=network"
		],
		"env": {
			"RUST_BACKTRACE": "1",
			"RUST_LOG": "ouch=debug"
		}
	},
	"cleanup": [
		"/include",
		"/lib/pkgconfig",
		"/man",
		"/share/doc",
		"/share/gtk-doc",
		"/share/man",
		"/share/pkgconfig",
		"*.la",
		"*.a"
	],
	"modules": [
		{
			"name": "blueprint-compiler",
			"buildsystem": "meson",
			"cleanup": [
				"*"
			],
			"sources": [
				{
					"type": "git",
					"url": "https://gitlab.gnome.org/jwestman/blueprint-compiler.git",
					"tag": "v0.12.0"
				}
			]
		},
		{
			"name": "ouch",
			"builddir": true,
			"buildsystem": "simple",
			"build-commands": [
				"blueprint-compiler batch-compile src/ui src/ui src/ui/window.blp src/ui/about.blp src/ui/about-shrimple.blp src/ui/help-overlay.blp src/ui/preferences.blp",
				"cargo build --release --features flatpak --verbose",
				"install -Dm 755 target/release/ouch --target-directory ${FLATPAK_DEST}/bin",
				"install -Dm 644 res/${FLATPAK_ID}.desktop --target-directory ${FLATPAK_DEST}/share/applications",
				"install -Dm 644 res/${FLATPAK_ID}.metainfo.xml --target-directory ${FLATPAK_DEST}/share/metainfo",
				"install -Dm 644 res/${FLATPAK_ID}.svg --target-directory ${FLATPAK_DEST}/share/icons/hicolor/scalable/apps/",
				"install -Dm 644 res/ht.sr.git.shrimple.svg --target-directory ${FLATPAK_DEST}/share/icons/hicolor/scalable/apps/"
			],
			"sources": [
				"devel.json"
			]
		}
	]
}
