{
    "id" : "tech.digiroad.ImageFlow",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "49",
    "sdk" : "org.gnome.Sdk",
    "add-extensions" : {
        "org.freedesktop.Platform.ffmpeg-full" : {
            "directory" : "lib/ffmpeg",
            "version" : "24.08",
            "add-ld-path" : "."
        }
    },
    "command" : "imageflow",
    "finish-args" : [
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "imageflow",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/GS90/ImageFlow",
                    "tag": "0.9.0",
                    "commit": "1653374c65f3afb80231952ac160ec32debc9611"
                }
            ]
        }
    ]
}
