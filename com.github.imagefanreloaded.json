{
    "app-id" : "io.github.mihnearadulescu.imagefanreloaded",
    "runtime" : "org.freedesktop.Platform",
    "runtime-version" : "22.08",
    "sdk" : "org.freedesktop.Sdk",
    "command" : "ImageFanReloaded-Avalonia",
    "finish-args" : [
		"--socket=x11",
        "--share=ipc",
        "--device=dri",
		"--filesystem=host:ro"
    ],
    "modules" : [
        {
            "name": "ImageFanReloaded-Avalonia",
            "buildsystem": "simple",
            "sources": [
				{
					"type": "file",
					"only-arches": [
						"x86_64"
					],
					"url": "https://github.com/mihnea-radulescu/imagefanreloaded/releases/download/1.2023.08.28/ImageFanReloaded-Avalonia-Linux-x64-Flathub.zip",
                    "sha256": "8fb8c1b4c039ca0bf654c8ca91a2fdf653a8f128b9c22322f7a87af4126bf8e1"
				}
            ],
			"build-commands": [
				"unzip ImageFanReloaded-Avalonia-Linux-x64-Flathub.zip -d /app/bin",
                "chmod 755 /app/bin/ImageFanReloaded-Avalonia",
				"install -Dm644 /app/bin/icon64.png /app/share/icons/hicolor/64x64/apps/io.github.mihnearadulescu.imagefanreloaded.png",
				"install -Dm644 /app/bin/icon128.png /app/share/icons/hicolor/128x128/apps/io.github.mihnearadulescu.imagefanreloaded.png",
				"install -Dm644 /app/bin/app.desktop /app/share/applications/io.github.mihnearadulescu.imagefanreloaded.desktop",
				"install -Dm644 /app/bin/metainfo.xml /app/share/metainfo/io.github.mihnearadulescu.imagefanreloaded.metainfo.xml"
			]
        }
    ]
}
