{
    "app-id": "com.grangerhub.Tremulous",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "1.6",
    "sdk": "org.freedesktop.Sdk",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--share=network",
        "--socket=x11",
        "--socket=pulseaudio",
        /* Tremulous does not respect XDG base directories */
        "--persist=.tremulous"
    ],
    "command": "tremulous",
    "rename-appdata-file": "tremulous.appdata.xml",
    "rename-desktop-file": "tremulous.desktop",
    "rename-icon": "tremulous",
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/aclocal",
        "/share/man",
        "*.la", "*.a"
    ],
    "modules": [
        "shared-modules/glu/glu-9.0.0.json",
        "shared-modules/SDL/SDL-1.2.15.json",
        {
            "name": "tremulous-data",
            "buildsystem": "simple",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/GrangerHub/tremulous/releases/download/v1.3.0-alpha.0.12/release-linux-x86_64.zip",
                    "sha256": "d295bce532e10999ce165e9de50086b88904bb41d93df7452ea3249dab30b235",
                    "strip-components": 0
                }
            ],
            "build-commands": [
                "mkdir -p /app/share/tremulous/gpp",
                "cp gpp/*.pk3 /app/share/tremulous/gpp"
            ]
        },
        {
            "name": "tremulous-engine",
            "no-autogen": true,
            "no-make-install": true,
            "make-args": [
                "BUILD_SERVER=0",
                "DEFAULT_BASEDIR=/app/share/tremulous",
                "USE_CURL=1",
                "USE_CURL_DLOPEN=0",
                "USE_INTERNAL_SPEEX=0",
                "USE_INTERNAL_ZLIB=0",
                "USE_OPENAL=1",
                "USE_OPENAL_DLOPEN=0",
                "USE_LOCAL_HEADERS=0"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/GrangerHub/tremulous/archive/v1.3.0-alpha.0.12.tar.gz",
                    "sha256": "00895b33c6b8805eb2d15146a30e0fc91b5354efec3039531647827a04c6e53d"
                },
                {
                    "type": "patch",
                    "path": "tremulous-makefile.patch"
                },
                {
                    "type": "file",
                    "path": "tremulous.png"
                },
                {
                    "type": "file",
                    "path": "tremulous.appdata.xml"
                },
                {
                    "type": "file",
                    "path": "tremulous.desktop"
                }
            ],
            "post-install": [
                "cp build/release/tremulous /app/bin/tremulous",
                "cp build/release/gpp/*.so /app/share/tremulous/gpp",
                "cp build/release/renderer_opengl*.so /app/share/tremulous",
                "cp -r build/release/gpp/vm /app/share/tremulous/gpp",
                "mkdir -p /app/share/tremulous/gpp_11",
                "cp -r build/release/gpp_11/vm /app/share/tremulous/gpp_11",
                "mkdir -p /app/share/appdata",
                "cp tremulous.appdata.xml /app/share/appdata",
                "mkdir -p /app/share/applications",
                "cp tremulous.desktop /app/share/applications",
                "mkdir -p /app/share/icons/hicolor/48x48/apps",
                "cp tremulous.png /app/share/icons/hicolor/48x48/apps"
            ]
        }
    ]
}
