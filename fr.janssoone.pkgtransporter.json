{
    "app-id" : "fr.janssoone.pkgtransporter",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "44",
    "sdk" : "org.gnome.Sdk",
    "command" : "package-transporter",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
	"--filesystem=/var/lib/flatpak/app:ro",
        "--filesystem=xdg-data:ro",
        "--filesystem=xdg-config:ro",
        "--filesystem=~/.var/app/:ro"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "package-transporter",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.com/GwendalJ/package-transporter",
                    "tag" : "0.1.0",
                    "commit" : "73f92b256750cfa1e19b719e6342b06d5b1c9ca2"
                }
            ]
        }
    ]
}
