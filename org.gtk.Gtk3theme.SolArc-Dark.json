{
  "id": "org.gtk.Gtk3theme.SolArc-Dark",
  "branch": "3.22",
  "runtime": "org.freedesktop.Platform",
  "sdk": "org.freedesktop.Sdk",
  "runtime-version": "1.6",
  "build-extension": true,
  "appstream-compose": false,
  "separate-locales": false,
  "build-options": {
    "prefix": "/usr/share/runtime"
  },
  "modules": [
    {
      "name": "solarc-theme",
      "cleanup": [ "thumbnail.png" ],
      "config-opts": [
        "--disable-gnome-shell",
        "--disable-gtk2",
        "--disable-cinnamon",
        "--disable-metacity",
        "--disable-unity",
        "--disable-xfwm",
        "--disable-light", "--disable-darker"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/schemar/solarc-theme/archive/v1.0.2.tar.gz",
          "sha256": "a7384e1a00b831a82ffbc8952620103a42216e9352d8d81809ba3e34f5b69eae"
        }
      ]
    },
    {
      "name": "appdata",
      "buildsystem": "simple",
      "build-commands": [
        "mkdir -p ${FLATPAK_DEST}/share/appdata",
        "cp org.gtk.Gtk3theme.SolArc-Dark.appdata.xml ${FLATPAK_DEST}/share/appdata",
        "appstream-compose --basename=org.gtk.Gtk3theme.SolArc-Dark --prefix=${FLATPAK_DEST} --origin=flatpak org.gtk.Gtk3theme.SolArc-Dark"
      ],
      "sources": [
        {
          "type": "file",
          "path": "org.gtk.Gtk3theme.SolArc-Dark.appdata.xml"
        }
      ]
  }
  ]
}
