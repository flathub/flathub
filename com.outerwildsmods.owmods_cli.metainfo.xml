<?xml version="1.0" encoding="UTF-8"?>
<component type="console-application">
    <id>com.outerwildsmods.owmods_cli</id>

    <name>Outer Wilds Mod Manager CLI</name>
    <summary>A CLI to install and manager Outer Wilds mods</summary>

    <metadata_license>CC0-1.0</metadata_license>
    <project_license>GPL-3.0-or-later</project_license>

    <url type="homepage">https://github.com/Bwc9876/ow-mod-man</url>
    <url type="bugtracker">https://github.com/Bwc9876/ow-mod-man/issues</url>
    <url type="contribute">
        https://github.com/Bwc9876/ow-mod-man/blob/main/owmods_cli/CONTRIBUTING.md</url>

    <description>
        <p>
            Provides a convenient CLI for installing and managing mods, as well as patching OWML to
            work on Linux through mono.
        </p>
        <p> Features include: </p>
        <ul>
            <li>Installing Mods from the mods database</li>
            <li>Installing mods from URLs and ZIP files</li>
            <li>Updating Mods</li>
            <li>Running the game / patching OWML to work on Linux</li>
            <li>Import and Exporting mods to JSON</li>
        </ul>
    </description>

    <releases>
        <release version="0.4.0" date="2023-04-26" />
    </releases>

    <icon width="256" height="256" type="remote">https://github.com/Bwc9876/ow-mod-man/raw/dev/.github/assets/logo-cli.png</icon>

    <content_rating type="oars-1.0" />

    <categories>
        <category>Game</category>
        <category>Simulation</category>
    </categories>

    <provides>
        <binary>owmods</binary>
    </provides>
</component>