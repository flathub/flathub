{
    "id": "org.freedesktop.LinuxAudio.Lv2Plugins.MDA",
    "branch": "19.08",
    "runtime": "org.freedesktop.LinuxAudio.BaseExtension",
    "runtime-version": "19.08",
    "sdk": "org.freedesktop.Sdk",
    "build-extension": true,
    "appstream-compose": false,
    "build-options": {
        "prepend-pkg-config-path": "/app/extensions/Lv2Plugins/MDA/lib/pkgconfig",
        "prefix": "/app/extensions/Lv2Plugins/MDA"
    },
    "cleanup": [
        "/lib/lv2"
    ],
    "modules": [
        "shared-modules/linux-audio/lv2.json",
        {
            "name": "mda",
            "buildsystem": "simple",
            "build-commands": [
                "python3 ./waf configure --prefix=${FLATPAK_DEST} --lv2dir=${FLATPAK_DEST}/lv2",
                "python3 ./waf",
                "python3 ./waf install"
            ],
            "cleanup": [
                "/share/man"
            ],
            "post-install": [
                "install -Dm644 --target-directory=${FLATPAK_DEST}/share/metainfo org.freedesktop.LinuxAudio.Lv2Plugins.MDA.metainfo.xml",
                "appstream-compose --basename=org.freedesktop.LinuxAudio.Lv2Plugins.MDA --prefix=${FLATPAK_DEST} --origin=flatpak org.freedesktop.LinuxAudio.Lv2Plugins.MDA",
                "install -Dm644 -t $FLATPAK_DEST/share/licenses/drumgizmo COPYING"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.com/drobilla/mda-lv2.git",
                    "tag": "v1.2.4"
                },
                {
                    "type": "file",
                    "path": "org.freedesktop.LinuxAudio.Lv2Plugins.MDA.metainfo.xml"
                }
            ]
        }
    ]
}
