{
  "app-id": "org.flatpak.openerp",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "19.08",
  "sdk": "org.freedesktop.Sdk",
  "command": "openerp-client",
  "finish-args": [
    "--socket=x11",
    "--filesystem=host"
  ],
  "cleanup": [
    "/include",
    "/share/bash-completion",
    "/lib/pkgconfig/",
    "/lib/*.a",
    "/lib/*.la",
    "/lib/cairo/*.a",
    "/lib/cairo/*.la",
    "/share/doc/",
    "/man/"
  ],
  "modules": [
    "shared-modules/intltool/intltool-0.51.json",
    {
      "name": "cairo",
      "sources": [
        {
          "type": "archive",
          "url": "https://www.cairographics.org/releases/cairo-1.16.0.tar.xz",
          "sha256": "5e7b29b3f113ef870d1e3ecf8adf21f923396401604bda16d44be45e66052331"
        }
      ]
    },
    "shared-modules/gtk2/gtk2.json",
    {
      "name": "gtksourceview",
      "sources": [
        {
          "type": "archive",
          "url": "https://download.gnome.org/sources/gtksourceview/2.10/gtksourceview-2.10.5.tar.bz2",
          "sha256": "c585773743b1df8a04b1be7f7d90eecdf22681490d6810be54c81a7ae152191e"
        }
      ]
    },
    "shared-modules/python2.7/python-2.7.json",
    {
      "name": "pycairo",
      "buildsystem": "meson",
      "config-opts": [
        "-Dpython=python"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/pygobject/pycairo/archive/v1.18.1.zip",
          "sha256": "7340f8c7e164718bcc5de23d4bcff39ac81994a070edefdcdbcd1e31c9502754"
        }
      ]
    },
    {
      "name": "pygobject",
      "config-opts": [
        "--disable-introspection"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://download.gnome.org/sources/pygobject/2.28/pygobject-2.28.7.tar.xz",
          "sha256": "bb9d25a3442ca7511385a7c01b057492095c263784ef31231ffe589d83a96a5a"
        }
      ]
    },
    {
      "name": "pango",
      "sources": [
        {
          "type": "archive",
          "url": "https://download.gnome.org/sources/pango/1.38/pango-1.38.1.tar.xz",
          "sha256": "1320569f6c6d75d6b66172b2d28e59c56ee864ee9df202b76799c4506a214eb7"
        }
      ]
    },
    {
      "name": "libglade",
      "rm-configure": true,
      "cleanup": [
        "/bin"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://download.gnome.org/sources/libglade/2.6/libglade-2.6.4.tar.gz",
          "sha256": "c41d189b68457976069073e48d6c14c183075d8b1d8077cb6dfb8b7c5097add3"
        },
        {
          "type": "shell",
          "commands": [
            "rm -f config.guess"
          ]
        },
        {
          "type": "script",
          "commands": [
            "autoreconf -fiv"
          ],
          "dest-filename": "autogen.sh"
        }
      ]
    },
    {
      "name": "pygtk",
      "sources": [
        {
          "type": "archive",
          "url": "https://download.gnome.org/sources/pygtk/2.24/pygtk-2.24.0.tar.bz2",
          "sha256": "cd1c1ea265bd63ff669e92a2d3c2a88eb26bcd9e5363e0f82c896e649f206912"
        },
        {
          "type": "shell",
          "commands": [
            "cp -p /usr/share/automake-*/config.{sub,guess} ."
          ]
        }
      ]
    },
    {
      "name": "pygtksourceview",
      "config-opts": [
        "--disable-docs"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://download.gnome.org/sources/pygtksourceview/2.10/pygtksourceview-2.10.1.tar.bz2",
          "sha256": "b4b47c5aeb67a26141cb03663091dfdf5c15c8a8aae4d69c46a6a943ca4c5974"
        }
      ]
    },
    {
      "name": "python2-egenix-mx-base",
      "buildsystem": "simple",
      "build-commands": [
        "python setup.py install"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://downloads.egenix.com/python/egenix-mx-base-3.2.9.tar.gz?type=tgz",
          "md5": "b6f6612a95a857659e20968f496dfcc2"
        }
      ]
    },
    "python2-matplotlib.json",
    {
      "name": "opnerp-client",
      "buildsystem": "simple",
      "build-commands": [
        "python setup.py install"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://nightly.odoo.com/old/openerp-5.0/openerp-client-5.0.10.tar.gz",
          "sha256": "012a501bdbb5e47cf8ee595d2e2dc95fc663b41da6bbebccb6ccdb8ada333a75"
        }
      ]
    }
  ]
}
