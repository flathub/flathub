{
	"app-id": "com.moonlight_stream.Moonlight",
	"runtime": "org.kde.Platform",
	"runtime-version": "5.11",
	"sdk": "org.kde.Sdk",
	"command": "moonlight",
	"rename-icon": "moonlight",
	"finish-args": [
		"--share=network",
		"--socket=x11",
		"--share=ipc",
		"--socket=pulseaudio",
		"--device=all"
	],
	"modules": [
		{
			"name": "ffmpeg",
			"config-opts": [
				"--enable-pic",
				"--enable-shared",
				"--disable-static",
				"--disable-all",
				"--enable-avcodec",
				"--enable-decoder=h264",
				"--enable-decoder=hevc",
				"--enable-hwaccel=h264_vaapi",
				"--enable-hwaccel=hevc_vaapi"
			],
			"sources": [
				{
					"type": "archive",
					"url": "https://ffmpeg.org/releases/ffmpeg-4.0.2.tar.bz2",
					"sha256": "346c51735f42c37e0712e0b3d2f6476c86ac15863e4445d9e823fe396420d056"
				}
			]
		},
		{
			"name": "moonlight",
			"buildsystem": "qmake",
			"sources": [
				{
					"type": "git",
					"url": "https://github.com/moonlight-stream/moonlight-qt.git",
					"tag": "v0.0.4a",
					"commit": "4e82ea298e057329af7b6036d55fe6c5e7cc2773"
				}
			]
		}
	]
}
