{
    "app-id": "net.gwyddion.Gwyddion",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.32",
    "sdk": "org.gnome.Sdk",
    "command": "gwyddion",
    "copy-icon": true,
    "rename-icon": "gwyddion",
    "rename-desktop-file": "gwyddion.desktop",
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=x11",
        "--filesystem=home"
    ],
    "modules": [     
        "shared-modules/gtk2/gtk2.json",
        {
            "name": "pangox-compat",
            "sources": [
                {
                    "type": "archive",
                    "url": "http://ftp.gnome.org/pub/GNOME/sources/pangox-compat/0.0/pangox-compat-0.0.2.tar.xz",
                    "sha256": "552092b3b6c23f47f4beee05495d0f9a153781f62a1c4b7ec53857a37dfce046"
                }
            ]
        },
        "shared-modules/glu/glu-9.0.0.json",
        {
            "name": "gtkglext",
            "build-commands": [
              "sed '/AC_PATH_XTRA/d' -i configure.in",
             "./configure --prefix=/app --disable-static",
              "make",
              "make install"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/gtkglext/1.2/gtkglext-1.2.0.tar.bz2",
                    "sha256": "16bd736074f6b14180f206b7e91263fc721b49912ea3258ab5f094cfa5497f51"
                },
                {
                  "type": "patch",
                  "path": "gtk2.20.patch"
                },
                {
                  "type": "patch",
                  "path": "gtkglext-gcc8.patch"
                }
            ]
        },  
        {
            "name": "gwyddion",
            "config-opts": [
                    "--without-ruby"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "http://sourceforge.net/projects/gwyddion/files/gwyddion/2.53/gwyddion-2.53.tar.xz",
                    "md5": "310733ff22ed978912195d5ac60b3bae"
                },
                {
                    "type": "file",
                    "path": "net.gwyddion.Gwyddion.appdata.xml"
                }
            ],
            "post-install": [
                "mkdir -p /app/share/metainfo/",
                "cp net.gwyddion.Gwyddion.appdata.xml /app/share/metainfo/"
            ]
                    
        }
    ]
}
