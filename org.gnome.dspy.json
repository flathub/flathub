{
    "app-id": "org.gnome.dspy",
    "runtime": "org.gnome.Platform",
    "runtime-version": "40",
    "sdk": "org.gnome.Sdk",
    "command": "d-spy",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=session-bus",
        "--socket=system-bus"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name" : "libsass",
            "buildsystem" : "meson",
            "builddir" : true,
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/lazka/libsass.git",
                    "commit" : "302397c0c8ae2d7ab02f45ea461c2c3d768f248e"
                }
            ]
        },
        {
            "name" : "sassc",
            "buildsystem" : "meson",
            "builddir" : true,
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/lazka/sassc.git",
                    "commit" : "82803377c33247265d779af034eceb5949e78354"
                }
            ]
        },
        {
            "name" : "libadwaita",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/libadwaita.git",
                    "commit" : "03f159488ec3b8e3ea4c3c2daa9c408b071d512d"
                }
            ]
        },
        {
            "name": "dspy",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/chergert/d-spy.git",
                    "commit": "946b2b8bbeef60e75dbce06bddfb1d85f70175a1"
                }
            ]
        }
    ]
}
