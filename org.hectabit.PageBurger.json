{
  "id": "org.hectabit.PageBurger",
  "runtime": "org.gnome.Platform",
  "runtime-version": "45",
  "sdk": "org.gnome.Sdk",
  "command": "pageburger",
  "modules": [
    {
      "name": "PageBurger",
      "buildsystem": "simple",
      "sources": [
        {
          "type": "git",
          "url": "https://centrifuge.hectabit.org/HectaBit/PageBurger-App.git",
          "tag": "flathub"
        }
      ],
      "build-commands": [
        "make install DESTDIR=/app/bin/"
      ]
    }
  ],
  "finish-args": [
    "--share=network",
    "--socket=x11",
    "--share=ipc"
  ]
}
