{
  "id": "org.hectabit.PageBurger",
  "runtime": "org.gnome.Platform",
  "runtime-version": "45",
  "sdk": "org.gnome.Sdk",
  "command": "pageburger",
  "finish-args": [
    "--share=network",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--share=ipc"
  ],
  "modules": [
    {
      "name": "PageBurger",
      "buildsystem": "simple",
      "sources": [
        {
          "type": "git",
          "url": "https://centrifuge.hectabit.org/HectaBit/PageBurger-App.git",
          "tag": "1.0",
          "commit": "0283fe0ddab0072a71fa89bfe841b5ae22f12755"
        }
      ],
      "build-commands": [
        "make install DESTDIR=/app/bin/ SHAREDIR=/app/share/"
      ]
    }
  ]
}
