{
  "app-id": "it.astrogods.AstroGods",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "25.08",
  "sdk": "org.freedesktop.Sdk",
  "command": "astrogods",
  "finish-args": [
    "--share=ipc",
    "--share=network",
    "--socket=x11",
    "--device=dri",
    "--env=GDK_BACKEND=x11"
  ],
  "modules": [
    {
      "name": "astrogods",
      "buildsystem": "simple",
      "only-arches": ["x86_64"],
      "build-commands": [
        "mkdir -p /app/astrogods",
        "cp astrogods /app/astrogods/",
        "cp -r lib /app/astrogods/",
        "cp -r data /app/astrogods/",
        "chmod 755 /app/astrogods/astrogods",
        "mkdir -p /app/bin",
        "ln -s /app/astrogods/astrogods /app/bin/astrogods",
        "install -Dm644 share/applications/it.astrogods.AstroGods.desktop /app/share/applications/it.astrogods.AstroGods.desktop",
        "install -Dm644 share/metainfo/it.astrogods.AstroGods.metainfo.xml /app/share/metainfo/it.astrogods.AstroGods.metainfo.xml",
        "cp -r share/icons /app/share/"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/arcangelo7/astrogods-linux/releases/download/4.5.1/linux-x64-4.5.1.tar.gz",
          "sha256": "c56d8124156e017fc0010a275ff586dbfbe3fae2e35b5e3911b2ff4639ab03fe"
        }
      ]
    }
  ]
}
