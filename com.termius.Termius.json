{
  "app-id": "com.termius.Termius",
  "base": "org.electronjs.Electron2.BaseApp",
  "base-version": "19.08",
  "command": "termius",
  "rename-desktop-file": "termius-app.desktop",
  "rename-icon": "termius-app",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "19.08",
  "sdk": "org.freedesktop.Sdk",
  "separate-locales": false,
  "finish-args": [
    "--device=dri",
    "--filesystem=home",
    "--filesystem=xdg-run/keyring",
    "--share=ipc",
    "--socket=ssh-auth",
    "--share=network",
    "--socket=x11",
    "--talk-name=org.freedesktop.Flatpak",
    "--talk-name=org.freedesktop.Notifications",
    "--talk-name=org.freedesktop.secrets"
  ],
  "modules": [
    {
      "name": "termius",
      "buildsystem": "simple",
      "build-commands": [
        "ar -o -x Termius.deb",
        "tar --extract --file=data.tar.xz",
        "rm --force --recursive usr/share/icons/hicolor/1024x1024/",
        "cp --preserve --recursive opt/* usr/* /app",
        "desktop-file-edit --set-key=Exec --set-value=\"/app/bin/termius %U\" /app/share/applications/termius-app.desktop",
        "install -D --mode=0755 entrypoint.sh /app/bin/termius",
        "install -D --mode=0644 --target-directory=/app/share/metainfo/ com.termius.Termius.appdata.xml"
      ],
      "sources": [
        {
          "type": "file",
          "only-arches": ["x86_64"],
          "sha256": "7c03aa372f253cd87aa0d6891d01bed9becb5e2260a7ce0749eba263a4468eaf",
          "url": "https://www.termius.com/download/linux/Termius.deb"
        }, {
          "type": "file",
          "path": "entrypoint.sh"
        }, {
          "type": "file",
          "path": "com.termius.Termius.appdata.xml"
        }
      ]
    }
  ]
}
