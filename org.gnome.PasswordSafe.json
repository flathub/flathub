{
    "app-id": "org.gnome.PasswordSafe",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "3.30",
    "sdk" : "org.gnome.Sdk",
    "command" : "gnome-passwordsafe",
    "finish-args" : [
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--filesystem=xdg-run/dconf",
        "--filesystem=~/.config/dconf:ro",
        "--filesystem=xdg-run/gvfs",
        "--env=DCONF_USER_CONFIG_DIR=.config/dconf",
        "--talk-name=ca.desrt.dconf",
        "--talk-name=org.gtk.vfs",
        "--talk-name=org.gtk.vfs.*",
        "--talk-name=org.freedesktop.Notifications"
    ],
    "modules" : [
    	"python3-setuptools_scm.json",
        "python3-pykeepass.json",
        {
            "name" : "libhandy",
            "buildsystem" : "meson",
            "config-opts": [
                "-Dglade_catalog=false"
            ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://source.puri.sm/Librem5/libhandy/-/archive/v0.0.4/libhandy-v0.0.4.tar.gz",
                    "sha256" : "2c54b61cefb153b3a6ab8b6ecb520375854301632c998b003dd7dba623ea2a03"
                }
            ]
        },
        {
            "name" : "passwordsafe",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/World/PasswordSafe.git",
                    "branch" : "gnome-3.30"
                }
            ]
        }
    ]
}
