            "name": "libsodium",
            "buildsystem": "autotools",
            "builddir": true,
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/jedisct1/libsodium.git",
                    "tag": "1.0.18",
                    "commit": "4f5e89fa84ce1d178a6765b8b46f2b6f91216677"
                }
            ]
        },
        {
            "name": "org.kde.keysmith",
            "buildsystem": "cmake-ninja",
            "config-opts": [ "-DBUILD_TESTING=OFF", "-DCMAKE_BUILD_TYPE=RelWithDebInfo" ],
            "builddir": true,
            "sources": [ 
                { 
                    "type": "archive", 
                    "url": "https://download.kde.org/stable/plasma-mobile/21.06/keysmith-21.06.tar.xz", 
                    "sha256": "2f338385cd997804b240e51ba095804f531738f28a6a502c8764ab23462d6007"
                },
                {
                    "type": "patch",
                    "path": "0001-add-url.patch"
                }
            ]
        }
    ]
}
