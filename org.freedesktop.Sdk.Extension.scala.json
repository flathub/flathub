{
  "id": "org.freedesktop.Sdk.Extension.scala",
  "branch": "25.08",
  "runtime": "org.freedesktop.Sdk",
  "runtime-version": "25.08",
  "sdk": "org.freedesktop.Sdk",
  "build-extension": true,
  "separate-locales": false,
  "modules": [
    {
      "name": "scala",
      "buildsystem": "simple",
      "sources": [
        {
          "type": "archive",
          "archive-type": "tar-gzip",
          "url": "https://github.com/scala/scala3/releases/download/3.7.4/scala3-3.7.4-x86_64-pc-linux.tar.gz",
          "sha256": "a79971471710d2ced931e421abcf543a7a78c3397aa20d3c02ffeb76a7602acc"
        }
      ],
      "build-commands": ["cp -r . /usr/lib/sdk/scala/"]
    },
    {
      "name": "sbt",
      "buildsystem": "simple",
      "sources": [
        {
          "type": "archive",
          "archive-type": "tar-gzip",
          "url": "https://github.com/sbt/sbt/releases/download/v1.11.7/sbt-1.11.7.tgz",
          "sha256": "1232818f91c39639a93bbe1108e12d94c7044a646a7847f1a3977b9e46716cd6"
        }
      ],
      "build-commands": ["cp -r . /usr/lib/sdk/scala/sbt/"]
    },
    {
      "name": "scripts",
      "buildsystem": "simple",
      "sources": [
        {
          "type": "script",
          "dest-filename": "enable.sh",
          "commands": [
            "export SCALA_HOME=/usr/lib/sdk/scala",
            "export PATH=$PATH:$SCALA_HOME/bin",
            "export SCALA_SBT_HOME=$SCALA_HOME/sbt",
            "export PATH=$PATH:$SCALA_SBT_HOME/bin"
          ]
        }
      ],
      "build-commands": ["cp enable.sh /usr/lib/sdk/scala/"]
    }
  ]
}
