{
  "app-id": "io.naox.InnerBreeze",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "23.08",
  "sdk": "org.freedesktop.Sdk",
  "copy-icon": "true",
  "finish-args": [
      "--share=ipc",
      "--share=network",
      "--socket=wayland",
      "--socket=fallback-x11",
      "--device=dri"
  ],
  "command": "inner_breeze",
  "modules": [
      {
          "name": "InnerBreeze",
          "buildsystem": "simple",
          "build-commands": [
              "chmod +x inner_breeze",
              "install -D inner_breeze /app/bin/inner_breeze",
              "cp -r data /app/data",
              "cp -r lib /app/lib",
              "install -Dpm644 extra/io.naox.InnerBreeze.desktop /app/share/applications/io.naox.InnerBreeze.desktop",
              "install -Dpm644 extra/io.naox.InnerBreeze.metainfo.xml /app/share/metainfo/io.naox.InnerBreeze.metainfo.xml"
              "install -Dpm644 extra/io.naox.InnerBreeze.png /app/share/icons/hicolor/256x256/apps/io.naox.InnerBreeze.png"


          ],
          "sources": [
              {
                  "type": "archive",
                  "url": "https://github.com/naoxio/inbe/releases/download/1.0.0/linux_x64.tar.gz",
                  "sha256": "3e5b61f14671e8eb7b0b22379f1f288ae0c92f3ba5a0c2c1e3ac83e0b4bcd9c3"
              }
          ]
      }
  ]
}
