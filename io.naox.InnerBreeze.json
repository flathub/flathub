{
  "app-id": "io.naox.InnerBreeze",
  "runtime": "org.gnome.Platform",
  "runtime-version": "3.38",
  "sdk": "org.gnome.Sdk",
  "command": "inner_breeze",
  "finish-args": [
      "--socket=x11",
      "--socket=wayland",
      "--device=dri",
      "--share=network",
      "--filesystem=xdg-download",
      "--filesystem=xdg-pictures:ro",
      "--filesystem=xdg-music:ro",
      "--filesystem=xdg-videos:ro",
      "--share=ipc"
  ],
  "build-options": {
      "append-path": "/app/.flutter/bin",
      "env": {
          "FLUTTER_HOME": "/app/.flutter"
      }
  },
  "cleanup": [
      "/include",
      "/lib/pkgconfig",
      "/share/pkgconfig",
      "/share/aclocal",
      "/man",
      "/share/man",
      "/share/gtk-doc",
      "/share/vala",
      "/lib/girepository-1.0",
      "/share/dbus-1",
      "/share/doc",
      "/share/info"
  ],
  "modules": [
      {
          "name": "InnerBreeze",
          "buildsystem": "simple",
          "build-commands": [
              "/app/.flutter/bin/flutter config --no-analytics",
              "/app/.flutter/bin/flutter precache",
              "/app/.flutter/bin/flutter doctor",
              "/app/.flutter/bin/flutter build linux --release",
              "install -D build/linux/x64/release/bundle/inner_breeze /app/bin/inner_breeze",
              "install -D -m644 build/linux/x64/release/bundle/data/flutter_assets/assets/images/logo.png /app/share/icons/hicolor/512x512/apps/io.naox.InnerBreeze.png",
              "install -D -m644 io.naox.InnerBreeze.desktop /app/share/applications/io.naox.InnerBreeze.desktop"
          ],
          "sources": [
              {
                  "type": "git",
                  "url": "https://github.com/yourusername/InnerBreeze.git",
                  "branch": "main"
              },
              {
                  "type": "file",
                  "path": "io.naox.InnerBreeze.desktop"
              }
          ]
      }
  ]
}
