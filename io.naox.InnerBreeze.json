{
    "app-id": "io.naox.InnerBreeze",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "23.08",
    "sdk": "org.freedesktop.Sdk",
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=wayland",
        "--socket=fallback-x11",
        "--device=dri"
    ],
    "command": "inner_breeze",
    "modules": [
        {
            "name": "InnerBreeze",
            "buildsystem": "simple",
            "build-commands": [
                "install -Dpm644 extra/io.naox.InnerBreeze.desktop /app/share/applications/io.naox.InnerBreeze.desktop",
                "install -Dpm644 extra/io.naox.InnerBreeze.metainfo.xml /app/share/metainfo/io.naox.InnerBreeze.metainfo.xml",
                "install -Dpm644 extra/InnerBreeze.png /app/share/icons/hicolor/256x256/apps/InnerBreeze.png",
                "mv data lib inner_breeze /app/",
                "mkdir -p /app/bin",
                "ln -s /app/inner_breeze /app/bin/inner_breeze"
            ],
            "build-options": {
                "env": {
                    "LD_LIBRARY_PATH": "/app/lib:$LD_LIBRARY_PATH"
                }
            },
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/naoxio/inner_breeze/releases/download/1.0.0/linux_x64.tar.gz",
                    "sha256": "ecb855b55f6478d2b54dea8702f346129098c4cdffc02a2a3d6db931ed1c32a0"
                }
            ]
        }
    ]
}
