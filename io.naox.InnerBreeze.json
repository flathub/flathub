{
  "app-id": "io.naox.InnerBreeze",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "21.08",
  "sdk": "org.freedesktop.Sdk",
  "copy-icon": "true",
  "finish-args": [
      "--share=ipc",
      "--share=network",
      "--socket=wayland",
      "--socket=fallback-x11",
      "--device=dri"
  ],
  "command": "inner_breeze",
  "modules": [
      {
          "name": "InnerBreeze",
          "buildsystem": "simple",
          "build-commands": [
              "chmod +x inner_breeze",
              "install -D inner_breeze /app/bin/inner_breeze",
              "cp -r data /app/data",
              "cp -r lib /app/lib",
              "install -Dpm644 io.naox.InnerBreeze.desktop /app/share/applications/io.naox.InnerBreeze.desktop",
              "install -Dpm644 io.naox.InnerBreeze.metainfo.xml /app/share/metainfo/io.naox.InnerBreeze.metainfo.xml"
          ],
          "sources": [
              {
                  "type": "archive",
                  "url": "https://github.com/naoxio/inbe/releases/download/1.0.0/linux_x64.tar.gz",
                  "sha256": "0ec1f217e4c27b9691b1089b3578304f78bcfb54689a3002e582a2e4a6f9cbaa"
              },
              {
                  "type": "file",
                  "path": "extra/io.naox.InnerBreeze.desktop"
              },
              {
                  "type": "file",
                  "path": "extra/io.naox.InnerBreeze.metainfo.xml"
              }
          ]
      }
  ]
}
