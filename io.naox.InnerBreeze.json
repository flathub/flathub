{
    "app-id": "io.naox.InnerBreeze",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "23.08",
    "sdk": "org.freedesktop.Sdk",
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=wayland",
        "--socket=fallback-x11",
        "--device=dri"
    ],
    "command": "inner_breeze",
    "modules": [
        {
            "name": "InnerBreeze",
            "buildsystem": "simple",
            "build-commands": [
                "install -Dpm644 linux_x64/extra/io.naox.InnerBreeze.desktop /app/share/applications/io.naox.InnerBreeze.desktop",
                "install -Dpm644 linux_x64/extra/io.naox.InnerBreeze.metainfo.xml /app/share/metainfo/io.naox.InnerBreeze.metainfo.xml",
                "install -Dpm644 linux_x64/extra/InnerBreeze.png /app/share/icons/hicolor/256x256/apps/InnerBreeze.png",
                "mv linux_x64/data linux_x64/lib linux_x64/inner_breeze /app/",
                "mkdir -p /app/bin",
                "ln -s /app/inner_breeze /app/bin/inner_breeze"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/naoxio/inner_breeze/releases/download/1.0.0/InnerBreeze-x86_64.tar.gz",
                    "sha256": "b7e40bacc1b4456966dd9b24cc6ddbb00f454617ffdf255ede6da9c14ca519d7"
                }
            ]
        }
    ]
}
