<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
	<id>nl.flyingpie.wtq</id>

	<name>WTQ</name>
	<summary>Enable Quake-style dropdown for (almost) any application</summary>
	<content_rating type="oars-1.1" />
	
	<metadata_license>MIT</metadata_license>
	<project_license>MIT</project_license>

	<launchable type="desktop-id">nl.flyingpie.wtq.desktop</launchable>

	<categories>
		<category>Utility</category>
	</categories>

	<keywords>
		<keyword>dropdown</keyword>
		<keyword>flatpak</keyword>
		<keyword>linux</keyword>
		<keyword>quake</keyword>
		<keyword>terminal</keyword>
		<keyword>toggle</keyword>
	</keywords>

	<url type="bugtracker">https://github.com/flyingpie/windows-terminal-quake/issues</url>
	<url type="homepage">https://wtq.flyingpie.nl</url>
	<url type="vcs-browser">https://github.com/flyingpie/windows-terminal-quake</url>
	
	<developer id="nl.flyingpie">
		<name>Marco van den Oever</name>
	</developer>

	<description>
		<p>WTQ runs in the background, and enables sliding applications on-and off the screen, Quake style.</p>
	</description>

	<branding>
		<color type="primary" scheme_preference="light">#e9e7f2</color>
		<color type="primary" scheme_preference="dark">#400f79</color>
	</branding>

