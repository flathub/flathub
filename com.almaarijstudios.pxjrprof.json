{
  "app-id": "com.almaarijstudios.pxjrprof",
  "id": "com.almaarijstudios.pxjrprof",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "25.08",
  "sdk": "org.freedesktop.Sdk",
  "command": "PixelJrProf",
  "finish-args": [
    "--share=network",
    "--share=ipc",
    "--socket=x11",
    "--socket=pulseaudio",
    "--device=dri"
  ],
  "modules": [
    {
      "name": "PixelJuniorProf",
      "buildsystem": "simple",
      "build-commands": [
        "install -Dm755 'PixelJrProf' '/app/bin/PixelJrProf'",
        "install -Dm644 'com.almaarijstudios.pxjrprof.desktop' '/app/share/applications/com.almaarijstudios.pxjrprof.desktop'",
        "install -Dm644 'com.almaarijstudios.pxjrprof.png' '/app/share/icons/hicolor/512x512/apps/com.almaarijstudios.pxjrprof.png'",
        "install -Dm644 'com.almaarijstudios.pxjrprof.metainfo.xml' '/app/share/metainfo/com.almaarijstudios.pxjrprof.metainfo.xml'",
        "cp -r * /app/bin/"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/medhallal/PixelJrProf-flathub/releases/download/6.1.4/PixelJrProf-6.1.4-x86_64.tar.gz",
          "sha256": "844a3619d8752979067add1a52ac02d174608486aa44e4963f1e797565aae3f0"
        }
