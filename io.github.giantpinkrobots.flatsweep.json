{
    "app-id" : "io.github.giantpinkrobots.flatsweep",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "44",
    "sdk" : "org.gnome.Sdk",
    "command" : "flatsweep",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
        "--filesystem=home/.var/app/",
        "--filesystem=/var/lib/flatpak/app:ro",
        "--filesystem=home/.local/share/flatpak/app:ro"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "flatsweep",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/giantpinkrobots/flatsweep.git",
                    "commit" : "eb15db1da207ef683e558c2dd6703d8b3c9abd3f"
                }
            ]
        }
    ]
}
