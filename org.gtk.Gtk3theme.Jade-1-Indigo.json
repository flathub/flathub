            "cp org.gtk.Gtk3theme.Jade-1-Indigo.metainfo.xml ${FLATPAK_DEST}/share/appdata",
            "appstream-compose --basename=org.gtk.Gtk3theme.Jade-1-Indigo --prefix=${FLATPAK_DEST} --origin=flatpak org.gtk.Gtk3theme.Jade-1-Indigo"
