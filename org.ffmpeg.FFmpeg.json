{
   "name":"ffmpeg",
   "cleanup":[
      "/include",
      "/lib/pkgconfig",
      "/share"
   ],
   "build-options":{
      "arch":{
         "i386":{
            "config-opts":[
               "--arch=x86"
            ]
         },
         "arm":{
            "config-opts":[
               "--arch=arm"
            ]
         }
      }
   },
   "config-opts":[
      "--disable-all",
      "--enable-shared",
      "--disable-static",
      "--enable-swscale",
      "--enable-gnutls",
      "--enable-avfilter",
      "--enable-avcodec",
      "--enable-avformat",
      "--enable-decoder=aac"
   ],
   "sources":[
      {
         "type":"archive",
         "url":"https://ffmpeg.org/releases/ffmpeg-3.3.tar.xz",
         "sha256":"599e7f7c017221c22011c4037b88bdcd1c47cd40c1e466838bc3c465f3e9569d"
      }
   ]
}
