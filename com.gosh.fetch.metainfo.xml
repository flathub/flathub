<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>com.gosh.fetch</id>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>AGPL-3.0-only</project_license>
  <name>Gosh Fetch</name>
  <summary>Cross-platform download manager with BitTorrent support</summary>

  <developer id="com.gosh.goshitsarch">
    <name>Goshitsarch</name>
  </developer>

  <description>
    <p>Gosh Fetch is a modern download manager built with a native Rust engine. It supports HTTP/HTTPS downloads and BitTorrent, with features like pause/resume, speed limiting, and download scheduling.</p>
    <p>Features include:</p>
    <ul>
      <li>Multi-threaded HTTP/HTTPS downloads</li>
      <li>BitTorrent support with magnet links</li>
      <li>Pause, resume, and queue management</li>
      <li>System tray integration</li>
      <li>Download speed limiting</li>
    </ul>
  </description>

  <launchable type="desktop-id">com.gosh.fetch.desktop</launchable>

  <screenshots>
    <screenshot type="default">
      <image>https://raw.githubusercontent.com/goshitsarch-eng/Gosh-Fetch/main/screenshots/img1.png</image>
      <caption>Main download manager interface</caption>
    </screenshot>
    <screenshot>
      <image>https://raw.githubusercontent.com/goshitsarch-eng/Gosh-Fetch/main/screenshots/img2.png</image>
      <caption>Download in progress</caption>
    </screenshot>
  </screenshots>

  <url type="homepage">https://github.com/goshitsarch-eng/Gosh-Fetch</url>
  <url type="bugtracker">https://github.com/goshitsarch-eng/Gosh-Fetch/issues</url>
  <url type="vcs-browser">https://github.com/goshitsarch-eng/Gosh-Fetch</url>

  <content_rating type="oars-1.1"/>

  <releases>
    <release version="1.1.1" date="2026-01-09">
      <description>
        <p>Latest release with bug fixes and improvements.</p>
      </description>
    </release>
  </releases>

  <provides>
    <binary>gosh-fetch</binary>
  </provides>

  <supports>
    <control>pointing</control>
    <control>keyboard</control>
  </supports>

  <requires>
    <display_length compare="ge">768</display_length>
  </requires>
</component>
