{
    "app-id": "com.github.mdh34.quickdocs",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.28",
    "sdk": "org.gnome.Sdk",
    "command": "com.github.mdh34.quickdocs",
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--device=dri",
        "--socket=x11",
        "--socket=wayland",
        "--talk-name=ca.desrt.dconf",
        "--filesystem=xdg-run/dconf",
        "--filesystem=~/.config/dconf:ro",
        "--env=DCONF_USER_CONFIG_DIR=.config/dconf",
        "--talk-name=org.gtk.vfs.*"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/lib/*.la",
        "/share/gir-1.0",
        "/lib/girepository-1.0",
        "/share/vala",
        "/share/gtk-doc"
    ],
    "modules": [
        {
            "name": "elementary",
            "buildsystem": "simple",
            "build-commands": [
                "install -dm755 /app/share/themes/elementary/gtk-3.0",
                "cp -aL gtk-3.22/* /app/share/themes/elementary/gtk-3.0",
                "cp -a index.theme /app/share/themes/elementary"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "git://github.com/elementary/stylesheet.git",
                    "branch": "5.1.1",
                    "commit": "6a96d0f3227f15533c11e136b101ee44052eb750"
                }
            ]
        },
        {
            "name":"libdevhelp",
            "sources": [
                {
                    "type":"archive",
                    "url":"https://gitlab.gnome.org/GNOME/devhelp/-/archive/3.28.1/devhelp-3.28.1.tar.gz",
                    "sha256":"71de1f7ad5f574772fa401f7278ad878d52e374c2940fb2f2f049eb060e7fe08"
                }
            ]
        },

        {
            "name": "quickdocs",
            "buildsystem": "meson",
            "sources": [
                {
                  "type": "archive",
                  "url": "https://github.com/mdh34/quickDocs/archive/2.0.3.tar.gz",
                  "sha256": "cde61c1dbee203143e0e73da4b9d7046e8c322eb08ed1ce40084db9c3847a93b"
                },
                {
                    "type": "patch",
                    "path": "elementary-theme.patch"
                }
            ]
        }
    ]
}

