{
    "id": "io.github.junalmeida.webapps_manager",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.7",
    "sdk": "org.kde.Sdk",
    "base": "io.qt.PySide.BaseApp",
    "base-version": "6.7",
    "command": "webapps_manager",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--share=network",
        "--filesystem=host-os",
        "--filesystem=/var/lib/flatpak",
        "--filesystem=home",
        "--talk-name=org.freedesktop.Flatpak"
    ],
    "modules": [
        "python3-modules.json",
        {
            "name": "debugpy",
            "buildsystem": "simple",
            "build-options": {
                "build-args": [
                    "--share=network"
                ]
            },
            "build-commands": [
                "pip3 install --prefix=/app --no-cache-dir debugpy"
            ]
        },
        {
            "name": "webapps_manager",
            "buildsystem": "simple",
            "build-commands": [
                "python -m pip install --no-build-isolation --prefix=/app .",
                "cp -R app/share/* ${FLATPAK_DEST}/share/",
                "cp -R app/etc/* ${FLATPAK_DEST}/etc/"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/junalmeida/webapps_manager.git",
                    "tag": "v0.0.1",
                    "commit": "5625437"
                }
            ]
        }
    ],
    "cleanup-commands": [
        "/app/cleanup-BaseApp.sh"
    ]
}