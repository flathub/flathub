    </developer>

    <url type="homepage">https://towdow.app/</url>
    <url type="bugtracker">https://gitlab.com/towdow/towdow-flutter/-/issues</url>

    <categories>
        <category>Utility</category>
        <category>Office</category>
    </categories>

    <keywords>
        <keyword>task</keyword>
        <keyword>todo</keyword>
        <keyword>workflow</keyword>
        <keyword>project</keyword>
    </keywords>

