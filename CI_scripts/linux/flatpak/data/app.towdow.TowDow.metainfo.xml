<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
    <id>app.towdow.TowDow</id>

    <name>TowDow</name>
    <summary>Tasks &amp; process management</summary>

    <description>
        <p>TowDow is an open-source task and process manager that helps individuals and teams plan work, track progress, and collaborate on structured flows. It supports daily tasking as well as repeatable, multi-step processes, with a clean interface designed for focus.</p>
        <p>Features include lists and sub-tasks, due dates, and collaboration-friendly flows.</p>
    </description>

    <launchable type="desktop-id">app.towdow.TowDow.desktop</launchable>

