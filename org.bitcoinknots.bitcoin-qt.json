{
    "id": "org.bitcoinknots.bitcoin-qt",
    "runtime": "org.freedesktop.Platform",
    "sdk": "org.freedesktop.Sdk",
    "runtime-version": "23.08",
    "command": "bitcoin-qt",
    "finish-args": [
        "--socket=x11",
        "--socket=pulseaudio",
        "--device=dri",
        "--share=ipc",
        "--share=network",
        "--filesystem=/run/tor/control.authcookie:ro"
    ],
    "modules": [
        {
            "name": "bitcoinknots",
            "buildsystem": "simple",
            "build-commands": [
                "install -m 0744 -D -t /app/bin/internal bin/bitcoind",
                "install -m 0744 -D -t /app/bin/internal bin/bitcoin-qt",
                "install -m 0744 -D -t /app/bin/internal bin/bitcoin-cli",
                "install -m 0744 -D -t /app/bin/internal bin/test_bitcoin"
            ],
            "post-install": [
                "/app/bin/internal/test_bitcoin"
            ],
            "sources": [
                {
                    "type": "archive",
                    "only-arches": [
                        "x86_64"
                    ],
                    "url": "https://bitcoinknots.org/files/26.x/26.1.knots20240325/bitcoin-26.1.knots20240325-x86_64-linux-gnu.tar.gz",
                    "sha256": "ae13675c1b66ce7691f367ffa412f6146af0d951e1ff95a3952e31f34bb25b94",
                    "x-checker-data": {
                        "type": "html",
                        "url": "https://bitcoinknots.org/",
                        "version-pattern": "Latest version: ([\\d\\.-]+\\.knots\\d+)",
                        "url-template": "https://bitcoinknots.org/files/$major.x/$version/bitcoin-$version-x86_64-linux-gnu.tar.gz"
                    }
                },
                {
                    "type": "archive",
                    "only-arches": [
                        "aarch64"
                    ],
                    "url": "https://bitcoinknots.org/files/26.x/26.1.knots20240325/bitcoin-26.1.knots20240325-aarch64-linux-gnu.tar.gz",
                    "sha256": "39cca43d82fc9482e2880f75093fb9e8512c1c62383954e33a7b7a7f8ea4ae9a",
                    "x-checker-data": {
                        "type": "html",
                        "url": "https://bitcoinknots.org/",
                        "version-pattern": "Latest version: ([\\d\\.-]+\\.knots\\d+)",
                        "url-template": "https://bitcoinknots.org/files/$major.x/$version/bitcoin-$version-aarch64-linux-gnu.tar.gz"
                    }
                }
            ]
        },
        {
            "name": "misc",
            "buildsystem": "simple",
            "build-commands": [
                "desktop-file-edit --set-key=\"Icon\" --set-value=${FLATPAK_ID} bitcoin-qt.desktop",
                "install -Dp -m 644 bitcoin-qt.desktop /app/share/applications/${FLATPAK_ID}.desktop",
                "install -Dp -m 644 bitcoin.svg /app/share/icons/hicolor/scalable/apps/org.bitcoinknots.bitcoin-qt.svg",
                "install -Dp -m 644 org.bitcoinknots.bitcoin-qt.metainfo.xml /app/share/metainfo/org.bitcoinknots.bitcoin-qt.metainfo.xml",
                "bash install_wrappers.sh"
            ],
            "sources": [
                {
                    "type": "file",
                    "url": "https://raw.githubusercontent.com/bitcoinknots/packaging/knots/debian/bitcoin-qt.desktop",
                    "sha256": "90cf63ef0a42dd1d9aa7e66d693083609a0c5a3ce7d85e6804c5cd4c956cbee6"
                },
                {
                    "type": "file",
                    "path": "org.bitcoinknots.bitcoin-qt.metainfo.xml"
                },
                {
                    "type": "file",
                    "url": "https://raw.githubusercontent.com/bitcoinknots/bitcoin/v26.1.knots20240325/src/qt/res/src/bitcoin.svg",
                    "sha256": "ecedc3917722899e2b056cfae0392b11fbb19b19434aa164d7589719d9b88b2d"
                },
                {
                    "type": "file",
                    "path": "install_wrappers.sh"
                }
            ]
        }
    ]
}
