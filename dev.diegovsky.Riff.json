{
  "app-id": "dev.diegovsky.Riff",
  "runtime": "org.gnome.Platform",
  "runtime-version": "49",
  "sdk": "org.gnome.Sdk",
  "sdk-extensions": [
    "org.freedesktop.Sdk.Extension.rust-stable"
  ],
  "command": "riff",
  "finish-args": [
    "--share=network",
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--socket=pulseaudio",
    "--device=dri",
    "--talk-name=org.freedesktop.secrets"
  ],
  "separate-locales": false,
  "build-options": {
    "append-path": "/usr/lib/sdk/rust-stable/bin",
    "env": {
      "CARGO_HOME": "/run/build/riff/cargo",
      "RUST_BACKTRACE": "full",
      "RUST_LOG": "riff=debug"
    }
  },
  "cleanup": [
    "/include",
    "/lib/pkgconfig",
    "/man",
    "/share/doc",
    "/share/gtk-doc",
    "/share/man",
    "/share/pkgconfig",
    "*.la",
    "*.a"
  ],
  "modules": [
    {
      "name": "riff",
      "builddir": true,
      "buildsystem": "meson",
      "config-opts": [
        "-Doffline=true"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/Diegovsky/riff",
          "commit": "58c1c3a513047874169820d1f8c809d631ff06ec",
          "tag": "v25.11"
        },
        "cargo-sources.json"
      ]
    }
  ]
}
