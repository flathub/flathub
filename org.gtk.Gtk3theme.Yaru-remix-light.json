{
   "id":"org.gtk.Gtk3theme.Yaru-remix-light",
   "branch":"3.22",
   "runtime":"org.freedesktop.Sdk",
   "build-extension":true,
   "sdk":"org.freedesktop.Sdk",
   "runtime-version":"20.08",
   "appstream-compose":false,
   "separate-locales":false,
   "modules":[
      {
         "name":"Yaru-remix-light",
         "buildsystem":"simple",
         "build-commands":[
            "install -dm755 /usr/share/runtime/share/themes/Yaru-remix-light/gtk-3.0",
            "cp -aL gtk-3.20/* /usr/share/runtime/share/themes/Yaru-remix-light/gtk-3.0",
            "cp -a index.theme /usr/share/runtime/share/themes/Yaru-remix-light"
         ],
         "sources":[
            {
               "type":"archive",
               "url":"https://github.com/Muqtxdir/yaru-remix/releases/download/v20.04.1/Yaru-remix-light-gtk.zip",
               "sha256":"8d8e38eef711aaeb949905da4839f63180a698e8f26b0fefc724f96246a93043"
            }
         ]
      },
      {
         "name":"appdata",
         "buildsystem":"simple",
         "build-commands":[
            "mkdir -p ${FLATPAK_DEST}/share/appdata",
            "cp org.gtk.Gtk3theme.Yaru-remix-light.appdata.xml ${FLATPAK_DEST}/share/appdata",
            "appstream-compose --basename=org.gtk.Gtk3theme.Yaru-remix-light --prefix=${FLATPAK_DEST} --origin=flatpak org.gtk.Gtk3theme.Yaru-remix-light"
         ],
         "sources":[
            {
               "type":"file",
               "path":"org.gtk.Gtk3theme.Yaru-remix-light.appdata.xml"
            }
         ]
      }
   ]
}
