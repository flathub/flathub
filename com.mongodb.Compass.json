{
    "app-id": "com.mongodb.Compass",
    "base": "org.electronjs.Electron2.BaseApp",
    "base-version": "21.08",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "21.08",
    "sdk": "org.freedesktop.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.node14"
    ],
    "command": "run.sh",
    "separate-locales": false,
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=pulseaudio",
        "--filesystem=home",
        "--talk-name=org.freedesktop.secrets",
        "--talk-name=org.freedesktop.FileManager1",
        "--talk-name=org.freedesktop.Notifications",
        "--share=network"
    ],
    "modules": [
        {
            "name": "libsecret",
            "buildsystem": "meson",
            "config-opts": [
                "-Dmanpage=false",
                "-Dvapi=false",
                "-Dgtk_doc=false"
            ],
            "cleanup": [
                "/bin",
                "/include",
                "/lib/pkgconfig",
                "/share/gir-1.0",
                "/share/man"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/libsecret/0.19/libsecret-0.19.1.tar.xz",
                    "sha256": "8583e10179456ae2c83075d95455f156dc08db6278b32bf4bd61819335a30e3a"
                }
            ]
        },
        {
            "name": "run",
            "buildsystem": "simple",
            "build-commands": [
                "install -Dm755 -t /app/bin/ run.sh"
            ],
            "build-options": {
                "env": {
                    "ZYPAK_SANDBOX_FILENAME": "chrome-sandbox",
                    "ZYPAK_DEBUG": "1"
                }
            },
            "sources": [
                {
                    "type": "script",
                    "dest-filename": "run.sh",
                    "commands": [
                        "zypak-wrapper '/app/main/MongoDB Compass' \"$@\""
                    ]
                }
            ]
        },
        {
            "name": "compass",
            "buildsystem": "simple",
            "build-commands": [
                "cp -r main /app/main",
                "install -Dm 644 icon-64x64.png /app/share/icons/hicolor/64x64/apps/com.mongodb.Compass.png",
                "install -Dm 644 icon-128x128.png /app/share/icons/hicolor/128x128/apps/com.mongodb.Compass.png",
                "install -Dm 644 icon-256x256.png /app/share/icons/hicolor/256x256/apps/com.mongodb.Compass.png",
                "install -Dm 644 mongodb-compass.desktop /app/share/applications/com.mongodb.Compass.desktop",
                "install -Dm644 -t /app/share/metainfo com.mongodb.Compass.appdata.xml"
            ],
            "sources": [
                {
                    "type": "archive",
                    "only-arches": [
                        "x86_64"
                    ],
                    "url": "https://github.com/mongodb-js/compass/releases/download/v1.32.2/mongodb-compass-1.32.2-linux-x64.tar.gz",
                    "sha256": "d69d97c9a0ea26c5602147b6467fd6aeb4d7e20e8feefd4a03d2639d58b89dfe",
                    "dest": "main",
                    "x-checker-data": {
                        "type": "json",
                        "url": "https://api.github.com/repos/mongodb-js/compass/releases/latest",
                        "version-query": ".tag_name | sub(\"^v\"; \"\")",
                        "url-query": ".assets[] | select(.name==\"mongodb-compass-\" + $version + \"-linux-x64.tar.gz\") | .browser_download_url"
                    }
                },
                {
                    "type": "file",
                    "path": "./com.mongodb.Compass.appdata.xml"
                },
                {
                    "type": "file",
                    "path": "./icons/icon-256x256.png"
                },
                {
                    "type": "file",
                    "path": "./icons/icon-128x128.png"
                },
                {
                    "type": "file",
                    "path": "./icons/icon-64x64.png"
                },
                {
                    "type": "file",
                    "path": "./mongodb-compass.desktop"
                }
            ]
        }
    ]
}
