{
  "app-id": "com.jgraph.drawio",
  "branch": "stable",
  "base": "io.atom.electron.BaseApp",
  "base-version": "stable",
  "runtime": "org.freedesktop.Sdk",
  "runtime-version": "1.6",
  "sdk": "org.freedesktop.Sdk",
  "command": "draw.io",
  "separate-locales": false,
  "finish-args": [
    "--device=dri",
    "--filesystem=home",
    "--share=ipc",
    "--share=network",
    "--socket=pulseaudio",
    "--socket=x11"
  ],
  "modules": [
    {
      "name": "draw.io",
      "buildsystem": "simple",
      "build-commands": [
        "ar -x draw.io-*.deb",
        "rm -f draw.io-*.deb",
        "tar -xf data.tar.xz",
        "cp -r opt/* /app",
        "install -Dm755 draw.io.sh /app/bin/draw.io",
        "install -Dm644 usr/share/applications/draw.io.desktop /app/share/applications/com.jgraph.drawio.desktop",
        "install -Dm644 usr/share/icons/hicolor/0x0/apps/draw.io.png /app/share/icons/hicolor/512x512/apps/com.jgraph.drawio.png",
        "desktop-file-edit --set-key=Exec --set-value='draw.io %U' /app/share/applications/com.jgraph.drawio.desktop",
        "desktop-file-edit --set-key=Icon --set-value='com.jgraph.drawio' /app/share/applications/com.jgraph.drawio.desktop",
        "install -Dm644 com.jgraph.drawio.appdata.xml /app/share/appdata/com.jgraph.drawio.appdata.xml"
      ],
      "sources": [
        {
          "type": "file",
          "only-arches": ["x86_64"],
          "url": "https://github.com/jgraph/drawio-desktop/releases/download/v8.4.7/draw.io-amd64-8.4.7.deb",
          "sha256": "5240f30c9d1f8c674478295367a3fe779b82f045cb7d88d0c64c7ef9c46c7b2a"
        },
        {
          "type": "script",
          "dest-filename": "draw.io.sh",
          "commands": [
            "exec env TMPDIR=$XDG_CACHE_HOME /app/draw.io/draw.io \"$@\""
          ]
        },
        {
          "type": "file",
          "path": "com.jgraph.drawio.appdata.xml"
        }
      ]
    }
  ]
}