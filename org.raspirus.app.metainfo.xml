    <screenshot type="default">
      <image>https://github.com/Raspirus/media/raw/main/screenshots/main_dark.png</image>
      <caption>Main window</caption>
    </screenshot>
    <screenshot>
      <image>https://github.com/Raspirus/media/raw/main/screenshots/license_dark.png</image>
      <caption>Information window</caption>
    </screenshot>
  </screenshots>

