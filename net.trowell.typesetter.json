{
    "id" : "net.trowell.typesetter",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "49",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.rust-stable",
        "org.freedesktop.Sdk.Extension.node20"
    ],
    "command" : "typesetter",
    "finish-args" : [
        "--device=dri",
        "--share=network",
        "--socket=wayland",
        "--socket=fallback-x11",
        "--share=ipc",
        "--talk-name=org.freedesktop.portal.OpenURI"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/rust-stable/bin:/usr/lib/sdk/node20/bin",
        "build-args" : [
            "--share=network"
        ],
        "env" : {
            "RUST_BACKTRACE" : "1",
            "RUST_LOG" : "typesetter=debug"
        }
    },
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name": "typst-mime",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p /app/share/mime/packages",
                "install -Dm644 typst.xml /app/share/mime/packages/typst.xml",
                "update-mime-database /app/share/mime"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://codeberg.org/haydn/typesetter.git",
                    "tag": "v0.5.0"
                }
            ]
        },
        {
            "name": "ttfautohint",
            "buildsystem": "autotools",
            "config-opts": [
                "--without-qt",
                "--without-doc"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.savannah.gnu.org/releases/freetype/ttfautohint-1.8.4.tar.gz",
                    "sha256": "8a876117fa6ebfd2ffe1b3682a9a98c802c0f47189f57d3db4b99774206832e1"
                }
            ]
        },
        {
            "name": "iosevka",
            "buildsystem": "simple",
            "build-commands": [
                "cp typesetter-source/data/fonts/Iosevka/private-build-plans.toml private-build-plans.toml",
                "npm install",
                "npm run build -- --jCmd=1 ttf::TypesetterSlab",
                "mkdir -p /app/share/fonts",
                "install -Dm644 dist/TypesetterSlab/TTF/*.ttf /app/share/fonts/",
                "install -Dm644 LICENSE.md /app/share/fonts/LICENSE.md",
                "fc-cache -frv"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/be5invis/Iosevka/archive/refs/tags/v33.3.3.tar.gz",
                    "sha256": "d3933f09430ef3d192ec1d848ce9440f7878b8875c2b3529785ff3daa1fa5bb5"
                },
                {
                    "type": "git",
                    "url": "https://codeberg.org/haydn/typesetter.git",
                    "tag": "v0.5.0",
                    "dest": "typesetter-source"
                }
            ]
        },
        {
            "name": "libspelling",
            "buildsystem": "meson",
            "config-opts": ["--prefix=/app"],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/GNOME/libspelling.git",
                    "tag": "0.4.8"
                }
            ]
        },
        {
            "name" : "typesetter",
            "builddir" : true,
            "buildsystem" : "meson",
            "config-opts" : [
                "--buildtype=release"
            ],
            "sources" : [
                {
                    "type": "git",
                    "url": "https://codeberg.org/haydn/typesetter.git",
                    "tag": "v0.5.0"
                }
            ]
        }
    ]
}