{
    "id" : "net.trowell.typesetter",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "49",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command" : "typesetter",
    "finish-args" : [
        "--device=dri",
        "--share=network",
        "--socket=wayland",
        "--socket=fallback-x11",
        "--share=ipc"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/rust-stable/bin",
        "env" : {
            "RUST_BACKTRACE" : "1",
            "RUST_LOG" : "typesetter=debug"
        }
    },
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name": "typst-mime",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p /app/share/mime/packages",
                "install -Dm644 typst.xml /app/share/mime/packages/typst.xml",
                "update-mime-database /app/share/mime"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://codeberg.org/haydn/typesetter.git",
                    "tag": "v0.5.0"
                }
            ]
        },
        {
            "name": "ttfautohint",
            "buildsystem": "autotools",
            "config-opts": [
                "--without-qt",
                "--without-doc"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.savannah.gnu.org/releases/freetype/ttfautohint-1.8.4.tar.gz",
                    "sha256": "8a876117fa6ebfd2ffe1b3682a9a98c802c0f47189f57d3db4b99774206832e1"
                }
            ]
        },
	{
	    "name": "iosevka",
	    "buildsystem": "simple",
	    "build-commands": [
		"mkdir -p /app/share/fonts",
		"install -Dm644 data/fonts/Iosevka/*.ttf /app/share/fonts/"
	    ],
	    "sources": [
		{
		    "type": "git",
		    "url": "https://codeberg.org/haydn/typesetter.git",
		    "tag": "v0.5.0"
		}
	    ]
	},
        {
            "name": "libspelling",
            "buildsystem": "meson",
            "config-opts": ["--prefix=/app"],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/GNOME/libspelling.git",
                    "tag": "0.4.8"
                }
            ]
        },
        {
            "name" : "typesetter",
            "builddir" : true,
            "buildsystem" : "meson",
            "config-opts" : [
                "--buildtype=release"
            ],
            "sources" : [
                {
                    "type": "git",
                    "url": "https://codeberg.org/haydn/typesetter.git",
                    "tag": "v0.5.0"
                }
            ]
        }
    ]
}