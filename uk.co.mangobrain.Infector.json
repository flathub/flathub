{
    "app-id": "uk.co.mangobrain.Infector",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.26",
    "sdk": "org.gnome.Sdk",
    "command": "infector",
    "rename-icon": "infector",
    "rename-desktop-file": "infector.desktop",
    "finish-args":
    [
        "--socket=wayland",
        "--share=ipc", "--socket=x11",
        "--share=network",
        /* dconf */
        "--filesystem=xdg-run/dconf",
        "--filesystem=~/.config/dconf:ro",
        "--talk-name=ca.desrt.dconf",
        "--env=DCONF_USER_CONFIG_DIR=.config/dconf"
    ],
    "build-options":
    {
        "cxxflags": "-O2 -g -std=c++11"
    },
    "cleanup": [ "/include", "/lib" ],
    "modules":
    [
        {
            "name": "sigc++",
            "buildsystem": "autotools",
            "config-opts":
            [
                "--disable-deprecated-api",
                "--enable-static=yes",
                "--enable-shared=no",
                "--disable-documentation"
            ],
            "builddir": true,
            "sources":
            [
                {
                    "type": "archive",
                    "url": "http://ftp.gnome.org/pub/GNOME/sources/libsigc++/2.10/libsigc++-2.10.0.tar.xz",
                    "sha256": "f843d6346260bfcb4426259e314512b99e296e8ca241d771d21ac64f28298d81"
                }
            ]
        },
        {
            "name": "glibmm",
            "buildsystem": "autotools",
            "config-opts":
            [
                "--enable-static=yes",
                "--enable-shared=no",
                "--disable-documentation"
            ],
            "builddir": true,
            "sources":
            [
                {
                    "type": "archive",
                    "url": "http://ftp.gnome.org/pub/GNOME/sources/glibmm/2.54/glibmm-2.54.1.tar.xz",
                    "sha256": "7cc28c732b04d70ed34f0c923543129083cfb90580ea4a2b4be5b38802bf6a4a"
                }
            ]
        },
        {
            "name": "atkmm",
            "buildsystem": "autotools",
            "config-opts":
            [
                "--disable-deprecated-api",
                "--enable-static=yes",
                "--enable-shared=no",
                "--disable-documentation"
            ],
            "builddir": true,
            "sources":
            [
                {
                    "type": "archive",
                    "url": "http://ftp.gnome.org/pub/GNOME/sources/atkmm/2.24/atkmm-2.24.2.tar.xz",
                    "sha256": "ff95385759e2af23828d4056356f25376cfabc41e690ac1df055371537e458bd"
                }
            ]
        },
        {
            "name": "cairomm",
            "buildsystem": "autotools",
            "config-opts":
            [
                "--enable-static=yes",
                "--enable-shared=no",
                "--disable-documentation"
            ],
            "builddir": true,
            "sources":
            [
                {
                    "type": "archive",
                    "url": "http://ftp.gnome.org/pub/GNOME/sources/cairomm/1.12/cairomm-1.12.0.tar.xz",
                    "sha256": "a54ada8394a86182525c0762e6f50db6b9212a2109280d13ec6a0b29bfd1afe6"
                }
            ]
        },
        {
            "name": "pangomm",
            "buildsystem": "autotools",
            "config-opts":
            [
                "--disable-deprecated-api",
                "--enable-static=yes",
                "--enable-shared=no",
                "--disable-documentation"
            ],
            "builddir": true,
            "sources":
            [
                {
                    "type": "archive",
                    "url": "http://ftp.gnome.org/pub/GNOME/sources/pangomm/2.40/pangomm-2.40.1.tar.xz",
                    "sha256": "9762ee2a2d5781be6797448d4dd2383ce14907159b30bc12bf6b08e7227be3af"
                }
            ]
        },
        {
            "name": "gtkmm",
            "buildsystem": "autotools",
            "config-opts":
            [
                "--enable-win32-backend=no",
                "--enable-x11-backend=yes",
                "--enable-wayland-backend=yes",
                "--enable-broadway-backend=no",
                "--enable-static=yes",
                "--enable-shared=no",
                "--disable-documentation"
            ],
            "builddir": true,
            "sources":
            [
                {
                    "type": "archive",
                    "url": "http://ftp.gnome.org/pub/GNOME/sources/gtkmm/3.22/gtkmm-3.22.2.tar.xz",
                    "sha256": "91afd98a31519536f5f397c2d79696e3d53143b80b75778521ca7b48cb280090"
                }
            ]
        },
        {
            "name": "infector",
            "buildsystem": "meson",
            "builddir": true,
            "sources":
            [
                {
                    "type": "archive",
                    "url": "http://infector.mangobrain.co.uk/downloads/infector-0.6.tar.xz",
                    "sha256": "9091240c0daa5f108429c9df0dd400419317c0c413649e511f61b1ee0e6e2a80"
                },
                {
                    "type": "file",
                    "path": "uk.co.mangobrain.Infector.appdata.xml"
                }
            ],
            "post-install":
            [
                "install -Dm644 -t /app/share/metainfo/ ../uk.co.mangobrain.Infector.appdata.xml"
            ]
        }
    ]
}
