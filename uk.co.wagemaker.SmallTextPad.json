{
	"app-id": "uk.co.wagemaker.SmallTextPad",
	"runtime": "org.freedesktop.Platform",
	"runtime-version": "1.6",
	"sdk": "org.freedesktop.Sdk",
	"sdk-extensions": [
		"org.freedesktop.Sdk.Extension.openjdk10"
	],
	"command": "run_smalltextpad.sh",
	"finish-args":[
		"--socket=x11",
		"--socket=wayland",
		"--share=ipc",
		"--share=network",
		"--filesystem=home:rw",
		"--env=PATH=/usr/bin:/app/bin:/app/jre/bin",
		"--env=JAVA_HOME=/app/jre",
		"--device=dri"
	],
	"modules": [
		{
			"name": "openjdk",
			"buildsystem": "simple",
			"build-commands": [
				"/usr/lib/sdk/openjdk10/install.sh"
			]
		},
		{
			"name": "SmallTextpad",
			"buildsystem": "simple",
			"build-commands": [
				"install -Dm644 uk.co.wagemaker.SmallTextPad.png /app/share/icons/hicolor/64x64/apps/uk.co.wagemaker.SmallTextPad.png",
				"install -Dm644 uk.co.wagemaker.SmallTextPad.desktop /app/share/applications/uk.co.wagemaker.SmallTextPad.desktop",
				"install -Dm644 uk.co.wagemaker.SmallTextPad.appdata.xml /app/share/appdata/uk.co.wagemaker.SmallTextPad.appdata.xml",
				"install -Dm755 run_smalltextpad.sh /app/bin/run_smalltextpad.sh",
				"install -Dm644 SmallTextPad.jar /app/bin/SmallTextPad.jar"
			],
			"sources": [
				{
					"type": "file",
					"path": "uk.co.wagemaker.SmallTextPad.png"
				},
				{
					"type": "file",
					"path": "uk.co.wagemaker.SmallTextPad.desktop"
				},
				{
					"type": "file",
					"path": "uk.co.wagemaker.SmallTextPad.appdata.xml"
				},
				{
					"type": "file",
					"path": "run_smalltextpad.sh"
				},
				{
					"type": "file",
					"path": "SmallTextPad.jar"
				}
			]
		}
    ]
}
