{
  "id": "org.taisei_project.Taisei",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "1.6",
  "sdk": "org.freedesktop.Sdk",
  "command": "taisei",
  "rename-icon": "taisei",
  "rename-desktop-file": "taisei.desktop",
  "finish-args": [
    "--socket=pulseaudio",
    "--socket=wayland",
    "--socket=x11",
    "--device=dri"
  ],
  "modules": [
    {
    "name": "libzip",
    "buildsystem": "cmake-ninja",
    "cleanup": [ "/bin", "/share" ],
      "sources": [
        {
          "type": "archive",
          "url": "https://libzip.org/download/libzip-1.5.1.tar.xz",
          "sha256": "04ea35b6956c7b3453f1ed3f3fe40e3ddae1f43931089124579e8384e79ed372"
        }
      ]
    },
    {
      "name": "taisei",
      "config-opts": [
        "-Ddocs=false"
      ],
      "buildsystem": "meson",
      "sources": [
        {
          "type": "file",
          "path": "org.taisei_project.Taisei.appdata.xml"
        },
        {
          "type": "archive",
          "url": "https://github.com/taisei-project/taisei/archive/v1.2.tar.gz",
          "sha256": "8d2d682eeeb6284bc726b8ae52c355848b007957d2dc6bdd973f6384ae075ea3"
        }
      ],
      "post-install": [
        "install -Dm644 ../org.taisei_project.Taisei.appdata.xml /app/share/appdata/org.taisei_project.Taisei.appdata.xml"
      ]
    }
  ]
}

