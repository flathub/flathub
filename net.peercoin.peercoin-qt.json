{
  "id": "net.peercoin.peercoin-qt",
  "runtime": "org.freedesktop.Platform",
  "sdk": "org.freedesktop.Sdk",
  "runtime-version": "20.08",
  "command": "peercoin-qt",
  "finish-args": [
    /* Wayland and Xorg support */
    "--socket=x11",
    /* Sound */
    "--socket=pulseaudio",
    /* OpenGL access. */
    "--device=dri",
    /* IPC access. */
    "--share=ipc",
    /* Network acess. */
    "--share=network"
  ],
  "modules": [
    {
      "name": "peercoin",
      "buildsystem": "simple",
      "build-commands": [
        "install -m 0744 -D -t /app/bin/internal bin/peercoin-qt"
      ],
      "sources": [
        {
          "type": "archive",
          "only-arches": ["x86_64"],
          "url": "https://github.com/peercoin/peercoin/releases/download/v0.10.4ppc/peercoin-0.10.4-x86_64-linux-gnu.tar.gz",
          "sha256": "59af6c2a3102da91d8dfc6d1bb5da1c5f21825bb878f6741518b3eeaae51c361"
        },
        {
          "type": "archive",
          "only-arches": ["aarch64"],
          "url": "https://github.com/peercoin/peercoin/releases/download/v0.10.4ppc/peercoin-0.10.4-aarch64-linux-gnu.tar.gz",
          "sha256": "f5f2b416724b75246f6d968a6b30adcd3556bc2dc8a5ccfef737b3a9fad59cf1"
        }
      ]
    },
    {
      "name": "misc",
      "buildsystem": "simple",
      "build-commands": [
        "install -Dp -m 644 peercoin-icon-green-transparent.svg /app/share/icons/hicolor/scalable/apps/net.peercoin.peercoin-qt.svg",
        "install -Dp -m 644 peercoin-qt.desktop /app/share/applications/net.peercoin.peercoin-qt.desktop",
        "desktop-file-edit --set-key=Icon --set-value=net.peercoin.peercoin-qt.svg /app/share/applications/net.peercoin.peercoin-qt.desktop",
        "install -Dp -m 644 net.peercoin.peercoin-qt.metainfo.xml /app/share/metainfo/net.peercoin.peercoin-qt.metainfo.xml",
        "bash install_wrapper.sh"
      ],
      "sources": [
        {
          "type": "file",
          "url": "https://raw.githubusercontent.com/peercoin/packaging/master/debian/peercoin-qt.desktop",
          "sha256": "252d89470daf7c9a2628d03a8cbd9b58a377f91c87a4c18fbc760048ba1ba113"
        },
        {
          "type": "file",
          "path": "net.peercoin.peercoin-qt.metainfo.xml"
        },
        {
          "type": "file",
          "url": "https://raw.githubusercontent.com/peercoin/media/master/Peercoin%202020%20Logo%20Files/01.%20Icon%20Only/Inside%20Circle/Transparent/Green%20Icon/peercoin-icon-green-transparent.svg",
          "sha256": "999abd7c0e139918f84ca14de1f35a84452fb23c490a695fdde09e9aa8b87f6f"
        },
        {
          "type": "file",
          "path": "install_wrapper.sh"
        }
      ]
    }
  ]
}
