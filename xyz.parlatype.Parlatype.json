{
    "app-id": "xyz.parlatype.Parlatype",

    "runtime": "org.gnome.Platform",
    "runtime-version": "46",
    "sdk": "org.gnome.Sdk",

    "command": "parlatype",

    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--filesystem=home:ro",
        "--talk-name=org.freedesktop.secrets",
        "--own-name=org.mpris.MediaPlayer2.parlatype"
    ],
    "cleanup": [
        "*.la",
        "*.a",
        "/include",
        "/lib/pkgconfig",
        "/lib/python3.8",
        "/libexec",
        "/share/man"
    ],
    "modules": [
        {
            "name": "sphinxbase",
            "config-opts": [
                "--without-python"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/cmusphinx/sphinxbase/archive/9e901850ee4cd1c0b22f2d3b3c15f162564ca283.zip",
                    "sha256": "4369fc4416b2bd3a396ca791cee1ca62c7360f549a78a3c754bb49ba0ebc843a"
                }
            ],
            "cleanup": [
                "/share/sphinxbase"
            ]
        },
        {
            "name": "pocketsphinx",
            "config-opts": [
                "--without-python"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/cmusphinx/pocketsphinx/archive/ab6d6471800966990e12fdb6ed27ae36323cf2c4.zip",
                    "sha256": "29ce0c81eda60bef919d42287bcf85d29b8dcb8dcb8dc69998f58a79a6e4a5c0"
                }
            ],
            "cleanup": [
                "/share/pocketsphinx"
            ]
        },
        {
            "name": "parlatype",
            "buildsystem": "meson",
            "config-opts": [
                "-Dpocketsphinx=true"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/gkarsay/parlatype/releases/download/v4.2/parlatype-4.2.tar.gz",
                    "sha256": "1d1e0aaac795249ab95ca393a17a99d9f721d7a99905acadc794eb16f8f5b538"
                }
            ]
        }
    ]
}
