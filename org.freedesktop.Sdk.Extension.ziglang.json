{
    "id": "org.freedesktop.Sdk.Extension.ziglang",
    "default-branch": "19.08",
    "branch": "19.08",
    "runtime": "org.freedesktop.Sdk",
    "runtime-version": "19.08",
    "sdk": "org.freedesktop.Sdk",
    "build-extension": true,
    "separate-locales": false,
    "appstream-compose": false,
    "build-options": {
        "prefix": "/usr/lib/sdk/ziglang"
    },
    "modules": [
        {
            "name": "zig",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p /usr/lib/sdk/ziglang",
                "cp -r ./* /usr/lib/sdk/ziglang",
                "chmod a+x /usr/lib/sdk/ziglang/zig"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://ziglang.org/download/0.6.0/zig-linux-x86_64-0.6.0.tar.xz",
                    "sha256": "08fd3c757963630645441c2772362e9c2294020c44f14fce1b89f45de0dc1253",
                    "only-arches": [
                        "x86_64"
                    ]
                },
                {
                    "type": "archive",
                    "url": "https://ziglang.org/download/0.6.0/zig-linux-aarch64-0.6.0.tar.xz",
                    "sha256": "e7520efd42cfa02be48c2e430d08fe1f3cbb999d21d9f0d3ffd0febb976b2f41",
                    "only-arches": [
                        "aarch64"
                    ]
                },
                {
                    "type": "archive",
                    "url": "https://ziglang.org/download/0.6.0/zig-linux-armv7a-0.6.0.tar.xz",
                    "sha256": "946969abe357def95ca9cbbfcebfcf2d90cf967bcd3f48ee87662e32d91d8f35",
                    "only-arches": [
                        "arm"
                    ]
                }
            ]
        },
        {
            "name": "scripts",
            "buildsystem": "simple",
            "build-commands": [
                "cp enable.sh /usr/lib/sdk/ziglang"
            ],
            "sources": [
                {
                    "type": "script",
                    "commands": [
                        "export PATH=$PATH:/usr/lib/sdk/ziglang"
                    ],
                    "dest-filename": "enable.sh"
                }
            ]
        },
        {
            "name": "metainfo",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p ${FLATPAK_DEST}/share/metainfo",
                "cp org.freedesktop.Sdk.Extension.ziglang.metainfo.xml ${FLATPAK_DEST}/share/metainfo",
                "appstream-compose  --basename=org.freedesktop.Sdk.Extension.ziglang --prefix=${FLATPAK_DEST} --origin=flatpak org.freedesktop.Sdk.Extension.ziglang"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "org.freedesktop.Sdk.Extension.ziglang.metainfo.xml"
                }
            ]
        }
    ]
}
