<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>org.altaqwaa.Altaqwaa</id>

  <name>Altaqwaa</name>
  <summary>Quran, adhkar, and prayer times</summary>

  <metadata_license>FSFAP</metadata_license>
  <project_license>GPL-3.0-only</project_license>

  <recommends>
    <display_length compare="ge">645</display_length>
  </recommends>

  <description>
    <p>
      Free and open source Islamic desktop application that contains multiple features useful to Muslims. Customizable and easy to use.
    </p>
    <ul>
      <li>Modern interface</li>
      <li>The Holy Quran with text and audio</li>
      <li>A large collection of adhkar</li>
      <li>Prayer times using coordinates and time zones</li>
      <li>Multple methods to calculate prayer time (Umm Al-Qura, Muslim World League, and more).</li>
      <li>Audible notifications for adhkar and prayer times</li>
    </ul>
    <p>
      NOTE: Currently only supports in Arabic
    </p>
  </description>

  <launchable type="desktop-id">org.altaqwaa.Altaqwaa.desktop</launchable>
