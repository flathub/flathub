{
    "id": "com.github.rssguard",
    "branch": "master",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.9",
    "sdk": "org.kde.Sdk",
    "command": "rssguard",
    "rename-icon": "rssguard",
    "finish-args": [ "--share=ipc",
                     "--share=network",
                     "--socket=x11",
                     "--socket=wayland",
                     "--filesystem=xdg-download",
                     "--talk-name=org.kde.StatusNotifierWatcher",
                     "--talk-name=org.freedesktop.Notifications",
                     "--env=QT_QPA_PLATFORM=flatpak" ],
    "modules": [
        {
            "name": "rssguard",
            "buildsystem": "qmake",
            "post-install": [
                "install -d /app/share/icons/hicolor/512x512/apps",
                "install -m644 /app/share/pixmaps/rssguard.png /app/share/icons/hicolor/512x512/apps/rssguard.png"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/martinrotter/rssguard.git",
                    "branch": "3.5.2"
                }
            ]
        }
    ]
}
