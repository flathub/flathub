{
    "app-id": "com.presonus.studioapp7",
    "tags": [ "proprietary" ],
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "23.08",
    "sdk": "org.freedesktop.Sdk",
    "sdk-extensions" : [ "org.freedesktop.Sdk.Extension.llvm18" ],
    "command": "/app/studioone7",
    "finish-args": [
        "--socket=wayland",
        "--socket=session-bus",
        "--device=all",
        "--share=ipc",
        "--share=network",
        "--allow=per-app-dev-shm",
        "--filesystem=home:create",
        "--filesystem=/run/udev/data",
        "--filesystem=xdg-run/pipewire-0",
        "--system-talk-name=org.freedesktop.Avahi",
        "--env=VST_PATH=/app/extensions/Plugins/vst",
        "--env=VST3_PATH=/app/extensions/Plugins/vst3",
        "--env=CLAP_PATH=/app/extensions/Plugins/clap"
    ],
    "add-extensions": {
        "org.freedesktop.LinuxAudio.Plugins": {
            "directory": "extensions/Plugins",
            "version": "23.08",
            "add-ld-path": "lib",
            "merge-dirs": "vst;vst3;clap",
            "subdirectories": true,
            "no-autodownload": true
        }
    },
    "cleanup": [
        "*.a",
        "*.la",
        "/bin",
        "/include",
        "/share/runtime",
        "/share/man",
        "/share/gir-1.0",
        "/share/locale",
        "/share/app-info",
        "/lib/avahi",
        "/lib/cmake",
        "/lib/girepository-1.0",
        "/lib/pkgconfig",
        "/lib/libavahi-glib*",
        "/lib/libavahi-gobject*",
        "/lib/libavahi-libevent*",
        "/lib/libevent*"
    ],
    "modules": [
        {
            "name": "sdbus-c++",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/Kistler-Group/sdbus-cpp.git",
                    "tag": "v1.6.0"
                }
            ],
            "buildsystem": "cmake",
            "config-opts": [
                "-DBUILD_CODE_GEN=ON",
                "-DBUILD_DOC=OFF",
                "-DBUILD_TESTS=OFF",
                "-DBUILD_EXAMPLES=OFF",
                "-DCMAKE_INSTALL_LIBDIR=lib"
            ]
        },
        {
            "name": "libevent",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/libevent/libevent.git",
                    "tag": "release-2.1.12-stable"
                }
            ],
            "buildsystem": "autotools"
        },
        {
            "name": "avahi-compat",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/avahi/avahi.git",
                    "tag": "v0.8"
                }
            ],
            "buildsystem": "autotools",
            "config-opts": [
                "--with-distro=none",
                "--enable-compat-libdns_sd",
                "--disable-libdaemon",
                "--disable-core-docs",
                "--disable-manpages",
                "--disable-mono",
                "--disable-qt3",
                "--disable-qt4",
                "--disable-python",
                "--disable-gtk",
                "--disable-gtk3",
                "--disable-qt4",
                "--disable-qt5"
            ]
        },
        {
            "name": "studioone7",
            "sources": [
                {
                    "type": "file",
                    "url": "https://github.com/fenderdigital/flathub-com.presonus.studioapp7/releases/latest/download/studioone7-x86_64.tar.gz",
                    "sha256": "4a515cbf591abe9a9de91d03672e6d6ca3ce2f883bac349f83e3d77fdbc2abe5",
                    "dest-filename": "studioone7.tar.gz",
                    "only-arches": [ "x86_64" ],
                    "x-checker-data": {
                        "type": "json",
                        "url": "https://api.github.com/repos/fenderdigital/flathub-com.presonus.studioapp7/releases/latest",
                        "version-query": ".tag_name | sub(\"^v\"; \"\")"
                    }
                }
            ],
            "buildsystem": "simple",
            "build-options": {
                "strip": false,
                "no-debuginfo": true
            },
            "build-commands": [
                "tar -xzf studioone7.tar.gz -C ${FLATPAK_DEST}",
                "ln -s ${FLATPAK_DEST}/opt/PreSonus/Studio\\ One\\ 7/Studio\\ One ${FLATPAK_DEST}/studioone7"
            ]
        }
    ]
}
