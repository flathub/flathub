{
  "app-id": "org.standardnotes.standardnotes",
  "base": "org.electronjs.Electron2.BaseApp",
  "base-version": "18.08",
  "command": "standard-notes",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "18.08",
  "sdk": "org.freedesktop.Sdk",
  "sdk-extensions": [
    "org.freedesktop.Sdk.Extension.node10"
  ],
  "separate-locales": false,
  "finish-args": [
    "--device=dri",
    "--filesystem=xdg-download",
    "--filesystem=xdg-documents",
    "--filesystem=xdg-run/keyring",
    "--share=ipc",
    "--share=network",
    "--socket=x11",
    "--talk-name=org.freedesktop.Notifications",
    "--talk-name=org.freedesktop.secrets"
  ],
  "modules": [
    {
      "name": "yarn",
      "buildsystem": "simple",
      "build-commands": [
        "mkdir -p /app/share/yarn/",
        "cp -a * /app/share/yarn/",
        "ln -s /app/share/yarn/bin/yarn /app/bin/yarn",
        "ln -s /app/share/yarn/bin/yarnpkg /app/bin/yarnpkg"
      ],
      "cleanup": ["*"],
      "sources": [
        {
          "type": "archive",
          "sha256": "df202627d9a70cf09ef2fb11cb298cb619db1b958590959d6f6e571b50656029",
          "url": "https://github.com/yarnpkg/yarn/releases/download/v1.16.0/yarn-v1.16.0.tar.gz"
        }
      ]
    },
    {
      "name": "standard-notes",
      "buildsystem": "simple",
      "build-commands": [
        "sed --in-place -e 's/ --x64 --ia32//g' main/package.json",
        "rm -f main/package-lock.json main/app/package-lock.json",

        "yarn --cwd /run/build/standard-notes/main/ --offline install",
        "yarn --cwd /run/build/standard-notes/main/ --offline run dist-linux --${earch} --dir",
        "cp -r main/dist/linux${suffix}-unpacked/ /app/standard-notes/",
        "install -D -m0644 main/build/icon/Icon-512x512.png /app/share/icons/hicolor/512x512/apps/${FLATPAK_ID}.png",
        "install -D -m0755 standard-notes.sh /app/bin/standard-notes",
        "install -D -m0644 -t /app/share/applications/ ${FLATPAK_ID}.desktop",
        "install -D -m0644 -t /app/share/metainfo/ ${FLATPAK_ID}.appdata.xml"
      ],
      "build-options": {
        "append-path": "/usr/lib/sdk/node10/bin/",
        "arch": {
          "x86_64": { "env": { "earch": "x64", "suffix": "" } }
        },
        "env": {
          "ELECTRON_CACHE": "/run/build/standard-notes/electron-cache/",
          "JOBS": "max",
          "electron_config_cache": "/run/build/standard-notes/electron-cache/",
          "npm_config_clang": "1",
          "npm_config_nodedir": "/usr/lib/sdk/node10/"
        }
      },
      "sources": [
        {
          "type": "file",
          "path": "org.standardnotes.standardnotes.appdata.xml"
        },
        {
          "type": "file",
          "path": "org.standardnotes.standardnotes.desktop"
        },
        {
          "type": "file",
          "dest-filename": "yarn.lock",
          "dest": "main/app/",
          "path": "yarn.app.lock"
        },
        {
          "type": "file",
          "dest": "main/",
          "path": "yarn.lock"
        },
        {
          "type": "file",
          "dest-filename": ".yarnrc",
          "dest": "main/",
          "path": "yarnrc"
        },
        {
          "type": "archive",
          "dest": "main/",
          "sha256": "88e0f1c4a1ce7607c3dfe51b83268bfbd0eb58a97340c78dd75cff444a1fe38a",
          "url": "https://github.com/standardnotes/desktop/archive/v3.0.16.tar.gz"
        },
        "generated-sources-app.json",
        "generated-sources.json",
        {
          "type": "script",
          "commands": [
            "TMPDIR=${XDG_CACHE_HOME}/tmp/",
            "exec env /app/standard-notes/standard-notes \"$@\""
          ],
          "dest-filename": "standard-notes.sh"
        }
      ]
    }
  ]
}
