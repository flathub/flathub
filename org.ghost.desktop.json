{
  "app-id": "org.ghost.desktop",
  "runtime": "org.gnome.Platform",
  "runtime-version": "3.28",
  "base": "io.atom.electron.BaseApp",
  "base-version": "stable",
  "sdk": "org.gnome.Sdk",
  "command": "Ghost",
  "rename-desktop-file": "Ghost.desktop",
  "rename-icon": "Ghost",
  "finish-args": [
    "--share=ipc",
    "--socket=x11",
    "--filesystem=host",
    "--share=network",
    "--device=dri",
    "--talk-name=org.freedesktop.secrets"
  ],
  "modules": [
    {
      "name": "ghost",
      "buildsystem": "simple",
      "build-commands": [
        "ar -x ghost.deb",
        "tar -xf data.tar.xz",
        "cp -r usr/* /app",
        "mkdir -p /app/share/icons/hicolor/512x512/apps",
        "cp /app/share/pixmaps/Ghost.png /app/share/icons/hicolor/512x512/apps/Ghost.png"
      ],
      "sources": [
        {
          "type": "file",
          "url": "https://github.com/TryGhost/Ghost-Desktop/releases/download/v1.5.2/ghost-desktop-1.5.2-debian.deb",
          "sha256": "dbd6c98796be97ad9d9e04b1300f8e2beb87a9a0ea0f4358f568a7b2c16a0f6a",
          "dest-filename": "ghost.deb"
        }
      ]
    }
  ]
}