{
    "id": "org.freedesktop.LinuxAudio.Lv2Plugins.DrumGizmo",
    "branch": "19.08",
    "runtime": "org.freedesktop.LinuxAudio.BaseExtension",
    "runtime-version": "19.08",
    "sdk": "org.freedesktop.Sdk",
    "build-extension": true,
    "appstream-compose": false,
    "build-options": {
        "prepend-pkg-config-path": "/app/extensions/Lv2Plugins/DrumGizmo/lib/pkgconfig",
        "prefix": "/app/extensions/Lv2Plugins/DrumGizmo"
    },
    "cleanup": [
        "/lib/lv2"
    ],
    "modules": [
        "shared-modules/linux-audio/lv2.json",
        {
            "name": "zita-resampler",
            "buildsystem": "simple",
            "build-options": {
                "env": {
                    "PREFIX": "${FLATPAK_DEST}"
                }
            },
            "build-commands": [
                "make -C source LIBDIR=$PREFIX/lib -j  $FLATPAK_BUILDER_N_JOBS",
                "make -C source LIBDIR=$PREFIX/lib install"
            ],
            "cleanup": [
                "/include",
                "*.so",
                "*.a"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "http://kokkinizita.linuxaudio.org/linuxaudio/downloads/zita-resampler-1.6.2.tar.bz2",
                    "sha256": "233baefee297094514bfc9063e47f848e8138dc7c959d9cd957b36019b98c5d7"
                },
                {
                    "type": "patch",
                    "path": "patches/zita-resampler-make.patch"
                }
            ]
        },
        {
            "name": "drumgizmo",
            "buildsystem": "autotools",
            "build-options": {
                "cppflags": "-I/app/extensions/Lv2Plugins/DrumGizmo/include",
                "cxxflags": "-fpermissive",
                "ldflags": "-L${FLATPAK_DEST}/lib"
            },
            "config-opts": [
                "--with-lv2dir=${FLATPAK_DEST}/lv2",
                "--enable-lv2",
                "--disable-cli"
            ],
            "cleanup": [
                "/share/man"
            ],
            "post-install": [
                "strip ${FLATPAK_DEST}/lv2/*.lv2/*.so",
                "install -Dm644 --target-directory=${FLATPAK_DEST}/share/metainfo org.freedesktop.LinuxAudio.Lv2Plugins.DrumGizmo.metainfo.xml",
                "appstream-compose --basename=org.freedesktop.LinuxAudio.Lv2Plugins.DrumGizmo --prefix=${FLATPAK_DEST} --origin=flatpak org.freedesktop.LinuxAudio.Lv2Plugins.DrumGizmo",
                "install -Dm644 -t $FLATPAK_DEST/share/licenses/drumgizmo COPYING"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "http://www.drumgizmo.org/releases/drumgizmo-0.9.18.1/drumgizmo-0.9.18.1.tar.gz",
                    "sha256": "67a2d9d4aa11ee92f000cc8a49710408c2328b2581a5339be3cbfe91d99feb2e"
                },
                {
                    "type": "patch",
                    "path": "patches/dg-configure.patch"
                },
                {
                    "type": "shell",
                    "commands": [
                        "autoreconf -si"
                    ]
                },
                {
                    "type": "file",
                    "path": "org.freedesktop.LinuxAudio.Lv2Plugins.DrumGizmo.metainfo.xml"
                }
            ]
        }
    ]
}
