        },
        {
          "type": "shell",
          "commands": [
            "cp -p /usr/share/automake-*/config.{sub,guess} ."
          ]
        }
      ],
      "cleanup": [
        "*.la",
        "/bin",
        "/include",
        "/lib/pkgconfig",
        "/lib/pygtk/2.0/demos/",
        "/share/gtk-doc"
