{
  "id": "org.glimpse_editor.Glimpse",
  "runtime": "org.gnome.Platform",
  "runtime-version": "3.34",
  "sdk": "org.gnome.Sdk",
  "command": "glimpse",
  "finish-args": [
    "--share=ipc",
    "--share=network",
    "--socket=x11",
    "--filesystem=host",
    "--talk-name=org.gtk.vfs",
    "--talk-name=org.gtk.vfs.*",
    "--talk-name=org.freedesktop.FileManager1"
  ],
  "modules": [
    "shared-modules/python2.7/python-2.7.json",
    "shared-modules/gtk2/gtk2.json",
    {
      "name": "webkitgtk",
      "config-opts": [
        "--disable-battery-status",
        "--disable-credential-storage",
        "--disable-gamepad",
        "--disable-geolocation",
        "--disable-gtk-doc",
        "--disable-spellcheck",
        "--disable-static",
        "--disable-video",
        "--disable-web-audio",
        "--disable-webkit2",
        "--with-gtk=2.0"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://www.webkitgtk.org/releases/webkitgtk-2.4.11.tar.xz",
          "sha256": "588aea051bfbacced27fdfe0335a957dca839ebe36aa548df39c7bbafdb65bf7"
        },
        {
          "type": "patch",
          "path": "patches/webkitgtk-2.4.11.patch"
        }
      ],
      "build-options": {
        "cflags": "-O2 -g -pipe -Wno-expansion-to-defined -Wno-class-memaccess -fno-delete-null-pointer-checks -fpermissive",
        "cflags-override": true,
        "cxxflags": "-O2 -g -pipe -Wno-expansion-to-defined -Wno-class-memaccess -fno-delete-null-pointer-checks -fpermissive",
        "cxxflags-override": true,
        "env": {
          "PYTHON": "/usr/bin/python3"
        },
        "arch": {
          "aarch64": {
            "cflags": "-O2 -g -pipe -DENABLE_YARR_JIT=0 -Wno-expansion-to-defined -Wno-class-memaccess -fno-delete-null-pointer-checks -fpermissive",
            "cflags-override": true,
            "cxxflags": "-O2 -g -pipe -DENABLE_YARR_JIT=0 -Wno-expansion-to-defined -Wno-class-memaccess -fno-delete-null-pointer-checks -fpermissive",
            "cxxflags-override": true,
            "config-opts": [
              "--disable-jit"
            ]
          }
        }
      },
      "cleanup": [
        "*.la",
        "/bin",
        "/include",
        "/lib/pkgconfig",
        "/share/doc",
        "/share/gtk-doc"
      ]
    },
    {
      "name": "pycairo",
      "buildsystem": "meson",
      "config-opts": [
        "-Dpython=python2"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/pygobject/pycairo/releases/download/v1.18.1/pycairo-1.18.1.tar.gz",
          "sha256": "70172e58b6bad7572a3518c26729b074acdde15e6fee6cbab6d3528ad552b786"
        }
      ],
      "cleanup": [
        "*.la",
        "/include",
        "/lib/pkgconfig"
      ]
    },
    {
      "name": "pygobject",
      "config-opts": [
        "--disable-introspection"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://download.gnome.org/sources/pygobject/2.28/pygobject-2.28.7.tar.xz",
          "sha256": "bb9d25a3442ca7511385a7c01b057492095c263784ef31231ffe589d83a96a5a"
        },
        {
          "type": "shell",
          "commands": [
            "cp -p /usr/share/automake-*/config.{sub,guess} ."
          ]
        }
      ],
      "cleanup": [
        "*.la",
        "/bin",
        "/include",
        "/lib/pkgconfig",
        "/share/gtk-doc"
      ]
    },
    {
      "name": "pygtk",
      "sources": [
        {
          "type": "archive",
