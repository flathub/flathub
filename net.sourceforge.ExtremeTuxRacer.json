{
    "app-id": "net.sourceforge.ExtremeTuxRacer",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "1.6",
    "sdk": "org.freedesktop.Sdk",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--socket=x11",
        "--socket=pulseaudio",
        "--persist=.etr"
    ],
    "rename-appdata-file": "etr.appdata.xml",
    "rename-desktop-file": "etr.desktop",
    "rename-icon": "etr",
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/aclocal",
        "/share/man",
        "*.la", "*.a"
    ],
    "modules": [
        {
            "name": "udev",
            "cleanup": [
                "/etc",
                "/libexec"
            ],
            "config-opts": [
                "--disable-hwdb",
                "--disable-logging",
                "--disable-gudev",
                "--disable-introspection",
                "--disable-keymap",
                "--disable-mtd_probe"
            ],
            "rm-configure": true,
            "sources": [
                {
                    "type": "archive",
                    "url": "http://kernel.org/pub/linux/utils/kernel/hotplug/udev-175.tar.bz2",
                    "sha256": "4c7937fe5a1521316ea571188745b9a00a9fdf314228cffc53a7ba9e5968b7ab"
                },
                {
                    "type": "script",
                    "dest-filename": "autogen.sh",
                    "commands": [
                        "autoreconf -vfi"
                    ]
                }
            ]
        },
        {
            "name": "SFML",
            "buildsystem": "cmake",
            "config-opts": [
                "-DSFML_INSTALL_PKGCONFIG_FILES=TRUE"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "http://www.sfml-dev.org/files/SFML-2.4.2-sources.zip",
                    "sha256": "8ba04f6fde6a7b42527d69742c49da2ac529354f71f553409f9f821d618de4b6"
                }
            ]
        },
        "shared-modules/glu/glu-9.0.0.json",
        {
            "name": "extremetuxracer",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://downloads.sourceforge.net/project/extremetuxracer/releases/0.7.4/etr-0.7.4.tar.xz",
                    "sha256": "da9ce3a1b1e56415285163b9ebc67fdb11fca07acd3ab18f793556d996275234"
                },
                {
                    "type": "file",
                    "path": "etr.appdata.xml"
                }
            ],
            "post-install": [
                "mkdir -p /app/share/appdata",
                "cp etr.appdata.xml /app/share/appdata",
                "mkdir -p /app/share/icons/hicolor/48x48/apps",
                "mv /app/share/pixmaps/etr.png /app/share/icons/hicolor/48x48/apps",
                "mkdir -p /app/share/icons/hicolor/scalable/apps",
                "mv /app/share/pixmaps/etr.svg /app/share/icons/hicolor/scalable/apps"
            ]
        }
    ]
}
