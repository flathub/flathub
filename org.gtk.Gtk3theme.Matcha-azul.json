{
    "id": "org.gtk.Gtk3theme.Matcha-azul",
    "branch": "3.22",
    "runtime": "org.freedesktop.Platform",
    "build-extension": true,
    "sdk": "org.freedesktop.Sdk",
    "runtime-version": "19.08",
    "appstream-compose": false,
    "separate-locales": false,
    "modules": [
        {
            "name": "Matcha-azul",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -pm 755 /usr/share/runtime/share/themes/Matcha-azul/gtk-3.0/assets",
                "cp src/gtk-3.0/gtk-azul.css /usr/share/runtime/share/themes/Matcha-azul/gtk-3.0/gtk.css",
                "cp src/gtk-3.0/gtk-azul.css /usr/share/runtime/share/themes/Matcha-azul/gtk-3.0/gtk-dark.css",
                "cp -fr src/gtk-3.0/assets-azul/* /usr/share/runtime/share/themes/Matcha-azul/gtk-3.0/assets/",
                "ln -fs ./thumbnail-azul.png src/gtk-3.0/thumbnail-light-azul.png",
                "cp src/gtk-3.0/thumbnail-azul.png /usr/share/runtime/share/themes/Matcha-azul/gtk-3.0/thumbnail.png"
            ],
            "sources": [
                {
                    "type": "archive",
                    "archive-type": "tar-gzip",
                    "url": "https://api.github.com/repos/vinceliuice/Matcha-gtk-theme/tarball/2021-02-04",
                    "sha256": "3f4242f44e48bd0f06fcbe84ded68b87762dcc2298cdaf1612d52df97527cd0f"
                }
            ]
        },
        {
            "name": "appdata",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p ${FLATPAK_DEST}/share/appdata",
                "cp org.gtk.Gtk3theme.Matcha-azul.appdata.xml ${FLATPAK_DEST}/share/appdata",
                "appstream-compose --basename=org.gtk.Gtk3theme.Matcha-azul --prefix=${FLATPAK_DEST} --origin=flatpak org.gtk.Gtk3theme.Matcha-azul"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "org.gtk.Gtk3theme.Matcha-azul.appdata.xml"
                }
            ]
        }
    ]
}