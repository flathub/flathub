{
    "app-id": "com.ozmartians.VidCutter",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.26",
    "sdk": "org.gnome.Sdk",
    "command": "vidcutter",
    "finish-args": [
        "--device=dri",
        "--env=DCONF_USER_CONFIG_DIR=.config/dconf",
        "--env=LC_NUMERIC=C",
        "--env=QT_PLUGIN_PATH=/app/lib/qt/plugins",
        "--filesystem=host",
        "--filesystem=xdg-run/dconf",
        "--share=ipc",
        "--share=network",
        "--socket=pulseaudio",
        "--socket=wayland",
        "--socket=x11",
        "--talk-name=ca.desrt.dconf",
        "--talk-name=com.canonical.Unity.LauncherEntry"
    ],
    "cleanup": [
        "/include",
        "/lib/*.a",
        "/lib/*.la",
        "/lib/pkgconfig",
        "/share/man"
    ],
    "modules": [
    {
        "name": "PyOpenGL",
        "buildsystem": "simple",
        "build-commands": [
            "pip3 install --prefix=${FLATPAK_DEST} ."
        ],
        "sources": [
        {
            "type": "archive",
            "url": "https://pypi.python.org/packages/9c/1d/4544708aaa89f26c97cc09450bb333a23724a320923e74d73e028b3560f9/PyOpenGL-3.1.0.tar.gz",
            "sha256": "9b47c5c3a094fa518ca88aeed35ae75834d53e4285512c61879f67a48c94ddaf"
        }]
    },
    {
        "name": "simplejson",
        "buildsystem": "simple",
        "build-commands": [
            "pip3 install --prefix=${FLATPAK_DEST} ."
        ],
        "sources": [
        {
            "type": "archive",
            "url": "https://pypi.python.org/packages/0d/3f/3a16847fe5c010110a8f54dd8fe7b091b4e22922def374fe1cce9c1cb7e9/simplejson-3.13.2.tar.gz",
            "sha256": "4c4ecf20e054716cc1e5a81cadc44d3f4027108d8dd0861d8b1e3bd7a32d4f0a"
        }]
    },
    {
        "name": "PyQt5",
        "buildsystem": "simple",
        "build-commands": [
            "mv python3.5/site-packages/PyQt5/Qt/lib/* ${FLATPAK_DEST}/lib -v",
            "rm -rf python3.5/site-packages/PyQt5/Qt/lib",
            "mkdir -p ${FLATPAK_DEST}/lib/qt",
            "mv python3.5/site-packages/PyQt5/Qt/plugins ${FLATPAK_DEST}/lib/qt -v",
            "rm -rf python3.5/site-packages/PyQt5/Qt",
            "mv python3.5/site-packages/* ${FLATPAK_DEST}/lib/python3.5/site-packages -v"
        ],
        "sources": [
        {
            "type": "archive",
            "only-arches": ["x86_64"],
            "url": "https://github.com/ozmartian/vidcutter-flatpak/raw/master/x86_64/pyqt5-py35-qt5-libs.tar.xz",
            "sha256": "4bb0bac39231805a510db3e0c019fb608f6d3233c97e0bebf3dfee5cc8c9592f"
        },
        {
            "type": "archive",
            "only-arches": ["i386"],
            "url": "https://github.com/ozmartian/vidcutter-flatpak/raw/master/i386/pyqt5-py35-qt5-libs.tar.xz",
            "sha256": "4478c9b7e715d76bae51f16db17c3c747f0d9a2a6af6af939cbcffe30278ee7a"
        },
        {
            "type": "archive",
            "only-arches": ["arm"],
            "url": "https://github.com/ozmartian/vidcutter-flatpak/raw/master/arm/pyqt5-py35-qt5-libs.tar.xz",
            "sha256": "064b580470ee6ebe1419728f1a34128f500a6387a45dd6796505e5d72ffc99de"
        },
        {
            "type": "archive",
            "only-arches": ["aarch64"],
            "url": "https://github.com/ozmartian/vidcutter-flatpak/raw/master/aarch64/pyqt5-py35-qt5-libs.tar.xz",
            "sha256": "0a70430ff87159e6e5ffc005472dbcf4dd5c24f9eb4ec8d432c533e10061c64c"
        }]
    },
    {
        "name": "libmpv",
        "cleanup": ["/include", "/lib/pkgconfig"],
        "buildsystem": "simple",
        "build-commands": [
            "python3 waf configure --prefix=${FLATPAK_DEST} --enable-libmpv-shared --disable-cplayer --disable-oss-audio --disable-alsa --disable-manpage-build --disable-debug-build",
            "python3 waf build",
            "python3 waf install"
        ],
        "sources": [
        {
            "type": "archive",
            "url": "https://github.com/mpv-player/mpv/archive/v0.28.2.tar.gz",
            "sha256": "aada14e025317b5b3e8e58ffaf7902e8b6e4ec347a93d25a7c10d3579426d795"
        },
        {
            "type": "file",
            "url": "https://waf.io/waf-1.9.8",
            "sha256": "167dc42bab6d5bd823b798af195420319cb5c9b571e00db7d83df2a0fe1f4dbf",
            "dest-filename": "waf"
        }],
        "modules": [
        {
            "name": "libass",
            "cleanup": ["/include", "/lib/*.la", "/lib/pkgconfig"],
            "config-opts": ["--disable-static"],
            "sources": [
            {
                "type": "archive",
                "url": "https://github.com/libass/libass/releases/download/0.14.0/libass-0.14.0.tar.xz",
                "sha256": "881f2382af48aead75b7a0e02e65d88c5ebd369fe46bc77d9270a94aa8fd38a2"
            }],
            "modules": [
            {
                "name": "fribidi",
                "cleanup": ["/bin", "/include", "/lib/pkgconfig", "/lib/*.la", "/share/man"],
                "sources": [
                {
                    "type": "archive",
                    "url": "https://dl.tingping.se/mirror/fribidi-0.19.7.tar.bz2",
                    "sha256": "08222a6212bbc2276a2d55c3bf370109ae4a35b689acbc66571ad2a670595a8e"
                }]
            }]
        },
        {
            "name": "ffmpeg",
            "cleanup": ["/include", "/lib/pkgconfig", "/share/ffmpeg/examples"],
            "config-opts": [
                "--enable-shared",
                "--disable-static",
                "--disable-debug",
                "--enable-gnutls",
                "--disable-doc",
                "--disable-ffplay",
                "--enable-gpl",
                "--enable-libass",
                "--enable-libfribidi",
                "--enable-libmp3lame",
                "--enable-libpulse",
                "--enable-libtheora",
                "--enable-libvorbis",
                "--enable-libvpx",
                "--enable-libx264",
                "--enable-libx265",
                "--enable-libxvid",
                "--enable-version3"
            ],
            "sources": [
            {
                "type": "archive",
                "url": "https://ffmpeg.org/releases/ffmpeg-4.0.tar.xz",
                "sha256": "ed945daf40b124e77a685893cc025d086f638bc703183460aff49508edb3a43f"
            }],     
            "modules": [
            {
                "name": "xvid",
                "subdir": "build/generic",
                "sources": [
                {
                    "type": "archive",
                    "url": "http://downloads.xvid.org/downloads/xvidcore-1.3.5.tar.bz2",
                    "sha256": "7c20f279f9d8e89042e85465d2bcb1b3130ceb1ecec33d5448c4589d78f010b4"
                }]
            },
            {
                "name": "libvpx",
                "config-opts": [
                    "--enable-runtime-cpu-detect",
                    "--enable-shared",
                    "--disable-static",
                    "--enable-pic",
                    "--disable-install-bins",
                    "--disable-install-docs",
                    "--disable-install-srcs",
                    "--enable-vp8",
                    "--enable-postproc",
                    "--enable-vp9",
                    "--enable-vp9-highbitdepth"
                ],
                "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/webmproject/libvpx/archive/v1.7.0.tar.gz",
                    "sha256": "1fec931eb5c94279ad219a5b6e0202358e94a93a90cfb1603578c326abfc1238"
                }]
            },
            {
                "name": "x264",
                "config-opts": [
                    "--enable-shared",
                    "--disable-static",
                    "--disable-cli",
                    "--enable-pic",
                    "--disable-asm",
                    "--disable-lavf"
                ],
                "sources": [
                {
                    "type": "git",
                    "url": "https://git.videolan.org/git/x264.git"
                }]
            },
            {
                "name": "x265",
                "buildsystem": "simple",
                "cleanup": [],
                "build-options": {
                    "arch": {
                        "arm": {
                            "cxxflags": "-fPIC"
                        },
                        "aarch64": {
                            "cxxflags": "-fPIC"
                        }
                    }
                },
                "build-commands": [
                    "mkdir source/build-8 source/build-10 source/build-12",
                    "cd source/build-12 && cmake .. -DCMAKE_INSTALL_PREFIX=${FLATPAK_DEST} -DHIGH_BIT_DEPTH='TRUE' -DMAIN12='TRUE' -DEXPORT_C_API='FALSE' -DENABLE_CLI='FALSE' -DENABLE_SHARED='FALSE'",
                    "cd source/build-12 && make",
                    "cd source/build-10 && cmake .. -DCMAKE_INSTALL_PREFIX=${FLATPAK_DEST} -DHIGH_BIT_DEPTH='TRUE' -DEXPORT_C_API='FALSE' -DENABLE_CLI='FALSE' -DENABLE_SHARED='FALSE'",
                    "cd source/build-10 && make",
                    "ln -s ../build-10/libx265.a source/build-8/libx265_main10.a",
                    "ln -s ../build-12/libx265.a source/build-8/libx265_main12.a",
                    "cd source/build-8 && cmake .. -DCMAKE_INSTALL_PREFIX=${FLATPAK_DEST} -DENABLE_SHARED='TRUE' -DENABLE_CLI='FALSE' -DENABLE_HDR10_PLUS='TRUE' -DEXTRA_LIB='x265_main10.a;x265_main12.a' -DEXTRA_LINK_FLAGS='-L.' -DLINKED_10BIT='TRUE' -DLINKED_12BIT='TRUE'",
                    "cd source/build-8 && make",
                    "cd source/build-8 && make install"
                ],
                "sources": [
                {
                    "type": "archive",
                    "url": "https://bitbucket.org/multicoreware/x265/downloads/x265_2.7.tar.gz",
                    "sha256": "d5e75fa62ffe6ed49e691f8eb8ab8c1634ffcc0725dd553c6fdb4d5443b494a2"
                }]
            },
            {
                "name": "fdkaac",
                "config-opts": [ "--disable-static" ],
                "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/mstorsjo/fdk-aac/archive/v0.1.6.tar.gz",
                    "sha256": "adbcd793e406e1b88b3c1c41382d49f8c27371485b823c0fdab69c9124fd2ce3"
                }]
            },
            {
                "name": "lame",
                "config-opts": [
                    "--enable-shared",
                    "--disable-static",
                    "--disable-frontend",
                    "--enable-nasm"
                ],
                "sources": [
                {
                    "type": "archive",
                    "url": "https://downloads.sourceforge.net/lame/lame-3.100.tar.gz",
                    "sha256": "ddfe36cab873794038ae2c1210557ad34857a4b6bdc515785d1da9e175b1da1e"
                }]
            }]
        }]
    },
    {
        "name": "mediainfo",
        "cleanup": ["/include", "/lib/pkgconfig", "/share"],
        "subdir": "Project/GNU/CLI",
        "sources": [
        {
            "type": "archive",
            "url": "https://mediaarea.net/download/source/mediainfo/18.03.1/mediainfo_18.03.1.tar.xz",
            "sha256": "79664c356d4f09dc32105810aacf60923f6edcc6bec4836589962bc3375efcd6"
        }],
        "modules": [
        {
            "name": "libmms",
            "config-opts": ["--disable-static"],
            "sources": [
            {
                "type": "archive",
                "url": "https://download.sourceforge.net/libmms/libmms-0.6.4.tar.gz",
                "sha256": "3c05e05aebcbfcc044d9e8c2d4646cd8359be39a3f0ba8ce4e72a9094bee704f"
            }]
        },
        {
            "name": "libzen",
            "config-opts": ["--enable-shared"],
            "subdir": "Project/GNU/Library",
            "sources": [
            {
                "type": "archive",
                "url": "https://mediaarea.net/download/source/libzen/0.4.37/libzen_0.4.37.tar.xz",
                "sha256": "401c34d93056a95f8392982f856d1371c5de6aec373d84dcbb356e1f473d0452"
            }]
        },
        {
            "name": "libmediainfo",
            "config-opts": [
                "--disable-static",
                "--enable-shared",
                "--disable-static",
                "--with-libcurl",
                "--with-libmms"
            ],
            "subdir": "Project/GNU/Library",
            "sources": [
            {
                "type": "archive",
                "url": "https://mediaarea.net/download/source/libmediainfo/18.03.1/libmediainfo_18.03.1.tar.xz",
                "sha256": "0243365f53299997bc04dfa065de9b3f1688b6eeb450a7f57e740504cd626fa0"
            }]
        }]
    },
    {
        "name": "vidcutter",
        "buildsystem": "simple",
        "build-commands": [
            "pip3 install --prefix=${FLATPAK_DEST} ."
        ],
        "sources": [
        {
            "type": "git",
            "branch": "flatpak",
            "commit": "15c6fc6874294dfc14459c4162aafbf81c728ac4",
            "url": "https://github.com/ozmartian/vidcutter.git"
        }]
    }]
}
