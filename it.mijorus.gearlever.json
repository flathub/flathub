{
    "app-id" : "it.mijorus.gearlever",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "44",
    "sdk" : "org.gnome.Sdk",
    "command" : "gearlever",
    "finish-args" : [
        "--share=ipc",
        "--socket=wayland",
        "--socket=fallback-x11",
        "--device=dri",

        "--filesystem=xdg-data/applications:rw",
        "--filesystem=xdg-data/icons:ro",
        "--filesystem=home:rw",

        "--talk-name=org.freedesktop.FileManager1",
        "--talk-name=org.freedesktop.Flatpak"

        "--filesystem=/tmp:rw"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        "./python3-requirements.json",
        {
            "name": "p7zip",
            "no-autogen": true,
            "make-args": [
                "7z"
            ],
            "cleanup": [
                "/man",
                "/share"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/p7zip-project/p7zip/archive/v17.04.tar.gz",
                    "sha256": "ea029a2e21d2d6ad0a156f6679bd66836204aa78148a4c5e498fe682e77127ef"
                },
                {
                    "type": "shell",
                    "commands": [
                        "sed -i 's|/usr/local|/app|g' makefile.common"
                    ]
                }
            ]
        },
                {
            "name" : "gearlever",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url": "https://github.com/mijorus/gearlever.git",
                    "commit" : "d40b4f2cf5aad5fe3d82fc4eaca6bd437d747aa8"
                }
            ]
        }

    ]
}
