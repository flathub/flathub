{
    "app-id": "com.apifox.apifox",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "24.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "run.sh",
    "base": "org.electronjs.Electron2.BaseApp",
    "base-version": "24.08",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--device=dri",
        "--socket=x11",
        "--filesystem=home",
        "--talk-name=org.freedesktop.FileManager1"
    ],
    "modules": [
        {
            "name": "noto-fonts",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p /app/share/fonts",
                "install -D NotoSans-Bold.ttf /app/share/fonts/",
                "install -D NotoSans-Medium.ttf /app/share/fonts/",
                "install -D NotoSans-Regular.ttf /app/share/fonts/",
                "install -D NotoSans-ExtraCondensed.ttf /app/share/fonts/",
                "install -D NotoSans-ExtraCondensedBold.ttf /app/share/fonts/"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://noto-website-2.storage.googleapis.com/pkgs/NotoSans-hinted.zip",
                    "sha256": "02e5f834c526f815f3b9f90f98e2b5b09f17cec107cc751c3b58fc3a2c0b2942"
                }
            ]
        },
        {
            "name": "noto-font-cjk-regular",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p /app/share/fonts",
                "install -D NotoSansCJK-Regular.ttc /app/share/fonts/"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://noto-website-2.storage.googleapis.com/pkgs/NotoSansCJK-Regular.ttc.zip",
                    "sha256": "32d03afb0b1109fa75a96f89dfc118015283a5343f2216ee4b3757c19992f75d"
                }
            ]
        },
        {
            "name": "noto-font-cjk-bold",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p /app/share/fonts",
                "install -D NotoSansCJK-Bold.ttc /app/share/fonts/"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://noto-website-2.storage.googleapis.com/pkgs/NotoSansCJK-Bold.ttc.zip",
                    "sha256": "3cd895bce6765903b2eefcd90eea6ed372364e66d5b896ea3a594bd3e737eba0"
                }
            ]
        },
        {
            "name": "noto-font-cjk-medium",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p /app/share/fonts",
                "install -D NotoSansCJK-Medium.ttc /app/share/fonts/"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://noto-website-2.storage.googleapis.com/pkgs/NotoSansCJK-Medium.ttc.zip",
                    "sha256": "d7590637168e1cff4fd3a15422e483308d7ba2a7120ccaf96ead274c3b40e1b3"
                }
            ]
        },
        {
            "name": "apifox",
            "builddir": true,
            "buildsystem": "simple",
            "build-commands": [
                "install -Dm644 com.apifox.apifox.metainfo.xml -t $FLATPAK_DEST/share/metainfo",
                "install -Dm644 com.apifox.apifox.desktop /app/share/applications/com.apifox.apifox.desktop",
                "install -Dm644 com.apifox.apifox.svg /app/share/icons/hicolor/scalable/apps/com.apifox.apifox.svg",
                "install -Dm755 run.sh /app/bin/run.sh",
                "install -Dm755 apply_extra ${FLATPAK_DEST}/bin/apply_extra"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "com.apifox.apifox.desktop"
                },
                {
                    "type": "file",
                    "path": "com.apifox.apifox.metainfo.xml"
                },
                {
                    "type": "file",
                    "path": "com.apifox.apifox.svg"
                },
                {
                    "type": "file",
                    "path": "run.sh"
                },
                {
                    "type": "extra-data",
                    "filename": "apifox_linux.tar.xz",
                    "only-arches": [
                        "x86_64"
                    ],
                    "url": "https://file-assets.apifox.com/download/Apifox-linux-manual-latest.tar.gz",
                    "sha256": "792595282eab3fb2c2902d12b0495cc16cc3c65c763983eead49c0b6645beec4",
                    "size": 272837328,
                    "x-checker-data": {
                        "type": "rotating-url",
                        "url": "https://file-assets.apifox.com/download/Apifox-linux-manual-latest.tar.gz"
                    }
                },
                {
                    "type": "extra-data",
                    "filename": "apifox_linux.zip",
                    "only-arches": [
                        "aarch64"
                    ],
                    "url": "https://file-assets.apifox.com/download/Apifox-linux-arm64-latest.zip",
                    "sha256": "4b64237e4455a0d4d4f4ef7ba5cd764baf317c80eb74969e85806d8b779428e9",
                    "size": 257883364,
                    "x-checker-data": {
                        "type": "rotating-url",
                        "url": "https://file-assets.apifox.com/download/Apifox-linux-arm64-latest.zip"
                    }
                },
                {
                    "type": "script",
                    "only-arches": [
                        "x86_64"
                    ],
                    "commands": [
                        "tar xf apifox_linux.tar.xz",
                        "rm -rf apifox_linux.tar.xz",
                        "mv ./*/* ."
                    ],
                    "dest-filename": "apply_extra"
                },
                {
                    "type": "script",
                    "only-arches": [
                        "aarch64"
                    ],
                    "commands": [
                        "unzip apifox_linux.zip",
                        "rm -rf apifox_linux.zip",
                        "mv ./*/* ."
                    ],
                    "dest-filename": "apply_extra"
                }
            ]
        }
    ]
}
