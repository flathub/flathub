{
    "id" : "uz.xinux.EIMZOManager",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "47",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command": "E-IMZO-Manager",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--talk-name=org.freedesktop.secrets",
        "--talk-name=org.freedesktop.Flatpak",
        "--filesystem=/media"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/rust-stable/bin",
        "build-args": [
            "--share=network"
        ],
        "env" : {
            "CARGO_HOME": "/run/build/E-IMZO-Manager/cargo"
        }
    },
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name" : "E-IMZO-Manager",
            "run-tests" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type": "git",
                    "branch": "main",
                    "url": "https://github.com/xinux-org/e-imzo"
                }
            ]
        }
    ]
}
