{
    "app-id": "com.github.marktext.marktext",
    "base": "org.electronjs.Electron2.BaseApp",
    "base-version": "stable",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "1.6",
    "sdk": "org.freedesktop.Sdk",
    "command": "marktext",
    "finish-args": [
        "--socket=x11",
        "--socket=wayland",
        "--share=ipc",
        "--share=network",
        "--filesystem=home",
        "--filesystem=host",
        "--filesystem=/tmp",
        "--device=dri",
        "--filesystem=xdg-run/dconf",
        "--filesystem=~/.config/dconf:ro",
        "--talk-name=ca.desrt.dconf",
        "--env=DCONF_USER_CONFIG_DIR=.config/dconf"
    ],
    "modules": [
        {
            "name": "icons",
            "buildsystem": "simple",
            "build-commands": [
                "install -Dm644 com.github.marktext.marktext.desktop /app/share/applications/com.github.marktext.marktext.desktop",
                "install -Dm644 icon_24x24.png /app/share/icons/hicolor/24x24/apps/com.github.marktext.marktext.png",
                "install -Dm644 icon_32x32.png /app/share/icons/hicolor/32x32/apps/com.github.marktext.marktext.png",
                "install -Dm644 icon_48x48.png /app/share/icons/hicolor/48x48/apps/com.github.marktext.marktext.png",
                "install -Dm644 icon_64x64.png /app/share/icons/hicolor/64x64/apps/com.github.marktext.marktext.png",
                "install -Dm644 icon_128x128.png /app/share/icons/hicolor/128x128/apps/com.github.marktext.marktext.png",
                "install -Dm644 icon_256x256.png /app/share/icons/hicolor/256x256/apps/com.github.marktext.marktext.png",
                "install -Dm644 icon_512x512.png /app/share/icons/hicolor/512x512/apps/com.github.marktext.marktext.png",
                "install -Dm644 com.github.marktext.marktext.appdata.xml /app/share/appdata/com.github.marktext.marktext.appdata.xml"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "data/com.github.marktext.marktext.desktop"
                },
                {
                    "type": "file",
                    "path": "data/icon_24x24.png"
                },
                {
                    "type": "file",
                    "path": "data/icon_32x32.png"
                },
                {
                    "type": "file",
                    "path": "data/icon_48x48.png"
                },
                {
                    "type": "file",
                    "path": "data/icon_64x64.png"
                },
                {
                    "type": "file",
                    "path": "data/icon_128x128.png"
                },
                {
                    "type": "file",
                    "path": "data/icon_256x256.png"
                },
                {
                    "type": "file",
                    "path": "data/icon_512x512.png"
                },
                {
                    "type": "file",
                    "path": "data/com.github.marktext.marktext.appdata.xml"
                }
            ]
        },
        {
            "name": "marktext",
            "buildsystem": "simple",
            "build-options": {
                "arch": {
                    "x86_64": {
                        "env": {
                            "FLATPAK_ARCH": "x86_64"
                        }
                    }
                }
            },
            "build-commands": [
                "chmod +x build-marktext.sh",
                "chmod +x marktext_x86_64.AppImage",
                "./build-marktext.sh"
            ],
            "sources": [
                {
                    "type": "file",
                    "only-arches": ["x86_64"],
                    "url": "https://github.com/marktext/marktext/releases/download/v0.11.42/marktext-0.11.42-x86_64.AppImage",
                    "sha256": "aca31369adb4308357a82233abd2de7a8dd4617d3536d72e25918314cdf58ead",
                    "dest-filename": "marktext_x86_64.AppImage"
                },
                {
                    "type": "file",
                    "path": "build-marktext.sh"
                }
            ]
        }
    ]
}

