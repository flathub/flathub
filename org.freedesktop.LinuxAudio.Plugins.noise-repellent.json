{
    "id": "org.freedesktop.LinuxAudio.Plugins.noise-repellent",
    "runtime": "org.freedesktop.LinuxAudio.BaseExtension",
    "runtime-version": "stable",
    "sdk": "org.freedesktop.Sdk//24.08",
    "build-extension": true,
    "branch": "24.08",
    "build-options": {
        "prefix": "/app/extensions/Plugins/noise-repellent",
        "prepend-pkg-config-path": "/app/extensions/Plugins/noise-repellent/lib/pkgconfig"
    },
    "cleanup": [
        "/include",
        "/lib",
        "/pkgconfig",
        "*.a"
    ],
    "modules": [
        "shared-modules/linux-audio/lv2.json",
        "shared-modules/linux-audio/fftw3f-static.json",
        {
            "name": "noise-repellent",
            "buildsystem": "meson",
            "config-opts": [
                "--buildtype=release",
                "--libdir="
            ],
            "post-install": [
                "strip ${FLATPAK_DEST}/lv2/*.lv2/*.so",
                "install -Dm644 ../LICENSE -t ${FLATPAK_DEST}/share/licenses/noise-repellent",
                "install -Dm644 ../org.freedesktop.LinuxAudio.Plugins.noise-repellent.metainfo.xml -t ${FLATPAK_DEST}/share/metainfo"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/lucianodato/noise-repellent/archive/refs/tags/v0.2.3.tar.gz",
                    "sha256": "edcb9f165f0d586bee68fe6b9064db609ce263240269e2b4263b0aef63427a6f"
                },
                {
                    "type": "git",
                    "url": "https://github.com/lucianodato/libspecbleach.git",
                    "commit": "49249a3c133a29686358c10c0cf68d2d826e8f0d",
                    "dest": "subprojects/libspecbleach"
                },
                {
                    "type": "file",
                    "path": "org.freedesktop.LinuxAudio.Plugins.noise-repellent.metainfo.xml"
                }
            ]
        }
    ]
}
