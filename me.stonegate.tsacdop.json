{
    "app-id": "me.stonegate.tsacdop",
    "runtime": "org.gnome.Platform",
    "runtime-version": "40",
    "sdk": "org.gnome.Sdk",
    "command": "tsacdop",
    "separate-locales": false,
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--share=network",
        "--device=all",
        "--filesystem=xdg-download",
        "--talk-name=org.freedesktop.Notifications",
        "--own-name=me.stonegate.tsacdop"
    ],
    "modules": [
        "libvlc.yml",
        {
            "name": "tsacdop",
            "buildsystem": "simple",
            "only-arches": [
                "x86_64"
            ],
            "build-commands": [
                "ls tsacdop",
                "cp -r tsacdop/bin /app/tsacdop",
                "chmod +x /app/tsacdop/tsacdop_desktop",
                "install -Dm644 logo.svg /app/share/icons/hicolor/scalable/apps/me.stonegate.tsacdop.svg",
                "install -Dm644 me.stonegate.tsacdop.desktop /app/share/applications/me.stonegate.tsacdop.desktop",
                "install -Dm644 me.stonegate.tsacdop.metainfo.xml /app/share/appdata/me.stonegate.tsacdop.metainfo.xml",
                "mkdir /app/bin",
                "ln -s /usr/lib/x86_64-linux-gnu/libsqlite3.so.0 /app/lib/libsqlite3.so",
                "if [ ! -e '/app/lib/libsqlite3.so' ]; then ln -s -f /usr/lib/aarch64-linux-gnu/libsqlite3.so.0 /app/lib/libsqlite3.so; fi",
                "ln -s /app/tsacdop/tsacdop_desktop /app/bin/tsacdop",
                "mkdir /app/db"
            ],
            "sources": [{
                    "type": "archive",
                    "only-arches": [
                        "x86_64"
                    ],
                    "url": "https://github.com/tsacdop/tsacdop_desktop/releases/download/v0.1.0/tsacdop-linux-x86_64.tar.gz",
                    "dest": "tsacdop",
                    "sha256": "5fb53203422a0fd96073767d26e71de1b483751f045154166d6117206c0ac66b"
                },
                {
                    "type": "file",
                    "path": "logo.svg"
                },
                {
                    "type": "file",
                    "path": "me.stonegate.tsacdop.desktop"
                },
                {
                    "type": "file",
                    "path": "me.stonegate.tsacdop.metainfo.xml"
                }
            ]
        }
    ]
}
