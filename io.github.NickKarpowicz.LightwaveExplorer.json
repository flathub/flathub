{
    "id": "io.github.NickKarpowicz.LightwaveExplorer",
    "branch": "master",
    "runtime": "org.gnome.Platform",
    
    "runtime-version": "44",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions":["org.freedesktop.Sdk.Extension.llvm15"],
    "add-extensions":{
        "org.freedesktop.Platform.ffmpeg-full": {
            "directory": "lib/ffmpeg",
            "version": "22.08",
            "add-ld-path": "."
        }
    },
    "command": "flatpakLauncher.sh",
    "finish-args": [
        "--share=ipc",
        "--device=dri",
        "--socket=x11",
        "--socket=wayland",
        "--filesystem=host"
    ],
    "cleanup": [
        "/include",
        "/lib/cmake",
        "/lib/pkgconfig",
        "/lib/*.la",
        "/lib/*.a",
        "/mkspecs",
        "/share/aclocal",
        "/share/info",
        "/share/man",
        "/opt/cuda/bin",
        "/opt/cuda/compute-sanitizer",
        "/opt/cuda/extras",
        "/opt/cuda/gds",
        "/opt/cuda/gds-12.2",
        "/opt/cuda/tools",
        "/opt/cuda/src",
        "/opt/cuda/share",
        "/opt/cuda/pkgconfig",
        "/opt/cuda/nvvm",
        "/opt/cuda/nvml",
        "/opt/cuda/nsight-systems-2023.2.3",
        "/opt/cuda/nsight-compute-2023.2.1",
        "/opt/cuda/libnvvp",
        "/opt/cuda/nsightee_plugins",
        "/opt/cuda/libnvvp",
        "/opt/cuda/targets/x86_64-linux/include",
        "/opt/cuda/targets/x86_64-linux/res",
        "/opt/cuda/targets/x86_64-linux/lib/*.a",
        "/opt/cuda/targets/x86_64-linux/lib/libcublas*",
        "/opt/cuda/targets/x86_64-linux/lib/libcusparse*",
        "/opt/cuda/targets/x86_64-linux/lib/libcusolver*",
        "/opt/cuda/targets/x86_64-linux/lib/libcublas*",
        "/opt/cuda/targets/x86_64-linux/lib/libcurand*",
        "/opt/cuda/targets/x86_64-linux/lib/libnppif*",
        "/opt/cuda/targets/x86_64-linux/lib/libnvrtc*",
        "/opt/cuda/targets/x86_64-linux/lib/stubs",
        "/opt/cuda/targets/x86_64-linux/lib/cmake",
        "/lib/debug",
        "/opt/intel"

    ],
    "modules": [
        {
            "name": "oneAPI",
            "buildsystem": "simple",
            "build-options":{
                "append-path": "/usr/lib/sdk/llvm15/bin",
                "prepend-ld-library-path": "/usr/lib/sdk/llvm15/lib"
                },
            "build-commands": ["chmod +x l_BaseKit_p_2023.2.0.49397_offline.sh",
                            "./l_BaseKit_p_2023.2.0.49397_offline.sh -x -f webimage_extracted",
                            "rm l_BaseKit_p_2023.2.0.49397_offline.sh",
                            "webimage_extracted/l_BaseKit_p_2023.2.0.49397_offline/bootstrapper -s --action=install --components=intel.oneapi.lin.mkl.devel --install-dir=/app/opt/intel/oneapi --eula=accept",
                            "rm -rf /app/opt/intel/oneapi/mkl/latest/lib/ia32",
                            "rm -f /app/opt/intel/oneapi/mkl/latest/lib/intel64/*.so*",
                            "rm -rf /app/opt/intel/oneapi/conda_channel"],
            "sources": [
                {
                    "type": "file",
                    "url": "https://registrationcenter-download.intel.com/akdlm/IRC_NAS/992857b9-624c-45de-9701-f6445d845359/l_BaseKit_p_2023.2.0.49397_offline.sh",
                    "md5": "560466f714a79fce3cb8793528d487c8"
        
                }
            ]
        },
        {
            "name": "fmt",
            "config-opts": ["-DCMAKE_POSITION_INDEPENDENT_CODE=TRUE", "-DFMT_TEST=OFF"],
            "buildsystem": "cmake",
            "sources": [ 
                { 
                    "type": "git", 
                    "url": "https://github.com/fmtlib/fmt", 
                    "tag": "10.1.0",
                    "commit": "e57ca2e3685b160617d3d95fcd9e789c4e06ca88" } 
                ]
        },
        {
            "name": "gcem",
            "buildsystem": "cmake",
            "sources": [ 
                { 
                    "type": "git", 
                    "url": "https://github.com/kthohr/gcem", 
                    "tag": "v1.17.0",
                    "commit": "8422f5307b0498d09cf626f38acb03fe9f1efd94" } 
                ]
        },
        {
            "name": "dlib",
            "buildsystem": "simple",
            "build-commands":["cp -R dlib /app/include/"],
            "sources": [ 
                { 
                    "type": "git", 
                    "url": "https://github.com/davisking/dlib", 
                    "tag": "v19.24.2",
                    "commit": "39749fba5163d4e25030358f6aa8d91617bfdca2" } 
                ]
        },
        {
            "name": "cuda",
            "buildsystem": "simple",
            "build-commands":["mkdir /app/tmp","sh cuda_12.2.1_535.86.10_linux.run --silent --toolkitpath=/app/opt/cuda --toolkit --override --tmpdir=/app/tmp"],
            "sources":[
                {
                    "type": "file",
                    "url": "https://developer.download.nvidia.com/compute/cuda/12.2.1/local_installers/cuda_12.2.1_535.86.10_linux.run",
                    "md5": "2579fcb61cd80d3284d73da93785550f"
                }
            ]
        },
        {
            "name": "LightwaveExplorer",
            "buildsystem": "simple",
            "build-commands": ["touch localscript.sh",
            "echo \". /app/opt/intel/oneapi/setvars.sh\" >> localscript.sh",
            "echo \"export PATH=$PATH:/app/opt/cuda/bin\" >> localscript.sh",
            "echo \"export CMAKE_PREFIX_PATH=$CMAKE_PREFIX_PATH:/app/opt/intel/oneapi/mkl/latest/lib/cmake/mkl\" >> localscript.sh",
            "echo \"export CUDA_PATH=$PATH:/app/opt/cuda/\" >> localscript.sh",
            "echo \"cmake -DMAKECUDAFLATPAK=TRUE -DCMAKE_CUDA_ARCHITECTURES=75 .\" >> localscript.sh",
            "echo \"make\" >> localscript.sh",
            "chmod +x localscript.sh","./localscript.sh",
            "cmake --install . --prefix \"/app\""],
            "build-options": {
                "cxxflags": "-O3 -g -pipe -Wp,-D_FORTIFY_SOURCE=2 -fexceptions -fstack-protector-strong -grecord-gcc-switches",
                "cxxflags-override": true,
                "append-path": "/usr/lib/sdk/llvm15/bin",
                "prepend-ld-library-path": "/usr/lib/sdk/llvm15/lib" },
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/NickKarpowicz/LightwaveExplorer",
                    "tag": "2023.08.04",
                    "commit": "732b669f11ea2220881a022fa300cdd4e934e692"
                }
            ]
        }
            
    ]
}
