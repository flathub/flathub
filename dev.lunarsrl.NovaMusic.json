{
  "app-id": "dev.lunarsrl.NovaMusic",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "25.08",
  "sdk": "org.freedesktop.Sdk",
  "sdk-extensions": [
    "org.freedesktop.Sdk.Extension.rust-stable"
  ],
  "build-options": {
    "append-path": "/usr/lib/sdk/rust-stable/bin"
  },
  "finish-args": [
    "--socket=fallback-x11",
    "--share=ipc",
    "--socket=pulseaudio",
    "--socket=wayland",
    "--device=dri",
    "--talk-name=com.system76.CosmicSettingsDaemon",
    "--filesystem=xdg-config/cosmic:rw"
  ],
  "modules": [
    {
      "name": "nova-music",
      "buildsystem": "simple",
      "build-options": {
        "env": {
          "CARGO_HOME": "/run/build/nova-music/cargo"
        }
      },
      "build-commands": [
        "cargo --offline fetch --manifest-path Cargo.toml --verbose",
        "cargo --offline build --release --verbose",
        "install -Dm0755 ./target/release/nova-music /app/bin/nova-music",
        "install -Dm0644 ./resources/dev.lunarsrl.NovaMusic.desktop /app/share/applications/dev.lunarsrl.NovaMusic.desktop",
        "install -Dm0644 ./resources/dev.lunarsrl.NovaMusic.metainfo.xml /app/share/metainfo/dev.lunarsrl.NovaMusic.metainfo.xml",
        "install -Dm0644 ./resources/icons/hicolor/scalable/apps/dev.lunarsrl.NovaMusic.svg /app/share/icons/hicolor/scalable/apps/dev.lunarsrl.NovaMusic.svg"
      ],
      "sources": [
	      {
		      "type": "git",
		      "url": "https://github.com/lunarsrl/NovaMusic.git",
		      "tag": "v0.1.0",
		      "commit": "0a4f4cba9491c6980815f4d319126afc5364ec33"
	      },
        "cargo-sources.json"
      ]
    }
  ],
  "command": "nova-music"
}
