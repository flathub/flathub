{
    "app-id": "me.ppvan.psequel",
    "runtime": "org.gnome.Platform",
    "runtime-version": "44",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.vala"
    ],
    "command": "psequel",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/vala/bin",
        "prepend-ld-library-path": "/usr/lib/sdk/vala/lib",
        "env": {}
    },
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "/share/vala",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "psequel",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/ppvan/psequel",
                    "tag": "v0.1.1",
                    "commit": "2a8f412d22b87dd706c6e31d0fa248fdd94a5c94"
                }
            ],
            "modules": [
                {
                    "name": "blueprint-compiler",
                    "buildsystem": "meson",
                    "sources": [
                        {
                            "type": "git",
                            "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler",
                            "tag": "v0.10.0"
                        }
                    ]
                },
                {
                    "name": "postgresql-libs",
                    "build-options": {
                        "config-opts": [
                            "--with-python=no",
                            "--with-perl=no",
                            "--with-ssl=openssl"
                        ]
                    },
                    "sources": [
                        {
                            "type": "archive",
                            "url": "https://ftp.postgresql.org/pub/latest/postgresql-15.3.tar.bz2",
                            "sha256": "ffc7d4891f00ffbf5c3f4eab7fbbced8460b8c0ee63c5a5167133b9e6599d932"
                        }
                    ]
                }
            ]
        }
    ]
}