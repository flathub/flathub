<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
    <id>io.github.pleromix.IceBox</id>

    <name>IceBox</name>
    <summary>PDF Creator</summary>
    <developer_name>Mohammadreza Faraji</developer_name>

    <releases>
        <release version="1.0" date="2025-04-18"/>
    </releases>

    <metadata_license>CC-BY-SA-4.0</metadata_license>
    <project_license>GPL-3.0</project_license>

    <description>
        <p>
            IceBox can help you convert your images into a PDF file.
        </p>
    </description>

    <categories>
        <category>Development</category>
        <category>Science</category>
    </categories>

    <keywords>
        <keyword>PDF</keyword>
        <keyword>document</keyword>
        <keyword>photo</keyword>
    </keywords>

    <branding>
        <color type="primary" scheme_preference="light">#45a4e3ff</color>
        <color type="primary" scheme_preference="dark">#214478ff</color>
    </branding>

    <url type="homepage">https://github.com/pleromix/IceBox</url>

    <content_rating type="oars-1.0"/>

    <requires>
        <control>keyboard</control>
        <control>pointing</control>
    </requires>

    <launchable type="desktop-id">io.github.pleromix.IceBox.desktop</launchable>

    <screenshots>
        <screenshot type="default">
            <image>https://raw.githubusercontent.com/pleromix/icebox/main/screenshots/image_1.png</image>
            <caption>Image files are imported</caption>
        </screenshot>
        <screenshot>
            <image>https://raw.githubusercontent.com/pleromix/icebox/main/screenshots/image_2.png</image>
            <caption>Main interface</caption>
        </screenshot>
    </screenshots>
</component>
