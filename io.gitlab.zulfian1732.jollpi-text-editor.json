{
    "app-id": "io.gitlab.zulfian1732.jollpi-text-editor",
    "runtime": "org.gnome.Platform",
    "runtime-version": "49",
    "sdk": "org.gnome.Sdk",
    "command": "jollpi",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--filesystem=host",
        "--filesystem=xdg-run/gvfs",
        "--filesystem=xdg-run/gvfsd",
        "--talk-name=org.freedesktop.FileManager1",
        "--talk-name=org.gtk.vfs.*"
    ],
    "modules": [
        {
            "name": "jollpi",
            "buildsystem": "simple",
            "build-commands": [
                "pip3 install --no-build-isolation --no-deps --prefix=/app ."
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.com/zulfian1732/jollpi-text-editor",
                    "tag": "v3.0.4"
                }
            ]
        }
    ]
}
