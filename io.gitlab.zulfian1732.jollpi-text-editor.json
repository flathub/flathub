{
    "app-id": "io.gitlab.zulfian1732.jollpi-text-editor",
    "runtime": "org.gnome.Platform",
    "runtime-version": "49",
    "sdk": "org.gnome.Sdk",
    "command": "jollpi",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--filesystem=host",
        "--filesystem=xdg-run/gvfs",
        "--filesystem=xdg-run/gvfsd",
        "--talk-name=org.freedesktop.FileManager1",
        "--talk-name=org.gtk.vfs.*"
    ],
    "modules": [
        {
            "name": "jollpi",
            "buildsystem": "simple",
            "build-commands": [
                "python3 -m pip install --no-build-isolation --no-deps --prefix=/app .",
                "install -Dm644 data/io.gitlab.zulfian1732.jollpi-text-editor.desktop /app/share/applications/io.gitlab.zulfian1732.jollpi-text-editor.desktop",
                "install -Dm644 data/io.gitlab.zulfian1732.jollpi-text-editor.metainfo.xml /app/share/metainfo/io.gitlab.zulfian1732.jollpi-text-editor.metainfo.xml",
                "install -Dm644 data/icons/hicolor/16x16/apps/io.gitlab.zulfian1732.jollpi-text-editor.png /app/share/icons/hicolor/16x16/apps/io.gitlab.zulfian1732.jollpi-text-editor.png",
                "install -Dm644 data/icons/hicolor/32x32/apps/io.gitlab.zulfian1732.jollpi-text-editor.png /app/share/icons/hicolor/32x32/apps/io.gitlab.zulfian1732.jollpi-text-editor.png",
                "install -Dm644 data/icons/hicolor/64x64/apps/io.gitlab.zulfian1732.jollpi-text-editor.png /app/share/icons/hicolor/64x64/apps/io.gitlab.zulfian1732.jollpi-text-editor.png",
                "install -Dm644 data/icons/hicolor/128x128/apps/io.gitlab.zulfian1732.jollpi-text-editor.png /app/share/icons/hicolor/128x128/apps/io.gitlab.zulfian1732.jollpi-text-editor.png",
                "install -Dm644 data/icons/hicolor/256x256/apps/io.gitlab.zulfian1732.jollpi-text-editor.png /app/share/icons/hicolor/256x256/apps/io.gitlab.zulfian1732.jollpi-text-editor.png",
                "install -Dm644 src/jollpi/style/jollpi.xml /app/share/gtksourceview-5/styles/jollpi.xml"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.com/zulfian1732/jollpi-text-editor",
                    "branch": "main"
                }
            ]
        }
    ]
}
