{
    "id": "io.github.TransmissionRemoteGtk",
    "runtime": "org.gnome.Platform",
    "sdk": "org.gnome.Sdk",
    "runtime-version": "41",
    "rename-icon": "transmission-remote-gtk",
    "copy-icon": true,
    "command": "transmission-remote-gtk",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",

        "--share=network",
        "--socket=pulseaudio",

        "--filesystem=xdg-download",

        "--filesystem=xdg-run/gvfsd",
        "--talk-name=org.gtk.vfs.*"
    ],
    "modules": [
        {
            "name": "transmission-remote-gtk",
            "build-options": {
                "cflags": "-fcommon"
            },
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/transmission-remote-gtk/transmission-remote-gtk/releases/download/1.4.1/transmission-remote-gtk-1.4.1.tar.xz",
                    "sha256": "59978381a558fc6d1a11091c702a88ac0be8fc7fa135ca367eec55f572a112ab"
                },
                {
                    "type": "patch",
                    "path": "appdata.patch"
                }
            ]
        }
    ]
}
