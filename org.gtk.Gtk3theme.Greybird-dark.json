{
    "id": "org.gtk.Gtk3theme.Greybird-dark",
    "branch": "3.22",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "19.08",
    "sdk": "org.freedesktop.Sdk",
    "build-extension": true,
    "appstream-compose": false,
    "separate-locales": false,
    "build-options": {
      "prefix": "/usr/share/runtime/share/themes/Greybird-dark/gtk-3.0"
    },
    "modules": [
      {
        "name": "sassc",
        "config-opts": ["--with-libsass=/usr/share/runtime/share/themes/Greybird-dark/gtk-3.0"],
        "cleanup": ["*"],
        "sources": [
          {
            "type": "archive",
            "url": "https://github.com/sass/sassc/archive/3.5.0.tar.gz",
            "sha256": "26f54e31924b83dd706bc77df5f8f5553a84d51365f0e3c566df8de027918042"
          },
          {
            "type": "script",
            "dest-filename": "autogen.sh",
            "commands": ["autoreconf -si"]
          }
        ],
        "modules": [
          {
            "name": "libsass",
            "cleanup": ["*"],
            "sources": [
              {
                "type": "archive",
                "url": "https://github.com/sass/libsass/archive/3.5.4.tar.gz",
                "sha256": "5f61cbcddaf8e6ef7a725fcfa5d05297becd7843960f245197ebb655ff868770"
              },
              {
                "type": "script",
                "dest-filename": "autogen.sh",
                "commands": ["autoreconf -si"]
              }
            ]
          }
        ]
      },
      {
        "name": "Greybird-dark",
        "buildsystem": "meson",
        "build-options": {
          "prefix": "/usr/share/runtime",
          "append-path": "/usr/share/runtime/share/themes/Greybird-dark/gtk-3.0/bin"
        },
        "config-opts": [
          "-Dflatpak=true",
          "-Dflatpak-variant=dark"
        ],
        "sources": [
          {
            "type": "git",
            "url": "https://github.com/shimmerproject/Greybird.git",
            "tag": "v3.22.11"
          }
        ]
      },
      {
        "name": "appdata",
        "buildsystem": "simple",
        "build-commands": [
          "install -Dm644 org.gtk.Gtk3theme.Greybird-dark.appdata.xml ${FLATPAK_DEST}/share/appdata/org.gtk.Gtk3theme.Greybird-dark.appdata.xml",
          "appstream-compose --basename=org.gtk.Gtk3theme.Greybird-dark --prefix=${FLATPAK_DEST} --origin=flatpak org.gtk.Gtk3theme.Greybird-dark"
        ],
        "sources": [
          {
            "type": "file",
            "path": "org.gtk.Gtk3theme.Greybird-dark.appdata.xml"
          }
        ]
      }
    ]
}
