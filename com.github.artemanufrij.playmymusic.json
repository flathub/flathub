{
    "app-id": "com.github.artemanufrij.playmymusic",
    "base": "io.elementary.Loki.BaseApp",
    "runtime": "org.freedesktop.Platform",
    "sdk": "org.freedesktop.Sdk",
    "runtime-version": "1.6",
    "command": "com.github.artemanufrij.playmymusic",
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/pkgconfig",
        "/share/aclocal",
        "/man",
        "/share/man",
        "/share/gtk-doc",
        "/share/vala",
        "*.la",
        "*.a"
    ],
    "build-options": {
        "cflags": "-O2 -g",
        "cxxflags": "-O2 -g"
    },
    "finish-args": [
        /* X11 + XShm */
        "--share=ipc", "--socket=x11",
        /* Wayland */
        "--socket=wayland",
        /* Filesystem */
        "--filesystem=home",
        /* Network (Radio + Covers) */
        "--share=network",
        /* dconf */
        "--filesystem=xdg-run/dconf", "--filesystem=~/.config/dconf:ro",
        "--talk-name=ca.desrt.dconf", "--env=DCONF_USER_CONFIG_DIR=.config/dconf",
        /* Audio */
        "--socket=pulseaudio",
        /* Notifications */
        "--talk-name=org.freedesktop.Notifications",
        /* Inhibitor */
        "--talk-name=org.freedesktop.ScreenSaver",
        /* Media Keys */
        "--talk-name=org.gnome.SettingsDaemon.MediaKeys",
        "--talk-name=org.mpris.MediaPlayer2",
        "--own-name=org.mpris.MediaPlayer2.com.github.artemanufrij.playmymusic"
    ],
    "modules": [
        {
            "name": "gst-libav",
            "config-opts": [
                "--disable-gtk-doc"
            ],
            "sources": [{
                "type": "archive",
                "url": "https://gstreamer.freedesktop.org/src/gst-libav/gst-libav-1.12.3.tar.xz",
                "sha256": "015ef8cab6f7fb87c8fb42642486423eff3b6e6a6bccdcd6a189f436a3619650"
            }]
        },
        {
            "name": "gst-plugins-ugly",
            "config-opts": [
                "--disable-gtk-doc"
            ],
            "sources": [{
                "type": "archive",
                "url": "https://gstreamer.freedesktop.org/src/gst-plugins-ugly/gst-plugins-ugly-1.12.3.tar.xz",
                "sha256": "e88ca584c94ea78eeecbf3af00ef7f134b66bdee7408aa4aa6c547235e060052"
            }]
        },
        {
            "name": "taglib",
            "buildsystem": "cmake",
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "sources":[{
                "type": "archive",
                "url": "https://github.com/taglib/taglib/archive/v1.11.1.tar.gz",
                "sha256": "b6d1a5a610aae6ff39d93de5efd0fdc787aa9e9dc1e7026fa4c961b26563526b"
            }]
        },
        {
            "name": "playmymusic",
            "buildsystem": "meson",
            "build-options": {
                "config-opts": [
                    "--buildtype=release"
                ]
            },
            "sources": [{
                "type": "archive",
                "url": "https://github.com/artemanufrij/playmymusic/archive/1.0.1.tar.gz",
                "sha256": "1e7e1dd9df44d46e6148c75636cb76e3944b38d0f8b868a2dee83c832e677355"
            }]
        }
    ]
}
