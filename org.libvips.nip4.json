{
    "app-id" : "org.libvips.nip4",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "47",
    "sdk" : "org.gnome.Sdk",
    "command" : "nip4",
    "finish-args" : [
        "--device=dri",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--talk-name=org.gtk.vfs.*",
        "--filesystem=xdg-run/gvfsd",
        "--filesystem=host"
    ],
    "cleanup" : [
        "/include",
        "/lib/libheif",
        "/lib/girepository-1.0",
        "/lib/pkgconfig",
        "/lib/cmake",
        "/lib/openjpeg-*",
        "/lib/*.a",
        "/man",
        "/share/aclocal",
        "/share/doc",
        "/share/gir-1.0",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "/share/aclocal*",
        "/share/autoconf*",
        "/share/automake*",
        "/share/info",
        "/share/thumbnailers",
        "/share/USING_HDF5_CMake.txt",
        "/share/COPYING",
        "/share/RELEASE.txt",
        "/share/cmake",
        "/bin/smem",
        "/bin/fpack",
        "/bin/funpack",
        "/bin/speed",
        "/bin/vipsedit",
        "/bin/vipsprofile",
        "/bin/vipsthumbnail"
    ],
    "modules" : [

        {
            "name" : "highway",
            "builddir" : true,
            "buildsystem" : "cmake-ninja",
            "build-options" : {
                "config-opts" : [
                    "-DBUILD_TESTING=OFF",
                    "-DHWY_ENABLE_CONTRIB=OFF",
                    "-DHWY_ENABLE_EXAMPLES=OFF",
                    "-DHWY_ENABLE_TESTS=OFF"
                ]
            },
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/google/highway.git",
                    "tag" : "1.2.0",
                    "commit" : "457c891775a7397bdb0376bb1031e6e027af1c48"
                }
            ]
        },

        {
            "name" : "libdeflate",
            "builddir" : true,
            "buildsystem" : "cmake-ninja",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/ebiggers/libdeflate.git",
                    "tag" : "v1.22",
                    "commit" : "2335c047e91cac6fd04cb0fd2769380395149f15"
                }
            ],
        "cleanup" : [
        "/bin/libdeflate-gunzip",
        "/bin/libdeflate-gzip"
        ]
        },

        {
            "name" : "libimagequant",
            "builddir" : true,
            "buildsystem" : "cmake-ninja",
            "build-options" : {
                "arch" : {
                    "aarch64" : {
                        "config-opts" : [
                            "-DBUILD_WITH_SSE=NO"
                        ]
                    }
                }
            },
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/ImageOptim/libimagequant.git",
                    "tag" : "2.15.1",
                    "commit" : "2cf79d535d86daeb9983e5d037fc544b4354f3b1"
                }
            ]
        },

        {
            "name" : "libspng",
            "builddir" : true,
            "buildsystem" : "cmake-ninja",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/randy408/libspng.git",
                    "tag" : "v0.7.4",
                    "commit" : "fb768002d4288590083a476af628e51c3f1d47cd"
                }
            ]
        },

        {
            "name" : "poppler-data",
            "builddir" : true,
            "buildsystem" : "cmake-ninja",
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://poppler.freedesktop.org/poppler-data-0.4.12.tar.gz",

                    "sha256" : "c835b640a40ce357e1b83666aabd95edffa24ddddd49b8daff63adb851cdab74"
                }
            ]
        },

        {
            "name" : "poppler-glib",
            "builddir" : true,
            "buildsystem" : "cmake-ninja",
            "config-opts" : [
                    "-DBUILD_CPP_TESTS=OFF",
                    "-DBUILD_GTK_TESTS=OFF",
                    "-DBUILD_MANUAL_TESTS=OFF",
                    "-DBUILD_QT5_TESTS=OFF",
                    "-DBUILD_QT6_TESTS=OFF",
                    "-DENABLE_LIBTIFF=ON",
                    "-DENABLE_LIBPNG=ON",
                    "-DENABLE_GLIB=ON",
                    "-DENABLE_LIBOPENJPEG='openjpeg2'",
                    "-DENABLE_DCTDECODER='libjpeg'",
                    "-DENABLE_BOOST=OFF",
                    "-DENABLE_UTILS=OFF",
                    "-DENABLE_QT5=OFF",
                    "-DENABLE_QT6=OFF",
                    "-DENABLE_CPP=OFF"
            ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://poppler.freedesktop.org/poppler-24.10.0.tar.xz",

                    "sha256" : "58ed1849810f04a10b37c7ff6f3e411845c8a57d731d599d0045acc7a7fff09d"
                }
            ]
        },

        {
            "name" : "imath",
            "builddir" : true,
            "buildsystem" : "cmake-ninja",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/AcademySoftwareFoundation/Imath.git",
                    "tag" : "v3.1.12",
                    "commit" : "c0396a055a01bc537d32f435aee11a9b7ed6f0b5"
                }
            ]
        },

        {
            "name" : "openexr",
            "builddir" : true,
            "buildsystem" : "cmake-ninja",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/AcademySoftwareFoundation/openexr.git",
                    "tag" : "v3.3.1",
                    "commit" : "f723c3940fff287c0a26b425b90a8e764823bfd4"
                }
            ],
        "cleanup" : [
        "/bin/exr2aces",
        "/bin/exrenvmap",
        "/bin/exrheader",
        "/bin/exrinfo",
        "/bin/exrmakepreview",
        "/bin/exrmaketiled",
        "/bin/exrmanifest",
        "/bin/exrmetrics",
        "/bin/exrmultipart",
        "/bin/exrmultiview",
        "/bin/exrstdattr"
        ]
        },

        {
            "name" : "uthash",
            "buildsystem" : "simple",
            "build-commands" : [
                "install -D include/* /app/include"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/troydhanson/uthash.git",
                    "commit" : "ca98384ce7f30beb216f9a0bc88a3b4340ead729"
                }
            ]
        },

        {
            "name" : "libdicom",
            "builddir" : true,
            "buildsystem" : "meson",
            "config-opts" : [
                "--buildtype=release",
                "-Dtests=false"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/ImagingDataCommons/libdicom.git",
                    "tag" : "v1.1.0",
                    "commit" : "60f291dea0fd464e34d693b1ad55c46f9f2ee69a"
                }
            ],
        "cleanup" : [
        "/bin/dcm-dump",
        "/bin/dcm-getframe"
        ]
        },

        {
            "name" : "openslide",
            "builddir" : true,
            "buildsystem" : "meson",
            "config-opts" : [
                "--buildtype=release"
            ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://github.com/openslide/openslide/releases/download/v4.0.0/openslide-4.0.0.tar.xz",
                    "sha256" : "cc227c44316abb65fb28f1c967706eb7254f91dbfab31e9ae6a48db6cf4ae562"
                }
            ],
        "cleanup" : [
        "/bin/openslide-quickhash1sum",
        "/bin/openslide-show-properties",
        "/bin/openslide-write-png",
        "/bin/slidetool"
        ]
        },

        {
            "name" : "cfitsio",
            "builddir" : true,
            "buildsystem" : "autotools",
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://heasarc.gsfc.nasa.gov/FTP/software/fitsio/c/cfitsio-4.5.0.tar.gz",
                    "sha256" : "e4854fc3365c1462e493aa586bfaa2f3d0bb8c20b75a524955db64c27427ce09"
                }
            ],
        "cleanup" : [
        "/bin/imcopy",
        "/bin/cookbook",
        "/bin/fitscopy",
        "/bin/fitsverify"
        ]
        },

        {
            "name" : "cgif",
            "buildsystem" : "meson",
            "config-opts" : [
                "--buildtype=release"
            ],
            "builddir" : true,
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/dloebl/cgif.git",
                    "tag" : "v0.4.1",
                    "commit" : "025ac5e56ea35be1d4c02d014e6d26e2eb9ccfa9"
                }
            ]
        },

        {
            "name" : "libvips",
            "builddir" : true,
            "buildsystem" : "meson",
            "config-opts" : [
                "--buildtype=release",
                "-Ddeprecated=false",
                "-Dmodules=disabled"
            ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://github.com/libvips/libvips/releases/download/v8.16.0/vips-8.16.0.tar.xz",
                    "sha256" : "6eca46c6ba5fac86224fd69007741012b0ea1f9aa1fcb9256b0cbc2faf768563"
                }
            ]
        },

        {
            "name" : "libgsl",
            "builddir" : true,
            "buildsystem" : "autotools",
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://ftp.snt.utwente.nl/pub/software/gnu/gsl/gsl-2.8.tar.gz",
                    "sha256" : "6a99eeed15632c6354895b1dd542ed5a855c0f15d9ad1326c6fe2b2c9e423190"
                }
            ],
        "cleanup" : [
        "/bin/gsl-config",
        "/bin/gsl-histogram",
        "/bin/gsl-randist"
        ]
        },

        {
            "name" : "nip4",
            "builddir" : true,
            "buildsystem" : "meson",
            "config-opts" : [
                "--buildtype=release"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/jcupitt/nip4.git",
                    "tag" : "v9.0.0-2"
                }
            ]
        }
    ]
}

