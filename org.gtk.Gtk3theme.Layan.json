{
  "id": "org.gtk.Gtk3theme.Layan",
  "branch": "3.36",
  "runtime": "org.gnome.Sdk",
  "build-extension": true,
  "sdk": "org.gnome.Sdk",
  "runtime-version": "3.36",
  "appstream-compose": false,
  "separate-locales": false,
  "modules": [
    {
      "name": "Layan",
      "buildsystem": "simple",
      "build-commands": [
        "mkdir -pm 755 /usr/share/runtime/share/themes/Layan/gtk-3.0/assets",
        "cp -fr gtk-3.0/assets/* /usr/share/runtime/share/themes/Layan/gtk-3.0/assets/",
        "cp gtk-3.0/gtk-dark.css /usr/share/runtime/share/themes/Layan/gtk-3.0/gtk-dark.css",
        "cp gtk-3.0/gtk.css /usr/share/runtime/share/themes/Layan/gtk-3.0/gtk.css"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/HeitorAugustoLN/Layan-gtk-theme-flatpak/blob/main/Layan.tar.xz",
          "sha256": "c61a0aa8aa03d30993e11af826f7c9f92816dfe618968b6e90f4c31b54771a4c"
        }
      ]
    },
    {
      "name": "appdata",
      "buildsystem": "simple",
      "build-commands": [
        "mkdir -p ${FLATPAK_DEST}/share/appdata",
        "cp org.gtk.Gtk3theme.Layan.appdata.xml ${FLATPAK_DEST}/share/appdata",
        "appstream-compose --basename=org.gtk.Gtk3theme.Layan --prefix=${FLATPAK_DEST} --origin=flatpak org.gtk.Gtk3theme.Layan"
      ],
      "sources": [
        {
          "type": "file",
          "path": "org.gtk.Gtk3theme.Layan.appdata.xml"
        }
      ]
    }
  ]
}
