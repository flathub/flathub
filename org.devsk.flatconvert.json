{
    "app-id": "org.devsk.flatconvert",
    "runtime": "org.gnome.Platform",
    "runtime-version": "48",
    "sdk": "org.gnome.Sdk",
    "command": "flatconvert",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
        "--talk-name=org.freedesktop.FileManager1",
        "--env=FLATPAK_ENABLE_FFMPEG=1"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "cleanup-commands": [
        "mkdir -p /app/lib/ffmpeg"
    ],
    "add-extensions": {
        "org.freedesktop.Platform.ffmpeg-full": {
            "directory": "lib/ffmpeg",
            "version": "24.08",
            "add-ld-path": "."
        }
    },
    "modules": [
        "python3-requirements.json",
        {
            "name": "libmagic",
            "buildsystem": "autotools",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://astron.com/pub/file/file-5.45.tar.gz",
                    "sha256": "fc97f51029bb0e2c9f4e3bffefdaf678f0e039ee872b9de5c002a6d09c784d82"
                }
            ]
        },
        {
            "name": "flatconvert",
            "builddir": true,
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://gitlab.gnome.org/qsk/flatconvert/-/archive/v1.2.0/flatconvert-v1.2.0.tar.gz",
                    "sha256": "c30674532e66ba357f2abb8910f9013327485e98009b5bedd3559df40b44929e"
                }
            ]
        }
    ]
}
