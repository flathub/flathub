{
    "app-id": "org.devsk.flatconvert",
    "runtime": "org.gnome.Platform",
    "runtime-version": "48",
    "sdk": "org.gnome.Sdk",
    "command": "flatconvert",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
        "--talk-name=org.freedesktop.FileManager1"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "cleanup-commands": [
        "mkdir -p /app/lib/ffmpeg"
    ],
    "add-extensions": {
        "org.freedesktop.Platform.ffmpeg-full": {
            "directory": "lib/ffmpeg",
            "version": "24.08",
            "add-ld-path": "."
        }
    },
    "modules": [
        "python3-requirements.json",
        {
            "name": "flatconvert",
            "builddir": true,
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://gitlab.gnome.org/qsk/flatconvert/-/archive/v1.2.0/flatconvert-v1.2.0.tar.gz",
                    "sha256": "aef38f19966b874e4f797d1c006fc389589ebabca18dc348398a64614130d001"
                }
            ]
        }
    ]
}
