{
    "app-id" : "org.devsk.flatconvert",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "48",
    "sdk" : "org.gnome.Sdk",
    "command" : "flatconvert",
	"finish-args": [
	  "--share=network",
	  "--share=ipc",
	  "--socket=fallback-x11",
	  "--filesystem=home",
	  "--device=dri",
	  "--socket=x11",
	  "--socket=wayland",
	  "--talk-name=org.freedesktop.FileManager1"
	],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "pillow",
            "buildsystem" : "simple",
            "build-options" : {
                "build-args" : [
                    "--share=network"
                ]
            },
            "build-commands" : [
                "pip3 install --prefix=/app --no-cache-dir pillow"
            ]
        },
        {
            "name" : "ffmpeg",
            "buildsystem" : "simple",
            "build-options" : {
                "build-args" : [
                    "--share=network"
                ]
            },
            "build-commands" : [
                "pip3 install --prefix=/app --no-cache-dir ffmpeg-python"
            ]
        },
        {
            "name" : "pydbus",
            "buildsystem" : "simple",
            "build-options" : {
                "build-args" : [
                    "--share=network"
                ]
            },
            "build-commands" : [
                "pip3 install --prefix=/app --no-cache-dir pydbus"
            ]
        },
        {
            "name" : "ffmpeg_progress_yield",
            "buildsystem" : "simple",
            "build-options" : {
                "build-args" : [
                    "--share=network"
                ]
            },
            "build-commands" : [
                "pip3 install --prefix=/app --no-cache-dir ffmpeg-progress-yield"
            ]
        },
        {
            "name" : "ffmpeg_progress_yield",
            "buildsystem" : "simple",
            "build-options" : {
                "build-args" : [
                    "--share=network"
                ]
            },
            "build-commands" : [
                "pip3 install --prefix=/app --no-cache-dir python-magic"
            ]
        },
        {
            "name" : "flatconvert",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://gitlab.gnome.org/qsk/flatconvert/-/archive/1.1.0/flatconvert-1.1.0.tar.gz",
		    "sha256" : "aaeb0d9ea198fd423bdf6fb554a041ad63ddd5b776f02abc43c83c1e71120438"
		}
            ],
            "config-opts" : [
                "--libdir=lib"
            ]
        }
    ]
}
