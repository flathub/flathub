{
    "app-id" : "org.devsk.flatconvert",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "48",
    "sdk" : "org.gnome.Sdk",
    "command" : "flatconvert",
	"finish-args": [
		"--share=network",
		"--share=ipc",
		"--socket=fallback-x11",
		"--filesystem=home",
		"--device=dri",
		"--socket=wayland",
		"--talk-name=org.freedesktop.FileManager1"
	],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "pillow",
            "buildsystem" : "simple",
            "build-options" : {
                "build-args" : [
                    "--share=network"
                ]
            },
            "build-commands" : [
                "pip3 install --prefix=/app --no-cache-dir pillow"
            ]
        },
        {
            "name" : "ffmpeg",
            "buildsystem" : "simple",
            "build-options" : {
                "build-args" : [
                    "--share=network"
                ]
            },
            "build-commands" : [
                "pip3 install --prefix=/app --no-cache-dir ffmpeg-python"
            ]
        },
        {
            "name" : "pydbus",
            "buildsystem" : "simple",
            "build-options" : {
                "build-args" : [
                    "--share=network"
                ]
            },
            "build-commands" : [
                "pip3 install --prefix=/app --no-cache-dir pydbus"
            ]
        },
        {
            "name" : "ffmpeg_progress_yield",
            "buildsystem" : "simple",
            "build-options" : {
                "build-args" : [
                    "--share=network"
                ]
            },
            "build-commands" : [
                "pip3 install --prefix=/app --no-cache-dir ffmpeg-progress-yield"
            ]
        },
        {
            "name" : "magic",
            "buildsystem" : "simple",
            "build-options" : {
                "build-args" : [
                    "--share=network"
                ]
            },
            "build-commands" : [
                "pip3 install --prefix=/app --no-cache-dir python-magic"
            ]
        },
        {
            "name" : "flatconvert",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://gitlab.gnome.org/qsk/flatconvert/-/archive/v1.2.0/flatconvert-v1.2.0.tar.gz",
		    "sha256" : "bc0f3f78ee932084ea024436bd7ae7a53f3766f2d21f19c0ed879d72dd39d661"
		}
            ],
            "config-opts" : [
                "--libdir=lib"
            ]
        }
    ]
}
