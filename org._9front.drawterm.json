{
	"id": "org._9front.drawterm",
	"runtime": "org.freedesktop.Platform",
	"runtime-version": "24.08",
	"sdk": "org.freedesktop.Sdk",
	"command": "drawterm",
	"finish-args": [
		"--share=ipc",
		"--share=network",
		"--socket=wayland",
		"--socket=fallback-x11"
	],
	"modules": [
		{
			"name": "drawterm-wayland",
			"buildsystem": "simple",
			"builddir": false,
			"build-commands": [
				"make CONF=flatpak-wayland -j${FLATPAK_BUILDER_N_JOBS}",
				"install -Dm755 drawterm-wayland -t /app/bin"
			],
			"sources": [
				{
					"type": "git",
					"url": "https://github.com/9front/drawterm.git",
					"commit": "903bcd8dba9cb9dfc70707a28089c469e5302539"
				},
				{
					"type": "file",
					"path": "files/Make.flatpak-wayland"
				}
			]
		},
		{
			"name": "drawterm-x11",
			"buildsystem": "simple",
			"builddir": false,
			"build-commands": [
				"make CONF=flatpak-x11 -j${FLATPAK_BUILDER_N_JOBS}",
				"install -Dm755 drawterm-x11 -t /app/bin"
			],
			"sources": [
				{
					"type": "git",
					"url": "https://github.com/9front/drawterm.git",
					"commit": "903bcd8dba9cb9dfc70707a28089c469e5302539"
				},
				{
					"type": "file",
					"path": "files/Make.flatpak-x11"
				}
			]
		},
		{
			"name": "drawterm",
			"buildsystem": "simple",
			"builddir": false,
			"build-commands": [
				"install -Dm755 drawterm -t /app/bin",
				"install -Dm644 org._9front.drawterm.desktop -t /app/share/applications",
				"install -Dm644 org._9front.drawterm.metainfo.xml -t /app/share/metainfo",
				"install -Dm644 org._9front.drawterm.png -t /app/share/icons/hicolor/256x256/apps"
			],
			"sources": [
				{
					"type": "file",
					"path": "files/drawterm"
				},
				{
					"type": "file",
					"path": "files/org._9front.drawterm.desktop"
				},
				{
					"type": "file",
					"path": "files/org._9front.drawterm.metainfo.xml"
				},
				{
					"type": "file",
					"path": "files/org._9front.drawterm.png"
				}
			]
		}
	]
}
