{
    "id": "org.freedesktop.LinuxAudio.Plugins.peakeater",
    "runtime": "org.freedesktop.LinuxAudio.BaseExtension",
    "runtime-version": "stable",
    "sdk": "org.freedesktop.Sdk//24.08",
    "build-extension": true,
    "branch": "24.08",
    "build-options": {
        "prefix": "/app/extensions/Plugins/peakeater"
    },
    "cleanup": [
        "/lib/cmake",
        "/bin",
        "/include"
    ],
    "modules": [
        {
            "name": "peakeater",
            "buildsystem": "cmake-ninja",
            "post-install": [
                "install -d ${FLATPAK_DEST}/lv2",
                "cp -r PeakEater_artefacts/LV2/PeakEater.lv2 ${FLATPAK_DEST}/lv2",
                "install -d ${FLATPAK_DEST}/vst3",
                "cp -r PeakEater_artefacts/VST3/PeakEater.vst3 ${FLATPAK_DEST}/vst3",
                "install -Dm755 PeakEater_artefacts/CLAP/PeakEater.clap -t ${FLATPAK_DEST}/clap",
                "install -Dm644 org.freedesktop.LinuxAudio.Plugins.peakeater.metainfo.xml -t ${FLATPAK_DEST}/share/metainfo"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/vvvar/PeakEater.git",
                    "tag": "v0.6.2"
                },
                {
                    "type": "file",
                    "path": "org.freedesktop.LinuxAudio.Plugins.peakeater.metainfo.xml"
                }
            ]
        }
    ]
}
