{
    "app-id": "net.sf.VICE",
    "branch": "stable",
    "command": "x64",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.26",
    "sdk": "org.gnome.Sdk",
    "build-options" : {
        "cflags": "-O3 -g",
        "cxxflags": "-O3 -g",
        "arch": {
            "x86_64": {
                "cflags": "-O3 -g -m64 -march=nocona -mtune=core2 -ffast-math"
            }
        }
    },    
    "finish-args": [
        "--device=all",
        "--filesystem=home:ro",
        "--share=ipc",
        "--socket=pulseaudio",
        "--socket=x11"
    ],
    "modules": [
        {
            "name": "xfont-utils",
            "modules": [
                {
                    "name": "font-util",
                    "cleanup": [ "*" ],
                    "config-opts": [ "--disable-static" ],            
                    "sources": [
                        {
                            "type": "git",
                            "url": "git://anongit.freedesktop.org/xorg/font/util",
                            "tag": "font-util-1.3.1"
                        }
                    ]
                },          
                {
                    "name": "libfontenc",
                    "cleanup": [ "*" ],
                    "config-opts": [ "--disable-static" ],            
                    "sources": [
                        {
                            "type": "git",
                            "url": "git://anongit.freedesktop.org/git/xorg/lib/libfontenc",
                            "tag": "libfontenc-1.1.3"
                        }
                    ]
                },            
                {
                    "name": "libXfont",
                    "cleanup": [ "*" ],
                    "config-opts": [ "--disable-static" ],            
                    "sources": [
                        {
                            "type": "git",
                            "url": "git://anongit.freedesktop.org/xorg/lib/libXfont",
                            "tag": "libXfont-1.5.4"
                        }
                    ]
                },   
                {
                    "name": "bdftopcf",
                    "cleanup": [ "*" ],
                    "sources": [
                        {
                            "type": "git",
                            "url": "git://anongit.freedesktop.org/xorg/app/bdftopcf",
                            "tag": "bdftopcf-1.1"
                        }
                    ]
                }, 
                {
                    "name": "mkfontdir",
                    "cleanup": [ "*" ],
                    "sources": [
                        {
                            "type": "git",
                            "url": "git://anongit.freedesktop.org/xorg/app/mkfontdir",
                            "tag": "mkfontdir-1.0.7"
                        }
                    ]
                },           
                {
                    "name": "mkfontscale",
                    "cleanup": [ "*" ],
                    "sources": [
                        {
                            "type": "git",
                            "url": "git://anongit.freedesktop.org/xorg/app/mkfontscale",
                            "tag": "mkfontscale-1.1.2"
                        }
                    ]
                }
            ]
        },           
        {
            "name": "vice",
            "cleanup": [
                "/cache",
                "/lib/debug/source",
                "/lib64/vice/doc",
                "/share/fonts",
                "/share/info",
                "/share/man"                
            ],            
            "config-opts": [
                "--enable-gnomeui3",
                "--enable-parsid",
                "--disable-arch",
                "--without-oss"
            ],
            "post-install": [
                "install -Dm644 net.sf.VICE.appdata.xml /app/share/appdata/net.sf.VICE.appdata.xml",
                "install -Dm644 net.sf.VICE.desktop /app/share/applications/net.sf.VICE.desktop",
                "install -Dm644 net.sf.VICE.png /app/share/icons/hicolor/128x128/apps/net.sf.VICE.png",
                "install -Dm644 net.sf.VICE-64.png /app/share/icons/hicolor/64x64/apps/net.sf.VICE.png"
            ],            
            "sources": [
                {
                    "type": "archive",
                    "url": "https://versaweb.dl.sourceforge.net/project/vice-emu/releases/vice-3.1.tar.gz",
                    "sha256": "3eb8159633816095006dec36c5c3edd055a87fd8bda193a1194a6801685d1240"
                },
                {
                    "type": "file",
                    "path": "net.sf.VICE.appdata.xml"
                },
                {
                    "type": "file",
                    "path": "net.sf.VICE.desktop"
                },
                {
                    "type": "file",
                    "path": "net.sf.VICE.png"
                },
                {
                    "type": "file",
                    "path": "net.sf.VICE-64.png"
                }
            ]
        }
    ]
}