{
  "id": "com.ramussoftware.ramus",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "23.08",
  "sdk": "org.freedesktop.Sdk",
  "sdk-extensions": [
    "org.freedesktop.Sdk.Extension.openjdk8"
  ],
  "command": "com.ramussoftware.ramus",
  "finish-args": [
    "--socket=x11",
    "--device=dri",
    "--share=ipc",
    "--filesystem=home",
    "--env=PATH=/app/jre/bin:/app/bin:/usr/bin"
  ],
  "modules": [
    {
      "name": "openjdk",
      "buildsystem": "simple",
      "build-commands": ["/usr/lib/sdk/openjdk8/install.sh"]
    },
    {
      "name": "resources",
      "buildsystem": "simple",
      "sources": [
        {
          "type": "file",
          "path": "com.ramussoftware.ramus"
        },
        {
          "type": "file",
          "path": "com.ramussoftware.ramus.svg"
        },
        {
          "type": "file",
          "path": "com.ramussoftware.ramus.metainfo.xml"
        },
        {
          "type": "file",
          "path": "com.ramussoftware.ramus.desktop"
        },
        {
          "type": "file",
          "path": "com.ramussoftware.ramus-mime.xml"
        }
      ],
      "build-commands": [
        "install -Dm755 com.ramussoftware.ramus -t /app/bin/",
        "install -Dm644 com.ramussoftware.ramus.svg -t /app/share/icons/hicolor/scalable/apps/",
        "install -Dm644 com.ramussoftware.ramus.metainfo.xml -t /app/share/metainfo/",
        "install -Dm644 com.ramussoftware.ramus.desktop -t /app/share/applications/",
        "install -Dm644 com.ramussoftware.ramus-mime.xml /app/share/mime/packages/com.ramussoftware.ramus.xml"
      ]
    },
    {
      "name": "ramus",
      "buildsystem": "simple",
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/Vitaliy-Yakovchuk/ramus/releases/download/v2.0/ramus-2.0.zip",
          "sha256": "a4df081dd8ecb80e7b4075c971999d18a37ff6afb74f7329884573b5fb0a09eb"
        }
      ],
      "build-commands": [
        "mkdir -p /app/lib/ramus",
        "cp -r ./bin/ /app/lib/ramus/",
        "cp -r ./lib/ /app/lib/ramus/"
      ]
    }
  ]
}
