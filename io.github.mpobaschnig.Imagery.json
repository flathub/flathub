        "build-aux/python3-accelerate.json",
        "build-aux/python3-scipy.json",
        {
            "name" : "imagery",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/mpobaschnig/imagery/releases/download/0.1.0/imagery-0.1.0.tar.xz",
                    "sha256": "b85213868090af86e3596cb958a15e2b74cee831d7540562684d1227c33af563"
                }
            ]
