{
  "app-id": "io.missioncenter.MissionCenter",
  "runtime": "org.gnome.Platform",
  "runtime-version": "44",
  "sdk": "org.gnome.Sdk",
  "command": "missioncenter",
  "build-options": {
    "no-debuginfo": true
  },
  "finish-args": [
    "--share=network",
    "--share=ipc",
    "--socket=fallback-x11",
    "--device=all",
    "--socket=wayland",
    "--talk-name=org.freedesktop.Flatpak",
    "--talk-name=org.gnome.Settings",
    "--system-talk-name=org.freedesktop.systemd1",
    "--system-talk-name=org.freedesktop.NetworkManager",
    "--filesystem=xdg-data/flatpak/exports/share:ro",
    "--filesystem=/var/lib/flatpak/exports/share:ro",
    "--filesystem=xdg-data/flatpak/app:ro",
    "--filesystem=/var/lib/flatpak/app:ro",
    "--env=XDG_DATA_DIRS=/app/share:/usr/share:/usr/share/runtime/share:/run/host/user-share:/run/host/share:/var/lib/flatpak/exports/share:~/.local/share/flatpak/exports/share"
  ],
  "cleanup": [
    "/include",
    "/lib/pkgconfig",
    "/man",
    "/share/doc",
    "/share/gtk-doc",
    "/share/man",
    "/share/pkgconfig",
    "*.la",
    "*.a",
    "musl-gcc.specs"
  ],
  "modules": [
    {
      "name": "rust-toolchain-x86_64",
      "only-arches": [ "x86_64" ],
      "buildsystem": "simple",
      "build-commands": [
        "mkdir /app/rust-toolchain",
        "mv * /app/rust-toolchain"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://gitlab.com/mission-center-devs/build-tools/-/raw/main/rust-musl-1.70.0.tar.zst",
          "sha256": "fcc101cd0af292d94e090b79517078c704201adff77817af0f654ca32f086f5b"
        }
      ]
    },
    {
      "name": "rust-toolchain-aarch64",
      "only-arches": [ "aarch64" ],
      "buildsystem": "simple",
      "build-commands": [
        "mkdir /app/rust-toolchain",
        "mv * /app/rust-toolchain"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://gitlab.com/mission-center-devs/build-tools/-/raw/main/rust-musl-1.70.0-aarch64.tar.zst",
          "sha256": "fcc101cd0af292d94e090b79517078c704201adff77817af0f654ca32f086f5b"
        }
      ]
    },
    {
      "name": "missioncenter",
      "buildsystem": "meson",
      "config-opts": [
        "-Dbuildtype=release",
        "-Dflatpak=true",
        "-Dcargo_env='CARGO_HOME='/run/build/missioncenter/cargo"
      ],
      "build-options": {
        "append-path": "/app/rust-toolchain/bin",
        "env": {
          "RUST_BACKTRACE": "full",
          "RUSTUP_HOME": "/app/rust-toolchain"
        }
      },
      "post-install": [
        "rm -rf /app/rust-toolchain"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://gitlab.com/mission-center-devs/mission-center.git",
          "tag": "v0.2.1",
          "commit": "721d69a7a25f0903512d41e351d10db9db179928"
        },
        {
          "type": "git",
          "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler",
          "commit": "f526cfa4d92a02be1eeb539076e22b06bc9ab887",
          "dest": "subprojects/blueprint-compiler"
        },
        {
          "type": "archive",
          "url": "https://github.com/Syllo/nvtop/archive/9a8458b541a195a0c5cadafb66e240962c852b39.tar.gz",
          "sha256": "290542e3c2203613e18faaa769dcc5479b170c39acbe71c976a7e86ff03ea1a7",
          "dest": "subprojects/nvtop-9a8458b541a195a0c5cadafb66e240962c852b39"
        },
        {
          "type": "shell",
          "commands": [
            "cd subprojects/nvtop-* && find ../packagefiles -type f -name 'nvtop-*' -exec sh -c 'patch -p1 < {}' \\;"
          ]
        },
        "cargo-sources.json"
      ],
      "modules": [
        {
          "name": "eudev",
          "buildsystem": "autotools",
          "cleanup": [
            "/bin",
            "/sbin",
            "/etc",
            "/lib/udev"
          ],
          "sources": [
            {
              "type": "git",
              "url": "https://github.com/eudev-project/eudev.git",
              "commit": "39979ddf46e75d1b75bf381e1c73914c226c4302"
            }
          ]
        },
        {
          "name": "musl-libc",
          "buildsystem": "autotools",
          "sources": [
            {
              "type": "archive",
              "url": "https://musl.libc.org/releases/musl-1.2.4.tar.gz",
              "sha256": "7a35eae33d5372a7c0da1188de798726f68825513b7ae3ebe97aaaa52114f039"
            }
          ]
        },
        {
          "name": "dmidecode",
          "buildsystem": "simple",
          "build-commands": [
            "make CC=musl-gcc CFLAGS=-static LDFLAGS=-static install-bin prefix=/app",
            "install -v -p -m 755 /app/sbin/dmidecode /app/bin/dmidecode"
          ],
          "sources": [
            {
              "type": "archive",
              "url": "https://git.savannah.nongnu.org/cgit/dmidecode.git/snapshot/dmidecode-3-5.tar.gz",
              "sha256": "8b1465a1afa71f9ffb0206ba5ffc435c46c0281d089552578f600879728a1b23"
            }
          ]
        },
        {
          "name": "proxy",
          "buildsystem": "simple",
          "build-options": {
            "append-path": "/app/rust-toolchain/bin",
            "env": {
              "RUST_BACKTRACE": "full",
              "RUSTUP_HOME": "/app/rust-toolchain",
              "CARGO_HOME": "/run/build/proxy/cargo"
            }
          },
          "build-commands": [
            "cd src/proxy && env RUSTFLAGS='-C target-feature=+crt-static' cargo build --offline --release --target x86_64-unknown-linux-musl",
            "install -v -p -m 755 src/proxy/target/x86_64-unknown-linux-musl/release/proxy /app/bin/missioncenter-proxy"
          ],
          "post-install": [
            "rm -rf /app/bin/musl-gcc /app/bin/udevadm /app/etc /app/include /app/sbin /app/lib/*.o /app/lib/*.a /app/lib/libc.so /app/lib/udev"
          ],
          "sources": [
            {
              "type": "git",
              "url": "https://gitlab.com/mission-center-devs/mission-center.git",
              "tag": "v0.2.1",
              "commit": "721d69a7a25f0903512d41e351d10db9db179928"
            },
            "cargo-sources-proxy.json"
          ]
        }
      ]
    }
  ]
}
