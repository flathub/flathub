{
	"app-id": "com.discordapp.DiscordPTB",
	"base": "org.electronjs.Electron2.BaseApp",
	"base-version": "22.08",
	"runtime": "org.freedesktop.Platform",
	"runtime-version": "22.08",
	"sdk": "org.freedesktop.Sdk",
	"command": "discord-ptb",
	"separate-locales": false,
	"tags": [
		"proprietary"
	],
	"finish-args": [
		"--share=ipc",
		"--socket=x11",
		"--socket=pulseaudio",
		"--share=network",
		"--device=all",
		"--talk-name=org.freedesktop.Notifications",
		"--filesystem=xdg-videos:ro",
		"--filesystem=xdg-pictures:ro",
		"--filesystem=xdg-download",
		"--talk-name=org.kde.StatusNotifierWatcher",
		"--talk-name=com.canonical.AppMenu.Registrar",
		"--talk-name=com.canonical.indicator.application",
		"--talk-name=com.canonical.Unity.LauncherEntry"
	],
	"modules": [{
			"name": "twemoji-fonts",
			"buildsystem": "simple",
			"sources": [{
					"type": "file",
					"path": "emoji-font.conf"
				},
				{
					"type": "file",
					"path": "Twemoji.ttf"
				}
			],
			"build-commands": [
				"install -Dm644 Twemoji.ttf -t /app/share/fonts/",
				"install -Dm644 emoji-font.conf /app/etc/fonts/local.conf",
				"fc-cache -fv"
			]
		},
		{
			"name": "xprop",
			"sources": [{
				"type": "archive",
				"url": "https://xorg.freedesktop.org/archive/individual/app/xprop-1.2.5.tar.bz2",
				"sha256": "9b92ed0316bf2486121d8bac88bd1878f16b43bd335f18009b1f941f1eca93a1",
				"x-checker-data": {
					"type": "anitya",
					"project-id": 14958,
					"url-template": "https://xorg.freedesktop.org/archive/individual/app/xprop-$version.tar.bz2"
				}
			}]
		},
		{
			"name": "python-setuptools_scm",
			"buildsystem": "simple",
			"build-commands": [
				"pip3 install --no-deps --no-build-isolation --verbose --prefix=${FLATPAK_DEST} ."
			],
			"sources": [{
				"type": "archive",
				"url": "https://files.pythonhosted.org/packages/57/38/930b1241372a9f266a7df2b184fb9d4f497c2cef2e016b014f82f541fe7c/setuptools_scm-6.0.1.tar.gz",
				"sha256": "d1925a69cb07e9b29416a275b9fadb009a23c148ace905b2fb220649a6c18e92"
			}]
		},
		{
			"name": "python-xlib",
			"buildsystem": "simple",
			"build-commands": [
				"pip3 install --no-deps --no-build-isolation --verbose --prefix=${FLATPAK_DEST} ."
			],
			"sources": [{
				"type": "archive",
				"url": "https://files.pythonhosted.org/packages/40/9c/107e22f637d33434404c07d69112b9d26b76ee0dd4dd705131ab6cdcc818/python-xlib-0.31.tar.gz",
				"sha256": "74d83a081f532bc07f6d7afcd6416ec38403d68f68b9b9dc9e1f28fbf2d799e9",
				"x-checker-data": {
					"type": "pypi",
					"name": "python-xlib"
				}
			}]
		},
		{
			"name": "discord-ptb",
			"buildsystem": "simple",
			"build-commands": [
				"install -Dm755 discord-ptb.sh /app/bin/discord-ptb",
				"install -Dm755 set-gtk-dark-theme.py /app/bin",
				"install -Dm755 disable-breaking-updates.py /app/bin",
				"mv DiscordPTB /app/discord-ptb",
				"chmod +x /app/discord-ptb/DiscordPTB",
				"install -d /app/share/applications",
				"desktop-file-edit --set-icon=\"com.discordapp.DiscordPTB\" --set-key=\"Exec\" --set-value=\"discord-ptb\" /app/discord-ptb/discord-ptb.desktop",
				"cp /app/discord-ptb/discord-ptb.desktop /app/share/applications/${FLATPAK_ID}.desktop",
				"install -Dm644 /app/discord-ptb/discord.png /app/share/icons/hicolor/256x256/apps/${FLATPAK_ID}.png",
				"install -Dm644 com.discordapp.DiscordPTB.appdata.xml /app/share/appdata/com.discordapp.DiscordPTB.appdata.xml"
			],
			"sources": [{
					"type": "archive",
					"url": "https://dl-ptb.discordapp.net/apps/linux/0.0.33/discord-ptb-0.0.33.tar.gz",
					"sha256": "37eb96945b86c2171cdb215e3e1b73e6bd2c65451fbfb54e8063a9b82cb30721",
					"strip-components": 0,
					"x-checker-data": {
						"type": "rotating-url",
						"url": "https://discord.com/api/download/ptb?platform=linux&format=tar.gz",
						"pattern": "https://dl-ptb.discordapp.net/apps/linux/([0-9.]+)/discord-ptb-([0-9.]+).tar.gz"
					}
				},
				{
					"type": "file",
					"path": "discord-ptb.sh"
				},
				{
					"type": "file",
					"path": "com.discordapp.DiscordPTB.appdata.xml"
				},
				{
					"type": "file",
					"path": "set-gtk-dark-theme.py"
				},
				{
					"type": "file",
					"path": "disable-breaking-updates.py"
				}
			],
			"modules": [{
					"name": "pciutils",
					"disabled": true,
					"no-autogen": true,
					"make-args": [
						"SHARED=yes",
						"PREFIX=/app"
					],
					"make-install-args": [
						"SHARED=yes",
						"PREFIX=/app"
					],
					"sources": [{
						"type": "archive",
						"url": "https://github.com/pciutils/pciutils/archive/v3.8.0.tar.gz",
						"sha256": "71189a1297e39d2638dd5691a102d2aecd7db8083e6de376c115e8996eeda027",
						"x-checker-data": {
							"type": "anitya",
							"project-id": 2605,
							"url-template": "https://github.com/pciutils/pciutils/archive/v$version.tar.gz"
						}
					}]
				},
				{
					"name": "socat",
					"sources": [{
						"type": "archive",
						"url": "http://www.dest-unreach.org/socat/download/socat-1.7.4.3.tar.gz",
						"sha256": "d697245144731423ddbbceacabbd29447089ea223e9a439b28f9ff90d0dd216e",
						"x-checker-data": {
							"type": "anitya",
							"project-id": 4848,
							"url-template": "http://www.dest-unreach.org/socat/download/socat-$version.tar.gz"
						}
					}]
				}
			]
		}
	]
}
