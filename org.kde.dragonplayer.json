{
    "app-id": "org.kde.dragonplayer",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.8",
    "sdk": "org.kde.Sdk",
    "command": "dragon",
    "rename-icon": "dragonplayer",
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=wayland",
        "--socket=fallback-x11",
        "--socket=pulseaudio",
        "--device=dri",
        "--system-talk-name=org.freedesktop.UDisks2"
    ],
    "cleanup": [
        "/share/doc",
        "/share/man"
    ],
    "modules": [
        {
            "name": "phonon",
            "buildsystem": "cmake-ninja",
            "config-opts": [
              "-DPHONON_BUILD_QT5=FALSE",
              "-DPHONON_BUILD_QT6=TRUE"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/phonon/4.12.0/phonon-4.12.0.tar.xz",
                    "sha256": "3287ffe0fbcc2d4aa1363f9e15747302d0b080090fe76e5f211d809ecb43f39a",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 229047,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/phonon/$version/phonon-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "dragonplayer",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/24.08.3/src/dragon-24.08.3.tar.xz",
                    "sha256": "24af10ad04f11b368fbbb90a2ee7fccbac89f0166c54b4bb0b55940d6cb76b4c",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8763,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/dragon-$version.tar.xz"
                    }
                }
            ]
        }
    ]
}
