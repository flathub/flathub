    "modules" : [
        {
            "name" : "nem_desktop",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/xverizex/nem_desktop.git",
                    "tag" : "v0.1.8",
		    "commit" : "7e8fa0e225b43d9baac91d2f4235123533bf92a9"
                }
            ]
        }
    ]
}
