{
    "app-id": "org.gnome.Crosswords.PuzzleSets.technopol",
    "runtime": "org.gnome.Crosswords",
    "runtime-version": "stable",
    "branch": "1",
    "sdk": "org.gnome.Sdk//48",
    "build-extension": true,
    "separate-locales": false,
    "build-options": {
        "prefix": "/app/extensions"
    },
    "modules": [
        "python3-requirements.json",
        {
            "name": "puzzle-sets-technopol",
            "buildsystem": "meson",
            "config-opts" : [ "-Dflatpak=true" ],
            "sources": [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/miku/puzzle-sets-technopol.git",
                    "tag": "0.1.0"
                }
            ],
            "post-install": [
                "install -Dm644 --target-directory=${FLATPAK_DEST}/share/metainfo ../org.gnome.Crosswords.PuzzleSets.technopol.metainfo.xml",
                "install -Dm755 ../technopol.py ${FLATPAK_DEST}/bin/technopol-downloader"
            ]
        }
    ]
}
