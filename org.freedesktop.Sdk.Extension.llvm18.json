{
  "id": "org.freedesktop.Sdk.Extension.llvm18",
  "branch": "24.08",
  "runtime": "org.freedesktop.Sdk",
  "build-extension": true,
  "sdk": "org.freedesktop.Sdk",
  "runtime-version": "24.08",
  "separate-locales": false,
  "build-options": {
    "prefix": "/usr/lib/sdk/llvm18",
    "cflags": "-g0",
    "cxxflags": "-g0"
    },
  "modules": [
    {
      "name": "swig",
      "config-opts": [
        "--without-alllang",
        "--with-python3"
      ],
      "cleanup": ["*"],
      "sources": [
        {
          "type": "archive",
          "url": "https://download.sourceforge.net/swig/swig-4.1.1.tar.gz",
          "sha256": "2af08aced8fcd65cdb5cc62426768914bedc735b1c250325203716f78e39ac9b"
        }
      ]
    },
    {
      "name": "llvm-stage1",
      "buildsystem": "cmake-ninja",
      "subdir": "llvm",
      "builddir": true,
      "build-options": {
        "prefix": "/usr/lib/sdk/llvm18/llvm-stage1",
        "arch": {
          "aarch64": {
            "config-opts": [
              "-DLLVM_DEFAULT_TARGET_TRIPLE=aarch64-unknown-linux-gnu"
            ]
          },
          "x86_64": {
            "config-opts": [
              "-DLLVM_DEFAULT_TARGET_TRIPLE=x86_64-unknown-linux-gnu"
            ]
          }
        },
        "env": {
          "CFLAGS": "",
          "CXXFLAGS": "",
          "LDFLAGS": ""
        }
      },
      "config-opts": [
        "-DCMAKE_BUILD_TYPE=Release",
        "-DLLVM_ENABLE_PROJECTS='clang;lld'",
        "-DLLVM_TARGETS_TO_BUILD='Native'",
        "-DLLVM_LIBDIR_SUFFIX=''",
        "-DLLVM_INCLUDE_TESTS:BOOL=OFF",
        "-DLLVM_INCLUDE_EXAMPLES:BOOL=OFF",
        "-DLLVM_INCLUDE_DOCS:BOOL=OFF",
        "-DLLVM_INCLUDE_BENCHMARKS=OFF",
        "-DLLVM_INSTALL_UTILS:BOOL=ON",
        "-DLLVM_BINUTILS_INCDIR=/usr/include",
        "-DLLVM_BUILD_RUNTIME:BOOL=OFF",
        "-DLLVM_TOOL_CLANG_TOOLS_EXTRA_BUILD:BOOL=OFF",
        "-DCLANG_ENABLE_ARCMT:BOOL=OFF",
        "-DCLANG_ENABLE_STATIC_ANALYZER:BOOL=OFF",
        "-Wno-dev"
      ],
      "cleanup": [
        "*"
      ],
      "sources": [
        "llvm-stage1-sources.json"
      ]
    },
    {
      "name": "llvm",
      "buildsystem": "cmake-ninja",
      "subdir": "llvm",
      "builddir": true,
      "build-options": {
        "prepend-path": "/usr/lib/sdk/llvm18/llvm-stage1/bin",
        "arch": {
          "aarch64": {
            "cflags": "-Qunused-arguments",
            "cxxflags": "-Qunused-arguments",
            "config-opts": [
              "-DLLVM_DEFAULT_TARGET_TRIPLE=aarch64-unknown-linux-gnu",
              "-DLLVM_TARGETS_TO_BUILD='AArch64;AMDGPU;NVPTX;WebAssembly'"
            ]
          },
          "x86_64": {
            "config-opts": [
              "-DLLVM_DEFAULT_TARGET_TRIPLE=x86_64-unknown-linux-gnu",
              "-DLLVM_TARGETS_TO_BUILD='X86;AMDGPU;NVPTX;WebAssembly'"
            ]
          }
        },
        "env": {
          "CC": "clang",
          "CXX": "clang++"
        },
        "ldflags": "-Wl,--disable-new-dtags"
      },
      "config-opts": [
        "-DCMAKE_BUILD_TYPE=RelWithDebInfo",
        "-DCMAKE_C_FLAGS_RELWITHDEBINFO='-DNDEBUG'",
        "-DCMAKE_CXX_FLAGS_RELWITHDEBINFO='-DNDEBUG'",
        "-DLLVM_TABLEGEN=/usr/lib/sdk/llvm18/llvm-stage1/bin/llvm-tblgen",
        "-DCMAKE_AR=/usr/lib/sdk/llvm18/llvm-stage1/bin/llvm-ar",
        "-DCMAKE_RANLIB=/usr/lib/sdk/llvm18/llvm-stage1/bin/llvm-ranlib",
        "-DLLVM_ENABLE_PROJECTS='clang;clang-tools-extra;compiler-rt;lld;lldb'",
        "-DLLVM_BUILD_LLVM_DYLIB:BOOL=ON",
        "-DLLVM_ENABLE_LLD:BOOL=ON",
        "-DLLVM_LINK_LLVM_DYLIB:BOOL=ON",
        "-DLLVM_LIBDIR_SUFFIX=''",
        "-DLLVM_ENABLE_FFI:BOOL=ON",
        "-DLLVM_ENABLE_RTTI:BOOL=ON",
        "-DLLVM_INCLUDE_TESTS:BOOL=OFF",
        "-DLLVM_INCLUDE_EXAMPLES:BOOL=OFF",
        "-DLLVM_INCLUDE_UTILS:BOOL=ON",
        "-DLLVM_INSTALL_UTILS:BOOL=ON",
        "-DLLVM_INCLUDE_DOCS:BOOL=OFF",
        "-DLLVM_TOOL_LLVM_EXEGESIS_BUILD:BOOL=OFF",
        "-DLLVM_BINUTILS_INCDIR=/usr/include",
        "-DCLANG_LINK_CLANG_DYLIB=ON",
        "-DLLDB_USE_SYSTEM_SIX:BOOL=ON",
        "-DLLDB_ENABLE_PYTHON:BOOL=ON",
        "-DLLDB_ENABLE_CURSES:BOOL=ON",
        "-DCURSES_NEED_NCURSES=ON",
        "-Wno-dev"
      ],
      "cleanup": [
        "/include/clang-tidy",
        "/include/lld",
        "/lib/cmake/lld"
      ],
      "sources": [
        "llvm-sources.json"
      ]
    },
    {
      "name": "scripts",
      "buildsystem": "simple",
      "build-commands": [
        "cp enable.sh /usr/lib/sdk/llvm18/"
      ],
      "sources": [
        {
          "type": "script",
          "commands": [
             "export PATH=$PATH:/usr/lib/sdk/llvm18/bin"
          ],
          "dest-filename": "enable.sh"
        }
      ]
    },
    {
      "name": "appdata",
      "buildsystem": "simple",
      "build-commands": [
        "install -Dm0644 -t ${FLATPAK_DEST}/share/metainfo/ ${FLATPAK_ID}.metainfo.xml"
      ],
      "sources": [
        {
          "type": "file",
          "path": "org.freedesktop.Sdk.Extension.llvm18.metainfo.xml"
        }
      ]
    }
  ]
}
