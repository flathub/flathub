{
  "app-id": "net.sourceforge.VMPK",
  "runtime": "org.kde.Platform",
  "runtime-version": "5.13",
  "sdk": "org.kde.Sdk",
  "command": "vmpk",
  "rename-desktop-file": "vmpk.desktop",
  "rename-icon": "vmpk",
  "finish-args": [
    /* X11 + XShm access */
    "--share=ipc",
    "--socket=x11",
    /* Wayland */
    "--socket=wayland",
    /* Note playback */
    "--socket=pulseaudio",
    /* MIDI */
    "--device=all",
    /* Allow loading, saving files from anywhere (portals donâ€™t work yet) */
    "--filesystem=home",
    /* Allow other instances to see lockfiles */
    "--env=TMPDIR=/var/tmp"
  ],
  "cleanup": [
    "/share/man",
    "/share/doc",
    "/share/gtk-doc",
    "*.la"
  ],
  "modules": [
    {
      "name": "drumstick",
      "buildsystem": "cmake-ninja",
      "cleanup": [
        "/bin",
        "/share/icons/hicolor/*/apps",
        "*.desktop"
      ],
      "config-opts": [
        "-DLIB_SUFFIX="
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://downloads.sourceforge.net/project/drumstick/1.1.3/drumstick-1.1.3.tar.bz2",
          "sha256": "75aca4281da25fe0186b44c07772c5f0b4d1f2bba875c4667e7e6e9fcedb3cd9"
        }
      ]
    },
    {
      "name": "vmpk",
      "buildsystem": "cmake-ninja",
      "post-install": [
        "install -Dm644 -t /app/share/metainfo/ net.sourceforge.VMPK.appdata.xml"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "http://downloads.sourceforge.net/project/vmpk/vmpk/0.7.1/vmpk-0.7.1.tar.bz2",
          "sha256": "06d78872b8c23976cd1ed4e66ac6a3bfce93af28ce8db96c2c015cf185ce651b"
        },
        {
          "type": "patch",
          "path": "vmpk-hidpi.patch",
          "strip-components": 2
        },
        {
          "type": "file",
          "path": "net.sourceforge.VMPK.appdata.xml"
        }
      ]
    }
  ]
}
