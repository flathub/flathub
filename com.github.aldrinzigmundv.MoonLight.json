{
    "app-id": "com.github.aldrinzigmundv.MoonLight",
    "runtime": "org.gnome.Platform",
    "runtime-version": "41",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": ["org.freedesktop.Sdk.Extension.rust-stable"],
    "command": "moonlight",
    "finish-args" : [
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--env=RUST_LOG=moonlight=debug",
        "--env=G_MESSAGES_DEBUG=none",
        "--env=RUST_BACKTRACE=1"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/rust-stable/bin",
        "build-args" : [
            "--share=network"
        ],
        "test-args": [
            "--socket=x11",
            "--share=network"
        ]
    },
    "modules": [
        {
            "name": "moonlight",
            "buildsystem": "meson",
            "run-tests": true,
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/aldrinzigmundv/moonlight.git",
                    "tag" : "0.1.0",
                    "commit" : "a9e78b3b11edd7380b7db119791648ef5622874b"
                }
            ]
        }
    ]
}
