{
  "id": "com.webasy.Builder",
  "runtime": "org.gnome.Platform",
  "runtime-version": "47",
  "sdk": "org.gnome.Sdk",
  "command": "webasy",
  "finish-args": [
    "--share=network",
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--device=dri",
    "--filesystem=home"
  ],
  "modules": [
    {
      "name": "webasy",
      "buildsystem": "simple",
      "build-commands": [
        "install -Dm755 flatpak/webasy.sh /app/bin/webasy",
        "install -d /app/share/webasy",
        "cp -r main open.py /app/share/webasy/",
        "install -Dm644 flatpak/com.webasy.Builder.desktop /app/share/applications/com.webasy.Builder.desktop",
        "install -Dm644 flatpak/com.webasy.Builder.metainfo.xml /app/share/metainfo/com.webasy.Builder.metainfo.xml",
        "install -Dm644 main/icons/webasy500.png /app/share/icons/hicolor/512x512/apps/com.webasy.Builder.png"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/neithanrcs/webasy-desktop.git",
          "tag": "v1.0.0"
        }
      ]
    }
  ]
}
