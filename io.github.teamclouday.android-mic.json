{
  "id": "io.github.teamclouday.android-mic",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "24.08",
  "base": "com.system76.Cosmic.BaseApp",
  "base-version": "stable",
  "sdk": "org.freedesktop.Sdk",
  "sdk-extensions": ["org.freedesktop.Sdk.Extension.rust-stable"],
  "command": "android-mic",
  "finish-args": [
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--device=dri",
    "--share=network",
    "--talk-name=com.system76.CosmicSettingsDaemon",
    "--filesystem=xdg-config/cosmic:ro",
    "--socket=pulseaudio",
    "--filesystem=xdg-run/pipewire-0"
  ],
  "build-options": {
    "append-path": "/usr/lib/sdk/rust-stable/bin",
    "env": {
      "CARGO_HOME": "/run/build/android-mic/cargo"
    }
  },
  "modules": [
    {
      "name": "protobuf",
      "buildsystem": "autotools",
      "config-opts": ["DIST_LANG=cpp"],
      "cleanup": ["/bin/protoc*", "/lib/libprotoc*", "/lib/libprotobuf-lite*"],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/protocolbuffers/protobuf/releases/download/v3.17.3/protobuf-all-3.17.3.tar.gz",
          "sha256": "77ad26d3f65222fd96ccc18b055632b0bfedf295cb748b712a98ba1ac0b704b2"
        }
      ]
    },
    "shared-modules/libusb/libusb.json",
    {
      "name": "adb",
      "buildsystem": "cmake",
      "sources": [
        {
          "type": "archive",
          "strip-components": 1,
          "dest-filename": "android-tools.tar.xz",
          "url": "https://github.com/nmeum/android-tools/releases/download/35.0.2/android-tools-35.0.2.tar.xz",
          "sha256": "d2c3222280315f36d8bfa5c02d7632b47e365bfe2e77e99a3564fb6576f04097"
        }
      ]
    },
    {
      "name": "android-mic",
      "buildsystem": "simple",
      "build-commands": [
        "ANDROID_MIC_FORMAT=flatpak just -f ./RustApp/justfile build-release --verbose --offline --no-default-features",
        "just -f ./RustApp/justfile prefix=/app install"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/wiiznokes/AndroidMic.git",
          "commit": "f9803dd8ecadb23982b5896b3fca6404b1890605"
        },
        "cargo-sources.json"
      ]
    }
  ]
}
