{
  "app-id": "com.fktyazilim.Zippy",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "23.08",
  "sdk": "org.freedesktop.Sdk",
  "command": "python3",
  "finish-args": [
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--device=dri"
  ],
  "modules": [
    {
      "name": "python3-pyqt6",
      "buildsystem": "simple",
      "build-commands": [
        "python3 -m pip install --no-deps --prefix=/app PyQt6"
      ],
      "sources": [
        {
          "type": "file",
          "url": "https://files.pythonhosted.org/packages/source/P/PyQt6/PyQt6-6.9.1.tar.gz"
        }
      ]
    },
    {
      "name": "zippy",
      "buildsystem": "simple", 
      "build-commands": [
        "install -D main.py /app/bin/main.py",
        "install -Dm644 images/logo.png /app/share/icons/hicolor/256x256/apps/com.fktyazilim.Zippy.png",
        "install -Dm644 com.fktyazilim.Zippy.desktop /app/share/applications/com.fktyazilim.Zippy.desktop",
        "install -Dm644 com.fktyazilim.Zippy.metainfo.xml /app/share/metainfo/com.fktyazilim.Zippy.metainfo.xml"
      ],
      "sources": [
        {
          "type": "file",
          "path": "main.py"
        },
        {
          "type": "file",
          "path": "images/logo.png"
        },
        {
          "type": "file",
          "path": "com.fktyazilim.Zippy.desktop"
        },
        {
          "type": "file",
          "path": "com.fktyazilim.Zippy.metainfo.xml"
        }
      ]
    }
  ]
}
