{
  "app-id": "com.lettier.movie-monad",
  "runtime": "org.gnome.Platform",
  "runtime-version": "3.26",
  "sdk": "org.gnome.Sdk",
  "command": "movie-monad",
  "rename-desktop-file": "movie-monad.desktop",
  "rename-icon": "movie-monad-icon",
  "rename-appdata-file": "movie-monad.appdata.xml",
  "finish-args": [
    "--share=ipc",
    "--socket=x11",
    "--socket=wayland",
    "--device=dri",
    "--share=network",
    "--socket=pulseaudio",
    "--talk-name=org.gtk.vfs",
    "--talk-name=org.gtk.vfs.*",
    "--talk-name=org.gnome.SettingsDaemon",
    "--talk-name=org.gnome.SettingsDaemon.MediaKeys",
    "--env=DCONF_USER_CONFIG_DIR=.config/dconf",
    "--filesystem=host",
    "--talk-name=ca.desrt.dconf",
    "--env=SSL_CERT_FILE=/etc/ssl/certs/ca-certificates.crt"
  ],
  "modules": [
    {
      "name": "movie-monad",
      "buildsystem": "simple",
      "build-commands": [
        "mv bin /app",
        "mv lib /app",
        "mv share /app"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/lettier/movie-monad/releases/download/0.0.6.0/movie-monad-linux-0.0.6.0.tar.gz",
          "sha256": "315316abb68364e91e28e1cc17a111c12f23d762cf79465aa110f7ca983ce082"
        }
      ]
    },
    {
      "name": "ffmpeg",
      "cleanup": [ "/include", "/lib/pkgconfig", "/share/ffmpeg/examples" ],
      "config-opts": [
        "--enable-shared",
        "--disable-static",
        "--enable-gnutls",
        "--disable-doc",
        "--disable-programs",
        "--disable-encoders",
        "--disable-muxers",
        "--disable-devices"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/FFmpeg/FFmpeg.git",
          "commit": "dd8351b1184b8054925c28ecc5fcb6dbbc177fad"
        }
      ]
    }
  ]
}
