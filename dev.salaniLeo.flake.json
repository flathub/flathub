{
    "app-id" : "dev.salaniLeo.flake",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "43",
    "sdk" : "org.gnome.Sdk",
    "command" : "flake",
    "finish-args" : [
        "--socket=fallback-x11",
        "--socket=wayland",
        "--filesystem=host"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "flake",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/SalaniLeo/Flake.git"
                }
            ]
        }
    ]
}
