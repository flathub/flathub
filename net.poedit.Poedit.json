{
    "app-id": "net.poedit.Poedit",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.26",
    "sdk": "org.gnome.Sdk",
    "command": "poedit",
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--filesystem=home",
        /* Network */ 
        "--share=network",
        /* Dconf */
        "--filesystem=xdg-run/dconf", "--filesystem=~/.config/dconf:ro",
        "--talk-name=ca.desrt.dconf", "--env=DCONF_USER_CONFIG_DIR=.config/dconf"
    ],
    "rename-appdata-file": "poedit.appdata.xml",
    "rename-desktop-file": "poedit.desktop",
    "rename-icon": "poedit",
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/aclocal",
        "/share/man",
        "*.la", "*.a"
    ],
    "modules": [{
            "name": "wxWidgets",
            "rm-configure": true,
            "config-opts": [
                "--with-gtk=3", "--disable-sdltest", "--disable-webkit", "--disable-webview",
                "--disable-webviewwebkit"
            ],
            "sources": [{
                    "type": "archive",
                    "url": "https://github.com/wxWidgets/wxWidgets/releases/download/v3.0.3/wxWidgets-3.0.3.tar.bz2",
                    "sha256": "08c8033f48ec1b23520f036cde37b5ae925a6a65f137ded665633ca159b9307b"
                },
                {
                    "type": "script",
                    "path": "autogen.sh",
                    "commands": [
                        "cp -p /usr/share/automake-*/config.{sub,guess} .",
                        "autoconf -f -B build/autoconf_prepend-include"
                    ]
                }
            ]
        },
        {
            "name": "boost",
            "buildsystem": "simple",
            "build-commands": [
                "./bootstrap.sh",
                "./b2 install --prefix=/app --with-filesystem --with-date_time --with-regex --with-thread --with-system --with-random --with-iostreams define=\"BOOST_SYSTEM_NO_DEPRECATED\" -sNO_BZIP2=1 cxxflags=-fPIC cflags=-fPIC"
            ],
            "sources": [{
                "type": "archive",
                "url": "https://dl.bintray.com/boostorg/release/1.66.0/source/boost_1_66_0.tar.gz",
                "sha256": "bd0df411efd9a585e5a2212275f8762079fed8842264954675a4fddc46cfcf60"
            }]
        },
        {
            "name": "lucene++",
            "buildsystem": "cmake",
            "build-options": {
                "config-opts": [
                    "-DCMAKE_CXX_FLAGS='-DBOOST_VARIANT_USE_RELAXED_GET_BY_DEFAULT'",
                    "-DENABLE_DEMO=OFF",
                    "-DENABLE_TEST=OFF"
                ]
            },
            "sources": [{
                "type": "archive",
                "url": "https://github.com/luceneplusplus/LucenePlusPlus/archive/rel_3.0.7.tar.gz",
                "sha256": "6c19f203311e4b44a0ccf7b1127db77436eb47159ea1c54f7531a0b1ca585e0c"
            }]
        },
        {
            "name": "gtkspell",
            "cleanup": ["*.la", "/share/gtk-doc"],
            "sources": [{
                "type": "archive",
                "url": "https://sourceforge.net/projects/gtkspell/files/3.0.9/gtkspell3-3.0.9.tar.xz",
                "sha256": "a4f4a4a2789f7499563e26d96b22d8085222ebe278da47d026b2de782b8b4d26"
            }]
        },
        {
	        "name": "gettext",
	        "sources": [{
	            "type": "archive", 
	            "url": "https://ftp.gnu.org/pub/gnu/gettext/gettext-0.19.8.tar.gz",
	            "sha256": "3da4f6bd79685648ecf46dab51d66fcdddc156f41ed07e580a696a38ac61d48f"
	        }]
	    },
        {
            "name": "poedit",
            "config-opts": [
                "--with-boost-libdir=/app/lib"
            ],
            "sources": [{
                "type": "archive",
                "url": "https://github.com/vslavik/poedit/releases/download/v2.0.6-oss/poedit-2.0.6.tar.gz",
                "sha256": "a9e9feee6d65440008ae3fe24504681fe390cb41233122580f503a677989b1bc"
            }]
        }
    ]
}
