{
  "id": "org.kde.spectacle",
  "runtime": "org.kde.Platform",
  "runtime-version": "5.15-22.08",
  "sdk": "org.kde.Sdk",
  "command": "spectacle",
  "rename-icon": "spectacle",
  "finish-args": [
    "--socket=x11",
    "--share=network",
    "--share=ipc",
    "--device=dri",
    "--filesystem=xdg-pictures",
    "--talk-name=org.kde.kglobalaccel",
    "--talk-name=org.kde.plasmashell",
    "--talk-name=org.kde.kwin",
    "--talk-name=org.freedesktop.FileManager1"
  ],
  "cleanup": [
    "/include",
    "/lib/cmake",
    "/share/man",
    "/share/doc",
    "/share/qlogging-categories5"
  ],
  "modules": [
    {
      "name": "kColorPicker",
      "buildsystem": "cmake-ninja",
      "config-opts": [
        "-DBUILD_EXAMPLE=OFF",
        "-DBUILD_TESTS=OFF",
        "-DBUILD_SHARED_LIBS=ON"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/ksnip/kColorPicker.git",
          "tag": "v0.2.0",
          "x-checker-data": {
            "type": "git",
            "tag-pattern": "^v([\\d.]+)$"
          }
        }
      ]
    },
    {
      "name": "KPipeWire",
      "buildsystem": "cmake-ninja",
      "config-opts": [
        "-DBUILD_TESTING=OFF"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://download.kde.org/stable/plasma/5.27.4/kpipewire-5.27.4.tar.xz",
          "sha256": "a653408693ea16fee1b12a447982af48823aae86e5813b30b5a889cd2b883165",
          "x-checker-data": {
            "type": "anitya",
            "project-id": 8761,
            "stable-only": true,
            "url-template": "https://download.kde.org/stable/plasma/$version/kpipewire-$version.tar.xz"
          }
        }
      ]
    },
    {
      "name": "spectacle",
      "buildsystem": "cmake-ninja",
      "sources": [
        {
          "type": "archive",
          "url": "https://download.kde.org/stable/release-service/23.04.0/src/spectacle-23.04.0.tar.xz",
          "sha256": "db8d4a668b532847b0031038037b42c83d2d600b5084eb40fe29698131d14b17",
          "x-checker-data": {
            "type": "anitya",
            "project-id": 8763,
            "stable-only": true,
            "url-template": "https://download.kde.org/stable/release-service/$version/src/spectacle-$version.tar.xz"
          }
        }
      ]
    }
  ]
}
