{
	"app-id": "com.github.hamadmarri.gamma",
	"runtime": "org.gnome.Platform",
	"runtime-version": "3.34",
	"sdk": "org.gnome.Sdk",
	"command": "gamma",
	"finish-args": [
		"--share=network",
		"--socket=x11",
		"--socket=wayland",
		"--share=ipc",
		"--socket=session-bus",
		"--filesystem=host",
		"--own-name=com.github.hamadmarri.gamma"
	],
	"modules": [
		{
			"name": "gtksourceview",
			"config-opts": [ "--disable-Werror" ],
			"sources": [
			{
				"type": "archive",
				"url": "https://download.gnome.org/sources/gtksourceview/4.0/gtksourceview-4.0.0.tar.xz",
				"sha256": "6e5c7a28a7fa456a89f289f0659c57100cc09fe692db6abfcc23f7ade5d5b32a"
			}
			]
		},
		{
			"name": "gamma",
			"buildsystem": "simple",
			"build-commands": [
				"./flatpak/flatpak_setup.sh",
				"install -Dm644 ${FLATPAK_ID}.metainfo.xml -t /app/share/metainfo/"
			],
			"sources": [
				{
					"type": "git",
					"url": "https://gitlab.com/hamadmarri/gamma-text-editor",
					"branch": "flatpak",
					"commit": "46f6c169b62441ac60f6292239b466b23e915e2e"
				}
			]
		}
	]
}
