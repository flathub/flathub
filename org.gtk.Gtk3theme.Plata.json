{
  "id": "org.gtk.Gtk3theme.Plata",
  "branch": "3.24",
  "runtime": "org.gnome.Sdk",
  "build-extension": true,
  "sdk": "org.gnome.Sdk",
  "runtime-version": "3.30",
  "appstream-compose": false,
  "separate-locales": false,
  "modules": [
    {
      "name": "Plata",
      "config-opts": [
        "--prefix=/usr/share/runtime",
        "--enable-mixed",
        "--disable-compact"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://gitlab.com/tista500/plata-theme-flatpak/-/archive/0.4.2/plata-theme-flatpak-0.4.2.tar.gz",
          "sha256": "b0a13192156df24a867eee4781e4350f7446cd57c2a606761913b71166067795"
        }
      ]
    },
    {
      "name": "appdata",
      "buildsystem": "simple",
      "build-commands": [
        "mkdir -p ${FLATPAK_DEST}/share/appdata",
        "cp org.gtk.Gtk3theme.Plata.appdata.xml ${FLATPAK_DEST}/share/appdata",
        "appstream-compose --basename=org.gtk.Gtk3theme.Plata --prefix=${FLATPAK_DEST} --origin=flatpak org.gtk.Gtk3theme.Plata"
      ],
      "sources": [
        {
          "type": "file",
          "path": "org.gtk.Gtk3theme.Plata.appdata.xml"
        }
      ]
    }
  ]
}
