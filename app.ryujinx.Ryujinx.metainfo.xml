    <releases>
        <release version="1.3.1" date="2025-04-24">
            <url type="details">https://git.ryujinx.app/ryubing/ryujinx/-/releases/1.3.1</url>
            <description>
                <p>Major changes</p>
                <ul>
                    <li>ARM Windows support &amp; FFmpeg update (by @KeatonTheBot)</li>
                    <li>Virtual dual Joy-Con support (by @madwind)</li>
                    <li>Turbo Mode (originally by @nico-abram)</li>
                </ul>
            </description>
        </release>
        <release version="1.2.86" date="2025-03-13">
            <url type="details">https://git.ryujinx.app/ryubing/ryujinx/-/releases/1.2.86</url>
            <description>
                <ul>
                    <li>Cleaned up user interface</li>
                    <li>Added per-game configurations</li>
                    <li>Improved cutscene quality in some games</li>
                </ul> 
            </description>
        </release>
        <release version="1.2.82" date="2025-02-17">
            <url type="details">https://git.ryujinx.app/ryubing/ryujinx/-/releases/1.2.82</url>
            <description>
                <ul>
                    <li>DualSense/DualShock 4 LED customization</li>
                    <li>Faster start times for modded games</li>
                    <li>Dynamic Discord Rich Presence support for some games</li>
                </ul> 
            </description>
        </release>
        <release version="1.2.81" date="2025-01-23">
            <url type="details">https://web.archive.org/web/20250302064257/https://github.com/Ryubing/Ryujinx/releases/tag/1.2.81</url>
            <description>
                <ul>
                    <li>Added ability to dump DLC RomFS</li>
                    <li>Option to auto hide UI when a game launches</li>
                </ul> 
            </description>
        </release>
        <release version="1.2.80" date="2025-01-20">
            <url type="details">https://web.archive.org/web/20250302064257/https://github.com/Ryubing/Ryujinx/releases/tag/1.2.80</url>
            <description>
                <ul>
                    <li>Migrated to .NET 9</li>
                    <li>Added compatibility list viewer</li>
                    <li>Ryujinx can now read/write amiibo .bin files</li>
                </ul> 
            </description>
        </release>
    </releases>
    <content_rating type="oars-1.1"/>
    <requires>
        <kernel version="4.1" compare="ge">Linux</kernel>
        <memory>8192</memory>
    </requires>
    <supports>
        <control>keyboard</control>
        <control>pointing</control>
        <control>tablet</control>
    </supports>
    <recommends>
        <control>gamepad</control>
    </recommends>
    <!-- For Gnome Software (https://gitlab.gnome.org/GNOME/gnome-software/-/blob/main/doc/kudos.md) -->
