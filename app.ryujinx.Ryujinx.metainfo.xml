<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
    <id>app.ryujinx.Ryujinx</id>
    <metadata_license>CC0-1.0</metadata_license>
    <project_license>MIT</project_license>
    <name>Ryujinx (Ryubing)</name>
    <developer_name>Ryubing</developer_name>
    <summary>Nintendo Switch emulator</summary>
    <categories>
        <category>Emulator</category>
        <category>Game</category>
    </categories>
    <description>
        <p><em>This is an unofficial third-party package. Please don't report Flatpak-specific issues to the developers.</em></p>
        <p>Ryujinx is an open-source Nintendo Switch emulator written in C#. This is a fork of the original project created by gdkchan.</p>
        <p>This emulator aims at providing excellent accuracy and performance, a user-friendly interface, and consistent builds.</p>
    </description>
    <branding>
      <color type="primary" scheme_preference="light">#ff8351</color>
      <color type="primary" scheme_preference="dark">#ce3d01</color>
    </branding>
    <launchable type="desktop-id">app.ryujinx.Ryujinx.desktop</launchable>
    <provides>
        <binary>Ryujinx</binary>
        <mediatype>application/x-nx-nca</mediatype>
        <mediatype>application/x-nx-nro</mediatype>
        <mediatype>application/x-nx-nso</mediatype>
        <mediatype>application/x-nx-nsp</mediatype>
        <mediatype>application/x-nx-xci</mediatype>
    </provides>
    <url type="homepage">https://ryujinx.app</url>
    <url type="bugtracker">https://git.ryujinx.app/ryubing/ryujinx/-/issues</url>
    <url type="faq">https://git.ryujinx.app/ryubing/ryujinx/-/wikis/FAQ-%26-Troubleshooting#frequently-asked-questions</url>
    <url type="help">https://git.ryujinx.app/ryubing/ryujinx/-/wikis/Setup-%26-Configuration-Guide</url>
