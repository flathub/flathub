{
  "id": "org.kde.kget",
  "branch": "master",
  "runtime": "org.kde.Platform",
  "runtime-version": "5.15-21.08",
  "sdk": "org.kde.Sdk",
  "command": "kget",
  "tags": ["nightly"],
  "desktop-file-name-suffix": " (Nightly)",
  "rename-icon": "kget",
  "finish-args": [
    "--share=ipc",
    "--socket=x11",
    "--socket=wayland",
    "--filesystem=host",
    "--share=network"
  ],

  "modules": [
    "boost.json",
    "gpgme.json",
    {
      "config-opts": ["-DENABLE_TESTING=OFF"],
      "name": "kdelibs4support",
      "buildsystem": "cmake-ninja",
      "sources": [
        {
          "type": "git",
          "url": "https://invent.kde.org/frameworks/kdelibs4support.git",
          "tag": "v5.89.0"
        }
      ]
    },
    {
      "name": "qca",
      "buildsystem": "cmake-ninja",
      "sources": [
        {
          "type": "git",
          "url": "https://invent.kde.org/kde/qca.git",
          "tag": "v2.3.3"
        }
      ]
    },
    {
      "name": "libktorrent",
      "buildsystem": "cmake-ninja",
      "sources": [
        {
          "type": "git",
          "url": "https://invent.kde.org/kde/libktorrent.git",
          "tag": "v21.08.1"
        }
      ]
    },
    {
      "name": "kget",
      "buildsystem": "cmake-ninja",
      "sources": [
        { "type": "git", "url": "https://invent.kde.org/kde/kget.git" }
      ]
    }
  ]
}
