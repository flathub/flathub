# shutdown-timer
#!/bin/bash
# Get minutes from user using zenity
minutes=$(zenity --entry \
  --title="Shutdown Timer" \
  --text="Shutdown in (minutes):" \
  --entry-text="60")
# Check if user clicked cancel
if [ $? -ne 0 ]; then
    exit 0
fi
# Validate input is a number
if ! [[ "$minutes" =~ ^[0-9]+$ ]]; then
    zenity --error \
        --title="Error" \
        --text="Please provide proper time in minutes."
    exit 1
fi
# Schedule shutdown
sudo shutdown -h +$minutes
# Show notification
notify-send "Scheduled shutdown" "Your machine will shutdown in $minutes minutes"
