/* See: https://docs.flatpak.org/en/latest/manifests.html */
/* See: https://docs.flatpak.org/en/latest/flatpak-builder-command-reference.html#flatpak-manifest */
{
    "id": "org.KangLin.Rabbit.RemoteControl",
    /*See: https://invent.kde.org/packaging/flatpak-kde-runtime*/
    "runtime": "org.kde.Platform",
    "runtime-version": "6.8",
    "sdk": "org.kde.Sdk",
    "command": "RabbitRemoteControlApp",
    "add-build-extensions": {
        "org.freedesktop.Platform.ffmpeg-full": {
            "directory": "lib/ffmpeg",
            "version": "23.08",
            "add-ld-path": "."
        },
        "org.freedesktop.Platform.openh264": {
            "directory": "lib/openh264",
            "version": "2.4.1",
            "add-ld-path": "."
        }
    },
    "build-options": {
        "env": {
            /*"V": "1"*/
        }
    },
    "cleanup": [
        "*.la",
        "*.a",
        "/include",
        "/lib/cmake",
        "/lib/pkgconfig"
    ],
    "finish-args": [
        /* Needs to talk to the network */
        "--share=network",
        /* Play sounds redirected from guests */
        "--socket=pulseaudio",
        /* X11 + XShm access */
        "--socket=x11",
        /* force use X11 */
        /*"--env=QT_QPA_PLATFORM=xcb",*/
        "--socket=wayland",
        "--device=all",
        /* File transfer (although limited to ~/Documents directory) */
        "--filesystem=~/Documents",
        /* File transfer (although limited to user directory) */
        "--filesystem=home",
        /* Desktop notifications */
        "--talk-name=org.freedesktop.Notifications",
        /* Needed to save login credentials */
        "--talk-name=org.freedesktop.secrets",
        /* Appindicator */
        "--talk-name=org.kde.StatusNotifierWatcher",
        /* Local network host discovery */
        "--system-talk-name=org.freedesktop.Avahi"
    ],
    "cleanup-commands": [
        "rm -fr /var/tmp/*"
    ],
    "cleanup-platform-commands": [
    ],
    "modules": [
        /*See: https://github.com/flathub/shared-modules*/
        "shared-modules/libusb/libusb.json",
        {
            "name": "xprop",
            "disabled": false,
            "sources": [
                {
                    "type": "archive",
                    "url": "https://xorg.freedesktop.org/releases/individual/app/xprop-1.2.5.tar.bz2",
                    "sha256": "9b92ed0316bf2486121d8bac88bd1878f16b43bd335f18009b1f941f1eca93a1"
                }
            ],
            "cleanup": [
                "/bin/xprop",
                "/share/doc",
                "/share/man"
            ]
        },
        {
            "name": "pcsc",
            "disabled": false,
            "config-opts": [
                "--disable-libsystemd",
                "--enable-pic",
                "--disable-libusb",
                "--enable-shared",
                "--with-systemdsystemunitdir=/app/lib/systemd/"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/LudovicRousseau/PCSC.git",
                    "tag": "1.9.9",
                    "commit": "15c16c7796607b1c8a2ce253d3f536918ab26b4a"
                }
            ],
            "cleanup": [
                "/bin/pcsc-spy",
                "/sbin",
                "/share/doc",
                "/share/man",
                "/lib/systemd"
            ]
        },
        {
            "name": "krb5",
            "disabled": false,
            "sources": [
                {
                    "type": "archive",
                    "url": "https://kerberos.org/dist/krb5/1.21/krb5-1.21.3.tar.gz",
                    "sha256": "b7a4cd5ead67fb08b980b21abd150ff7217e85ea320c9ed0c6dadd304840ad35"
                },
                {
                    "type": "script",
                    "commands": [
                        "autoreconf --install --symlink"
                    ]
                }
            ],
            "buildsystem": "autotools",
            "subdir": "src",
            "cleanup": [
                "/sbin",
                "/bin",
                "/share/man",
                "/share/et",
                "/share"
            ]
        },
        {
            "name": "libssh",
            "disabled": false,
            "sources": [
                {
                    "type": "archive",
                    "url": "https://www.libssh.org/files/0.11/libssh-0.11.1.tar.xz",
                    "sha256": "14b7dcc72e91e08151c58b981a7b570ab2663f630e7d2837645d5a9c612c1b79"
                }
            ],
            "buildsystem": "cmake",
            "builddir": true,
            "config-opts": [
                "-DWITH_EXAMPLES=OFF"
            ],
            "cleanup": [
                "/bin"
            ]
        },
        {
            "name": "libfuse",
            "disabled": false,
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/libfuse/libfuse/archive/refs/tags/fuse-3.16.2.tar.gz",
                    "sha256": "1bc306be1a1f4f6c8965fbdd79c9ccca021fdc4b277d501483a711cbd7dbcd6c"
                }
            ],
            "buildsystem": "meson",
            "builddir": true,
            "config-opts": [
                "-Dexamples=false",
                "-Dutils=false"
            ],
            "cleanup": [
            ]
        },
        {
            "name": "FreeRDP",
            "disabled": false,
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/FreeRDP/FreeRDP/archive/refs/tags/3.14.0.tar.gz",
                    "sha256": "a7a979382703c2bc18aa9b22cfa12d7a441b6927ab45ac62ef8353786bc92241"
                }
            ],
            "buildsystem": "cmake",
            "builddir": true,
            "config-opts": [
                "-DCMAKE_VERBOSE_MAKEFILE=OFF",
                "-DCMAKE_BUILD_TYPE:STRING=Release",
                "-DCHANNEL_TSMF:BOOL=OFF",
                "-DBUILD_TESTING:BOOL=OFF",
                "-DWITH_MANPAGES:BOOL=OFF",
                "-DWITH_WAYLAND:BOOL=OFF",
                "-DWITH_GSSAPI:BOOL=OFF",
                "-DWITH_SAMPLE:BOOL=OFF",
                "-DWITH_OSS:BOOL=OFF",
                "-DCHANNEL_URBDRC:BOOL=OFF",
                "-DWITH_KRB5=ON"
            ],
            "cleanup": [
                "/bin",
                "/share"
            ]
        },
        {
            "name": "libvncserver",
            "disabled": false,
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/LibVNC/libvncserver/archive/refs/tags/LibVNCServer-0.9.15.tar.gz",
                    "sha256": "62352c7795e231dfce044beb96156065a05a05c974e5de9e023d688d8ff675d7"
                }
            ],
            "buildsystem": "cmake",
            "builddir": true,
            "config-opts": [
                "-DWITH_OPENSSL=ON",
                "-DWITH_GCRYPT=OFF",
                "-DWITH_EXAMPLES=OFF",
                "-DWITH_TESTS=OFF"
            ],
            "cleanup": [
                "/bin/*",
                "/lib/libvncserver.so*"
            ]
        },
        {
            "name": "RabbitCommon",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/KangLin/RabbitCommon.git",
                    "branch": "master"
                }
            ],
            "buildsystem": "simple",
            "build-commands": [
                "cp -R /run/build/RabbitCommon /var/tmp/"
            ]
        },
        {
            "name": "RabbitRemoteControl",
            "disabled": false,
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/KangLin/RabbitRemoteControl.git",
                    "branch": "master"
                }
            ],
            "buildsystem": "cmake",
            "builddir": false,
            "config-opts": [
                "-DRabbitCommon_ROOT=/var/tmp/RabbitCommon",
                "-DCMAKE_BUILD_TYPE:STRING=Release"
            ],
            "build-options": {
                "env": {
                    
                }
            }
        }
    ]
}
