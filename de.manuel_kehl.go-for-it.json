{
  "id": "de.manuel_kehl.go-for-it",
  "runtime": "org.gnome.Platform",
  "runtime-version": "3.26",
  "sdk": "org.gnome.Sdk",
  "command": "go-for-it",
  "rename-desktop-file": "go-for-it.desktop",
  "rename-icon": "go-for-it",
  "finish-args": [
    /* X11 + XShm access */
    "--share=ipc", "--socket=x11",
    /* Wayland access */
    "--socket=wayland",
    /* Access user files */
    "--filesystem=home",
    /* Dconf access */
    "--filesystem=xdg-run/dconf",
    "--filesystem=~/.config/dconf:ro",
    "--talk-name=ca.desrt.dconf",
    "--env=DCONF_USER_CONFIG_DIR=.config/dconf",
    /* DBus access */
    "--own-name=de.manuel-kehl.go-for-it",
    /* Notification access */
    "--talk-name=org.freedesktop.Notifications"
  ],
  "modules": [
    {
      "name": "go-for-it",
      "buildsystem": "cmake",
      "builddir": "build",
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/mank319/Go-For-It.git",
          "branch": "release_v1.6",
          "commit": "5f319139ab978f4cee99612227896c5b7e7300f5"
        },
        {
          "type": "file",
          "path": "de.manuel_kehl.go-for-it.appdata.xml"
        }
      ],
      "post-install": [
        "install -Dm644 de.manuel_kehl.go-for-it.appdata.xml /app/share/appdata/de.manuel_kehl.go-for-it.appdata.xml",
        "install -Dm644 COPYING /app/share/licenses/go-for-it/COPYING"
      ]
    }
  ]
}
