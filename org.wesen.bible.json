{
	"id": "org.wesen.bible",
	"branch": "master",
	"runtime": "org.kde.Platform",
	"runtime-version": "6.9",
	"sdk": "org.kde.Sdk",
	"finish-args": [
		"--share=ipc",
		"--socket=x11",
		"--socket=wayland",
		"--device=dri",
		"--share=network"
	],
	"modules": [
		{
			"name": "amharic-bible",
			"buildsystem": "cmake-ninja",
			"builddir": true,
			"sources": [
				{
					"type": "dir",
					"path": "."
				}
			],
			"post-install": [
				"install -Dm644 ../src/assets/bible.png /app/share/icons/hicolor/512x512/apps/org.wesen.bible.png",
				"install -Dm644 ../data/org.wesen.bible.desktop /app/share/applications/org.wesen.bible.desktop",
				"install -Dm644 ../data/org.wesen.bible.metainfo.xml /app/share/metainfo/org.wesen.bible.metainfo.xml"
			]
		}
	]
}
