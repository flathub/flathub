{
    "id" : "com.odnoyko.valot",
    "runtime" : "org.gnome.Platform",
    "runtime-version": "48",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.node20",
        "org.freedesktop.Sdk.Extension.typescript"
    ],
    "command" : "com.odnoyko.valot",
    "finish-args": [
		"--share=network",
		"--socket=wayland",
		"--socket=fallback-x11",
		"--device=dri",
		"--filesystem=~/valot:create",
		"--socket=cups",
		"--share=ipc",
		"--filesystem=xdg-config/kdeglobals:ro",
		"--env=QT_QPA_PLATFORM=wayland"
	],
    "build-options": {
        "append-path": "/usr/lib/sdk/typescript/bin:/usr/lib/sdk/node20/bin",
        "env": {
            "GI_TYPELIB_PATH": "/app/lib/girepository-1.0"
        }
    },
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name": "blueprint-compiler",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler",
                    "tag": "v0.14.0"
                }
            ]
        },
        {
            "name": "intltool",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://launchpad.net/intltool/trunk/0.51.0/+download/intltool-0.51.0.tar.gz",
                    "sha256": "67c74d94196b153b774ab9f89b2fa6c6ba79352407037c8c14d5aeb334e959cd"
                }
            ]
        },
        {
            "name": "libgda",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/libgda/6.0/libgda-6.0.0.tar.xz",
                    "sha256": "995f4b420e666da5c8bac9faf55e7aedbe3789c525d634720a53be3ccf27a670"
                }
            ]
        },
        {
            "name" : "valot",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.com/Valo27/valot.git",
                    "tag" : "v0.2.5"
                }
            ]
        }
    ]
}
