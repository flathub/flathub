{
  "app-id": "com.leinardi.gx52",
  "command": "gx52",
  "runtime": "org.gnome.Platform",
  "runtime-version": "3.36",
  "sdk": "org.gnome.Sdk",
  "finish-args": [
    "--share=ipc",
    "--socket=x11",
    "--device=all",
    "--share=network",
    "--talk-name=org.kde.StatusNotifierWatcher",
    "--talk-name=org.freedesktop.Flatpak"
  ],
  "modules": [
    "shared-modules/libappindicator/libappindicator-gtk3-introspection-12.10.json",
    {
      "name": "libusb",
      "config-opts": [
        "--disable-static",
        "--disable-udev"
      ],
      "cleanup": [
        "/lib/*.la",
        "/lib/pkgconfig",
        "/include"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/libusb/libusb/archive/v1.0.22.tar.gz",
          "sha256": "3500f7b182750cd9ccf9be8b1df998f83df56a39ab264976bdb3307773e16f48"
        }
      ],
      "post-install": [
        "install -Dm644 COPYING /app/share/licenses/libusb/COPYING"
      ]
    },
    {
      "name": "hidapi",
      "buildsystem": "simple",
      "build-commands": [
        "./bootstrap",
        "./configure --prefix=/app",
        "make",
        "make install"
      ],
      "cleanup": [
        "/lib/*.la",
        "/lib/pkgconfig",
        "/include"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/libusb/hidapi/archive/hidapi-0.9.0.tar.gz",
          "sha256": "630ee1834bdd5c5761ab079fd04f463a89585df8fcae51a7bfe4229b1e02a652"
        }
      ],
      "post-install": [
        "mkdir -p /app/share/licenses/hidapi/",
        "install -Dm644 LICENSE.txt LICENSE-bsd.txt LICENSE-orig.txt /app/share/licenses/hidapi/"
      ]
    },
    {
      "name": "python3-setuptools_scm",
      "buildsystem": "simple",
      "build-commands": [
        "pip3 install --no-index --find-links=\"file://${PWD}\" --prefix=${FLATPAK_DEST} setuptools_scm"
      ],
      "sources": [
        {
          "type": "file",
          "url": "https://files.pythonhosted.org/packages/8d/93/d380ad3ee3acdec01ef5fc1096214b57a8cbeab1e5e95eebf5e78b480d94/setuptools_scm-3.4.3-py2.py3-none-any.whl",
          "sha256": "f7a5091d8de1b1491068623e9acbe7e881d62986e4c0af7f361424622902ff08"
        }
      ],
      "cleanup": [
        "*"
      ]
    },
    {
      "name": "python3-python-dateutil",
      "buildsystem": "simple",
      "build-commands": [
        "python3 setup.py install --prefix=${FLATPAK_DEST} --root=/"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/dateutil/dateutil/releases/download/2.8.1/python-dateutil-2.8.1.tar.gz",
          "sha256": "73ebfe9dbf22e832286dafa60473e4cd239f8592f699aa5adaf10050e6e1823c"
        },
        {
          "type": "shell",
          "commands": [
            "sed -i 's/if not platform_/if not dirs/' setup.py"
          ]
        }
      ]
    },
    "pypi-dependencies.json",
    {
      "name": "gx52",
      "buildsystem": "meson",
      "config-opts": [
        "--buildtype=release"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://gitlab.com/leinardi/gx52.git",
          "tag": "0.7.0",
          "commit": "2cfc7b24b28e41516a3bd76f173451f989856208"
        }
      ]
    }
  ]
}

