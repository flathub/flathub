{
    "id": "org.freedesktop.Sdk.Extension.gcc7",
    "branch": "1.6",
    "runtime": "org.freedesktop.Sdk",
    "build-extension": true,
    "sdk": "org.freedesktop.Sdk",
    "runtime-version": "1.6",
    "sdk-extensions": [],
    "appstream-compose": false,
    "separate-locales": false,
    "cleanup": [ "/share/info", "/share/man" ],
    "build-options" : {
        "cflags": "-O2 -g",
        "cxxflags": "-O2 -g",
        "prefix": "/usr/lib/sdk/gcc7",
        "env": {
            "V": "1"
        }
    },
    "modules": [
        {
            "name": "gcc",
            "config-opts": [
                "--with-bugurl=https://flathub.org",
                "--enable-languages=c,c++,fortran",
                "--enable-__cxa_atexit",
                "--enable-checking=release",
                "--enable-clocale=gnu",
                "--enable-default-pie",
                "--enable-default-ssp",
                "--enable-gnu-indirect-function",
                "--enable-gnu-unique-object",
                "--enable-install-libiberty",
                "--enable-linker-build-id",
                "--enable-plugin",
                "--enable-shared",
                "--enable-threads=posix",
                "--disable-bootstrap",
                "--disable-libssp",
                "--disable-libstdcxx-pch",
                "--disable-libunwind-exceptions",
                "--disable-multilib",
                "--disable-stage1-checking",
                "--disable-werror",
                "--with-linker-hash-style=gnu",
                "--with-system-zlib"
            ],
            "build-options": {
                "arch": {
                    "i386": {
                        "config-opts" : [
                            "--build=i586-unknown-linux-gnu",
                            "--enable-libmpx"
                        ]
                    },
                    "arm": {
                        "config-opts" : [
                            "--build=arm-unknown-linux-gnueabi",
                            "--with-float=hard",
                            "--with-mode=thumb",
                            "--with-fpu=vfpv3-d16",
                            "--with-arch=armv7-a"
                        ]
                    },
                    "x86_64": {
                        "config-opts": [
                            "--enable-libmpx"
                        ]
                    }
                }
            },
            "sources": [
                {
                    "type": "archive",
                    "url": "https://ftp.gnu.org/gnu/gcc/gcc-7.2.0/gcc-7.2.0.tar.xz",
                    "sha256": "1cf7adf8ff4b5aa49041c8734bbcf1ad18cc4c94d0029aae0f4e48841088479a"
                },
                {
                    "type": "shell",
                    "commands": ["sed -e '/m64=/s/lib64/lib/' -i.orig gcc/config/i386/t-linux64"]
                }
            ]
        },
        {
            "name": "appdata",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p ${FLATPAK_DEST}/share/appdata",
                "cp org.freedesktop.Sdk.Extension.gcc7.appdata.xml ${FLATPAK_DEST}/share/appdata",
                "appstream-compose  --basename=org.freedesktop.Sdk.Extension.gcc7 --prefix=${FLATPAK_DEST} --origin=flatpak org.freedesktop.Sdk.Extension.gcc7"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "org.freedesktop.Sdk.Extension.gcc7.appdata.xml"
                }
            ]
        },
        {
            "name": "scripts",
            "buildsystem": "simple",
            "build-commands": [
                "cp *.sh /usr/lib/sdk/gcc7/"
            ],
            "sources": [
                {
                    "type": "script",
                    "commands": [
                        "mkdir -p /app/lib",
                        "cp /usr/lib/sdk/gfortran-62/lib/libquadmath.so* /usr/lib/sdk/gfortran-62/lib/libgfortran.so.3* /app/lib/"
                    ],
                    "dest-filename": "install_gfortran.sh"
                },
                {
                    "type": "script",
                    "commands": [
                        "export PATH=/usr/lib/sdk/gcc7/bin:$PATH",
                        "export CC=/usr/lib/sdk/gcc7/bin/gcc",
                        "export CXX=/usr/lib/sdk/gcc7/bin/g++"
                    ],
                    "dest-filename": "enable.sh"
                }
            ]
        }
    ]
}
