{
  "app-id": "dev.tony4.subscribi",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "25.08",
  "base": "com.system76.Cosmic.BaseApp",
  "base-version": "stable",
  "sdk": "org.freedesktop.Sdk",
  "sdk-extensions": [
    "org.freedesktop.Sdk.Extension.rust-stable"
  ],
  "command": "subscribi",
  "finish-args": [
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--device=dri",
    "--talk-name=com.system76.CosmicSettingsDaemon"
  ],
  "build-options": {
    "append-path": "/usr/lib/sdk/rust-stable/bin"
  },
  "modules": [
    {
      "name": "subscribi",
      "buildsystem": "simple",
      "build-options": {
        "env": {
          "CARGO_HOME": "/run/build/subscribi/cargo"
        }
      },
      "build-commands": [
        "cargo --offline fetch --manifest-path Cargo.toml --verbose",
        "cargo --offline build --release --verbose",
        "install -Dm0755 ./target/release/subs_cosmic /app/bin/subscribi",
        "install -Dm0644 ./resources/app.desktop /app/share/applications/dev.tony4.subscribi.desktop",
        "install -Dm0644 ./resources/app.metainfo.xml /app/share/metainfo/dev.tony4.subscribi.metainfo.xml",
        "install -Dm0644 ./resources/icons/hicolor/scalable/apps/icon.svg /app/share/icons/hicolor/scalable/apps/dev.tony4.subscribi.svg"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://codeberg.org/Tony4dev/subscribi.git",
          "tag": "1.0.0",
          "commit": "79deacf24956a894eef15331f01416e3d67b4586"
        },
        "cargo-sources.json"
      ]
    }
  ]
}