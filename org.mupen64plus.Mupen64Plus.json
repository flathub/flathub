{
  "app-id": "org.mupen64plus.Mupen64Plus",
  "branch": "stable",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "1.6",
  "sdk": "org.freedesktop.Sdk",
  "command": "mupen64plus",
  "rename-desktop-file": "mupen64plus.desktop",
  "rename-icon": "mupen64plus",
  "finish-args": [
    "--device=all", /* controllers need this? */
    "--filesystem=host:ro", /* for roms */
    "--filesystem=home", /* for config */
    "--socket=pulseaudio",
    "--socket=x11",
    "--share=network",
    "--share=ipc"
  ],
  "cleanup": [
    "/include",
    "/lib/*.la",
    "/lib/*.a",
    "/lib/*.so",
    "/lib/pkgconfig",
    "/lib/debug"
  ],
  "modules": [
    "shared-modules/glu/glu-9.0.0.json",
    /* Got from org.kicad_pcb.KiCad */
    {
      "name": "boost",
      "sources": [
        {
          "type": "archive",
          "url": "http://sourceforge.net/projects/boost/files/boost/1.66.0/boost_1_66_0.tar.bz2",
          "sha256": "5721818253e6a0989583192f96782c4a98eb6204965316df9f5ad75819225ca9"
        }
      ],
      "buildsystem": "simple",
      "build-commands": [
        "./bootstrap.sh --prefix=/app",
        "./b2 install --with-system --with-filesystem --prefix=/app"
      ]
    },
    {
      "name": "mupen64plus",
      "buildsystem": "simple",
      "build-commands": [
        /* Build */
        "sh m64p_build.sh PLUGINDIR=/app/lib/mupen64plus SHAREDIR=/app/share/mupen64plus LIRC=0", /* lirc not quite working yet */
        "find . -type f -name \"*.so*\" -exec chmod 0755 \"{}\" \\;",
        /* Install */
        "./m64p_install.sh PREFIX=/app MANDIR=/app/share/man LIBDIR=/app/lib DEBUG=1 LDCONFIG='true'"
      ],
      "cleanup": [
        "/share/man"
      ],
      "post-install": [
        "install -Dpm644 org.mupen64plus.Mupen64Plus.appdata.xml --target-directory=/app/share/metainfo"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/mupen64plus/mupen64plus-core/releases/download/2.5/mupen64plus-bundle-src-2.5.tar.gz ",
          "sha256": "9c75b9d826f2d24666175f723a97369b3a6ee159b307f7cc876bbb4facdbba66"
        },
        {
          "type": "file",
          "path": "org.mupen64plus.Mupen64Plus.appdata.xml"
        }
      ]
    }
  ]
}
