{
    "id": "org.kde.kdf",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-21.08",
    "sdk": "org.kde.Sdk",
    "command": "kdf",
    "rename-icon": "kdf",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--filesystem=home",
        "--filesystem=/media",
        "--filesystem=/run/media",
        "--talk-name=org.kde.kiod5",
        "--talk-name=org.kde.dolphin",
        "--talk-name=org.kde.JobViewServer",
        "--talk-name=org.kde.kpasswdserver",
        "--system-talk-name=org.freedesktop.UDisks2",
        "--own-name=org.kde.dolphin.*"
    ],
    "cleanup": [
        "/lib/cmake",
        "/lib/pkgconfig",
        "/include",
        "/docs",
        "/mkspecs",
        "/share/man",
        "*.a",
        "*.la"
    ],

    "modules": [
        {
            "name": "lmdb",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://git.openldap.org/openldap/openldap/-/archive/LMDB_0.9.29/openldap-LMDB_0.9.29.tar.bz2",
                    "sha256": "182e69af99788b445585b8075bbca89ae8101069fbeee25b2756fb9590e833f8"
                }
            ],
            "no-autogen": true,
            "make-install-args": [
                "prefix=/app"
            ],
            "subdir" : "libraries/liblmdb"
        },
        {
            "config-opts": [
                "-DENABLE_TESTING=OFF",
                "-DLMDB_DIR=/app"
            ],
            "name": "baloo",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/frameworks/5.88/baloo-5.88.0.tar.xz",
                    "sha256": "09018da3a01c21e9a8369841fa033737e1b93b56f2b2837663e657ff076abc3d"
                }
            ]
        },
        {
            "config-opts": [
                "-DENABLE_TESTING=OFF",
                "-DLMDB_DIR=/app"
            ],
            "name": "baloo-widgets",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/21.12.1/src/baloo-widgets-21.12.1.tar.xz",
                    "sha256": "91d0b15e8b9a59e2c5d60576a75b3c3e2380d9db969b47c0494c661f577a6b06"
                }
            ]
        },
        {
            "name": "dolphin",
            "buildsystem": "cmake-ninja",
            "post-install": [
                "for icon_size in 16 22 32 48 64 128; do install -Dm644 src/icons/${icon_size}-system-file-manager.png /app/share/icons/hicolor/${icon_size}x${icon_size}/apps/system-file-manager.png; done",
                "mv /app/bin/{dolphin,dolphin-bin}",
                "install run_dolphin.sh /app/bin/dolphin"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/21.12.1/src/dolphin-21.12.1.tar.xz",
                    "sha256": "6a4b16562b31574b7bc35eb46c754d4f19b047e182ec8a9487cfd1db73af254c"
                },
                {
                    "type": "patch",
                    "path": "dolphin.appdata.patch"
                },
                {
                    "type": "shell",
                    "commands": [
                        "sed -e 's/org.kde.dolphin.FileManager1/org.freedesktop.FileManager1/g' -i CMakeLists.txt"
                    ]
                },
                {
                    "type": "file",
                    "path": "run_dolphin.sh"
                }
            ]
        },
        {
            "name": "dolphin-plugins",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/21.12.1/src/dolphin-plugins-21.12.1.tar.xz",
                    "sha256": "7ca1acc82ae1fb1909b1f98797a1a6f5d74ad78cc969f96cb65bb7e5f7062279"
                }
            ]
        },
        "shared-modules/libusb/libusb.json",
        {
            "name": "libmtp",
            "config-opts": [
                "--with-udev=/app/lib/udev"
            ],
            "buildsystem": "autotools",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://sourceforge.net/projects/libmtp/files/libmtp/1.1.19/libmtp-1.1.19.tar.gz",
                    "sha256": "deb4af6f63f5e71215cfa7fb961795262920b4ec6cb4b627f55b30b18aa33228"
                }
            ]
        },
        {
            "name": "libssh",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [
                {
                    "type": "archive",
                    "url": "https://www.libssh.org/files/0.9/libssh-0.9.6.tar.xz",
                    "sha256": "86bcf885bd9b80466fe0e05453c58b877df61afa8ba947a58c356d7f0fab829b"
                }
            ]
        },
        {
            "name": "perl-modules",
            "buildsystem": "simple",
            "build-commands": [
                "echo 'this is a workaround for a flatpak+perl limitation'",
                "tar xhf Parse-Yapp-1.21.tar.gz",
                "cd Parse-Yapp-1.21 && perl Makefile.PL PREFIX=/app && make && make install",
                "ln -s /app/lib/perl5/site_perl/5.34.0/$(basename `ls -d /usr/lib/perl5/5.34.0/*-linux`) /app/lib/perl5/site_perl/5.34.0/arch"
            ],
            "post-install": [
                "chmod -R u+w /app/lib/perl5/site_perl"
            ],
            "sources": [
                {
                    "type": "file",
                    "url": "https://cpan.metacpan.org/authors/id/W/WB/WBRASWELL/Parse-Yapp-1.21.tar.gz",
                    "sha256": "3810e998308fba2e0f4f26043035032b027ce51ce5c8a52a8b8e340ca65f13e5"
                }
            ]
        },

        {
            "name": "rpcgen",
            "buildsystem": "autotools",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/thkukuk/rpcsvc-proto/releases/download/v1.4.2/rpcsvc-proto-1.4.2.tar.xz",
                    "sha256": "678851b9f7ddf4410d2859c12016b65a6dd1a0728d478f18aeb54d165352f17c"
                }
            ]
        },
        {
            "name": "samba",
            "buildsystem": "autotools",
            "config-opts": [
                "--without-json",
                "--without-ad-dc",
                "--without-ldap",
                "--without-ads",
                "--without-pam"
            ],
            "build-options" : {
                "env": {
                    "PERLLIB": "/app/lib/perl5/site_perl/5.34.0:/app/lib/perl5/site_perl/5.34.0/arch"
                }
            },
            "sources": [
                {
                    "type": "archive",
                    "url": "https://samba.org/samba/ftp/stable/samba-4.15.3.tar.gz",
                    "sha256": "519399404391550345846768ea4dd0fe7fcb04e20c2b891b5eeb02e5554137db"
                }
            ]
        },
        {
            "name": "kdsoap",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/KDAB/KDSoap/releases/download/kdsoap-2.0.0/kdsoap-2.0.0.tar.gz",
                    "sha256": "d18963104fa6f7d02b044631cddbe78f18f70e06c607af680c7ace04d6cf04ee"
                }
            ]
        },
        {
            "name": "kio-extras",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/21.12.1/src/kio-extras-21.12.1.tar.xz",
                    "sha256": "cc7d5465602c0cd26577a30572ebfa3141414828a360f17e6e456a2d6faa505f"
                }
            ]
        },
        {
            "name": "ark",
            "cleanup": [
                "/share/icons",
                "/share/doc",
                "/share/man",
                "/share/config.kcfg",
                "/share/kxmlgui5"
            ],
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/21.12.1/src/ark-21.12.1.tar.xz",
                    "sha256": "a07654af5a3d7714a485027765ea29a94f62b3aef670cb78532a1561afb978d6"
                }
            ]
        },
        {
            "name": "kdf",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/21.12.1/src/kdf-21.12.1.tar.xz",
                    "sha256": "d1727d9d69ab0a609d018e9c1178d4cf41dd41fad09b873adb0675d2aebb2fa4"
                },
                {
                    "type": "patch",
                    "path": "kdf.appdata.patch"
                }
            ]
        }
    ]
}
