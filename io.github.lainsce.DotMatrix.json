{
    "app-id" : "io.github.lainsce.DotMatrix",
    "runtime" : "org.gnome.Sdk",
    "runtime-version" : "3.38",
    "sdk" : "org.gnome.Sdk",
    "command" : "io.github.lainsce.DotMatrix",
    "rename-icon" : "io.github.lainsce.DotMatrix",
    "finish-args" : [
        "--filesystem=xdg-pictures",
        "--filesystem=xdg-download",
        "--socket=wayland",
        "--socket=fallback-x11",
        "--share=ipc",
        "--device=dri"
    ],
    "cleanup" : [
        "/cache",
        "/man",
        "/share/aclocal",
        "/share/devhelp",
        "/lib/systemd",
        "/include",
        "/lib/pkgconfig",
        "/lib/libvala*",
        "/share/gtk-doc",
        "/share/man",
        "/share/vala",
        "*.a",
        "*.la"
    ],
    "modules" : [
        {
            "name" : "pango",
            "buildsystem" : "meson",
            "sources" :  [
                {
                    "type" : "archive",
                    "url" : "https://download.gnome.org/sources/pango/1.48/pango-1.48.0.tar.xz",
                    "sha256" : "391f26f3341c2d7053e0fb26a956bd42360dadd825efe7088b1e9340a65e74e6"
                }
            ]
        },
        {
            "name": "libsass",
            "sources": [
                {
                    "type" : "archive",
                    "url" : "https://github.com/sass/libsass/archive/3.6.4.tar.gz",
                    "sha256": "f9484d9a6df60576e791566eab2f757a97fd414fce01dd41fc0a693ea5db2889"
                },
                {
                    "type" : "script",
                    "dest-filename" : "autogen.sh",
                    "commands" : [ "autoreconf -si" ]
                }
            ]
        },
        {
            "name": "sassc",
            "sources": [
                {
                    "type" : "archive",
                    "url" : "https://github.com/sass/sassc/archive/3.6.1.zip",
                    "sha256": "0a48d963f7eb8f5d32ad62d0b22fc604e6bec787d03c6d8348c2849da9d63d71"
                },
                {
                    "type" : "script",
                    "dest-filename" : "autogen.sh",
                    "commands" : [ "autoreconf -si" ]
                }
            ]
        },
        {
            "name" : "gtk4",
            "buildsystem" : "meson",
            "config-opts" : [
                "-Ddemos=false",
                "-Dbuild-examples=false",
                "-Dbuild-tests=false"
            ],
            "sources" :  [
                {
                    "type" : "archive",
                    "url" : "https://download.gnome.org/sources/gtk/4.2/gtk-4.2.0.tar.xz",
                    "sha256" : "e975f286e911666a79b6bcf486e6f99b0bd9d2b4cc348d19bce487a0b1c97072"
                }
            ]
        },
        {
            "name" : "libadwaita",
            "buildsystem": "meson",
            "config-opts" : [
                "-Dvapi=true",
                "-Dexamples=false",
                "-Dtests=false"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/exalm/libadwaita.git",
                    "branch" : "main"
                }
            ]
        },
        {
            "name" : "DotMatrix",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://github.com/lainsce/dot-matrix/archive/3.0.0.zip",
                    "sha256" : "dac8bd1fc88055fafd8bae2661ba5364c6cd0dfbe4bca34c0758f21f11f7c487"
                }
            ]
        }
    ]
}

