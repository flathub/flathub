{
    "name": "libncurses",
    "config-opts": [
        "--disable-db-install",
        "--enable-pc-files",
        "--enable-widec",
        "--with-cxx-binding",
        "--with-cxx-shared",
        "--with-default-terminfo-dir=/usr/share/terminfo",
        "--with-normal",
        "--with-pkg-config-libdir=/app/lib/pkgconfig",
        "--with-shared",
        "--without-ada",
        "--without-manpages",
        "--without-progs"
    ],
    "post-install": [
        "ln -s ncursesw.pc /app/lib/pkgconfig/ncurses.pc",
        "ln -s libncursesw.so /app/lib/libncurses.so",
        "ln -s libncursesw.so.6 /app/lib/libncurses.so.6",
        "ln -s libncursesw.so.6.2 /app/lib/libncurses.so.6.2"
    ],
    "sources": [
        {
            "type": "archive",
            "url": "https://ftp.gnu.org/pub/gnu/ncurses/ncurses-6.2.tar.gz",
            "sha256": "30306e0c76e0f9f1f0de987cf1c82a5c21e1ce6568b9227f7da5b71cbea86c9d",
            "x-checker-data": {
                "type": "anitya",
                "project-id": 234776,
                "stable-only": true,
                "url-template": "https://ftp.gnu.org/pub/gnu/ncurses/ncurses-$version.tar.gz"
            }
        }
    ],
    "cleanup": [
        "/bin",
        "*.a"
    ]
}
