{
  "app-id": "io.github.janbar.noson",
  "runtime": "org.kde.Platform",
  "runtime-version": "5.10",
  "sdk": "org.kde.Sdk",
  "command": "noson-app",
  "rename-desktop-file": "noson.desktop",
  "rename-icon": "noson",
  "finish-args": [
    "--share=ipc",
    "--socket=wayland",
    "--socket=x11",
    "--share=network",
    "--device=dri",
    "--filesystem=xdg-run/dconf",
    "--filesystem=~/.config/dconf:ro",
    "--talk-name=ca.desrt.dconf",
    "--env=DCONF_USER_CONFIG_DIR=.config/dconf"
  ],
  "cleanup": [
    "/include",
    "/lib/pkgconfig",
    "/share/aclocal",
    "/share/doc",
    "/share/gtk-doc",
    "/share/info",
    "/share/man",
    "/share/pkgconfig",
    "/lib/cmake",
    "*.la",
    "*.a"
  ],
  "build-options": {
    "cflags": "-O2 -g -fstack-protector-strong -D_FORTIFY_SOURCE=2",
    "cxxflags": "-O2 -g -fstack-protector-strong -D_FORTIFY_SOURCE=2",
    "ldflags": "-fstack-protector-strong -Wl,-z,relro,-z,now",
    "env": {
      "V": "1"
    }
  },
  "modules": [
    {
      "name": "noson",
      "buildsystem": "cmake-ninja",
      "config-opts": [
        "-DCMAKE_BUILD_TYPE=RelWithDebInfo"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/janbar/noson-app.git",
          "tag": "3.3.6"
        },
        {
          "type": "patch",
          "path": "use-installed-icon-name.patch"
        },
        {
          "type": "file",
          "path": "io.github.janbar.noson.appdata.xml"
        }
      ],
      "post-install": [
        "install -Dm644 io.github.janbar.noson.appdata.xml /app/share/appdata/io.github.janbar.noson.appdata.xml"
      ]
    }
  ]
}
