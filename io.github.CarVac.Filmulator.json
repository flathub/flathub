{
    "app-id": "io.github.CarVac.Filmulator",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15",
    "sdk": "org.kde.Sdk",
    "command": "filmulator-gui",
    "rename-desktop-file": "filmulator-gui.desktop",
    "rename-icon": "filmulator-gui64",
    "finish-args": [
        /* X11 + XShm access */
        "--share=ipc",
        "--socket=x11",
        /* Wayland */
        "--socket=wayland",
        "--device=dri",
        /* Allow loading, saving files from home dir */
        "--filesystem=home",
        /* Allow other instances to see lockfiles */
        "--env=TMPDIR=/var/tmp",
        "--env=APPDIR=/app/share/Filmulator/qml/filmulator-gui",
        "--env=QT_AUTO_SCREEN_SCALE_FACTOR=1"
    ],
    "cleanup": [
        "/include",
        "/man",
        "/share/man",
        "/lib/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "lensfun",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=RelWithDebInfo",
                "-DCMAKE_INSTALL_LIBDIR=/app/lib",
                "-DBUILD_FOR_SSE=0",
                "-DBUILD_FOR_SSE2=0"
            ],
            "cleanup": [
                "/bin",
                "/lib/python3*",
                "*.so"
            ],
            "build-options": {
                "arch": {
                    "i386": {
                        "config-opts": [
                            "-DBUILD_FOR_SSE=1",
                            "-DBUILD_FOR_SSE2=1"
                        ]
                    },
                    "x86_64": {
                        "config-opts": [
                            "-DBUILD_FOR_SSE=1",
                            "-DBUILD_FOR_SSE2=1"
                        ]
                    }
                }
            },
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/lensfun/lensfun.git",
                    "commit": "79ff00ad8c5524a0264f554e116edd79e2b241d7"
                }
            ]
        },
        {
            "name": "exiv2",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release",
                "-DEXIV2_BUILD_DOC:BOOL=OFF",
                "-DEXIV2_BUILD_EXIV2_COMMAND=OFF",
                "-DEXIV2_BUILD_SAMPLES=OFF"
            ],
            "cleanup": [
                "/lib/cmake",
                "*.so"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "http://www.exiv2.org/builds/exiv2-0.27.3-Source.tar.gz",
                    "sha256": "a79f5613812aa21755d578a297874fb59a85101e793edc64ec2c6bd994e3e778"
                },
                {
                    "type": "patch",
                    "path": "exiv2-arch-flags.patch"
                },
                {
                    "type": "patch",
                    "path": "exiv2-arch-flags-2.patch"
                }
            ]
        },
        {
            "name": "libraw",
            "builddir": true,
            "config-opts": [
                "--disable-examples"
            ],
            "cleanup": [
                "/share/doc/libraw",
                "*.so"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://www.libraw.org/data/LibRaw-0.20.0.tar.gz",
                    "sha256": "1f0a383da2ce9f409087facd28261decbf6be72cc90c78cd003b0766e4d694a3"
                },
                {
                    "type": "archive",
                    "url": "https://www.libraw.org/data/LibRaw-demosaic-pack-GPL2-0.18.8.tar.gz",
                    "sha256": "0b24bcf7bbb5d13fde58bb071f94dc9354be09bc44b2bba0698493065e99f8da",
                    "dest": "LibRaw-demosaic-pack-GPL2"
                },
                {
                    "type": "archive",
                    "url": "https://www.libraw.org/data/LibRaw-demosaic-pack-GPL3-0.18.8.tar.gz",
                    "sha256": "ffd6916cd66c8101e4e6b589799f256c897748d2fd2486aa34c3705146dbc701",
                    "dest": "LibRaw-demosaic-pack-GPL3"
                }
            ]
        },
        {
            "name": "librtprocess",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "cleanup": [
                "/lib/cmake"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/CarVac/librtprocess/archive/0.11.0.tar.gz",
                    "sha256": "0a1691e6e90742644506a1123c716cdcfc28689adf461747843ab0440a837584"
                }
            ]
        },
        {
            "name": "filmulator",
            "buildsystem": "qmake",
            "subdir": "filmulator-gui",
            "post-install": [
                "ln -sf /app/lib/filmulator-gui/filmulator-gui /app/bin",
                "install -Dm644 -t /app/share/icons/hicolor/64x64/apps filmulator-gui64.png",
                "install -d /app/share/applications/",
                "install -m644  filmulator-gui.desktop.in /app/share/applications/filmulator-gui.desktop",
                "install -Dm644 -t /app/share/metainfo io.github.CarVac.Filmulator.appdata.xml"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/CarVac/filmulator-gui/archive/v0.10.0.tar.gz",
                    "sha256": "f39874f42144be04153d137105933173497524cb1e6020e5c56fb7474546dfa1"
                },
                {
                    "type": "patch",
                    "path": "filmulator-fixes.patch"
                },
                {
                    "type": "file",
                    "path": "io.github.CarVac.Filmulator.appdata.xml",
                    "dest": "filmulator-gui"
                }
            ]
        }
    ]
}
