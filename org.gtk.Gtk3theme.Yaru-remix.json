{
   "id":"org.gtk.Gtk3theme.Yaru-remix",
   "branch":"3.22",
   "runtime":"org.freedesktop.Sdk",
   "build-extension":true,
   "sdk":"org.freedesktop.Sdk",
   "runtime-version":"20.08",
   "appstream-compose":false,
   "separate-locales":false,
   "modules":[
      {
         "name":"Yaru-remix",
         "buildsystem":"simple",
         "build-commands":[
            "install -dm755 /usr/share/runtime/share/themes/Yaru-remix/gtk-3.0",
            "cp -aL gtk-3.20/* /usr/share/runtime/share/themes/Yaru-remix/gtk-3.0",
            "cp -a index.theme /usr/share/runtime/share/themes/Yaru-remix"
         ],
         "sources":[
            {
               "type":"archive",
               "url":"https://github.com/Muqtxdir/yaru-remix/releases/download/v20.04.1/Yaru-remix-gtk.zip",
               "sha256":"159e82f67330176cab5f9fd073bea0373f03f91a7ac465f0f3f315bd76d4c887"
            }
         ]
      },
      {
         "name":"appdata",
         "buildsystem":"simple",
         "build-commands":[
            "mkdir -p ${FLATPAK_DEST}/share/appdata",
            "cp org.gtk.Gtk3theme.Yaru-remix.appdata.xml ${FLATPAK_DEST}/share/appdata",
            "appstream-compose --basename=org.gtk.Gtk3theme.Yaru-remix --prefix=${FLATPAK_DEST} --origin=flatpak org.gtk.Gtk3theme.Yaru-remix"
         ],
         "sources":[
            {
               "type":"file",
               "path":"org.gtk.Gtk3theme.Yaru-remix.appdata.xml"
            }
         ]
      }
   ]
}
