{
  "app-id": "com.huma.browser",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "21.08",
  "sdk": "org.freedesktop.Sdk",
  "command": "huma",
  "finish-args": [
    "--share=network",
    "--share=ipc",
    "--socket=x11",
    "--device=dri"
  ],
  "modules": [
    {
      "name": "huma",
      "buildsystem": "simple",
      "build-commands": [
        "mkdir -p /app/bin",
        "cp -r * /app/bin/"
      ],
      "sources": [
        {
          "type": "dir",
          "path": "bin"
        }
      ]
    }
  ]
}
