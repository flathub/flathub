{
  "app-id": "org.kde.step",
  "runtime": "org.kde.Platform",
  "runtime-version": "5.15-23.08",
  "sdk": "org.kde.Sdk",
  "command": "step",
  "rename-icon": "step",
  "finish-args": [
    "--share=ipc",
    "--share=network",
    "--device=dri",
    "--socket=wayland",
    "--socket=fallback-x11",
    "--system-talk-name=org.freedesktop.UDisks2",
    "--filesystem=xdg-data/step"
  ],
  "modules": [
    "shared-modules/intltool/intltool-0.51.json",
    {
      "name": "mpfr",
      "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/doc/mpfr"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://www.mpfr.org/mpfr-4.1.0/mpfr-4.1.0.tar.xz",
          "sha256": "0c98a3f1732ff6ca4ea690552079da9c597872d30e96ec28414ee23c95558a7f",
          "x-checker-data": {
            "type": "anitya",
            "project-id": 2019,
            "stable-only": true,
            "url-template": "https://www.mpfr.org/mpfr-$version/mpfr-$version.tar.xz"
          }
        }
      ]
    },
    {
      "name": "libqalculate",
      "build-options": {
        "arch": {
          "aarch64": {
            "cxxflags": "-fsigned-char"
          }
        }
      },
      "config-opts": [
        "--disable-static",
        "--enable-maintainer-mode",
        "--enable-compiled-definitions"
      ],
      "cleanup": [
        "/include",
        "/bin/qalc",
        "/lib/pkgconfig",
        "/share/man/"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/Qalculate/libqalculate/releases/download/v4.3.0/libqalculate-4.3.0.tar.gz",
          "sha256": "ddcb7b77dcbd06775cde95ea8360e4ffaef8f9df34c9690700c87980c36ab244",
          "x-checker-data": {
            "type": "anitya",
            "project-id": 230126,
            "stable-only": true,
            "url-template": "https://github.com/Qalculate/libqalculate/releases/download/$version/libqalculate-$version.tar.gz"
          }
        }
      ]
    },
    {
      "name": "eigen3",
      "buildsystem": "cmake-ninja",
      "builddir": true,
      "config-opts": [
        "-DCMAKE_BUILD_TYPE=RelWithDebInfo",
        "-DBUILD_TESTING=OFF"
      ],
      "cleanup": [
        "/include",
        "/share/eigen3/cmake",
        "/share/pkgconfig"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://gitlab.com/libeigen/eigen/-/archive/3.4.0/eigen-3.4.0.tar.bz2",
          "sha256": "b4c198460eba6f28d34894e3a5710998818515104d6e74e5cc331ce31e46e626",
          "x-checker-data": {
            "type": "anitya",
            "project-id": 666,
            "stable-only": true,
            "url-template": "https://gitlab.com/libeigen/eigen/-/archive/$version/eigen-$version.tar.bz2"
          }
        }
      ]
    },
    {
      "name": "step",
      "buildsystem": "cmake-ninja",
      "sources": [
        {
          "type": "archive",
          "url": "https://download.kde.org/stable/release-service/23.08.2/src/step-23.08.2.tar.xz",
          "sha256": "a8da40fe090d6f45443fc0938401b424883c1ec991cfb392f6c4d961c25e5aaa",
          "x-checker-data": {
            "type": "anitya",
            "project-id": 8763,
            "stable-only": true,
            "url-template": "https://download.kde.org/stable/release-service/$version/src/step-$version.tar.xz"
          }
        }
      ]
    }
  ]
}
