{
  "id": "org.gtk.Gtk3theme.Flat-Remix-GTK-Red-Dark",
  "branch": "3.22",
  "runtime": "org.freedesktop.Platform",
  "build-extension": true,
  "sdk": "org.freedesktop.Sdk",
  "runtime-version": "19.08",
  "appstream-compose": false,
  "separate-locales": false,
  "modules": [
    {
      "name": "Flat-Remix-GTK-Red-Dark",
      "buildsystem": "simple",
      "build-commands": [
        "install -dm755 /usr/share/runtime/share/themes/Flat-Remix-GTK-Red-Dark/gtk-3.0",
        "cp -a Flat-Remix-GTK-Red-Dark/index.theme /usr/share/runtime/share/themes/Flat-Remix-GTK-Red-Dark/",
        "cp -a Flat-Remix-GTK-Red-Dark/gtk-3.0/** /usr/share/runtime/share/themes/Flat-Remix-GTK-Red-Dark/gtk-3.0"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/sp1ritCS/flat-remix-gtk.git",
	  "commit": "b3f6b2c"
        }
      ]
    },
    {
      "name": "appdata",
      "buildsystem": "simple",
      "build-commands": [
        "mkdir -p ${FLATPAK_DEST}/share/appdata",
        "cp org.gtk.Gtk3theme.Flat-Remix-GTK-Red-Dark.appdata.xml ${FLATPAK_DEST}/share/appdata",
        "appstream-compose --basename=org.gtk.Gtk3theme.Flat-Remix-GTK-Red-Dark --prefix=${FLATPAK_DEST} --origin=flatpak org.gtk.Gtk3theme.Flat-Remix-GTK-Red-Dark"
      ],
      "sources": [
        {
          "type": "file",
          "path": "org.gtk.Gtk3theme.Flat-Remix-GTK-Red-Dark.appdata.xml"
        }
      ]
  }
  ]
}
