<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>com.simplenote.Simplenote</id>
  
  <name>Simplenote</name>
  <summary>The simplest way to keep notes</summary>
  <url type="homepage">https://simplenote.com</url>
  
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-2.0-only</project_license>
  
  <content_rating type="oars-1.0">
    <content_attribute id="social-info">moderate</content_attribute>
  </content_rating>

  <recommends>
    <control>pointing</control>
    <control>keyboard</control>
    <control>touch</control>
  </recommends>
  
  <description>
    <p>
      Simplenote allows you to keep your notes updated across all your devices.
      You can organize your notes with custom tags to quickly search for your
      content. With Simplenote, you can share a note for collaboration or publish
      your notes online. Simplenote also has Markdown support, which allows you
      to preview and publish your notes in Markdown format.
    </p>
  </description>
  
  <launchable type="desktop-id">com.simplenote.Simplenote.desktop</launchable>
  <screenshots>
    <screenshot type="default">
      <image>https://github.com/rhjhunt/flathub/raw/com.simplenote.Simplenote/screenshots/simplenote1.png</image>
    </screenshot>
    <screenshot>
      <image>https://github.com/rhjhunt/flathub/raw/com.simplenote.Simplenote/screenshots/simplenote2.png</image>
    </screenshot>
    <screenshot>
      <image>https://github.com/rhjhunt/flathub/raw/com.simplenote.Simplenote/screenshots/simplenote3.png</image>
    </screenshot>
  </screenshots>

  <releases>
    <release date="2020-10-28" version="2.0.0" />
  </releases>
</component>