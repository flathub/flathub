{
    "app-id": "com.github.rajnisht7.PopSearch",
    "runtime": "org.gnome.Platform",
    "runtime-version": "44",
    "sdk": "org.gnome.Sdk",
    "command": "/app/search_bar.sh",
    "license": "MIT",
    "finish-args": [
        "--share=network",
        "--socket=x11",
        "--socket=wayland",
        "--filesystem=home"
        
    ],
    "modules": [
        {
            "name": "search-bar",
            "buildsystem": "simple",
            "build-commands": [
                "install -Dm755 search-bar.py /app/search-bar.py",
                "install -Dm755 search_bar.sh /app/search_bar.sh",
                "install -Dm644 data/PopSearch.desktop /app/share/applications/com.github.rajnisht7.PopSearch.desktop",
                "install -Dm644 data/com.github.rajnisht7.PopSearch.png /app/share/icons/hicolor/256x256/apps/com.github.rajnisht7.PopSearch.png",
                "mkdir -p /app/dependencies",
                "cp -r dependencies/* /app/dependencies/",
                "pip3 install --prefix=/app --no-index --find-links=/app/dependencies requests"

            ],
            "sources": [
                {
                    "type": "dir",
                    "path": "src"
                }
            ]
        }
    ]
}
