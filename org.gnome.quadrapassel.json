{
  "app-id": "org.gnome.quadrapassel",
  "runtime": "org.gnome.Platform",
  "runtime-version": "3.26",
  "sdk": "org.gnome.Sdk",
  "command": "quadrapassel",
  "rename-appdata-file": "quadrapassel.appdata.xml",
  "rename-desktop-file": "quadrapassel.desktop",
  "rename-icon": "quadrapassel",
  "copy-icon": true,
  "finish-args": [
    "--share=ipc", "--socket=x11",
    "--socket=wayland",
    "--device=dri", "--socket=pulseaudio",
    "--filesystem=xdg-run/dconf", "--filesystem=~/.config/dconf:ro",
    "--talk-name=ca.desrt.dconf", "--env=DCONF_USER_CONFIG_DIR=.config/dconf"
  ],
  "build-options" : {
    "cflags": "-O2 -g",
    "cxxflags": "-O2 -g"
  },
  "cleanup": [
    "/include", "/lib/pkgconfig",
    "/share/pkgconfig", "/share/aclocal",
    "/man", "/share/man", "/share/gtk-doc",
    "*.la", "*.a",
    "/lib/girepository-1.0",
    "/share/dbus-1", "/share/doc", "/share/gir-1.0"
  ],
  "modules": [
    {
      "name": "quadrapassel",
      "sources": [
        {
          "type": "archive",
          "url": "https://download.gnome.org/sources/quadrapassel/3.22/quadrapassel-3.22.0.tar.xz",
          "sha256": "0ed44ef73c8811cbdfc3b44c8fd80eb6e2998d102d59ac324e4748f5d9dddb55"
        }
      ]
    }
  ]
}
