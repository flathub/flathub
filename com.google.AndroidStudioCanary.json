{
    "app-id": "com.google.AndroidStudioCanary",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "20.08",
    "sdk": "org.freedesktop.Sdk",
    "sdk-extensions": [],
    "command": "android-studio",
    "finish-args": [
        "--socket=x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--socket=ssh-auth",
        "--share=ipc",
        "--share=network",
        "--device=all",
        "--filesystem=host",
        "--filesystem=xdg-run/keyring",
        "--allow=multiarch",
        "--env=JAVA_HOME=/app/extra/android-studio/jre",
        "--talk-name=org.freedesktop.Notifications",
        "--talk-name=org.freedesktop.secrets",
        "--talk-name=org.freedesktop.Flatpak"
    ],
    "modules": [
        {
            "name": "android-studio",
            "buildsystem": "simple",
            "build-commands": [
                "install -D apply_extra /app/bin/apply_extra",
                "install -D android-studio.sh /app/bin/android-studio",
                "install -Dm644 com.google.AndroidStudioCanary.png /app/share/icons/hicolor/128x128/apps/com.google.AndroidStudioCanary.png",
                "install -Dm644 com.google.AndroidStudioCanary.appdata.xml /app/share/appdata/com.google.AndroidStudioCanary.appdata.xml",
                "install -Dm644 com.google.AndroidStudioCanary.desktop /app/share/applications/com.google.AndroidStudioCanary.desktop"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "com.google.AndroidStudioCanary.desktop"
                },
                {
                    "type": "file",
                    "path": "com.google.AndroidStudioCanary.appdata.xml"
                },
                {
                    "type": "file",
                    "path": "com.google.AndroidStudioCanary.png"
                },
                {
                    "type": "extra-data",
                    "filename": "android-studio.tar.gz",
                    "size": 984074364, 
                    "only-arches": [
                        "x86_64"
                    ],
                    "url": "https://redirector.gvt1.com/edgedl/android/studio/ide-zips/2020.3.1.14/android-studio-2020.3.1.14-linux.tar.gz",
                    "sha256": "740d2e2275738b9c6de62c6cb2a8294a0fab3f1b2f97769cee9e39afb02203a9"
                },
                {
                    "type": "script",
                    "dest-filename": "apply_extra",
                    "commands": [
                        "tar xzf /app/extra/android-studio.tar.gz",
                        "rm -f /app/extra/android-studio.tar.gz"
                    ]
                },
                {
                    "type": "script",
                    "dest-filename": "android-studio.sh",
                    "commands": [
                        "if ! [ -n \"$XDG_CACHE_HOME\" ]; then export XDG_CACHE_HOME=$HOME/.cache; fi",
                        "export _JAVA_OPTIONS=-Djava.io.tmpdir=$XDG_CACHE_HOME",
                        "exec env \"PATH=$PATH:$EXTRA_PATH\" /app/extra/android-studio/bin/studio.sh"
                    ]
                }
            ]
        },
        {
            "name": "git",
            "make-args": [
                "NO_TCLTK=1",
                "INSTALL_SYMLINKS=1"
            ],
            "make-install-args": [
                "NO_TCLTK=1",
                "INSTALL_SYMLINKS=1"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://mirrors.edge.kernel.org/pub/software/scm/git/git-2.30.0.tar.xz",
                    "sha256": "55735021109565721af805af382c45cce73c3cfaa59daad22443d1477d334d19"
                }
            ]
        },
        {
            "name": "git-lfs",
            "buildsystem": "simple",
            "build-commands": [
                "PREFIX=$FLATPAK_DEST ./install.sh"
            ],
            "sources": [
                {
                    "type": "archive",
                    "strip-components": 0,
                    "url": "https://github.com/git-lfs/git-lfs/releases/download/v2.13.2/git-lfs-linux-amd64-v2.13.2.tar.gz",
                    "sha256": "7913f267c84518860551384313ece6f2e72cb5a18cf9987189a087108346267d"
                }
            ]
        },
        {
            "name": "gpg",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://www.gnupg.org/ftp/gcrypt/gnupg/gnupg-2.2.27.tar.bz2",
                    "sha256": "34e60009014ea16402069136e0a5f63d9b65f90096244975db5cea74b3d02399"
                }
            ]
        },
        "shared-modules/libsecret/libsecret.json"
    ]
}
