{
    "id" : "dev.bragefuglseth.Keypunch",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "46",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command" : "keypunch",
    "finish-args" : [
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/rust-stable/bin"
    },
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
    	{
	  "name" : "blueprint-compiler",
	  "buildsystem" : "meson",
	  "cleanup" : ["*"],
	  "sources" : [
	    {
	      "type" : "git",
	      "url" : "https://gitlab.gnome.org/jwestman/blueprint-compiler",
	      "tag" : "v0.12.0"
	    }
	  ]
	},
        {
            "name" : "keypunch",
            "builddir" : true,
            "buildsystem" : "meson",
            "config-opts": [
                "-Dbuildtype=release",
                "-Dsandboxed=true"
            ],
            "run-tests" : true,
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/bragefuglseth/keypunch.git",
                    "tag" : "v1.0",
                    "commit" : "655b21979a28100def963ca085de5302831d74b1"
                },
                "cargo-sources.json"
            ]
        }
    ]
}
