{
    "app-id": "com.ekitabu.eKitabu",
    "base": "org.electronjs.Electron2.BaseApp",
    "base-version": "21.08",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "21.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "ekitabu",
    "separate-locales": false,
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=pulseaudio",
        "--share=network",
        "--device=all",
        "--filesystem=xdg-documents:ro",
        "--filesystem=xdg-pictures:ro",
        "--filesystem=xdg-music:ro",
        "--filesystem=xdg-videos:ro",
        "--filesystem=xdg-download",
        "--talk-name=org.freedesktop.Notifications",
        "--env=XDG_CURRENT_DESKTOP=Unity",
        "--talk-name=org.kde.StatusNotifierWatcher",
        "--filesystem=xdg-run/pipewire-0",
        "--talk-name=com.canonical.AppMenu.Registrar"
    ],
    "modules": [
        {
            "name": "ekitabu",
            "buildsystem": "simple",
            "build-commands": [
                "install apply_extra ${FLATPAK_DEST}/bin",
                "install ekitabu.sh ${FLATPAK_DEST}/bin/ekitabu",
                "install -Dm644 com.ekitabu.eKitabu.appdata.xml ${FLATPAK_DEST}/share/appdata/${FLATPAK_ID}.appdata.xml",
                "install -Dm644 ekitabu.png ${FLATPAK_DEST}/share/icons/hicolor/512x512/apps/${FLATPAK_ID}.png",
                "install -Dm644 ekitabu.desktop ${FLATPAK_DEST}/share/applications/${FLATPAK_ID}.desktop",
                "desktop-file-edit --set-key=\"Icon\" --set-value=\"com.ekitabu.eKitabu\" ${FLATPAK_DEST}/share/applications/${FLATPAK_ID}.desktop",
                "desktop-file-edit --set-key=\"Exec\" --set-value=\"ekitabu %U\" ${FLATPAK_DEST}/share/applications/${FLATPAK_ID}.desktop",
                "desktop-file-edit --set-key=\"StartupWMClass\" --set-value=\"eKitabu\" ${FLATPAK_DEST}/share/applications/${FLATPAK_ID}.desktop",
                "desktop-file-edit --set-key=\"X-Flatpak-RenamedFrom\" --set-value=\"ekitabu.desktop;\" ${FLATPAK_DEST}/share/applications/${FLATPAK_ID}.desktop",
                "install -Dm755 /usr/bin/ar -t ${FLATPAK_DEST}/bin",
                "install -Dm755 /usr/lib/$(gcc -print-multiarch)/libbfd-*.so -t ${FLATPAK_DEST}/lib"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "com.eKitabu.appdata.xml"
                },
                {
                    "type": "file",
                    "path": "ekitabu.png"
                },
                {
                    "type": "file",
                    "path": "ekitabu.desktop"
                },
                {
                    "type": "extra-data",
                    "filename": "ekitabu.deb",
                    "only-arches": [
                        "x86_64"
                    ],
                    "url": "https://downloads.slack-edge.com/releases/linux/4.26.1/prod/x64/slack-desktop-4.26.1-amd64.deb",
                    "sha256": "1460e1b02d300b3cb98299d407ed9bed5b96357f375e71dacb1ba7300e989202",
                    "size": 76245298,
                    "x-checker-data": {
                        "type": "html",
                        "url": "https://github.com/ekitabu-LLC/flathub/releases/tag/4.0.1",
                        "version-pattern": "Version ([\\d\\.]+)",
                        "url-template": "https://github.com/ekitabu-LLC/flathub/releases/download/4.0.1/eKitabu_4.5.7_amd64.deb",
                        "is-main-source": true
                    }
                }
            ]
        }
    ]
}