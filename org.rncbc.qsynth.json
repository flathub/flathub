{
  "app-id": "org.rncbc.qsynth",
  "runtime": "org.kde.Platform",
  "runtime-version": "6.2",
  "sdk": "org.kde.Sdk",
  "command": "qsynth",
  "rename-icon": "qsynth",
  "rename-desktop-file": "qsynth.desktop",
  "finish-args": [
    /* X11 + XShm access */
    "--share=ipc",
    "--socket=x11",
    /* Note playback */
    "--socket=pulseaudio",
    /* MIDI */
    "--device=all",
    /* Allow loading, saving files from anywhere (portals donâ€™t work yet) */
    "--filesystem=home",
    /* Allow other instances to see lockfiles */
    "--env=TMPDIR=/var/tmp",
    /* On SuSE it seems to be necessary for sound to work */
    "--env=ALSA_CONFIG_PATH="
  ],
  "cleanup": [
    "/share/man",
    "/share/doc",
    "*.la"
  ],
  "modules": [
    "shared-modules/linux-audio/jack2.json",
    "shared-modules/linux-audio/libinstpatch.json",
    "shared-modules/linux-audio/fluidsynth2.json",
    {
      "name": "qsynth",
      "buildsystem": "cmake-ninja",
      "post-install": [
        "install src/appdata/qsynth.appdata.xml -D /app/share/metainfo/${FLATPAK_ID}.xml"
      ],
      "sources": [
        {
          "type":   "archive",
          "url":    "https://downloads.sourceforge.net/project/qsynth/qsynth/0.9.4/qsynth-0.9.4.tar.gz",
          "sha256": "76580890c75eeeebf852530a10f86d67b31f49305ced1bc7b3e436ca4f86fc93"
        }
      ]
    }
  ]
}
