<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>com.github.th3cavalry.linux-armoury</id>
  <name>Linux Armoury</name>
  <summary>System control center for ASUS ROG laptops</summary>
  <developer id="com.github.th3cavalry">
    <name>th3cavalry</name>
  </developer>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-3.0-or-later</project_license>
  <description>
    <p>
      Linux Armoury is a modern control center for ASUS ROG
      and other ASUS gaming laptops, compatible across a wide range of models.
    </p>
    <p>Features:</p>
    <ul>
      <li>Power profile management with TDP control (10W-90W)</li>
      <li>Display refresh rate management (30Hz-180Hz)</li>
      <li>System monitoring (CPU temperature, battery status)</li>
      <li>Light/dark theme support</li>
      <li>System tray integration</li>
      <li>Plugin system for extensibility</li>
    </ul>
  </description>
  <launchable type="desktop-id">com.github.th3cavalry.linux-armoury.desktop</launchable>
  <url type="homepage">https://github.com/th3cavalry/Linux-Armoury</url>
  <url type="bugtracker">https://github.com/th3cavalry/Linux-Armoury/issues</url>
  <content_rating type="oars-1.1" />
  <provides>
    <binary>linux-armoury-gui</binary>
    <binary>linux-armoury-daemon</binary>
  </provides>
  <requires>
    <display_length compare="ge">360</display_length>
  </requires>
  <supports>
    <control>pointing</control>
    <control>keyboard</control>
    <control>touch</control>
  </supports>
  <releases>
    <release version="1.0.0" date="2025-12-17">
      <description>
        <p>Major Rust Rewrite Release:</p>
        <ul>
          <li>Complete rewrite from Python to Rust for improved performance and stability</li>
          <li>New Rust daemon with D-Bus API for hardware control</li>
          <li>Modern Tauri-based GUI framework</li>
          <li>Enhanced power management with CPU/GPU controls</li>
          <li>Custom fan curve support</li>
          <li>Keyboard RGB and lighting effects</li>
          <li>Battery charge limiting</li>
          <li>Real-time system monitoring</li>
        </ul>
      </description>
    </release>
  </releases>
</component>
