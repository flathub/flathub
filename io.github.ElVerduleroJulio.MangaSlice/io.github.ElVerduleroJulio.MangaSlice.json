{
  "app-id": "io.github.ElVerduleroJulio.MangaSlice",
  "runtime": "org.kde.Platform",
  "runtime-version": "6.7",
  "sdk": "org.kde.Sdk",
  "base": "com.riverbankcomputing.PyQt.BaseApp",
  "base-version": "6.7",
  "command": "crop_webtoon_gui.py",
  "finish-args": [
    "--socket=wayland",
    "--socket=fallback-x11",
    "--device=dri",
    "--filesystem=home"
  ],
  "modules": [
    {
      "name": "python3-Pillow",
      "buildsystem": "simple",
      "build-commands": [
        "pip3 install --verbose --exists-action=i --no-index --find-links=\"file://${PWD}\" --prefix=${FLATPAK_DEST} \"Pillow\" --no-build-isolation"
      ],
      "sources": [
        {
          "type": "file",
          "url": "https://files.pythonhosted.org/packages/af/cb/bb5c01fcd2a69335b86c22142b2bccfc3464087efb7fd382eee5ffc7fdf7/pillow-11.2.1.tar.gz",
          "sha256": "a64dd61998416367b7ef979b73d3a85853ba9bec4c2925f74e588879a58716b6"
        }
      ]
    },
    {
      "name": "mangaslice",
      "buildsystem": "simple",
      "build-commands": [
        "install -Dm755 crop_webtoon_gui.py /app/bin/crop_webtoon_gui.py",
        "install -Dm644 io.github.ElVerduleroJulio.MangaSlice.desktop /app/share/applications/io.github.ElVerduleroJulio.MangaSlice.desktop",
        "install -Dm644 io.github.ElVerduleroJulio.MangaSlice.appdata.xml /app/share/metainfo/io.github.ElVerduleroJulio.MangaSlice.appdata.xml",
        "install -Dm644 MangaSliceIcon.png /app/share/icons/hicolor/256x256/apps/io.github.ElVerduleroJulio.MangaSlice.png"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/ElVerduleroJulio/MangaSlice.git",
          "tag": "v1.0.0"
        }
      ]
    }
  ]
}

