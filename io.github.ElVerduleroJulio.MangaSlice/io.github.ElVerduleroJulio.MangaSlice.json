{
  "app-id": "io.github.ElVerduleroJulio.MangaSlice",
  "runtime": "org.kde.Platform",
  "runtime-version": "6.7",
  "sdk": "org.kde.Sdk",
  "base": "com.riverbankcomputing.PyQt.BaseApp",
  "base-version": "6.7",
  "command": "crop_webtoon_gui.py",
  "finish-args": [
    "--socket=wayland",
    "--socket=fallback-x11",
    "--device=dri",
    "--filesystem=home"
  ],
  "modules": [
    {
      "name": "python3-Pillow",
      "buildsystem": "simple",
      "build-commands": [
        "pip3 install --no-index --find-links=\"file://${PWD}\" --prefix=${FLATPAK_DEST} pillow-11.2.1-cp311-cp311-manylinux_2_28_x86_64.whl"
      ],
      "sources": [
        {
          "type": "file",
          "path": "pillow-11.2.1-cp311-cp311-manylinux_2_28_x86_64.whl",
          "sha256": "8f4f3724c068be008c08257207210c138d5f3731af6c155a81c2b09a9eb3a788"
        }
      ]
    },
    {
      "name": "mangaslice",
      "buildsystem": "simple",
      "build-commands": [
        "install -Dm755 crop_webtoon_gui.py /app/bin/crop_webtoon_gui.py",
        "install -Dm644 io.github.ElVerduleroJulio.MangaSlice.desktop /app/share/applications/io.github.ElVerduleroJulio.MangaSlice.desktop",
        "install -Dm644 io.github.ElVerduleroJulio.MangaSlice.appdata.xml /app/share/metainfo/io.github.ElVerduleroJulio.MangaSlice.appdata.xml",
        "install -Dm644 io.github.ElVerduleroJulio.MangaSlice.png /app/share/icons/hicolor/256x256/apps/io.github.ElVerduleroJulio.MangaSlice.png"
      ],
      "sources": [
        {
          "type": "file",
          "path": "io.github.ElVerduleroJulio.MangaSlice.desktop"
        },
        {
          "type": "file",
          "path": "io.github.ElVerduleroJulio.MangaSlice.appdata.xml"
        },
        {
          "type": "file",
          "path": "io.github.ElVerduleroJulio.MangaSlice.png"
        },
        {
          "type": "git",
          "url": "https://github.com/ElVerduleroJulio/MangaSlice.git",
          "tag": "v1.0.0"
        }
      ]
    }
  ]
}
