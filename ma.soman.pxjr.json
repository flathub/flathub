{
  "app-id": "ma.soman.pxjr",
  "id": "ma.soman.pxjr",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "24.08",
  "sdk": "org.freedesktop.Sdk",
  "command": "PixelJr",
  "finish-args": [
    "--share=network",
    "--share=ipc",
    "--socket=x11",
    "--socket=wayland",
    "--device=dri",
    "--filesystem=home:ro"
  ],
  "modules": [
    {
      "name": "PixelJunior",
      "buildsystem": "simple",
      "build-commands": [
        "install -Dm755 'PixelJr' '/app/bin/PixelJr'",
        "install -Dm644 'ma.soman.pxjr.desktop' '/app/share/applications/ma.soman.pxjr.desktop'",
        "install -Dm644 'ma.soman.pxjr.png' '/app/share/icons/hicolor/512x512/apps/ma.soman.pxjr.png'",
        "cp -r * /app/bin/"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/medhallal/PixelJr-flathub/releases/download/6.1.3/PixelJr-6.1.3-x86_64.tar.gz",
          "sha256": "4c81eae55cfe9c5b6341ba17ebac94e4cdc4ac34863512137dfdb0ec8867942c"
        }
      ]
    }
  ]
}

