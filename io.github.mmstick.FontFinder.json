{
  "id": "io.github.mmstick.FontFinder",
  "branch": "stable",
  "runtime": "org.gnome.Platform",
  "runtime-version": "3.28",
  "sdk": "org.gnome.Sdk",
  "sdk-extensions": [
    "org.freedesktop.Sdk.Extension.rust-stable"
  ],
  "build-options": {
    "append-path": "/usr/lib/sdk/rust-stable/bin"
  },
  "command": "fontfinder",
  "rename-icon": "typecatcher",
  "copy-icon": true,
  "finish-args": [
    "--share=ipc",
    "--share=network",
    "--socket=x11",
    "--socket=wayland",
    "--filesystem=xdg-data/fonts:create"
  ],
  "modules": [
    {
      "name": "fontfinder",
      "buildsystem": "simple",
      "build-commands": [
        "cargo build --release",
        "install -D target/release/fontfinder /app/bin/fontfinder",
        "install -Dm644 fontfinder.desktop /app/share/applications/io.github.mmstick.FontFinder.desktop",
        "install -Dm644 io.github.mmstick.FontFinder.appdata.xml /app/share/metainfo/io.github.mmstick.FontFinder.appdata.xml",
        "install -Dm644 typecatcher.svg /app/share/icons/hicolor/scalable/apps/typecatcher.svg"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/mmstick/fontfinder/releases/download/1.3.2/fontfinder-vendored.tar.xz",
          "sha256": "f4b9a65e7e9f38a268fea5e3f7cfe3457701c4d290adcd1db72d9c8b68d5607b"
        },
        {
          "type": "file",
          "path": "io.github.mmstick.FontFinder.appdata.xml"
        },
        {
          "type": "file",
          "url": "https://raw.githubusercontent.com/andrewsomething/typecatcher/f8b55b9b599e4d16a05a55492f4942ecee1e8b9a/data/media/typecatcher.svg",
          "sha256": "40a7dd44f20c3cb8380866bf3e7151a13a694cb07d989256c8a79670a4ba9c3c"
        }
      ]
    }
  ]
}