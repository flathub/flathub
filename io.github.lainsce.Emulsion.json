{
    "app-id" : "io.github.lainsce.Emulsion",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "40",
    "sdk" : "org.gnome.Sdk",
    "command" : "io.github.lainsce.Emulsion",
    "rename-icon" : "io.github.lainsce.Emulsion",
    "finish-args" : [
        "--filesystem=xdg-download",
        "--socket=wayland",
        "--socket=fallback-x11",
        "--socket=session-bus",
        "--share=ipc",
        "--device=dri"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "/share/vala",
        "*.la",
        "*.a"
    ],
    "modules" : [
    	{
	    "name": "libsass",
	    "sources": [
		{
		    "type" : "archive",
		    "url" : "https://github.com/sass/libsass/archive/3.6.4.tar.gz",
		    "sha256": "f9484d9a6df60576e791566eab2f757a97fd414fce01dd41fc0a693ea5db2889"
		},
		{
		    "type" : "script",
		    "dest-filename" : "autogen.sh",
		    "commands" : [ "autoreconf -si" ]
		}
	    ]
	},
	{
	    "name": "sassc",
	    "sources": [
		{
		    "type" : "archive",
		    "url" : "https://github.com/sass/sassc/archive/3.6.1.tar.gz",
		    "sha256": "8cee391c49a102b4464f86fc40c4ceac3a2ada52a89c4c933d8348e3e4542a60"
		},
		{
		    "type" : "script",
		    "dest-filename" : "autogen.sh",
		    "commands" : [ "autoreconf -si" ]
		}
	    ]
	},
	{
            "name" : "libadwaita",
            "buildsystem": "meson",
            "config-opts" : [
                "-Dvapi=true",
                "-Dexamples=false",
                "-Dtests=false"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/libadwaita.git",
                    "branch" : "main",
                    "commit" : "4b633f1fb7d3973b3f8bc4dcd41fb676670ccd21"
                }
            ]
        },
        {
            "name" : "emulsion",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://github.com/lainsce/emulsion/archive/1.0.0.zip",
                    "sha256" : "3c8e77cfb7bda729463bfafaa89122a97e3e864daec1e027f59e85e0427ae502"
                }
            ]
        }
    ]
}
