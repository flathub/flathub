{
    "id": "org.kde.kphotoalbum",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-21.08",
    "base": "io.qt.qtwebengine.BaseApp",
    "base-version": "5.15-21.08",
    "sdk": "org.kde.Sdk",
    "command": "kphotoalbum",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--share=network",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--filesystem=xdg-pictures"
    ],
    "cleanup": [
        "*.a",
        "*.la",
        "/include",
        "/lib/cmake",
        "/lib/pkgconfig",
        "/share/man"
    ],

    "modules": [
        {
            "name": "exiv2",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [
                "-DBUILD_SHARED_LIBS=ON",
                "-DEXIV2_ENABLE_XMP=ON",
                "-DEXIV2_ENABLE_EXTERNAL_XMP=OFF",
                "-DEXIV2_ENABLE_PNG=ON",
                "-DEXIV2_ENABLE_NLS=ON",
                "-DEXIV2_ENABLE_PRINTUCS2=ON",
                "-DEXIV2_ENABLE_LENSDATA=ON",
                "-DEXIV2_ENABLE_VIDEO=OFF",
                "-DEXIV2_ENABLE_WEBREADY=OFF",
                "-DEXIV2_ENABLE_DYNAMIC_RUNTIME=OFF",
                "-DEXIV2_ENABLE_CURL=OFF",
                "-DEXIV2_ENABLE_SSH=OFF",
                "-DEXIV2_BUILD_SAMPLES=OFF",
                "-DEXIV2_BUILD_PO=OFF",
                "-DEXIV2_BUILD_EXIV2_COMMAND=OFF",
                "-DEXIV2_BUILD_UNIT_TESTS=OFF",
                "-DEXIV2_BUILD_DOC=OFF",
                "-DEXIV2_TEAM_EXTRA_WARNINGS=OFF",
                "-DEXIV2_TEAM_WARNINGS_AS_ERRORS=OFF",
                "-DEXIV2_TEAM_USE_SANITIZERS=OFF",
                "-DEXIV2_ENABLE_WIN_UNICODE=OFF"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://www.exiv2.org/builds/exiv2-0.27.5-Source.tar.gz",
                    "sha256": "35a58618ab236a901ca4928b0ad8b31007ebdc0386d904409d825024e45ea6e2"
                }
            ]
        },
        {
            "name": "libraw",
            "builddir": true,
            "config-opts": [
                "--disable-examples",
                "--disable-static"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://www.libraw.org/data/LibRaw-0.20.2.tar.gz",
                    "sha256": "dc1b486c2003435733043e4e05273477326e51c3ea554c6864a4eafaff1004a6"
                },
                {
                    "type": "shell",
                    "commands": [ "autoreconf -vfi" ]
                }
            ]
        },
        {
            "name": "marble",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [
                "-DBUILD_TESTING=OFF"
            ],
            "post-install": [
                "rm /app/share/applications/org.kde.marble-qt.desktop"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/21.12.1/src/marble-21.12.1.tar.xz",
                    "sha256": "568b6d9ab39683f6a2ca4ea78daaf4ca66db7eb13ca587333f54291e17831c49"
                }
            ],
            "modules": [
                {
                    "name": "protobuf",
                    "buildsystem": "autotools",
                    "sources": [
                        {
                            "type": "archive",
                            "url": "https://github.com/protocolbuffers/protobuf/releases/download/v3.19.3/protobuf-cpp-3.19.3.tar.gz",
                            "sha256": "f0cc6ae9119d4891d72bc72d44ae73308d6e2319e2ce96c10c22d2508c55c922"
                        }
                    ]
                },
                {
                    "name": "wireless-tools",
                    "buildsystem": "simple",
                    "subdir": "wireless_tools",
                    "build-commands": [
                        "make",
                        "make INSTALL_DIR=\"${FLATPAK_DEST}/bin\" INSTALL_LIB=\"${FLATPAK_DEST}/lib\" INSTALL_INC=\"${FLATPAK_DEST}/include\" INSTALL_MAN=\"${FLATPAK_DEST}/share/man\" install"
                    ],
                    "sources": [
                        {
                            "type": "archive",
                            "url": "https://github.com/HewlettPackard/wireless-tools/archive/refs/tags/v29.tar.gz",
                            "sha256": "69c5face9ac9d3273042436408a9a057d3416a814253dedeaaef210fcbc42d40"
                        }
                    ],
                    "cleanup": [
                        "/share/man",
                        "/bin"
                    ]
                },
                {
                    "name": "libwlocate",
                    "buildsystem": "simple",
                    "subdir": "master",
                    "build-commands": [
                        "make -f Makelib",
                        "make",
                        "install -D libwlocate.so ${FLATPAK_DEST}/lib/libwlocate.so",
                        "install -D libwlocate.h ${FLATPAK_DEST}/include/libwlocate.h"
                    ],
                    "sources": [
                        {
                            "type": "archive",
                            "url": "https://github.com/openwifi-su/lwlocate/archive/refs/tags/v0.1.tar.gz",
                            "sha256": "791899f4890fa88553b4e8417376187d7d533ead962f5fe51f598b6ed9a2c258"
                        }
                    ]
                },
                {
                    "name": "krunner",
                    "buildsystem": "cmake-ninja",
                    "sources": [
                        {
                            "type": "archive",
                            "url": "https://download.kde.org/stable/frameworks/5.89/krunner-5.89.0.tar.xz",
                            "sha256": "1db396b1ddd5232122ea0bfdbf96402c10221dca1ab668188f8e3f33c7b09f87"
                        }
                    ]
                },
                {
                    "name": "shapelib",
                    "buildsystem": "autotools",
                    "sources": [
                        {
                            "type": "archive",
                            "url": "http://download.osgeo.org/shapelib/shapelib-1.5.0.tar.gz",
                            "sha256": "1fc0a480982caef9e7b9423070b47750ba34cd0ba82668f2e638fab1d07adae1"
                        }
                    ]
                }
            ]
        },
        {
            "name": "libkdcraw",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DBUILD_TESTING=OFF"
            ],
            "builddir": true,
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/21.12.1/src/libkdcraw-21.12.1.tar.xz",
                    "sha256": "9a6b20220b94144d495351e8ed65b61291a13dc6e59716fa599b93de027f4ebc"
                }
            ]
        },
        {
            "name": "kphotoalbum",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/kphotoalbum/5.8.1/kphotoalbum-5.8.1.tar.xz",
                    "sha256": "acbb0ec72ba2879cfea9a2b8d3f4a7e8be7c61021e9ac7c32871d18723b3f8ee"
                },
                {
                    "type": "patch",
                    "path": "appdata.patch"
                }
            ]
        }
    ]
}
