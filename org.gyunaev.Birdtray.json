{
    "app-id": "org.gyunaev.Birdtray",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.13",
    "sdk": "org.kde.Sdk",
    "command": "birdtray",
    "finish-args": [
      "--share=ipc",
      "--socket=x11",
      "--socket=wayland",
      "--device=dri",
      "--filesystem=~/.thunderbird:ro",
      "--filesystem=~/.var/app/org.mozilla.Thunderbird/.thunderbird:ro",
      "--talk-name=org.freedesktop.Flatpak",
      "--talk-name=org.freedesktop.Notifications",
      "--talk-name=org.kde.StatusNotifierWatcher",
      "--own-name=org.kde.StatusNotifierItem-2-2"
    ],
    "modules": [
        {
            "name": "birdtray",
            "buildsystem": "qmake",
            "subdir": "src",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/gyunaev/birdtray.git",
                    "commit": "f529663e5488f3f7f05d5d1ddeffec8267c0da87"
                },
                {
                    "type": "patch",
                    "path": "thunderbird-spawn.patch"
                }
            ]
        },
        {
            "name": "thunderbird-spawn",
            "buildsystem": "simple",
            "build-commands": [
                "install -D thunderbird /app/bin/thunderbird"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "thunderbird"
                }
            ]
        },
        {
            "name": "appdata",
            "buildsystem": "simple",
            "build-commands": [
                "install -D org.gyunaev.Birdtray.appdata.xml /app/share/metainfo/org.gyunaev.Birdtray.appdata.xml"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "org.gyunaev.Birdtray.appdata.xml"
                }
            ]
        }
    ]
}
