{
    "app-id": "org.getmonero.Wallet",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "1.6",
    "branch": "stable",
    "sdk": "org.freedesktop.Sdk",
    "command": "monero-wallet-gui",
    "finish-args": [
        /* X11 + XShm access */
        "--share=ipc", "--socket=x11",

        /* Needs to talk to the network: */
        "--share=network",

        /* Needed for dconf to work */
        "--filesystem=home:rw"

    ],
    "cleanup": ["/include", "/lib/pkgconfig",
                "/share/pkgconfig", "/share/aclocal",
                "/man", "/share/man", 
                "*.la", "*.a"],
    "modules": [
        {
            "name": "monero-core-gui",
            "buildsystem": "simple",
            "build-commands": [ "pwd", "find .", "mkdir /app/lib", "mv monero-gui-0.11.0.0/qml /app/lib/qml", "mv monero-gui-0.11.0.0/plugins /app/lib/plugins", "mv monero-gui-0.11.0.0 /app/bin"], 
            "sources": [
                {
                    "type": "archive",
                    "url": "https://downloads.getmonero.org/gui/monero-gui-linux-x64-v0.11.0.0.tar.bz2",
                    "sha256": "25bdeeb9072b679eda4aca2a5dac0351393d6bd8ceed1822bf65495ab6d113bf"
                }
            ]
        },
        {
            "name": "extras",
            "buildsystem": "simple",
            "build-commands": [ "find .", "mkdir -p /app/share/appdata", "cp org.getmonero.Wallet.appdata.xml /app/share/appdata",
                "mkdir -p /app/share/icons/hicolor/256x256/apps/", "cp org.getmonero.Wallet.png /app/share/icons/hicolor/256x256/apps/", 
                "mkdir -p /app/share/applications/", "cp org.getmonero.Wallet.desktop /app/share/applications/"],
            "sources": [
                {
                    "type": "file",
                    "path": "org.getmonero.Wallet.appdata.xml"
                },
                {
                    "type": "file",
                    "path": "org.getmonero.Wallet.desktop"
                },
                {
                    "type": "file",
                    "path": "org.getmonero.Wallet.png"
                }
            ]
        }
    ]
}
