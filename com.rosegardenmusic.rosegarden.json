{
  "app-id": "com.rosegardenmusic.rosegarden",
  "runtime": "org.kde.Platform",
  "runtime-version": "5.15",
  "sdk": "org.kde.Sdk",
  "command": "rosegarden",
  "rename-appdata-file": "rosegarden.appdata.xml",
  "rename-icon": "rosegarden",
  "finish-args": [
    /* X11 + XShm access */
    "--share=ipc",
    "--socket=x11",
    "--env=QT_QPA_PLATFORM=xcb",
    /* Note playback */
    "--socket=pulseaudio",
    /* MIDI */
    "--device=all",
    /* For pipewire */
    "--filesystem=xdg-run/pipewire-0",
    "--socket=system-bus",
    /* Allow loading, saving files from anywhere (portals donâ€™t work yet) */
    "--filesystem=home",
    /* Allow other instances to see lockfiles */
    "--env=TMPDIR=/var/tmp",
    "--env=QT_AUTO_SCREEN_SCALE_FACTOR=1",
    /* On SuSE it seems to be necessary for sound to work */
    "--env=ALSA_CONFIG_PATH=",
    "--env=DSSI_PATH=/app/extensions/Plugins/dssi",
    "--env=LADSPA_PATH=/app/extensions/Plugins/ladspa"
  ],
  "add-extensions": {
    "org.freedesktop.LinuxAudio.Plugins": {
        "directory": "extensions/Plugins",
        "version": "20.08",
        "add-ld-path": "lib",
        "merge-dirs": "ladspa;dssi",
        "subdirectories": true,
        "no-autodownload": true
    }
  },
  "cleanup": [
    "/share/aclocal",
    "/share/man",
    "/share/doc",
    "/share/info",
    "/share/gtk-doc",
    "/include",
    "/lib/pkgconfig",
    "/lib/cmake",
    "/lib/jack",
    "/lib/libjack*",
    "*.la"
  ],
  "modules": [
    "shared-modules/linux-audio/lrdf.json",
    "shared-modules/linux-audio/jack2.json",
    "shared-modules/linux-audio/liblo.json",
    "shared-modules/linux-audio/fftw3f.json",
    "shared-modules/linux-audio/dssi.json",
    {
      "name": "rosegarden",
      "buildsystem": "cmake-ninja",
      "post-install": [
        "install -d /app/extensions/Plugins"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://downloads.sourceforge.net/project/rosegarden/rosegarden/20.06/rosegarden-20.06.tar.bz2",
          "sha256": "d94c0eb0e28c51662d9056c7e50e5b394a8648442a17dacf99b9718e674e3dc5"
        },
        {
          "type": "patch",
          "path": "rosegarden-qt515.patch"
        }
      ]
    }
  ]
}
