{
	"app-id": "de.thejackimonster.KnockKnock",
	"runtime": "org.gnome.Platform",
	"runtime-version": "48",
	"sdk": "org.gnome.Sdk",
	"command": "knock-knock",
	"finish-args": [
		"--socket=wayland",
		"--socket=fallback-x11",
		"--share=network",
		"--socket=ssh-auth",
		"--filesystem=host-os",
		"--env=PATH=/app/bin:/usr/bin:/run/host/usr/bin:/run/host/bin"
	],
	"modules": [
		{
			"name": "knock-knock",
			"buildsystem": "simple",
			"build-commands": [
				"./scripts/install.sh /app"
			],
			"sources": [
				{
					"type": "archive",
					"url": "https://gitlab.com/TheJackiMonster/knock-knock/-/archive/v1.0.2/knock-knock-v1.0.2.tar.gz",
					"sha512": "40ec6a0b0ddc5536971a86e3d239be33b5613eabe36375704835a120d5f3e949f3172de05a1dcefafdb1284fc276c1955a6af2d33ad9767f47f5b208304e4722",
					"x-checker-data": {
						"type": "html",
						"url": "https://gitlab.com/TheJackiMonster/knock-knock/-/releases",
						"version-pattern": ">v([\\d\\.]+)</a>",
						"url-template": "https://gitlab.com/TheJackiMonster/knock-knock/-/archive/v$version/knock-knock-v$version.tar.gz",
						"is-main-source": true
					}
				}
			]
		}
	]
}
