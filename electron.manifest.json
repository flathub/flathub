{
  "executable": "OPS",
  "splashscreen": {
    "imageFile": "/wwwroot/Images/calcula-splash.png"
  },
  "name": "CalculaPro",
  "author": "Alejandro Penate-Diaz <alejandro.penate@calculapro.com>",
  "license":"GPL-3.0",
  "description": "Cross-platform tree-based alternative to spreadsheets.",
  "repository":{
    "url":"https://github.com/alexware69/Calcula-Pro"
  },
  "singleInstance": false,
  "environment": "Production",
  "build": {
    "appId": "com.CalculaPro.app",
    "productName": "Calcula Pro",
    "extraMetadata": {
      "name": "Calcula Pro"
    },
    "copyright": "Copyright Â© 2024 Alejandro Penate-Diaz",
    "buildVersion": "1.8.4",
    "compression": "maximum",
    "directories": {
      "output": "../../../bin/Desktop"
    },
    "extraResources": [
      {
        "from": "./bin",
        "to": "bin",
        "filter": [ "**/*" ]
      }
    ],
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "universal"
          ]
        }
      ],
      "extendInfo": {
        "ElectronTeamID": "7U9U8QP2GU"
      },
      "asar":true,
      "mergeASARs": true,
      "x64ArchFiles": "OPS",
      "gatekeeperAssess": false,
      "icon": "../../../../wwwroot/Images/Icon.icns"
    },
    "win": {
      "target": [
        {
          "target": "default",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "../../../../wwwroot/Images/ops-win.png"
    },
    "linux": {
      "category": "Productivity",
      "target": [
        {
          "target": 
            "flatpak",
          "arch": [
                "x64",
                "arm64"
          ]
        }
      ]
    },
    "files": [
      {
        "from": "./ElectronHostHook/node_modules",
        "to": "ElectronHostHook/node_modules",
        "filter": [ "**/*" ]
      },
      "**/*"
    ]
  }
}
