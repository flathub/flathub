{
	"app-id": "com.adilhanney.no_more_background",
	"runtime": "org.freedesktop.Platform",
	"runtime-version": "25.08",
	"sdk": "org.freedesktop.Sdk",
	"command": "no_more_background",
	"separate-locales": false,
	"finish-args": [
		"--share=ipc",
		"--share=network",
		"--socket=fallback-x11",
		"--socket=wayland",
		"--device=all",
		"--filesystem=~/Android/Sdk/platform-tools/:ro",
		"--env=PATH=~/Android/Sdk/platform-tools:/app/bin:/usr/bin"
	],
	"modules": [
		{
			"name": "no_more_background",
			"buildsystem": "simple",
			"build-commands": [
				"mkdir -p /app",
				"tar -xf NoMoreBackground_*.tar.gz -C /app",
				"mkdir -p /app/bin",
				"ln -s /app/no_more_background /app/bin/no_more_background"
			],
			"sources": [
				{
					"type": "file",
					"url": "https://github.com/adil192/no_more_background/releases/download/v0.1.0/NoMoreBackground_Linux_x86_64.tar.gz",
					"sha256": "cc5b299879b9b7c215b1697baf507c3fd058bd1e826920ddd7056ee0d59f2d2c",
					"only-arches": [
						"x86_64"
					],
					"x-checker-data": {
						"type": "json",
						"url": "https://api.github.com/repos/adil192/no_more_background/releases/latest",
						"version-query": ".tag_name",
						"url-query": ".assets[] | select(.name==\"NoMoreBackground_Linux_x86_64.tar.gz\") | .browser_download_url"
					}
				},
				{
					"type": "file",
					"url": "https://github.com/adil192/no_more_background/releases/download/v0.1.0/NoMoreBackground_Linux_arm64.tar.gz",
