{
    "name": "python-cryptography",
    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin",
        "env": [
            "CARGO_HOME=/run/build/python-cryptography/cargo"
        ]
    },
    "buildsystem": "simple",
    "build-commands": [
        "python setup.py build",
        "python setup.py install --skip-build --prefix=${FLATPAK_DEST} --root=/ --optimize=1"
    ],
    "sources": [
        {
            "type": "archive",
            "url": "https://github.com/pyca/cryptography/archive/36.0.2.tar.gz",
            "sha256": "1326924f5ff5073b2621e57891d195be7220ce34a34dafec3c1053e970d24975"
        },
        "cargo-sources.json"
    ],
    "modules": [
        "python-setuptools-rust/python-setuptools-rust.json"
    ]
}