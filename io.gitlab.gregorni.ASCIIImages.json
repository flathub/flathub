{
    "app-id" : "io.gitlab.gregorni.ASCIIImages",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "44",
    "sdk" : "org.gnome.Sdk",
    "command" : "asciiimages",
    "finish-args" : [
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
    	{
	    "name": "blueprint-compiler",
	    "buildsystem": "meson",
            "cleanup" : [ "*" ],
	    "sources": [
	    	{
		    "type": "git",
		    "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler",
		    "tag": "v0.6.0"
	    	}
	     ]
	},
        {
            "name" : "jp2a",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/Talinx/jp2a.git",
                    "commit" : "988ec7c519ed4b439c13358726559e53ebbdaf3c"
                },
                {
                    "type" : "shell",
                    "commands": [
                        "autoreconf -vfi"
                    ]
                }
            ]
        },
        {
            "name" : "asciiimages",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.com/gregorni/asciiimages",
                    "tag" : "1.0.1",
                    "commit" : "12610f1803ee8f4b8e1f79e41f8187d5471b3a22"
                }
            ]
        }
    ]
}
