{
    "app-id" : "io.gitlab.gregorni.ASCIIImages",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "44",
    "sdk" : "org.gnome.Sdk",
    "command" : "asciiimages",
    "finish-args" : [
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
    	{
	    "name": "blueprint-compiler",
	    "buildsystem": "meson",
	    "sources": [
	    	{
		    "type": "git",
		    "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler",
		    "tag": "v0.6.0"
	    	}
	     ]
	},
	{
            "name" : "jpeglib",
            "builddir" : true,
            "buildsystem" : "simple",
            "build-commands" : [
            	"./configure --prefix=/app/local",
            	"make",
            	"make install"
            ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://www.ijg.org/files/jpegsrc.v9e.tar.gz",
                    "sha256" : "4077d6a6a75aeb01884f708919d25934c93305e49f7e3f36db9129320e6f4f3d"
                }
            ]
        },
        {
            "name" : "jp2a",
            "builddir" : true,
            "buildsystem" : "simple",
            "build-commands" : [
            	"autoreconf -vi",
            	"./configure --prefix=/app --with-jpeg-prefix=/app --enable-curl",
            	"make",
            	"make install"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/Talinx/jp2a.git"
                }
            ]
        },
        {
            "name" : "asciiimages",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.com/gregorni/asciiimages",
                    "tag" : "1.0.0",
                    "commit" : "4b93c8aabeff7d851ca731e1ecb3b0eadd701f3a"
                }
            ]
        }
    ]
}

