{
    "app-id": "com.jetbrains.Intellij-Community",
    "runtime": "org.freedesktop.Sdk",
    "runtime-version": "1.6",
    "sdk": "org.freedesktop.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.openjdk9"
    ],
    "command": "intellij-desktop",
    "separate-locales": false,
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--share=network",
        "--device=dri",
        "--filesystem=host",
        "--talk-name=org.freedesktop.Notifications",
        "--talk-name=org.freedesktop.secrets",
        "--filesystem=xdg-run/keyring",
        "--env=PATH=/usr/bin:/app/bin:/usr/lib/sdk/openjdk9/bin"
    ],
    "modules": [
          {
              "name": "openjdk",
              "buildsystem": "simple",
              "build-commands": [
                "/usr/lib/sdk/openjdk9/install.sh"
              ]
          },
          {
            "name": "intellij",
            "buildsystem": "simple",
            "build-commands": [
                "tar xzfv ideaIC-2017.3.5.tar.gz",
                "rm -f ideaIC-2017.3.5/idea-IC-173.4674.33/bin/fsnotifier*",
                "install -dm755 /app/bin",
                "install -dm755 /app/intellij",
                "ls -la",
                "cp -r idea-IC-173.4674.33/* /app/intellij",
                "chmod -R a-s,go+rX,go-w /app/intellij",
                "install idea-IC-173.4674.33/bin/idea.sh /app/bin/intellij",

                "install -Dm644 idea-IC-173.4674.33/bin/idea.png /app/share/icons/hicolor/96x96/apps/com.jetbrains.Intellij-Community.png",
                "install -Dm644 com.jetbrains.Intellij-Community.desktop /app/share/applications/com.jetbrains.Intellij-Community.desktop",
                "install -Dm644 com.jetbrains.Intellij-Community.appdata.xml /app/share/appdata/com.jetbrains.Intellij-Community.appdata.xml",
                "install -m755 intellij-desktop /app/bin/intellij-desktop"
            ],
            "sources": [
                {
                    "type": "file",
                    "url": "https://download.jetbrains.com/idea/ideaIC-2017.3.5.tar.gz",
                    "sha256": "f5569605f52a93e122e4b92b61e4e2ffc0ad263562794e29f478116708fb9988"
                },
                {
                    "type": "file",
                    "path": "com.jetbrains.Intellij-Community.appdata.xml"
                },
                {
                    "type": "file",
                    "path": "com.jetbrains.Intellij-Community.desktop"
                },
                {
                    "type": "script",
                    "dest-filename": "intellij-desktop",
                    "commands": [
                        "exec env IDEA_JDK=/usr/lib/sdk/openjdk9 IDEA_VM_OPTIONS=/app/intellij/bin/idea64.vmoptions /app/intellij/bin/idea.sh \"$@\""
                    ]
                }
            ]
        }
    ]
}