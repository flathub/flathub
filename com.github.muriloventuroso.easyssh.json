{
    "app-id": "com.github.muriloventuroso.easyssh",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.28",
    "sdk": "org.gnome.Sdk",
    "command": "com.github.muriloventuroso.easyssh",
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=x11",
        "--device=dri",
        "--socket=wayland",
        "--filesystem=home",
        "--talk-name=ca.desrt.dconf",
        "--env=DCONF_USER_CONFIG_DIR=.config/dconf",
        "--filesystem=xdg-run/dconf",
        "--filesystem=~/.config/dconf:ro"
    ],
    "build-options": {
        "env": {
            "PKG_CONFIG_GOBJECT_INTROSPECTION_1_0_GIRDIR": "/app/share/gir-1.0",
            "PKG_CONFIG_GOBJECT_INTROSPECTION_1_0_TYPELIBDIR": "/app/lib/girepository-1.0"
        },
        "cflags": "-O2",
        "cxxflags": "-O2"
    },

    "modules": [
        {
            "name": "openssh",
            "config-opts": ["--without-pie"],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://cloudflare.cdn.openbsd.org/pub/OpenBSD/OpenSSH/portable/openssh-7.6p1.tar.gz",
                    "sha256": "a323caeeddfe145baaa0db16e98d784b1fbc7dd436a6bf1f479dfd5cd1d21723"
                }
            ]
        },

        {
            "name": "libgee",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/GNOME/libgee/archive/0.20.0.tar.gz",
                    "sha256": "42fe6d651910cb8b720167f71c5255a1b7b1afc82fecd3f31e61f9602b3b1335"
                }
            ]
        },
        {
            "name": "libvte",
            "sources": [
                {
                    "type": "archive",
                    "url": "http://ftp.acc.umu.se/pub/gnome/sources/vte/0.45/vte-0.45.92.tar.xz",
                    "sha256": "9cfcde5f5000c02f75f8d67cf2770edcccde6916ae30d7601fbfb2aebbb6af03"
                }
            ]
        },
        
        {
            "name": "granite",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "cleanup": [
                "/bin",
                "/include",
                "/share/vala",
                "/share/gir-1.0",
                "/share/applications",
                "/lib/pkgconfig",
                "/lib/girepository-1.0",
                "/lib/*.la"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/elementary/granite/archive/0.5.zip",
                    "sha256": "96ea42c8f7765d574eca62a68ae614b91bfa8e898fa450e3748e7711f879eb7f"
                }
            ]
        },

        {
            "name": "easyssh",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/muriloventuroso/easyssh/archive/1.2.2.tar.gz",
                    "sha256": "afea6fae8da95b57fdfed5da32981ac399a50bf79762211c2f620c4a9953f3a8"
                }
            ],
             "post-install": [
                 "glib-compile-schemas /app/share/glib-2.0/schemas/"
             ]
        }
    ]
}
