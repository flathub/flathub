import os
import sys
import signal
import locale
import gettext

VERSION = '@VERSION@'
pkgdatadir = '@pkgdatadir@'
localedir = '@localedir@'

sys.path.insert(1, pkgdatadir)
signal.signal(signal.SIGINT, signal.SIG_DFL)
locale.bindtextdomain('clinicalayudante', localedir)
locale.textdomain('clinicalayudante')
gettext.install('clinicalayudante', localedir)

if __name__ == '__main__':
    import gi

    from gi.repository import Gio
    resource = Gio.Resource.load(os.path.join(pkgdatadir, 'clinicalayudante.gresource'))
    resource._register()

    from clinicalayudante import main
    sys.exit(main.main(VERSION))
