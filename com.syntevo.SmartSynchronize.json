{
  "app-id": "com.syntevo.SmartSynchronize",
  "command": "smartsynchronize",
  "runtime": "org.gnome.Platform",
  "runtime-version": "3.28",
  "separate-locales": false,
  "sdk": "org.gnome.Sdk",
  "finish-args": [
    "--device=dri",
    "--env=SMARTSYNCHRONIZE_JAVA_HOME=/app/extra/smartsynchronize/jre",
    "--filesystem=host",
    "--share=ipc",
    "--socket=x11",
    "--talk-name=org.freedesktop.Notifications"
  ],
  "modules": [
    {
      "name": "smartsynchronize",
      "buildsystem": "simple",
      "build-commands": [
        "install -Dm0755 apply_extra /app/bin/apply_extra",
        "install -Dm0755 smartsynchronize.sh /app/bin/smartsynchronize",
        "install -Dm0644 smartsynchronize-32.png /app/share/icons/hicolor/32x32/apps/com.syntevo.SmartSynchronize.png",
        "install -Dm0644 smartsynchronize-48.png /app/share/icons/hicolor/48x48/apps/com.syntevo.SmartSynchronize.png",
        "install -Dm0644 smartsynchronize-64.png /app/share/icons/hicolor/64x64/apps/com.syntevo.SmartSynchronize.png",
        "install -Dm0644 smartsynchronize-128.png /app/share/icons/hicolor/128x128/apps/com.syntevo.SmartSynchronize.png",
        "install -Dm0644 smartsynchronize-256.png /app/share/icons/hicolor/256x256/apps/com.syntevo.SmartSynchronize.png",
        "install -Dm0644 -t /app/share/appdata/ com.syntevo.SmartSynchronize.appdata.xml",
        "install -Dm0644 -t /app/share/applications/ com.syntevo.SmartSynchronize.desktop"
      ],
      "sources": [
        {
          "type": "file",
          "path": "com.syntevo.SmartSynchronize.appdata.xml"
        },
        {
          "type": "file",
          "path": "com.syntevo.SmartSynchronize.desktop"
        },
        {
          "type": "file",
          "path": "smartsynchronize-32.png"
        },
        {
          "type": "file",
          "path": "smartsynchronize-48.png"
        },
        {
          "type": "file",
          "path": "smartsynchronize-64.png"
        },
        {
          "type": "file",
          "path": "smartsynchronize-128.png"
        },
        {
          "type": "file",
          "path": "smartsynchronize-256.png"
        },
        {
          "type": "extra-data",
          "filename": "smartsynchronize.tar.gz",
          "only-arches": ["x86_64"],
          "size": 24334245,
          "url": "https://www.syntevo.com/downloads/smartsynchronize/smartsynchronize-linux-3_5_0.tar.gz",
          "sha256": "2ff97e7433ca78bdfb2ce62409e624b94f9bcd8b76d603c2493db307df1acb9d"
        },
        {
          "type": "script",
          "commands": [
            "tar -xzf smartsynchronize.tar.gz",
            "rm -f smartsynchronize.tar.gz"
          ],
          "dest-filename": "apply_extra"
        },
        {
          "type": "script",
          "commands": ["exec env /app/extra/smartsynchronize/bin/smartsynchronize.sh \"$@\""],
          "dest-filename": "smartsynchronize.sh"
        }
      ]
    }
  ]
}
