{
    "id" : "io.github.htkhiem.Euphonica",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "48",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.rust-stable",
        "org.freedesktop.Sdk.Extension.llvm19"
    ],
    "command" : "euphonica",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
        "--talk-name=org.freedesktop.secrets",
        "--filesystem=xdg-run/pipewire-0:ro"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/rust-stable/bin"
    },
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "euphonica",
            "builddir" : true,
            "buildsystem" : "meson",
            "config-opts": [
                "--buildtype=release"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/htkhiem/euphonica.git",
                    "commit": "048d22d5694ce78d78e0fa527a629902d0c6b875"
                },
                "cargo-sources.json",
                {
                    "type": "shell",
                    "commands": [
                        "mkdir -p .cargo",
                        "cp -vf cargo/config .cargo/"
                    ]
                }
            ],
            "build-options": {
                "env": {
                    "CARGO_NET_OFFLINE": "true"
                },
                "append-path": "/usr/lib/sdk/llvm19/bin",
                "prepend-ld-library-path": "/usr/lib/sdk/llvm19/lib"
            }
        }
    ]
}
