{
  "app-id": "net.sourceforge.dmidiplayer",
  "runtime": "org.kde.Platform",
  "runtime-version": "5.15",
  "sdk": "org.kde.Sdk",
  "command": "dmidiplayer",
  "rename-icon": "dmidiplayer",
  "finish-args": [
    /* X11 + XShm access */
    "--share=ipc",
    "--socket=x11",
    /* Note playback */
    "--socket=pulseaudio",
    /* MIDI */
    "--device=all",
    /* Allow loading, saving files from anywhere (portals donâ€™t work yet) */
    "--filesystem=home",
    /* Allow other instances to see lockfiles */
    "--env=TMPDIR=/var/tmp",
    /* On SuSE it seems to be necessary for sound to work */
    "--env=ALSA_CONFIG_PATH="
  ],
  "cleanup": [
    "/share/man",
    "/share/doc",
    "/share/gtk-doc",
    "*.la"
  ],
  "modules": [
    "shared-modules/linux-audio/fluidsynth2.json",
    {
      "name": "drumstick",
      "buildsystem": "cmake-ninja",
      "config-opts": [
        "-DBUILD_DOCS=OFF",
        "-DBUILD_UTILS=OFF",
        "-DBUILD_TESTING=OFF"
      ],
      "cleanup": [
        "/bin",
        "/include",
        "/lib/cmake",
        "/lib/plugins",
        "/lib/pkgconfig",
        "/share/mime",
        "/share/icons/hicolor/*/apps",
        "*.desktop",
        "/lib/*.so"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://downloads.sourceforge.net/project/drumstick/2.2.0/drumstick-2.2.0.tar.bz2",
          "sha256": "62dbacfe480bd81b34bd140644ea093bd78eea56a33926902d58f0b05e18ca96"
        }
      ]
    },
    {
      "name": "uchardet",
      "buildsystem": "cmake-ninja",
      "config-opts": [
        "-DBUILD_STATIC=OFF"
      ],
      "cleanup": [
        "/bin",
        "/include",
        "/lib/pkgconfig",
        "/share",
        "/lib/*.so"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://www.freedesktop.org/software/uchardet/releases/uchardet-0.0.7.tar.xz",
          "sha256": "3fc79408ae1d84b406922fa9319ce005631c95ca0f34b205fad867e8b30e45b1"
        }
      ]
    },
    {
      "name": "dmidiplayer",
      "buildsystem": "cmake-ninja",
      "post-install": [
        "install -Dm644 -t /app/share/metainfo/ net.sourceforge.dmidiplayer.appdata.xml"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "http://downloads.sourceforge.net/project/dmidiplayer/v1.3.0/dmidiplayer-1.3.0.tar.bz2",
          "sha256": "80674e0c23f3f7e8bcc4f3ec2c706ade58118bd5bb5af3ec66b984700b503d06"
        }
      ]
    }
  ]
}
