Date: Fri, 3 Feb 2023 14:30:41 +0100
Subject: [PATCH] Workaround Cargo 1.67 workspace vendoring

Cargo currently breaks down when vendoring workspaces:

https://github.com/rust-lang/cargo/issues/11192
---
 Cargo.toml | 15 ++++++++++++++-
 1 file changed, 14 insertions(+), 1 deletion(-)

diff --git a/Cargo.toml b/Cargo.toml
index 986b74a..b200b29 100644
--- a/Cargo.toml
+++ b/Cargo.toml
@@ -1,10 +1,23 @@
 [workspace]
 members = ["src-tauri"]
 
+[workspace.package]
+edition = "2021"
+rust-version = "1.59"
+authors = [ "you" ]
+license = ""
+
+[workspace.dependencies]
+log = "0.4.17"
+serde_json = "1.0"
+serde = { version = "1.0", features = [ "derive" ] }
+tauri = { version = "1.2.4", features = ["shell-open", "updater", "window-maximize", "window-start-dragging", "window-unmaximize"] }
+thiserror = "1.0.38"
+
 [profile.release]
 codegen-units = 1
 incremental = false
 lto = true
 opt-level = "s"
 panic = "abort"
-strip = true
\ No newline at end of file
+strip = true
