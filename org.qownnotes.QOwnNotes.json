{
	"app-id": "org.qownnotes.QOwnNotes",
	"runtime": "org.kde.Platform",
	"runtime-version": "5.10",
	"sdk": "org.kde.Sdk",
	"command": "QOwnNotes",
	"rename-desktop-file": "PBE.QOwnNotes.desktop",
	"rename-icon": "QOwnNotes",
	"finish-args": [
		"--socket=x11",
		"--share=network",
		"--device=dri",
		"--filesystem=home"
	],
	"modules": [
		{
			"name": "QOwnNotes",
			"buildsystem": "simple",
			"subdir": "src",
			"build-commands": [
				"echo #define RELEASE \"Flatpak\" > release.h",
				"qmake PREFIX=/app",
				"make -j4",
				"make install",
				"install -Dm644 ../org.qownnotes.QOwnNotes.appdata.xml /app/share/appdata/org.qownnotes.QOwnNotes.appdata.xml"
			],
			"sources": [
				{
					"type": "git",
					"url": "https://github.com/pbek/QOwnNotes",
					"tag": "linux-b3632-171559",
					"commit": "4c8f78cc4797161f21f17556662c37a2f5784664"
				},
				{
					"type": "file",
					"path": "org.qownnotes.QOwnNotes.appdata.xml"
				}
			]
		}
	]
}
