{
	"app-id": "org.qownnotes.QOwnNotes",
	"runtime": "org.kde.Platform",
	"runtime-version": "5.10",
	"sdk": "org.kde.Sdk",
	"command": "QOwnNotes",
	"rename-desktop-file": "QOwnNotes.desktop",
	"rename-icon": "QOwnNotes",
	"finish-args": [
		"--socket=x11",
		"--share=network",
		"--device=dri",
		"--filesystem=home"
	],
	"modules": [
		{
			"name": "QOwnNotes",
			"buildsystem": "simple",
			"subdir": "src",
			"build-commands": [
				"qmake PREFIX=/app",
				"make -j4",
				"make install"
			],
			"sources": [
				{
					"type": "git",
					"url": "https://github.com/pbek/QOwnNotes",
					"branch": "master"
				}
			]
		}
	]
}
