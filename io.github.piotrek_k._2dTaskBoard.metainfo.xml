<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
    <id>io.github.piotrek_k._2dTaskBoard</id>

    <name>2dTaskBoard</name>
    <summary>Task management productivity app with markdown support</summary>

    <metadata_license>CC-BY-4.0</metadata_license>
    <project_license>GPL-3.0-only</project_license>

    <url type="homepage">https://piotrek-k.pl/2dTaskBoard</url>
    <url type="bugtracker">https://github.com/piotrek-k/2dTaskBoard/issues</url>

    <supports>
        <control>pointing</control>
        <control>keyboard</control>
        <control>touch</control>
    </supports>

    <description>
        <p>With 2dTaskBoard app, you can track the progress of your daily chores. Main features: </p>
        <ul>
            <li>Board is 2-dimentional so you can move tasks between both rows and columns</li>
            <li>Filesystem based - you can store your data as files and synchronize it using cloud
                providers or track changes with git</li>
            <li>Markdown support - rich text formatting </li>
            <li>Mermaid graphs support</li>
            <li>Attachments - you can attach files to your tasks</li>
            <li>Compatibility with Obsidian - you can open your tasks there and even link them to
                your existing notes </li>
        </ul>
    </description>

    <launchable type="desktop-id">io.github.piotrek_k._2dTaskBoard.desktop</launchable>

    <releases>
        <release version="0.4.1" date="2025-03-15">
            <description></description>
        </release>
    </releases>

    <developer id="pl.piotrek-k">
        <name>Piotr Kozerski</name>
    </developer>

    <screenshots>
        <screenshot type="default">
            <image>https://raw.githubusercontent.com/piotrek-k/flathub/refs/heads/my-app-submission/screenshots/board_view.png</image>
            <caption>Board view - you can drag and drop tasks on a 2-dimentional board</caption>
        </screenshot>
        <screenshot>
            <image>https://raw.githubusercontent.com/piotrek-k/flathub/refs/heads/my-app-submission/screenshots/task_view.png</image>
            <caption>Task view - you can add details to the task here. You can use markdown and add attachments.</caption>
        </screenshot>
    </screenshots>

