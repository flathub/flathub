{
    "id": "org.freedesktop.Sdk.Extension.php83",
    "branch": "23.08",
    "runtime": "org.freedesktop.Sdk",
    "sdk": "org.freedesktop.Sdk",
    "runtime-version": "23.08",
    "sdk-extensions": [],
    "build-extension": true,
    "separate-locales": false,
    "appstream-compose": false,
    "build-options": {
        "no-debuginfo": true,
        "strip": true,
        "prefix": "/usr/lib/sdk/php83",
        "prepend-path": "/usr/lib/sdk/php83/bin",
        "prepend-ld-library-path": "/usr/lib/sdk/php83/lib",
        "prepend-pkg-config-path": "/usr/lib/sdk/php83/lib/pkgconfig",
        "env": {
            "PHP_INI_DIR": "/usr/lib/sdk/php83/etc/php"
        }
    },
    "modules": [
        {
            "name": "libzip",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DBUILD_TOOLS=OFF",
                "-DBUILD_EXAMPLES=OFF",
                "-DBUILD_DOC=OFF"
            ],
            "cleanup": [
                "/include",
                "/lib/cmake",
                "/lib/pkgconfig",
                "*.a",
                "*.la"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/nih-at/libzip/releases/download/v1.10.1/libzip-1.10.1.tar.xz",
                    "sha256": "dc3c8d5b4c8bbd09626864f6bcf93de701540f761d76b85d7c7d710f4bd90318",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 10649,
                        "stable-only": true,
                        "url-template": "https://github.com/nih-at/libzip/releases/download/v$version/libzip-$version.tar.xz"
                    }
                }
            ],
            "post-install": [
                "install -Dm644 LICENSE ${FLATPAK_DEST}/share/licenses/libzip/LICENSE"
            ]
        },
        {
            "name": "php",
            "buildsystem": "autotools",
            "config-opts": [
                "--enable-libgcc",
                "--enable-option-checking=fatal",
                "--with-config-file-path=/usr/lib/sdk/php83/etc/php",
                "--with-config-file-scan-dir=/usr/lib/sdk/php83/etc/php/conf.d:/app/etc/php:/var/config/php/8.3/ini",
                "--disable-cgi",
                "--enable-intl",
                "--enable-mbstring",
                "--enable-opcache",
                "--enable-pcntl",
                "--with-bz2",
                "--with-curl",
                "--with-openssl",
                "--with-system-ciphers",
                "--with-zip",
                "--with-zlib"
            ],
            "post-install": [
                "install -Dm644 php.ini-development ${PHP_INI_DIR}/php.ini",
                "install -Dm644 opcache.ini ${PHP_INI_DIR}/conf.d/10-opcache.ini",
                "install -Dm644 LICENSE ${FLATPAK_DEST}/share/licenses/php/LICENSE"
            ],
            "cleanup": [
                "/include",
                "/php",
                "*.a",
                "*.la"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://www.php.net/distributions/php-8.3.9.tar.xz",
                    "sha256": "bf4d7b8ea60a356064f88485278bd6f941a230ec16f0fc401574ce1445ad6c77",
                    "x-checker-data": {
                        "type": "json",
                        "url": "https://www.php.net/releases/index.php?json&version=8.3&max=1",
                        "version-query": "keys[0]",
                        "url-query": "\"https://www.php.net/distributions/php-\" + $version + \".tar.xz\"",
                        "is-main-source": true
                    }
                },
                {
                    "type": "file",
                    "path": "files/php/opcache.ini"
                }
            ]
        },
        {
            "name": "apcu",
            "buildsystem": "autotools",
            "config-opts": [
                "--with-php-config=/usr/lib/sdk/php83/bin/php-config"
            ],
            "post-install": [
                "install -Dm755 modules/apcu.so $(php -r 'echo ini_get(\"extension_dir\");')/apcu.so",
                "install -Dm644 apcu.ini ${PHP_INI_DIR}/conf.d/40-apcu.ini",
                "install -Dm644 LICENSE ${FLATPAK_DEST}/share/licenses/apcu/LICENSE"
            ],
            "cleanup": [
                "/include",
                "*.a"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/krakjoe/apcu/archive/v5.1.23.tar.gz",
                    "sha256": "1adcb23bb04d631ee410529a40050cdd22afa9afb21063aa38f7b423f8a8335b",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 11010,
                        "stable-only": true,
                        "url-template": "https://github.com/krakjoe/apcu/archive/v$version.tar.gz"
                    }
                },
                {
                    "type": "file",
                    "path": "files/apcu/apcu.ini"
                },
                {
                    "type": "shell",
                    "commands": [
                        "${FLATPAK_DEST}/bin/phpize"
                    ]
                }
            ]
        },
        {
            "name": "xdebug",
            "buildsystem": "autotools",
            "config-opts": [
                "--with-php-config=/usr/lib/sdk/php83/bin/php-config"
            ],
            "post-install": [
                "install -Dm755 modules/xdebug.so $(php -r 'echo ini_get(\"extension_dir\");')/xdebug.so",
                "install -Dm644 xdebug.ini ${PHP_INI_DIR}/conf.d/15-xdebug.ini",
                "install -Dm644 LICENSE ${FLATPAK_DEST}/share/licenses/xdebug/LICENSE"
            ],
            "cleanup": [
                "/include",
                "*.a",
                "*.la"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://xdebug.org/files/xdebug-3.3.2.tgz",
                    "sha256": "15545b8311bedb5e7df08fd90d6653d9bf33629791e8119e70350475df932c55",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 13302,
                        "stable-only": true,
                        "url-template": "https://xdebug.org/files/xdebug-$version.tgz"
                    }
                },
                {
                    "type": "file",
                    "path": "files/xdebug/xdebug.ini"
                },
                {
                    "type": "shell",
                    "commands": [
                        "${FLATPAK_DEST}/bin/phpize"
                    ]
                }
            ]
        },
        {
            "name": "composer",
            "buildsystem": "simple",
            "build-commands": [
                "install -Dm755 composer.phar ${FLATPAK_DEST}/bin/composer"
            ],
            "sources": [
                {
                    "type": "file",
                    "url": "https://getcomposer.org/download/2.7.7/composer.phar",
                    "sha256": "06e4c4bc6d32b8975174f4f4a0a93476d8907da92a1484c5a8ef138897a760e1",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 9710,
                        "stable-only": true,
                        "url-template": "https://getcomposer.org/download/$version/composer.phar"
                    }
                }
            ]
        },
        {
            "name": "phive",
            "buildsystem": "simple",
            "build-commands": [
                "install -Dm0755 phive.phar ${FLATPAK_DEST}/bin/phive"
            ],
            "sources": [
                {
                    "type": "file",
                    "url": "https://github.com/phar-io/phive/releases/download/0.15.2/phive-0.15.2.phar",
                    "sha256": "2bb076753ec5d672f5e2f96a97a0fe7e8e9ec24a439eed00fd29ef942c7905f9",
                    "dest-filename": "phive.phar",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 143959,
                        "stable-only": true,
                        "url-template": "https://github.com/phar-io/phive/releases/download/$version/phive-$version.phar"
                    }
                }
            ]
        },
        {
            "name": "scripts",
            "buildsystem": "simple",
            "build-commands": [
                "cp enable.sh ${FLATPAK_DEST}/"
            ],
            "sources": [
                {
                    "type": "script",
                    "dest-filename": "enable.sh",
                    "commands": [
                        "export PATH=$PATH:/usr/lib/sdk/php83/bin:/var/config/composer/vendor/bin"
                    ]
                }
            ]
        },
        {
            "name": "appdata",
            "buildsystem": "simple",
            "build-commands": [
                "install -Dm0644 ${FLATPAK_ID}.metainfo.xml ${FLATPAK_DEST}/share/metainfo/${FLATPAK_ID}.metainfo.xml",
                "appstream-compose --basename=${FLATPAK_ID} --prefix=${FLATPAK_DEST} --origin=flatpak ${FLATPAK_ID}"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "org.freedesktop.Sdk.Extension.php83.metainfo.xml"
                }
            ]
        }
    ]
}
