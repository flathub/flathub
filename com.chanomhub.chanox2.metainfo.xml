<component type="desktop-application">
  <id>com.chanomhub.chanox2</id>
  
  <name>ChanoX2</name>
  <summary>Desktop application for ChanomHub - Game Launcher</summary>
  
  <developer id="com.chanomhub">
    <name>ChanomHub</name>
  </developer>
  
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>LicenseRef-proprietary=https://chanomhub.com/legal</project_license>
  
  <description>
    <p>
      ChanoX2 is the desktop application for ChanomHub, providing a seamless 
      experience to discover, download, and play games.
    </p>
    <p>Features include:</p>
    <ul>
      <li>Game Management - Browse library, install, update, and launch games</li>
      <li>Real-time Notifications - Stay updated with new content and system alerts</li>
      <li>Multilingual Support - Thai and English interface</li>
      <li>Modern UI - Sleek, responsive interface with dark theme</li>
    </ul>
  </description>
  
  <launchable type="desktop-id">com.chanomhub.chanox2.desktop</launchable>
  
  <url type="homepage">https://chanomhub.com</url>
  <url type="bugtracker">https://github.com/Chanomhub/ChanoX2/issues</url>
  <url type="vcs-browser">https://github.com/Chanomhub/ChanoX2</url>
  
  <screenshots>
    <screenshot type="default">
      <image>https://raw.githubusercontent.com/Chanomhub/ChanoX2/main/screenshots/home.png</image>
      <caption>Home screen with featured games</caption>
    </screenshot>
  </screenshots>
  
  <releases>
    <release version="1.4.1" date="2024-12-30">
      <description>
        <p>Added Flatpak packaging support</p>
      </description>
    </release>
    <release version="1.4.0" date="2024-12-29">
      <description>
        <p>Initial Flathub release</p>
        <ul>
          <li>Game launcher and library management</li>
          <li>Real-time notifications</li>
          <li>Thai and English language support</li>
        </ul>
      </description>
    </release>
  </releases>
  
  <content_rating type="oars-1.1">
