{
    "app-id" : "com.sweethome3d.Sweethome3d",
    "branch": "stable",
    "runtime" : "org.freedesktop.Platform",
    "runtime-version" : "19.08",
    "sdk" : "org.freedesktop.Sdk",
    "command" : "SweetHome3D",
    "finish-args" : [
        "--share=ipc",
        "--socket=x11",
        "--socket=pulseaudio",
        "--device=dri",
        "--filesystem=home"
    ],
    "modules" : [
        {
            "name": "sweethome3d",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir /app/lib/",
                "cp -r ./ /app/lib/sweethome3d/",
                "mkdir -p /app/bin/",
                "ln -s /app/lib/sweethome3d/SweetHome3D /app/bin/",
                "install -Dm644 SweetHome3DIcon.png /app/share/icons/com.sweethome3d.Sweethome3d.png",
                "install -Dm644 com.sweethome3d.Sweethome3d.desktop /app/share/applications/com.sweethome3d.Sweethome3d.desktop",
                "install -Dm644 com.sweethome3d.Sweethome3d.metainfo.xml /app/share/metainfo/com.sweethome3d.Sweethome3d.metainfo.xml",
                "mkdir -p /app/share/mime/packages/",
                "install -m644 -p -t /app/share/mime/packages com.sweethome3d.Sweethome3d.mime.xml",
                "update-mime-database /app/share/mime"
            ],
            "sources" : [
                {
                    "type": "archive",
                    "only-arches": ["x86_64"],
                    "sha256": "5c2090b16c32e52637e87a48197a13d30a0322940949431bbb898b7b082cfca6",
                    "url": "https://downloads.sourceforge.net/project/sweethome3d/SweetHome3D/SweetHome3D-6.2/SweetHome3D-6.2-linux-x64.tgz"
                },
                {
                    "type": "file",
                    "path": "com.sweethome3d.Sweethome3d.desktop"
                },
                {
                    "type": "file",
                    "path": "com.sweethome3d.Sweethome3d.metainfo.xml"
                },
                {
                    "type": "file",
                    "path": "com.sweethome3d.Sweethome3d.mime.xml"
                }
            ]
        }
    ]
}
