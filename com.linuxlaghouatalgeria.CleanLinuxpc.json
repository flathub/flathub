{
  "app-id": "com.linuxlaghouatalgeria.CleanLinuxpc",
  "runtime": "org.kde.Platform",
  "runtime-version": "6.7",
  "sdk": "org.kde.Sdk",
  "command": "CleanLinuxpc",
  "finish-args": [
    "--share=ipc",
    "--socket=wayland",
    "--socket=fallback-x11",
    "--device=dri",
    "--filesystem=home", 
    "--filesystem=host",
    "--talk-name=org.freedesktop.Notifications"
  ],
  "cleanup": [
    "/include",
    "/lib/pkgconfig",
    "/share/pkgconfig",
    "/share/man",
    "/share/doc"
  ],
  "modules": [
    {
      "name": "CleanLinuxpc",
      "buildsystem": "cmake-ninja",
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/LinuxLaghouatAlgeria/CleanLinuxpc.git",
          "tag": "v1.0.0" 
        }
      ]
    }
  ]
}
