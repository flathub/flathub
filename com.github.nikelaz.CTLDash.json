{
  "app-id": "com.github.nikelaz.CTLDash",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "24.08",
  "sdk": "org.freedesktop.Sdk",
  "sdk-extensions": [
    "org.freedesktop.Sdk.Extension.rust-stable"
  ],
  "command": "ctl-dash",
  "finish-args": [
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--device=dri",
    "--talk-name=org.freedesktop.systemd1",
    "--system-talk-name=org.freedesktop.systemd1",
    "--filesystem=xdg-config/systemd:ro",
    "--filesystem=/etc/systemd:ro",
    "--filesystem=/usr/lib/systemd:ro",
    "--filesystem=/run/systemd:ro"
  ],
  "build-options": {
    "append-path": "/usr/lib/sdk/rust-stable/bin",
    "env": {
      "CARGO_HOME": "/run/build/ctl-dash/cargo"
    }
  },
  "modules": [
    {
      "name": "ctl-dash",
      "buildsystem": "simple",
      "build-commands": [
        "tar -pxf vendor.tar",
        "cargo build --frozen --offline --release",
        "install -Dm755 target/release/ctl-dash -t /app/bin/",
        "install -Dm644 resources/com.github.nikelaz.CTLDash.desktop /app/share/applications/com.github.nikelaz.CTLDash.desktop",
        "install -Dm644 resources/com.github.nikelaz.CTLDash.metainfo.xml /app/share/metainfo/com.github.nikelaz.CTLDash.metainfo.xml",
        "install -Dm644 resources/icons/hicolor/scalable/apps/icon.svg /app/share/icons/hicolor/scalable/apps/com.github.nikelaz.CTLDash.svg"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/nikelaz/ctl-dash/archive/refs/tags/v1.0.0.tar.gz",
          "sha256": "e254e03cd759b2da649d76f8c15bbd005a3e4471c12e65cfaef7e28910e76e4e"
        },
        {
          "type": "file",
          "url": "https://github.com/nikelaz/ctl-dash/releases/download/v1.0.0/vendor.tar",
          "sha256": "5f9a6d06170ab6b38824a999291c63a56d8a40f764963b1510e232bb58802b94"
        },
        {
          "type": "file",
          "path": "resources/cargo-config.toml",
          "dest": ".cargo",
          "dest-filename": "config.toml"
        }
      ]
    }
  ]
}
