{
    "id" : "com.ml4w.dotfilesinstaller",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "48",
    "sdk" : "org.gnome.Sdk",
    "command" : "dotfiles-installer",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
        "--talk-name=org.freedesktop.portal.*",
        "--talk-name=org.freedesktop.Flatpak",
        "--filesystem=home",
        "--filesystem=xdg-config/gtk-4.0"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
	"modules" : [
        {
            "name": "git",
            "make-args": [
                "NO_TCLTK=1",
                "INSTALL_SYMLINKS=1"
            ],
            "make-install-args": [
                "NO_TCLTK=1",
                "INSTALL_SYMLINKS=1"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://mirrors.edge.kernel.org/pub/software/scm/git/git-2.46.2.tar.xz",
                    "sha256": "5ee8a1c68536094a4f7f9515edc154b12a275b8a57dda4c21ecfbf1afbae2ca3",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 5350,
                        "stable-only": true,
                        "url-template": "https://mirrors.edge.kernel.org/pub/software/scm/git/git-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name" : "dotfiles-installer",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/mylinuxforwork/dotfiles-installer"
                }
            ]
        }
    ]
}
