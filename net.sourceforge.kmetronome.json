{
  "app-id": "net.sourceforge.kmetronome",
  "runtime": "org.kde.Platform",
  "runtime-version": "5.15-21.08",
  "sdk": "org.kde.Sdk",
  "command": "kmetronome",
  "rename-icon": "kmetronome",
  "finish-args": [
    /* X11 + XShm access */
    "--share=ipc",
    "--socket=x11",
    /* MIDI */
    "--device=all",
    /* Allow loading, saving files from anywhere (portals donâ€™t work yet) */
    "--filesystem=home",
    /* Allow other instances to see lockfiles */
    "--env=TMPDIR=/var/tmp",
    /* On SuSE it seems to be necessary for sound to work */
    "--env=ALSA_CONFIG_PATH="
  ],
  "cleanup": [
    "/share/man",
    "/share/doc",
    "/share/gtk-doc",
    "*.la"
  ],
  "modules": [
    {
      "name": "drumstick",
      "buildsystem": "cmake-ninja",
      "config-opts": [
        "-BUILD_ALSA=ON",
        "-BUILD_FILE=OFF",
        "-BUILD_RT=OFF",
        "-BUILD_WIDGETS=OFF",
        "-DBUILD_DOCS=OFF",
        "-DBUILD_UTILS=OFF",
        "-DBUILD_TESTING=OFF"
      ],
      "cleanup": [
        "/bin",
        "/include",
        "/lib/cmake",
        "/lib/plugins",
        "/lib/pkgconfig",
        "/share/mime",
        "/share/icons/hicolor/*/apps",
        "*.desktop",
        "/lib/*.so"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://downloads.sourceforge.net/project/drumstick/2.5.0/drumstick-2.5.0.tar.bz2",
          "sha256": "8709d8a7c438c1d09091827ce5fd8286d387a046a8f717a1a34546d9ca3d902a"
        }
      ]
    },
    {
      "name": "kmetronome",
      "buildsystem": "cmake-ninja",
      "config-opts": [ "-DBUILD_DOCS=OFF" ],
      "post-install": [
        "install -Dm644 -t /app/share/metainfo/ net.sourceforge.kmetronome.appdata.xml"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "http://downloads.sourceforge.net/project/kmetronome/kmetronome/1.3.0/kmetronome-1.3.0.tar.bz2",
          "sha256": "5f9984c5fcbb2e61a988c13e5b00f1d4cb9bd078ea7110f5314b13385600000b"
        }
      ]
    }
  ]
}
