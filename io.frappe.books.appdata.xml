<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>io.frappe.books</id>
  
  <name>Books</name>
  <summary>Open Source Accounting Software</summary>
  
  <developer_name>Frappe</developer_name>
  <developer id="io.github.frappe">
    <name>Frappe</name>
  </developer>
  
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>AGPL-3.0-only</project_license>
  
  <url type="homepage">https://frappe.io/books</url>
  <url type="bugtracker">https://github.com/frappe/books/issues</url>
  
  <supports>
    <control>touch</control>
  </supports>
  
  <recommends>
    <control>pointing</control>
    <control>keyboard</control>
    <display_length compare="ge" side="shortest">330</display_length>
    <display_length compare="ge" side="longest">360</display_length>
  </recommends>

  <requires>
    <internet>always</internet>
  </requires>

  <categories>
    <category>Accounting</category>
    <category>Finance</category>
  </categories>

  <description>
    <p>
			Free and Open source Desktop book-keeping software for small businesses and freelancers
    </p>
    <p>
		Features:

    - Double-entry accounting
    - Point of Sale
    - Invoicing
    - Billing
    - Payments
    - Journal Entries
    - Dashboard
    - Works Offline
    - Financial Reports
        - General Ledger
        - Profit and Loss Statement
        - Balance Sheet
        - Trial Balance
    </p>
  </description>
  
  <launchable type="desktop-id">io.frappe.books.desktop</launchable>
  <screenshots>
    <screenshot type="default">
      <image>https://user-images.githubusercontent.com/29507195/207267857-4ae48890-3fb2-4046-80cf-3256b46c72a0.png</image>
    </screenshot>
  </screenshots>

  <releases>
      <release version="0.23.0" date="2024-09-28">
         <description></description>
      </release>
  </releases>
  <content_rating type="oars-1.1"/>
</component>
