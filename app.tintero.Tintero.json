{
  "app-id": "app.tintero.Tintero",
  "runtime": "org.gnome.Platform",
  "runtime-version": "48",
  "sdk": "org.gnome.Sdk",
  "command": "app",
  "finish-args": [
    "--share=network",
    "--share=ipc",
    "--socket=wayland",
    "--socket=fallback-x11",
    "--device=dri",
    "--device=all",
    "--filesystem=home",
    "--env=WEBKIT_DISABLE_COMPOSITING_MODE=1"
  ],
  "modules": [
    {
      "name": "tintero",
      "buildsystem": "simple",
      "build-commands": [
        "ar x Tintero_0.1.8_amd64.deb",
        "tar xf data.tar.*",
        "cp -r usr/* /app/",
        "install -Dm644 app.tintero.Tintero.desktop /app/share/applications/app.tintero.Tintero.desktop",
        "install -Dm644 icon.png /app/share/icons/hicolor/512x512/apps/app.tintero.Tintero.png"
      ],
      "sources": [
        {
          "type": "file",
          "url": "https://github.com/fnadalrod/Releases-Tintero/raw/master/releases/0.1.8/linux/Tintero_0.1.8_amd64.deb",
          "sha256": "427811ea49ff93d318f6229ff8341a952b530cfc84c76bcfcaba7d8bc1ef3db9"
        },
        {
          "type": "file",
          "path": "app.tintero.Tintero.desktop"
        },
        {
          "type": "file",
          "path": "icon.png"
        }
      ]
    }
  ]
}
