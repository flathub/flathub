{
 "_cli": '
flatpak-builder --repo=_repo _build _mani
         ',
 "app-id":  "app.shazel.pcheetah",
 "command":            "pcheetah",
 "sdk":     "org.kde.Sdk",
 "runtime": "org.kde.Platform",
 "runtime-version":          "6.6",
 "finish-args": [
  "--filesystem=host",
  "--filesystem=home",
  "--share=ipc",
  "--share=network",
  "--socket=x11",
  "--socket=wayland",
  "--socket=pulseaudio",
  "--device=dri",
  "--device=all"
 ],
 "modules": [
  {
   "name": "_meta",
   "buildsystem": "simple",
   "build-commands": [
    "cp -pr share /app"
   ],
   "sources": [
    {"type": "dir", "path": "_meta"}
   ]
  },

  {
   "name": "ll",
   "buildsystem": "cmake-ninja",
   "config-opts": ["-DCMAKE_BUILD_TYPE=Release"],
   "sources": [
    {"type": "dir", "path": "ll"},
    {"type": "dir", "path": "../stv", "dest": "stv"}
   ]
  },
  {
   "name": "sfz2syn",
   "buildsystem": "cmake-ninja",
   "config-opts": ["-DCMAKE_BUILD_TYPE=Release"],
