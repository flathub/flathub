app-id: io.github.ElysiumDisc.nautune
runtime: org.freedesktop.Platform
runtime-version: '25.08'
sdk: org.freedesktop.Sdk
command: nautune
separate-locales: false

finish-args:
  - --share=network
  - --share=ipc
  - --socket=fallback-x11
  - --socket=wayland
  - --socket=pulseaudio
  - --device=dri
  - --filesystem=xdg-music:ro
  # Required for media key support (Play/Pause)
  - --talk-name=org.mpris.MediaPlayer2.*

modules:
  - shared-modules/libappindicator/libappindicator-gtk3.json

  - name: nautune
    buildsystem: simple
    build-commands:
      # This assumes your build script handles the Flutter build process
      - install -D nautune /app/bin/nautune
      - install -D io.github.ElysiumDisc.nautune.desktop /app/share/applications/io.github.ElysiumDisc.nautune.desktop
      - install -D io.github.ElysiumDisc.nautune.png /app/share/icons/hicolor/512x512/apps/io.github.ElysiumDisc.nautune.png
      # This installs the metadata you just moved upstream
      - install -D io.github.ElysiumDisc.nautune.metainfo.xml /app/share/metainfo/io.github.ElysiumDisc.nautune.metainfo.xml
    sources:
      - type: git
        url: https://github.com/ElysiumDisc/nautune.git
        tag: 2.7.8
        commit: [612ba14095f27f86c1ea2aad9246efe904429c43]
