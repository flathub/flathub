import os
import sys
import signal
import locale
import gettext

VERSION = '0.1.0'
pkgdatadir = '/app/share/bmi'
localedir = '/app/share/locale'

sys.path.insert(1, pkgdatadir)
signal.signal(signal.SIGINT, signal.SIG_DFL)
locale.bindtextdomain('bmi', localedir)
locale.textdomain('bmi')
gettext.install('bmi', localedir)

if __name__ == '__main__':
    import gi

    from gi.repository import Gio
    resource = Gio.Resource.load(os.path.join(pkgdatadir, 'bmi.gresource'))
    resource._register()

    from bmi import main
    sys.exit(main.main(VERSION))
