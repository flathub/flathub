# Flatpak X11
PTHREAD=-pthread
AR=ar
AS=as
RANLIB=ranlib
CC=cc
CFLAGS=-Wall -Wno-missing-braces -Wno-parentheses -ggdb -I$(ROOT) -I$(ROOT)/include -I$(ROOT)/kern -c -D_THREAD_SAFE -DPTHREAD $(PTHREAD) -D_REENTRANT -O2 `pkg-config --cflags libpipewire-0.3`
O=o
OS=posix
GUI=x11
LDADD=-L/usr/X11R6/lib64 -L/usr/X11R6/lib -lX11 -ggdb -lm -lrt -lpipewire-0.3
LDFLAGS=$(PTHREAD)
TARG=drawterm-x11
AUDIO=pipewire

all: default
