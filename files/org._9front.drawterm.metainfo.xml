<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>org._9front.drawterm</id>
  <name>Drawterm</name>
  <summary>Connect to Plan 9 CPU servers</summary>
  <metadata_license>MIT</metadata_license>
  <project_license>MIT</project_license>
  <url type="homepage">https://drawterm.9front.org/</url>
  <url type="vcs-browser">https://git.9front.org/plan9front/drawterm</url>
  <icon type="remote">https://raw.githubusercontent.com/mia-soweli/flathub/refs/heads/add-drawterm/files-meta/icon.png</icon>
  <launchable type="desktop-id">org._9front.drawterm.desktop</launchable>
  <description>
    <p>
      Establishes a graphical session on a Plan 9 CPU server. Like a real Plan 9 terminal, it serves it&apos;s local name space and devices to the CPU server.
      This version is a fork of Russ Cox's original to incorporate features from 9front, most importantly DP9IK authentication
      and the TLS based RCPU protocol.
    </p>
  </description>
  <developer id="org.9front">
    <name>The 9front Authors</name>
  </developer>
  <branding>
    <color type="primary" scheme_preference="light">#4993DD</color>
    <color type="primary" scheme_preference="dark">#005DBB</color>
  </branding>
