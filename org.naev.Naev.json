{
  "id": "org.naev.Naev",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "1.6",
  "sdk": "org.freedesktop.Sdk",
  "command": "naev",
  "rename-icon": "naev",
  "rename-desktop-file": "naev.desktop",
  "rename-appdata-file": "naev.appdata.xml",
  "finish-args": [
    "--socket=pulseaudio",
    "--socket=wayland",
    "--socket=x11",
    "--device=dri"
  ],
  "modules": [
    "shared-modules/glu/glu-9.0.0.json",
    {
      "name": "libzip",
      "buildsystem": "cmake-ninja",
      "cleanup": [ "/bin", "/share" ],
      "sources": [
        {
          "type": "archive",
          "url": "https://libzip.org/download/libzip-1.5.1.tar.xz",
          "sha256": "04ea35b6956c7b3453f1ed3f3fe40e3ddae1f43931089124579e8384e79ed372"
        }
      ]
    },
    {
      "name": "luajit",
      "skip-arches": ["aarch64"],
      "no-autogen": true,
      "make-args": ["PREFIX=/app"],
      "make-install-args": ["PREFIX=/app"],
      "cleanup": ["/bin"],
      "sources": [
        {
          "type": "archive",
          "url": "http://luajit.org/download/LuaJIT-2.0.5.tar.gz",
          "sha256": "874b1f8297c697821f561f9b73b57ffd419ed8f4278c82e05b48806d30c1e979"
        }
      ]
    },
    {
      "name": "naev",
      "config-opts": [
        "--disable-debug",
        "--disable-shave"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/naev/naev/archive/naev-0.7.0.tar.gz",
          "sha256": "b995813ffb67d68a71d55184ac00513e86f048335635d0692d866e2f2107e170"
        }
      ],
      "post-install": [
        "install -Dm644 extras/logos/naev.png /app/share/icons/hicolor/256x256/apps/naev.png",
        "install -Dm644 extras/logos/logo128.png /app/share/icons/hicolor/128x128/apps/naev.png",
        "install -Dm644 extras/logos/logo64.png /app/share/icons/hicolor/64x64/apps/naev.png",
        "install -Dm644 extras/logos/logo32.png /app/share/icons/hicolor/32x32/apps/naev.png",
        "install -Dm644 extras/logos/logo16.png /app/share/icons/hicolor/16x16/apps/naev.png"
      ]
    }
  ]
}

