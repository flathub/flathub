{
    "app-id": "com.endlessm.DragonsApprentice",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "18.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "com.endlessm.DragonsApprentice.sh",
    "separate-locales": false,
    "build-options" : {
        "no-debuginfo": true,
        "strip": true
    },
    "finish-args": [
        "--share=ipc", "--socket=x11",
        "--socket=pulseaudio",
        "--device=dri"
    ],
    "modules": [
        {
            "name": "DragonsApprentice",
            "buildsystem": "simple",
            "only-arches": ["x86_64"],
            "build-commands": [
                "install -Dm644 com.endlessm.DragonsApprentice.desktop /app/share/applications/com.endlessm.DragonsApprentice.desktop",
                "install -Dm644 com.endlessm.DragonsApprentice.appdata.xml /app/share/appdata/com.endlessm.DragonsApprentice.appdata.xml",
                "install -Dm644 com.endlessm.DragonsApprentice.png /app/share/icons/hicolor/128x128/apps/com.endlessm.DragonsApprentice.png",
                "install -D com.endlessm.DragonsApprentice.sh /app/bin/com.endlessm.DragonsApprentice.sh",
                "unzip DragonsApprentice.zip",
                "install DragonsApprentice.x86_64 /app/bin/DragonsApprentice.x86_64",
                "mv DragonsApprentice_Data /app/bin/"
            ],
            "sources" : [
                {
                    "type": "file",
                    "path": "https://www.dropbox.com/s/id2zldbkidrhynm/DragonsApprentice.zip"
                },
                {
                    "type": "file",
                    "path": "https://github.com/JasonFPL/DragonsApprentice/blob/master/com.endlessm.DragonsApprentice.desktop"
                },
                {
                    "type": "file",
                    "path": "https://github.com/JasonFPL/DragonsApprentice/blob/master/com.endlessm.DragonsApprentice.appdata.xml"
                },
                {
                    "type": "file",
                    "path": "https://github.com/JasonFPL/DragonsApprentice/blob/master/com.endlessm.DragonsApprentice.png"
                },
                {
                    "type": "script",
                    "commands": [
                        "exec /app/bin/DragonsApprentice.x86_64"
                    ],
                    "dest-filename": "com.endlessm.DragonsApprentice.sh"
                }
            ]
        }
    ]
}
