{
    "app-id" : "net.codelogistics.webapps",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "46",
    "sdk" : "org.gnome.Sdk",
    "command" : "webapps",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
    	{
    	"name" : "libportal",
    	"buildsystem" : "meson",
    	"config-opts" : [
      		"-Ddocs=false",
      		"-Dintrospection=true"
      	],
    	"sources": [
    		{
      		"type": "git",
        	"url": "https://github.com/flatpak/libportal.git",
        	"tag": "0.7.1"
        	}
        ]
        },
        {
            "name" : "webapps",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://codeberg.org/eyekay/webapps.git",
                    "tag" : "0.3.2"
                }
            ]
        }
    ]
}
