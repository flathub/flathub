{
  "id": "org.freedesktop.Sdk.Extension.llvm12",
  "branch": "21.08beta",
  "runtime": "org.freedesktop.Sdk",
  "build-extension": true,
  "sdk": "org.freedesktop.Sdk",
  "runtime-version": "21.08beta",
  "separate-locales": false,
  "appstream-compose": false,
  "build-options": {
    "prefix": "/usr/lib/sdk/llvm12"
    },
  "modules": [
    {
      "name": "swig",
      "config-opts": [
        "--without-alllang",
        "--with-python3"
      ],
      "cleanup": ["*"],
      "sources": [
        {
          "type": "archive",
          "url": "https://download.sourceforge.net/swig/swig-4.0.2.tar.gz",
          "sha256": "d53be9730d8d58a16bf0cbd1f8ac0c0c3e1090573168bfa151b01eb47fa906fc"
        }
      ]
    },
    {
      "name": "llvm-stage1",
      "buildsystem": "cmake-ninja",
      "subdir": "llvm",
      "builddir": true,
      "build-options": {
        "prefix": "/usr/lib/sdk/llvm12/llvm-stage1",
        "arch": {
          "aarch64": {
            "config-opts": [
              "-DLLVM_DEFAULT_TARGET_TRIPLE=aarch64-unknown-linux-gnu"
            ]
          },
          "x86_64": {
            "config-opts": [
              "-DLLVM_DEFAULT_TARGET_TRIPLE=x86_64-unknown-linux-gnu"
            ]
          }
        },
        "env": {
          "CFLAGS": "",
          "CXXFLAGS": "",
          "LDFLAGS": ""
        }
      },
      "config-opts": [
        "-DCMAKE_BUILD_TYPE=Release",
        "-DCMAKE_C_FLAGS_RELEASE='-O2 -pipe -DNDEBUG'",
        "-DCMAKE_CXX_FLAGS_RELEASE='-O2 -pipe -DNDEBUG'",
        "-DCMAKE_EXE_LINKER_FLAGS='-Wl,--as-needed -Wl,--no-keep-memory'",
        "-DCMAKE_MODULE_LINKER_FLAGS='-Wl,--as-needed -Wl,--no-keep-memory'",
        "-DCMAKE_SHARED_LINKER_FLAGS='-Wl,--as-needed -Wl,--no-keep-memory'",
        "-DLLVM_ENABLE_PROJECTS='clang;compiler-rt;lld'",
        "-DLLVM_TARGETS_TO_BUILD='Native'",
        "-DLLVM_LIBDIR_SUFFIX=''",
        "-DLLVM_INCLUDE_TESTS:BOOL=OFF",
        "-DLLVM_INCLUDE_EXAMPLES:BOOL=OFF",
        "-DLLVM_INCLUDE_DOCS:BOOL=OFF",
        "-DLLVM_INCLUDE_BENCHMARKS=OFF",
        "-DLLVM_INSTALL_UTILS:BOOL=ON",
        "-DLLVM_BINUTILS_INCDIR=/usr/include",
        "-DCLANG_ENABLE_ARCMT:BOOL=OFF",
        "-DCLANG_ENABLE_STATIC_ANALYZER:BOOL=OFF",
        "-DCOMPILER_RT_BUILD_SANITIZERS:BOOL=OFF",
        "-DCOMPILER_RT_BUILD_XRAY:BOOL=OFF"
      ],
      "cleanup": [
        "*"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/llvm/llvm-project/releases/download/llvmorg-12.0.1/llvm-project-12.0.1.src.tar.xz",
          "sha256": "129cb25cd13677aad951ce5c2deb0fe4afc1e9d98950f53b51bdcfb5a73afa0e"
        }
      ]
    },
    {
      "name": "llvm",
      "buildsystem": "cmake-ninja",
      "subdir": "llvm",
      "builddir": true,
      "build-options": {
        "append-path": "/usr/lib/sdk/llvm12/llvm-stage1/bin",
        "arch": {
          "aarch64": {
            "cflags": "-Qunused-arguments",
            "cxxflags": "-Qunused-arguments",
            "config-opts": [
              "-DFFI_INCLUDE_DIR=/usr/lib/aarch64-linux-gnu/libffi-3.2.1/include",
              "-DLLVM_DEFAULT_TARGET_TRIPLE=aarch64-unknown-linux-gnu",
              "-DLLVM_TARGETS_TO_BUILD='AArch64'"
            ]
          },
          "x86_64": {
            "config-opts": [
              "-DFFI_INCLUDE_DIR=/usr/lib/x86_64-linux-gnu/libffi-3.2.1/include",
              "-DLLVM_DEFAULT_TARGET_TRIPLE=x86_64-unknown-linux-gnu",
              "-DLLVM_TARGETS_TO_BUILD='X86;AMDGPU;NVPTX'"
            ]
          }
        },
        "cflags": "-g0",
        "cxxflags": "-g0",
        "env": {
          "CC": "clang",
          "CXX": "clang++"
        },
        "ldflags": "-fuse-ld=lld"
      },
      "config-opts": [
        "-DLLVM_ENABLE_PROJECTS='clang;clang-tools-extra;compiler-rt;lld;lldb'",
        "-DLLVM_ENABLE_ASSERTIONS:BOOL=OFF",
        "-DBUILD_SHARED_LIBS:BOOL=OFF",
        "-DLLVM_BUILD_LLVM_DYLIB:BOOL=ON",
        "-DLLVM_LINK_LLVM_DYLIB:BOOL=ON",
        "-DCLANG_LINK_CLANG_DYLIB=ON",
        "-DCMAKE_BUILD_TYPE=RelWithDebInfo",
        "-DLLVM_LIBDIR_SUFFIX=''",
        "-DLLVM_ENABLE_LIBCXX:BOOL=OFF",
        "-DLLVM_ENABLE_ZLIB:BOOL=ON",
        "-DLLVM_ENABLE_FFI:BOOL=ON",
        "-DLLVM_ENABLE_RTTI:BOOL=ON",
        "-DLLVM_INCLUDE_TESTS:BOOL=OFF",
        "-DLLVM_INCLUDE_EXAMPLES:BOOL=OFF",
        "-DLLVM_INCLUDE_UTILS:BOOL=ON",
        "-DLLVM_INSTALL_UTILS:BOOL=ON",
        "-DLLVM_INCLUDE_DOCS:BOOL=OFF",
        "-DLLVM_ENABLE_DOXYGEN:BOOL=OFF",
        "-DLLVM_BINUTILS_INCDIR=/usr/include",
        "-DLLVM_INSTALL_TOOLCHAIN_ONLY:BOOL=OFF",
        "-DCMAKE_C_FLAGS_RELWITHDEBINFO='-DNDEBUG'",
        "-DCMAKE_CXX_FLAGS_RELWITHDEBINFO='-DNDEBUG'"
      ],
      "cleanup": [
        "libLLVM*.a"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/llvm/llvm-project/releases/download/llvmorg-12.0.1/llvm-project-12.0.1.src.tar.xz",
          "sha256": "129cb25cd13677aad951ce5c2deb0fe4afc1e9d98950f53b51bdcfb5a73afa0e"
        },
        {
          "type": "patch",
          "path": "patches/llvm/llvm-fix-tsan-build.patch"
        }
      ]
    },
    {
      "name": "scripts",
      "buildsystem": "simple",
      "build-commands": [
        "cp enable.sh /usr/lib/sdk/llvm12/"
      ],
      "sources": [
        {
          "type": "script",
          "commands": [
             "export PATH=/usr/lib/sdk/llvm12/bin:$PATH"
          ],
          "dest-filename": "enable.sh"
        }
      ]
    },
    {
      "name": "appdata",
      "buildsystem": "simple",
      "build-commands": [
        "install -Dm0644 -t ${FLATPAK_DEST}/share/metainfo/ ${FLATPAK_ID}.metainfo.xml",
        "appstream-compose --basename=${FLATPAK_ID} --prefix=${FLATPAK_DEST} --origin=flatpak ${FLATPAK_ID}"
      ],
      "sources": [
        {
          "type": "file",
          "path": "org.freedesktop.Sdk.Extension.llvm12.metainfo.xml"
        }
      ]
    }
  ]
}
