{
    "app-id": "org.robomongo.Robo3T",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "18.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "robo3t",
    "finish-args": [
        "--socket=x11",
        "--socket=wayland",
        "--share=ipc",
        "--share=network",
        "--filesystem=home"
    ],
    "modules": [
        {
            "name": "robo3t",
            "buildsystem": "simple",
            "build-commands": [
                "install -d -m 755 /app/bin",
                "install -d -m 755 /app/include",
                "install -d -m 755 /app/lib",

                "cp -R bin/* /app/bin",
                "cp -R include/* /app/include",
                "cp -R lib/* /app/lib",

                "install -D -m 644 icon.png /app/share/icons/hicolor/128x128/apps/org.robomongo.Robo3T.png",
                "install -D -m 644 desktop.desktop /app/share/applications/org.robomongo.Robo3T.desktop",
                "install -D -m 644 appdata.xml /app/share/appdata/org.robomongo.Robo3T.appdata.xml"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/Studio3T/robomongo/releases/download/v1.3.1/robo3t-1.3.1-linux-x86_64-7419c406.tar.gz",
                    "sha256": "11a664392a6472906d6ec01ea15ae13b9ef02844a9c7121f9f9834a8228ae5d6"
                },
                {
                    "type": "file",
                    "path": "icon.png"
                },
                {
                    "type": "file",
                    "path": "desktop.desktop"
                },
                {
                    "type": "file",
                    "path": "appdata.xml"
                }
            ]
        }
    ]
}
