{
  "id": "io.github.debasishpatra1987.linuxthemestore",
  "runtime": "org.gnome.Platform",
  "runtime-version": "48",
  "sdk": "org.gnome.Sdk",
  "sdk-extensions": [
    "org.freedesktop.Sdk.Extension.rust-stable"
  ],
  "command": "linuxthemestore",
  "finish-args": [
    "--share=network",
    "--share=ipc",
    "--socket=fallback-x11",
    "--device=dri",
    "--socket=wayland",
    "--filesystem=~/.local/share/icons/:rw",
    "--filesystem=~/.local/share/themes/:rw"
  ],
  "build-options": {
    "append-path": "/usr/lib/sdk/rust-stable/bin",
    "env": {
            "CARGO_HOME" : "/run/build/linuxthemestore-rust-flatpak/cargo"
	}
  },
  "modules": [
    {
      "name": "linuxthemestore-rust-flatpak",
    "buildsystem": "simple",
    "build-commands": [
        "cargo --offline fetch --manifest-path Cargo.toml --verbose",
        "cargo --offline build --release --verbose",
        "install -Dm755 ./target/release/linuxthemestore -t /app/bin/"
    ],
    "sources": [
        {
          "type": "git",
          "url": "https://github.com/debasish-patra-1987/linuxthemestore.git",
          "branch": "main"
        },
        "cargo-sources.json"
    ]
    },
    {
      "name": "build-desktop-files",
      "buildsystem": "meson",
      "sources": [
        {
          "type": "dir",
          "path": "."
        }
      ]
    }
  ]
}
