{
    "app-id": "io.hokus.Hokus",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "18.08",
    "branch": "stable",
    "sdk": "org.freedesktop.Sdk",
    "base": "io.atom.electron.BaseApp",
    "base-version": "stable",
    "command": "run.sh",
    "separate-locales": false,
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=pulseaudio",
        "--share=network"
    ],
    "build-options" : {
        "cflags": "-O2 -g",
        "cxxflags": "-O2 -g",
        "env": {
            "NPM_CONFIG_LOGLEVEL": "info"
        }
    },
    "modules": [
        {
            "name": "nodejs",
            "cleanup": [
                "/include",
                "/share",
                "/app/lib/node_modules/npm/changelogs",
                "/app/lib/node_modules/npm/doc",
                "/app/lib/node_modules/npm/html",
                "/app/lib/node_modules/npm/man",
                "/app/lib/node_modules/npm/scripts"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://nodejs.org/dist/v8.11.2/node-v8.11.2.tar.xz",
                    "sha256": "539946c0381809576bed07424a35fc1740d52f4bd56305d6278d9e76c88f4979"
                }
            ]
        },
        {
            "name": "hokus",
            "build-options" : {
                "//": "
                    /* Need electron_config_cache for electron-download to find the cached electron binary */
                    /* Need npm_config_nodedir to fix broken node-gyp offline */
                    /* see https://github.com/flathub/io.lbry.lbry-app/issues/5 */
                ",
                "env": {
                    "electron_config_cache": "/run/build/hokus/npm-cache",
                    "npm_config_nodedir": "/run/build/hokus/node-js-headers"
                }
            },
            "buildsystem": "simple",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/julianoappelklein/hokus/archive/0.3.0.tar.gz",
                    "sha256": "c33ed7c6cc998e89550506f069f6b6995a16fda22e8011e42d62a13a4eb93790",
                    "dest": "main"
                },
                {
                    "type":   "archive",
                    "url":    "https://nodejs.org/download/release/v8.11.2/node-v8.11.2-headers.tar.gz",
                    "sha256": "6125250fe8e074e509a7c691ebf04a93c20246fea5637ef6fe8aa844cef98b41",
                    "dest":   "node-js-headers"
                },
                "generated-sources.json",
                /* Wrapper to launch the app */
                {
                    "type": "script",
                    "dest-filename": "run.sh",
                    "commands": [ "npm start --prefix=/app/main" ]
                }
            ],
            "build-commands": [
                /* Install npm dependencies */
                "npm install --prefix=main --offline --cache=/run/build/hokus/npm-cache/",
                /* Bundle app and dependencies */
                "mkdir -p /app/main /app/bin",
                "cp -ra main/* /app/main/",
                /* Install app wrapper */
                "install run.sh /app/bin/"
            ]
        }
    ]
}
