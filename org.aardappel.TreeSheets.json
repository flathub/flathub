{
    "app-id": "org.aardappel.TreeSheets",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "18.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "/app/treesheets",
    "branch": "master",
    "tags": ["master", "notes", "wxWidgets"],
    "build-options": {
        "cflags": "-O2 -g",
        "cxxflags": "-O2 -g",
        "env": {
            "V": "1"
        }
    },
    "clean": [
        "/include",
        "/tests",
        "/man",
        "/share/man",
        "treesheets.desktop",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "wxWidgets",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "--enable-unicode"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/wxWidgets/wxWidgets/releases/download/v3.1.0/wxWidgets-3.1.0.tar.bz2",
                    "sha256": "e082460fb6bf14b7dd6e8ac142598d1d3d0b08a7b5ba402fdbf8711da7e66da8"
                }
            ]
        },
        {
            "name": "treesheets",
            "buildsystem": "cmake-ninja",
            "post-install": [
                "install -Dm644 TS/images/icon16.png /app/share/icons/hicolor/16x16/apps/org.aardappel.TreeSheets.png",
                "install -Dm644 TS/images/icon32.png /app/share/icons/hicolor/32x32/apps/org.aardappel.TreeSheets.png",
                "install -m755 TS/treesheets /app/"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/aardappel/treesheets/archive/v1.0.0.tar.gz",
                    "sha256": "13c01c48a6442e309e77126aeeed51d4e0a768ad808459c0dcd83ecc1d246c0f"
                }
            ]
        },
        {
            "name": "metadata",
            "buildsystem": "simple",
            "build_commands": [
                "install -Dm644 org.aardappel.TreeSheets.appdata.xml /app/share/metainfo/org.aardappel.TreeSheets.appdata.xml",
                "install -Dm644 org.aardappel.TreeSheets.desktop /app/share/applications/org.aardappel.TreeSheets.desktop"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "org.aardappel.TreeSheets.desktop"
                },
                {
                    "type": "file",
                    "path": "org.aardappel.TreeSheets.appdata.xml"
                }
            ]
        }
    ],
    "finish-args": [
        "--socket=x11",
        "--share=ipc",
        "--filesystem=xdg-documents:rw",

        /* dconf */
        "--filesystem=xdg-run/dconf",
        "--filesystem=~/.config/dconf:rw",
        "--talk-name=ca.desrt.dconf",
        "--env=DCONF_USER_CONFIG_DIR=.config/dconf"
    ]
}
