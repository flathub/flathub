{
  "id": "org.gtk.Gtk3theme.deepin",
  "branch": "3.22",
  "build-extension": true,
  "runtime": "org.freedesktop.Platform",
  "sdk": "org.freedesktop.Sdk",
  "runtime-version": "1.6",
  "build-extension": true,
  "appstream-compose": false,
  "separate-locales": false,
  "modules": [
    {
      "name": "deepin",
      "buildsystem": "simple",
      "build-commands": [
        "install -dm755 /usr/share/runtime/share/themes/deepin/gtk-3.0",
        "cp -aL deepin/gtk-3.0/* /usr/share/runtime/share/themes/deepin/gtk-3.0",
        "cp -a deepin/index.theme /usr/share/runtime/share/themes/deepin"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/linuxdeepin/deepin-gtk-theme/archive/17.10.7.tar.gz",
          "sha256": "ad4b8ac0a78dec054ced50d8db8f16d2a2bf791d2971c13f1f3af23a0362bd66"
        }
      ]
    },
    {
      "name": "appdata",
      "buildsystem": "simple",
      "build-commands": [
        "mkdir -p ${FLATPAK_DEST}/share/appdata",
        "cp org.gtk.Gtk3theme.deepin.appdata.xml ${FLATPAK_DEST}/share/appdata",
        "appstream-compose --basename=org.gtk.Gtk3theme.deepin --prefix=${FLATPAK_DEST} --origin=flatpak org.gtk.Gtk3theme.deepin"
      ],
      "sources": [
        {
          "type": "file",
          "path": "org.gtk.Gtk3theme.deepin.appdata.xml"
        }
      ]
}
  ]
}
