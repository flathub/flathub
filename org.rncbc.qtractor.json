{
    "app-id": "org.rncbc.qtractor",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-21.08",
    "sdk": "org.kde.Sdk",
    "command": "qtractor",
    "rename-icon": "qtractor",
    "rename-appdata-file": "org.rncbc.qtractor.xml",
    "finish-args": [
        /* X11 + XShm access */
        "--share=ipc",
        "--socket=x11",
        /* Note playback */
        "--socket=pulseaudio",
        /* MIDI */
        "--device=all",
        /* For pipewire */
        "--filesystem=xdg-run/pipewire-0",
        "--system-talk-name=org.freedesktop.RealtimeKit1",
        "--filesystem=home",
        /* Allow other instances to see lockfiles */
        "--env=TMPDIR=/var/tmp",
        "--env=QT_ENABLE_HIGHDPI_SCALING=1",
        /* Audio plugins */
        "--env=DSSI_PATH=/app/extensions/Plugins/dssi",
        "--env=LV2_PATH=/app/extensions/Plugins/lv2:/app/lib/lv2",
        "--env=VST_PATH=/app/extensions/Plugins/lxvst",
        "--env=LXVST_PATH=/app/extensions/Plugins/lxvst",
        "--env=VST3_PATH=/app/extensions/Plugins/vst3",
        "--env=LADSPA_PATH=/app/extensions/Plugins/ladspa:/app/lib/ladspa"
    ],
    "add-extensions": {
        "org.freedesktop.LinuxAudio.Plugins": {
            "directory": "extensions/Plugins",
            "version": "20.08",
            "add-ld-path": "lib",
            "merge-dirs": "ladspa;dssi;lv2;lxvst;vst3",
            "subdirectories": true,
            "no-autodownload": true
        }
    },
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/man",
        "/share/doc",
        "/share/gtk-doc",
        "*.a",
        "*.la"
    ],
    "modules": [
        "shared-modules/libmad/libmad.json",
        "shared-modules/linux-audio/ladspa.json",
        "shared-modules/linux-audio/jack2.json",
        "shared-modules/linux-audio/liblo.json",
        "shared-modules/linux-audio/dssi.json",
        "shared-modules/linux-audio/lv2.json",
        "shared-modules/linux-audio/lilv.json",
        "shared-modules/linux-audio/fftw3f.json",
        {
            "name": "suil",
            "buildsystem": "simple",
            "build-commands": [
                "python3 ./waf configure --prefix=/app",
                "python3 ./waf build -j $FLATPAK_BUILDER_N_JOBS",
                "python3 ./waf install"
            ],
            "cleanup": [
                "/include",
                "/lib/pkgconfig"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "http://download.drobilla.net/suil-0.10.8.tar.bz2",
                    "sha256": "91cd87e17e80d2e43d64700369b93a5c2d0f1648e36411e0233253a0c3840f40"
                }
            ],
            "post-install": [
                "install -Dm644 -t /app/share/licenses/suil COPYING"
            ],
            "cleanup": [
                "/bin",
                "/etc",
                "/share/man"
            ]
        },
        {
            "name": "aubio",
            "buildsystem": "simple",
            "build-commands": [
                "python3 ./waf configure --prefix=/app --libdir=/app/lib --enable-fftw3f --enable-complex --enable-samplerate",
                "python3 ./waf build -j $FLATPAK_BUILDER_N_JOBS",
                "python3 ./waf install"
            ],
            "cleanup": [
                "/bin",
                "/include",
                "/lib/pkgconfig",
                "*.a"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": " http://aubio.org/pub/aubio-0.4.7.tar.bz2",
                    "sha256": "cbed4afec5ab3a1a6300c7e3af0a1369379aa94259f5e701a8ca905cdd9fa041"
                }
            ]
        },
        {
            "name": "rubberband",
            "build-options": {
                "env": {
                    "Vamp_CFLAGS": " ",
                    "Vamp_LIBS": " "
                }
            },
            "modules": [
                {
                    "name": "vamp-plugin-sdk",
                    "sources": [
                        {
                            "type": "git",
                            "url": "https://github.com/c4dm/vamp-plugin-sdk",
                            "tag": "vamp-plugin-sdk-v2.7.1",
                            "commit": "10be490c9902d874e9d772d94bf91448303d9b06"
                        }
                    ],
                    "post-install": [
                        "install -Dm644 -t /app/share/licenses/vamp-plugin-sdk COPYING"
                    ],
                    "cleanup": [
                        "/bin"
                    ]
                }
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "http://code.breakfastquay.com/attachments/download/34/rubberband-1.8.1.tar.bz2",
                    "sha256": "ff0c63b0b5ce41f937a8a3bc560f27918c5fe0b90c6bc1cb70829b86ada82b75"
                }
            ],
            "post-install": [
                "install -Dm644 -t /app/share/licenses/rubberband COPYING"
            ],
            "cleanup": [
                "/share/ladspa"
            ]
        },
        {
            "name": "qtractor",
            "buildsystem": "cmake-ninja",
            "build-options": {
                "env": [
                    "LADSPA_PATH=/app/lib/ladspa"
                ]
            },
            "config-opts": [
                "-DCONFIG_VST3SDK=/run/build/qtractor/vst3sdk"
            ],
            "post-install": [
                "mv ${FLATPAK_DEST}/share/mime/packages/qtractor.xml ${FLATPAK_DEST}/share/mime/packages/${FLATPAK_ID}.xml",
                "(cd ${FLATPAK_DEST}/share/icons/hicolor/scalable/mimetypes/ ; for f in application-x-* ; do mv ${f} ${FLATPAK_ID}.${f} ; done)",
                "(cd ${FLATPAK_DEST}/share/icons/hicolor/32x32/mimetypes/ ; for f in application-x-* ; do mv ${f} ${FLATPAK_ID}.${f} ; done)",
                "mv ${FLATPAK_DEST}/bin/qtractor{,.bin}",
                "install -D qtractor.sh ${FLATPAK_DEST}/bin/qtractor",
                "install -d /app/extensions/Plugins"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "http://downloads.sourceforge.net/qtractor/qtractor-0.9.25.tar.gz",
                    "sha256": "70a5c71fbaee8132790fb303266aff7d7ea9db4f70c86310bd22dbbf94f42975"
                },
                {
                    "type": "git",
                    "url": "https://github.com/steinbergmedia/vst3sdk.git",
                    "tag": "v3.7.4_build_25",
                    "dest": "vst3sdk"
                },
                {
                    "type": "file",
                    "path": "qtractor.sh"
                }
            ]
        }
    ]
}
