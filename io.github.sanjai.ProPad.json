{
    "app-id": "io.github.sanjai.ProPad",
    "runtime": "org.gnome.Platform",
    "runtime-version": "48",
    "sdk": "org.gnome.Sdk",
    "command": "propad",
    "finish-args": [
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=session-bus",
        "--share=ipc",
        "--share=network",
        "--device=dri",
        "--filesystem=host",
        "--filesystem=xdg-run/gvfsd",
        "--talk-name=org.gtk.vfs.*",
        "--talk-name=org.freedesktop.FileManager1",
        "--own-name=io.github.sanjai.ProPad",
        "--own-name=io.github.sanjai.ProPad.*",
        "--socket=pulseaudio"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        "python-deps-sources.json",
        {
            "name": "propad",
            "buildsystem": "simple",
            "build-commands": [
                "make install PREFIX=/app"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/Sanjai-Shaarugesh/ProPad.git",
                    "tag": "v0.2.5",
                    "commit": "f2115d4db9e4c26fc4ac37d6826b25c41af569f6"
                }
            ]
        }
    ]
}