{
    "app-id": "io.github.sanjai.ProPad",
    "runtime": "org.gnome.Platform",
    "runtime-version": "48",
    "sdk": "org.gnome.Sdk",
    "command": "propad",
    "finish-args": [
           "--socket=fallback-x11",
           "--socket=wayland",
           "--socket=session-bus",
           "--share=ipc",
           "--share=network",
           "--device=dri",
           "--filesystem=host",
           "--filesystem=xdg-run/gvfsd",
           "--talk-name=org.gtk.vfs.*",
           "--talk-name=org.freedesktop.FileManager1",
           "--own-name=io.github.sanjai.ProPad.*",
           "--socket=pulseaudio",
           "--env=NO_AT_BRIDGE=1",
           "--env=GTK_A11Y=none",
           "--env=LIBGL_ALWAYS_SOFTWARE=1",
           "--env=MESA_LOADER_DRIVER_OVERRIDE=swrast",
           "--env=LIBGL_DRI3_DISABLE=1",
           "--env=EGL_PLATFORM=wayland",
           "--env=GDK_BACKEND=wayland,x11",
           "--env=GTK_USE_PORTAL=0",
           "--env=WEBKIT_DISABLE_SANDBOX_THIS_IS_DANGEROUS=1",
           "--env=WEBKIT_FORCE_SANDBOX=0",
           "--env=FONTCONFIG_FILE=/etc/fonts/fonts.conf",
           "--unset-env=FONTCONFIG_PATH",
           "--filesystem=xdg-data/icons:ro",
           "--filesystem=/usr/share/icons:ro"
       ],

    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        "python-deps-sources.json",
        {
            "name": "propad",
            "buildsystem": "simple",
            "build-commands": [
                "make install PREFIX=/app"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/Sanjai-Shaarugesh/ProPad.git",
                    "tag": "v0.2.5",
                    "commit": "f2115d4db9e4c26fc4ac37d6826b25c41af569f6"
                }
            ]
        }
    ]
}