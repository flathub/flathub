{
    "id": "com.github.cfcurtis.pdfstitcher",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "21.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "pdfstitcher",
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--device=dri",
        "--filesystem=xdg-documents",
        "--filesystem=xdg-download",
        "--filesystem=xdg-pictures",
        "--filesystem=xdg-cache",
        "--filesystem=/run/media",
        "--filesystem=/media"
    ],
    "modules": [
    	"python3-pikepdf.json",
        {
            "name": "python3-wxPython",
            "buildsystem": "simple",
            "build-commands": [
                "pip3 install --verbose --exists-action=i --no-index --find-links=\"file://${PWD}\" --prefix=${FLATPAK_DEST} \"wxPython==4.1.1\" --no-build-isolation"
            ],
            "sources": [
                {
                    "type": "file",
                    "url": "https://files.pythonhosted.org/packages/c3/97/fd507e48f8c7cab73a9f002e52e15983b5636b4ac6cf69b83ae240324b44/numpy-1.20.0.zip",
                    "sha256": "3d8233c03f116d068d5365fed4477f2947c7229582dad81e5953088989294cec"
                },
                {
                    "type": "file",
                    "url": "https://files.pythonhosted.org/packages/b0/4d/80d65c37ee60a479d338d27a2895fb15bbba27a3e6bb5b6d72bb28246e99/wxPython-4.1.1.tar.gz",
                    "sha256": "00e5e3180ac7f2852f342ad341d57c44e7e4326de0b550b9a5c4a8361b6c3528"
                }
            ]
        },
        {
            "name": "pdfstitcher",
            "buildsystem": "simple",
            "no-autogen": true,
            "build-commands": [
            	"install -Dm644 pdfstitcher.svg /app/share/icons/hicolor/scalable/apps/com.github.cfcurtis.pdfstitcher.svg",
            	"unzip pdfstitcher.zip",
                "mkdir -p /app/pdfstitcher",
                "mv pdfstitcher-* /app/pdfstitcher",
                "install -Dm755 pdfstitcher.sh /app/bin/pdfstitcher"
            ],
            "post-install": [
            	"desktop-file-install --dir=/app/share/applications com.github.cfcurtis.pdfstitcher.desktop",
                "install -Dm644 com.github.cfcurtis.pdfstitcher.metainfo.xml /app/share/metainfo/com.github.cfcurtis.pdfstitcher.metainfo.xml"
            ],
            "sources": [
                {
                  "type": "file",
                  "url": "https://github.com/cfcurtis/pdfstitcher/archive/refs/tags/v0.5.zip",
                  "sha256": "77cd9f3d1e4559e8ea8d3c27fb36a7dcee8824d69d0f6457fb9b2a2c395909c8",
                  "dest-filename": "pdfstitcher.zip"
                },
                {
                  "type": "file",
                  "url": "https://raw.githubusercontent.com/cfcurtis/pdfstitcher/v0.5/resources/stitcher-icon.svg",
                  "sha256": "6e97f263a6dfa5c94dfcffe10614ea407bcc581514e25e22cbb6d77ed91abe8a",
                  "dest-filename": "pdfstitcher.svg"
                },
                {
                  "type": "file",
                  "path": "com.github.cfcurtis.pdfstitcher.metainfo.xml"
                },
                {
                  "type": "file",
                  "path": "com.github.cfcurtis.pdfstitcher.desktop"
                },
                {
                  "type": "file",
                  "path": "pdfstitcher.sh"
                }
            ]
        }
    ]
}
