{
    "app-id": "tk.turtlico.Turtlico",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.34",
    "sdk": "org.gnome.Sdk",
    "command": "turtlico",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--filesystem=host",
        "--talk-name=org.freedesktop.Flatpak"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/lib/debug",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "/share/vala",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name" : "gtksourceview",
            "builddir": true,
            "buildsystem": "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/gtksourceview.git",
                    "branch" : "4.4.0"
                }
            ]
	},
        {
            "name": "turtlico",
            "buildsystem": "meson",
            "config-opts" : [
                "-Dflatpak=true"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.com/turtlico/turtlico.git",
		    "tag": "0.2.0",
		    "commit": "0f8eeddbcd2b84d461255fd605ae4088f7cc99b9"
                }
            ]
        }
    ]
}
