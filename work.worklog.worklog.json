{
    "app-id": "work.worklog.worklog",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-25.08",
    "sdk": "org.kde.Sdk",
    "command": "worklog-desktop",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--filesystem=xdg-data/WorkLog:create",
        "--filesystem=xdg-config/WorkLog:create"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/man",
        "*.a",
        "*.la"
    ],
    "modules": [
        {
            "name": "worklog-desktop",
            "buildsystem": "simple",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/macsplit/Work.Log.git",
                    "branch": "main"
                }
            ],
            "build-commands": [
                "cd WorkLog.Desktop && cmake -G Ninja . -DCMAKE_INSTALL_PREFIX=/app -DCMAKE_BUILD_TYPE=Release -DENABLE_SYNC=OFF",
                "cd WorkLog.Desktop && ninja",
                "cd WorkLog.Desktop && ninja install"
            ]
        }
    ]
}
