{
    "app-id": "work.worklog.worklog",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-25.08",
    "sdk": "org.kde.Sdk",
    "command": "worklog-desktop",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/man",
        "*.a",
        "*.la"
    ],
    "modules": [
      {
          "name": "worklog-desktop",
          "buildsystem": "cmake-ninja",
          "subdir": "WorkLog.Desktop",
          "config-opts": [
              "-DCMAKE_BUILD_TYPE=Release",
              "-DENABLE_SYNC=OFF"
          ],
          "sources": [
              {
                  "type": "git",
                  "url": "https://github.com/macsplit/Work.Log.git",
                  "tag": "v1.0.0"
              }
          ]
      }
    ]
}
