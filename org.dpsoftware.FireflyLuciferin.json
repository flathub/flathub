{
  "id": "org.dpsoftware.FireflyLuciferin",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "24.08",
  "sdk": "org.freedesktop.Sdk",
  "command": "FireflyLuciferin",
  "finish-args": [
    "--share=network",
    "--share=ipc",
    "--socket=pulseaudio",
    "--socket=x11",
    "--device=all",
    "--filesystem=xdg-documents",
    "--filesystem=xdg-download"
  ],
  "modules": [
    "shared-modules/libayatana-appindicator/libayatana-appindicator-gtk3.json",
    {
      "name": "cuda-toolkit",
      "only-arches": [
        "x86_64"
      ],
      "buildsystem": "simple",
      "build-commands": [
        "mv lib/libnvrtc* /app/lib/"
      ],
      "sources": [
        {
          "type": "archive",
          "only-arches": [
            "x86_64"
          ],
          "url": "https://developer.download.nvidia.com/compute/cuda/redist/cuda_nvrtc/linux-x86_64/cuda_nvrtc-linux-x86_64-12.6.85-archive.tar.xz",
          "sha256": "a4289ba86f0deeccf4e1d94c58559eae4c8184fcb6eaade8fcab45584e6cf402"
        }
      ]
    },
    {
      "name": "libnotify",
      "buildsystem": "meson",
      "config-opts": [
        "-Dman=false",
        "-Dgtk_doc=false"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://download.gnome.org/sources/libnotify/0.8/libnotify-0.8.3.tar.xz",
          "sha256": "ee8f3ef946156ad3406fdf45feedbdcd932dbd211ab4f16f75eba4f36fb2f6c0",
          "x-checker-data": {
            "type": "anitya",
            "project-id": 13149,
            "url-template": "https://download.gnome.org/sources/libnotify/$major.$minor/libnotify-$version.tar.xz"
          }
        }
      ]
    },
    {
      "name": "fireflyluciferin",
      "buildsystem": "simple",
      "build-commands": [
        "ar x FireflyLuciferinLinux.deb",
        "tar xvf data.tar.zst",
        "mkdir -p /app/fireflyluciferin",
        "echo -e '\nflatpak.env=true' >> opt/fireflyluciferin/lib/app/classes/project.properties",
        "cp -r opt/fireflyluciferin/* /app/",
        "find . -name org.dpsoftware.FireflyLuciferin.desktop",
        "install -Dm644 ./opt/fireflyluciferin/lib/app/classes/build_assets/org.dpsoftware.FireflyLuciferin.desktop /app/share/applications/${FLATPAK_ID}.desktop",
        "install -Dm644 ./opt/fireflyluciferin/lib/app/classes/build_assets/org.dpsoftware.FireflyLuciferin.appdata.xml /app/share/share/appdata/${FLATPAK_ID}.appdata.xml",
        "install -Dm644 ./opt/fireflyluciferin/lib/app/classes/build_assets/luciferin_logo.svg /app/share/icons/hicolor/scalable/apps/${FLATPAK_ID}.svg"
      ],
      "sources": [
        {
          "type" : "file",
          "url" : "https://dpsoftware.org/2.17.8/FireflyLuciferinLinux.deb",
          "sha256" : "1bbad5a949fbdc109f0b72e44dec50ef7e654149a9fed725cf336ad9f9c246b6"
        }
      ]
    }
  ]
}
