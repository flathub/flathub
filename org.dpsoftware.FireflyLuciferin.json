{
  "id": "org.dpsoftware.FireflyLuciferin",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "24.08",
  "sdk": "org.freedesktop.Sdk",
  "command": "FireflyLuciferin",
  "finish-args": [
    "--share=network",
    "--share=ipc",
    "--socket=pulseaudio",
    "--socket=x11",
    "--device=all",
    "--filesystem=xdg-documents",
    "--filesystem=xdg-download"
  ],
  "modules": [
    "shared-modules/libayatana-appindicator/libayatana-appindicator-gtk3.json",
    {
      "name": "cuda-toolkit",
      "only-arches": [
        "x86_64"
      ],
      "cleanup": [
        "/cuda"
      ],
      "buildsystem": "simple",
      "build-commands": [
        "mkdir /app/cuda",
        "sh cuda_toolkit.run --silent --toolkit --toolkitpath=/app/cuda",
        "mv /app/cuda/lib64/libnvrtc* /app/lib/"
      ],
      "sources": [
        {
          "type": "file",
          "only-arches": [
            "x86_64"
          ],
          "url": "https://developer.download.nvidia.com/compute/cuda/12.6.3/local_installers/cuda_12.6.3_560.35.05_linux.run",
          "dest-filename": "cuda_toolkit.run",
          "sha256": "81d60e48044796d7883aa8a049afe6501b843f2c45639b3703b2378de30d55d3"
        }
      ]
    },
    {
      "name": "libnotify",
      "buildsystem": "meson",
      "config-opts": [
        "-Dman=false",
        "-Dgtk_doc=false"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://download.gnome.org/sources/libnotify/0.8/libnotify-0.8.3.tar.xz",
          "sha256": "ee8f3ef946156ad3406fdf45feedbdcd932dbd211ab4f16f75eba4f36fb2f6c0",
          "x-checker-data": {
            "type": "anitya",
            "project-id": 13149,
            "url-template": "https://download.gnome.org/sources/libnotify/$major.$minor/libnotify-$version.tar.xz"
          }
        }
      ]
    },
    {
      "name": "fireflyluciferin",
      "buildsystem": "simple",
      "build-commands": [
        "ar x FireflyLuciferinLinux.deb",
        "tar xvf data.tar.zst",
        "mkdir -p /app/fireflyluciferin",
        "echo -e '\nflatpak.env=true' >> opt/fireflyluciferin/lib/app/classes/project.properties",
        "cp -r opt/fireflyluciferin/* /app/",
        "install -Dm644 org.dpsoftware.FireflyLuciferin.desktop /app/share/applications/${FLATPAK_ID}.desktop",
        "install -Dm644 org.dpsoftware.FireflyLuciferin.png /app/share/icons/hicolor/256x256/apps/${FLATPAK_ID}.png",
        "install -Dm644 org.dpsoftware.FireflyLuciferin.appdata.xml /app/share/share/appdata/${FLATPAK_ID}.appdata.xml"
      ],
      "sources": [
        {
          "type": "file",
          "path": "org.dpsoftware.FireflyLuciferin.desktop"
        },
        {
          "type": "file",
          "path": "org.dpsoftware.FireflyLuciferin.appdata.xml"
        },
        {
          "type": "file",
          "path": "org.dpsoftware.FireflyLuciferin.png"
        },
        {
          "type" : "file",
          "url" : "https://dpsoftware.org/FireflyLuciferinLinux.deb",
          "sha256" : "6c3421bd442d83f4d1eeaa1a3b0db5207ecb5e02cedb67f57f9961f8d16ebe97"
        }
      ]
    }
  ]
}
