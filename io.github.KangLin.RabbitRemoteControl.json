{
    "id": "io.github.KangLin.RabbitRemoteControl",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.8",
    "sdk": "org.kde.Sdk",
    "command": "RabbitRemoteControlApp",
    "cleanup": [
        "*.la",
        "*.a",
        "/include",
        "/lib/cmake",
        "/lib/pkgconfig",
        "/share/licenses"
    ],
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=pulseaudio",
        "--socket=x11",
        "--device=all",
        "--filesystem=xdg-documents"
    ],
    "modules": [
        {
            "name": "xprop",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://xorg.freedesktop.org/releases/individual/app/xprop-1.2.5.tar.bz2",
                    "sha256": "9b92ed0316bf2486121d8bac88bd1878f16b43bd335f18009b1f941f1eca93a1"
                }
            ],
            "cleanup": [
                "/bin",
                "/share"
            ]
        },
        {
            "name": "pcsc",
            "config-opts": [
                "--disable-libsystemd",
                "--enable-pic",
                "--disable-libusb",
                "--enable-shared",
                "--with-systemdsystemunitdir=/app/lib/systemd/"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/LudovicRousseau/PCSC.git",
                    "tag": "1.9.9",
                    "commit": "15c16c7796607b1c8a2ce253d3f536918ab26b4a"
                }
            ],
            "cleanup": [
                "/bin/pcsc-spy",
                "/sbin",
                "/share/doc",
                "/share/man",
                "/lib/systemd"
            ]
        },
        {
            "name": "krb5",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://kerberos.org/dist/krb5/1.21/krb5-1.21.3.tar.gz",
                    "sha256": "b7a4cd5ead67fb08b980b21abd150ff7217e85ea320c9ed0c6dadd304840ad35"
                },
                {
                    "type": "script",
                    "commands": [
                        "autoreconf --install --symlink"
                    ]
                }
            ],
            "buildsystem": "autotools",
            "subdir": "src",
            "cleanup": [
                "/sbin",
                "/bin",
                "/share"
            ]
        },
        {
            "name": "libssh",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://www.libssh.org/files/0.11/libssh-0.11.1.tar.xz",
                    "sha256": "14b7dcc72e91e08151c58b981a7b570ab2663f630e7d2837645d5a9c612c1b79"
                }
            ],
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [
                "-DWITH_EXAMPLES=OFF"
            ],
            "cleanup": [
                "/bin"
            ]
        },
        {
            "name": "libfuse",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/libfuse/libfuse/archive/refs/tags/fuse-3.16.2.tar.gz",
                    "sha256": "1bc306be1a1f4f6c8965fbdd79c9ccca021fdc4b277d501483a711cbd7dbcd6c"
                }
            ],
            "buildsystem": "meson",
            "builddir": true,
            "config-opts": [
                "-Dexamples=false",
                "-Dutils=false"
            ]
        },
        "shared-modules/libusb/libusb.json",
        {
            "name": "FreeRDP",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/FreeRDP/FreeRDP/archive/refs/tags/3.14.0.tar.gz",
                    "sha256": "a7a979382703c2bc18aa9b22cfa12d7a441b6927ab45ac62ef8353786bc92241"
                }
            ],
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [
                "-DCMAKE_VERBOSE_MAKEFILE=OFF",
                "-DCMAKE_BUILD_TYPE:STRING=Release",
                "-DCHANNEL_TSMF:BOOL=OFF",
                "-DBUILD_TESTING:BOOL=OFF",
                "-DWITH_MANPAGES:BOOL=OFF",
                "-DWITH_WAYLAND:BOOL=OFF",
                "-DWITH_GSSAPI:BOOL=OFF",
                "-DWITH_SAMPLE:BOOL=OFF",
                "-DWITH_OSS:BOOL=OFF",
                "-DWITH_CLIENT_SDL=OFF",
                "-DWITH_CLIENT=OFF",
                "-DCHANNEL_URBDRC:BOOL=ON",
                "-DWITH_KRB5=ON"
            ],
            "cleanup": [
                "/bin",
                "/share"
            ]
        },
        {
            "name": "libvncserver",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/LibVNC/libvncserver/archive/refs/tags/LibVNCServer-0.9.15.tar.gz",
                    "sha256": "62352c7795e231dfce044beb96156065a05a05c974e5de9e023d688d8ff675d7"
                }
            ],
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [
                "-DWITH_OPENSSL=ON",
                "-DWITH_GCRYPT=OFF",
                "-DWITH_EXAMPLES=OFF",
                "-DWITH_TESTS=OFF"
            ],
            "cleanup": [
                "/bin"
            ]
        },
        {
            "name": "cmark",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/commonmark/cmark/archive/refs/tags/0.31.1.tar.gz",
                    "sha256": "3da93db5469c30588cfeb283d9d62edfc6ded9eb0edc10a4f5bbfb7d722ea802"
                }
            ],
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [
                "-DBUILD_TESTING=OFF"
            ],
            "cleanup": [
                "/bin",
                "/share"
            ]
        },
        {
            "name": "RabbitCommon",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/KangLin/RabbitCommon.git",
                    "commit": "b5cfecbae748c258c9a6ad22c8c6f7ff0b006b76"
                }
            ],
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release",
                "-DBUILD_MimeTypeBrowser=OFF",
                "-DBUILD_APP=OFF",
                "-DBUILD_TEST=OFF"
            ],
            "cleanup": [
                "/bin",
                "/etc",
                "/share/applications",
                "/share/doc"
            ]
        },
        {
            "name": "RabbitRemoteControl",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/KangLin/RabbitRemoteControl.git",
                    "commit": "66df810daee47c7acfa7eba158cee05b7d76c393"
                }
            ],
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "post-install": [
                "desktop-file-edit --set-key=Path --set-value=/bin io.github.KangLin.RabbitRemoteControl.desktop",
                "install -Dm0644 io.github.KangLin.RabbitRemoteControl.metainfo.xml -t ${FLATPAK_DEST}/share/metainfo/"
            ]
        }
    ]
}
