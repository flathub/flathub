{
    "id": "org.groestlcoin.electrum-grs",
    "sdk": "org.kde.Sdk",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.14",
    "rename-icon": "electrum-grs",
    "rename-desktop-file": "electrum-grs.desktop",
    "command": "electrum-grs",
    "finish-args": [
        /* Wayland and Xorg support */
        "--socket=x11",
        "--socket=wayland",
        /* Sound */
        "--socket=pulseaudio",
        /* Persistent storage */
        "--persist=.electrum-grs",
        /* OpenGL access. */
        "--device=dri",
        "--share=ipc",
        /* Network acess. */
        "--share=network"
    ],
    "modules": [
        "python3-modules.json",
        "python3-pycryptodomex.json",
        "python3-pyQt5.json",
        "groestlcoin-hash.json",
        {
            "name": "electrum-grs",
            "buildsystem": "simple",
            "build-commands": [
                "pip3 install --no-index --find-links=\"file://${PWD}\" --prefix=${FLATPAK_DEST} .[fast]",
                "install -Dp -m 644 org.groestlcoin.electrum-grs.metainfo.xml /app/share/metainfo/org.groestlcoin.electrum-grs.metainfo.xml"
            ],
            "post-install": [
                "desktop-file-install --dir=/app/share/applications --set-key=Exec --set-value=electrum-grs --set-key=Icon --set-value=org.groestlcoin.electrum-grs electrum-grs.desktop"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/groestlcoin/electrum-grs.git",
                    "commit": "c407af82b91f54c895d35ea0631a380b744df42f",
                    "tag": "v3.3.8"
                },
                {
                    "type": "patch",
                    "path": "electrum-grs-setup.patch"
                },
                {
                    "type": "file",
                    "path": "org.groestlcoin.electrum-grs.metainfo.xml"
                }
            ]
        }
    ]
}
