{
    "app-id": "io.mjml.mjml-app",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "18.08",
    "branch": "stable",
    "sdk": "org.freedesktop.Sdk",
    "base": "io.atom.electron.BaseApp",
    "base-version": "18.08",
    "command": "mjml-app",
    "separate-locales": false,
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--share=network",
	"--filesystem=home"
    ],
    "build-options" : {
        "cflags": "-O2 -g",
        "cxxflags": "-O2 -g",
        "env": {
            "NPM_CONFIG_LOGLEVEL": "info"
        }
    },
    "modules": [
        {
            "name": "nodejs",
            "cleanup": [
                "/include",
                "/share",
                "/app/lib/node_modules/npm/changelogs",
                "/app/lib/node_modules/npm/doc",
                "/app/lib/node_modules/npm/html",
                "/app/lib/node_modules/npm/man",
                "/app/lib/node_modules/npm/scripts"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://nodejs.org/dist/v8.11.2/node-v8.11.2.tar.xz",
                    "sha256": "539946c0381809576bed07424a35fc1740d52f4bd56305d6278d9e76c88f4979"
                }
            ]
        },
	{
            "name": "yarn",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p /app/share/yarn",
                "cp -a * /app/share/yarn/",
                "ln -s /app/share/yarn/bin/yarn /app/bin/yarn",
                "ln -s /app/share/yarn/bin/yarnpkg /app/bin/yarnpkg"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/yarnpkg/yarn/releases/download/v1.12.3/yarn-v1.12.3.tar.gz",
                    "sha256": "02cd4b589ec22c4bdbd2bc5ebbfd99c5e99b07242ad68a539cb37896b93a24f2"
                }
            ] 
        },
        {
            "name": "mjml-app",
            "build-options" : {
                "env": {
                    "electron_config_cache": "/run/build/mjml-app/npm-cache"
                }
            },
            "buildsystem": "simple",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/mjmlio/mjml-app/archive/v2.10.0.tar.gz",
                    "sha256": "5623b77e5fd91bb83c9cadfc96f5114313c993e14c12cf6417779eb5e56943b9",
                    "dest": "main"
                },
                "generated-sources.json"
            ],
            "build-commands": [
		"yarn install --cwd /run/build/mjml-app/main --offline --prefer-offline",
		"yarn --cwd /run/build/mjml-app/main --offline --prefer-offline dist:dir",
                "mkdir -p /app/main /app/bin",
                "cp -ra main/* /app/main/",
                "install run.sh /app/bin/"
            ]
        }
    ]
}
