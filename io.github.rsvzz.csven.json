{
  "id": "io.github.rsvzz.csven",
  "runtime": "org.gnome.Platform",
  "runtime-version": "47",
  "sdk": "org.gnome.Sdk",
  "command": "csven",
  "finish-args": [
      "--share=ipc",
      "--device=dri",
      "--socket=fallback-x11",
      "--socket=wayland"
  ],
  "modules": [
    {
      "name": "questk",
      "buildsystem": "meson",
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/rsvzz/libquestk.git",
          "tag":"0.0.1"
        }
      ]
    },
    {
      "name": "csven",
      "buildsystem": "meson",
      "sources": [
        {
          "type": "git",
          "url":"https://github.com/rsvzz/c_sven.git",
          "tag":"0.0.6"
        }
      ]
      
    },
    {
      "name":"infodata",
      "buildsystem":"simple",
      "sources": [
        {
          "type":"dir",
          "path":"."
        }
      ],
      "build-commands":[
        "install -Dm644 ./data/io.github.rsvzz.csven.png -t /app/share/icons/hicolor/scalable/apps",
        "install -Dm644 ./data/io.github.rsvzz.csven.png -t /app/share/icons/hicolor/scalable/mimetypes",
        "install -Dm644 ./data/io.github.rsvzz.csven.desktop -t /app/share/applications",
        "install -Dm644 ./data/io.github.rsvzz.csven.metainfo.xml -t /app/share/metainfo"
      ]
    }
  ]
}
