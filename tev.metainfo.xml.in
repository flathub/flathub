<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
    <id>@TEV_LINUX_APP_ID@</id>
    <name>tev</name>
    <summary>High dynamic range (HDR) image viewer for people who care about colors</summary>
    <metadata_license>CC0-1.0</metadata_license>
    <project_license>GPL-3.0-or-later</project_license>
    <developer id="io.github.tom94">
        <name translate="no">Thomas MÃ¼ller</name>
    </developer>
    <content_rating type="oars-1.1" />
    <description>
    <p>High dynamic range (HDR) image viewer for people who care about colors.</p>
    <p>It is:</p>
    <ul>
        <li>Lightning fast: starts up instantly, loads hundreds of images in seconds.</li>
        <li>Accurate: understands HDR and color profiles (ICC, CICP, etc.). Displays HDR on all operating systems.</li>
        <li>Versatile: supports many file formats, histograms, pixel-peeping, tonemaps, error metrics, etc.</li>
    </ul>
    </description>
    <supports>
        <control>keyboard</control>
        <control>pointing</control>
    </supports>
    <requires>
        <!-- 768px is the reference size for screens in laptops, tablets from the AppStream docs. -->
        <display_length compare="ge">768</display_length>
    </requires>

    <!-- Screenshots -->
    <screenshots>
        <screenshot type="default">
          <image>https://raw.githubusercontent.com/Tom94/tev/refs/heads/master/resources/linux/screenshot.png</image>
          <caption>Two images compared in false color.</caption>
        </screenshot>
    </screenshots>


    <url type="homepage">https://github.com/Tom94/tev</url>
    <url type="bugtracker">https://github.com/Tom94/tev/issues</url>
    <url type="vcs-browser">https://github.com/Tom94/tev</url>

    <launchable type="desktop-id">@TEV_LINUX_APP_ID@.desktop</launchable>
    <provides>
        <binary>tev</binary>
    </provides>

    <branding>
        <color type="primary" scheme_preference="light">#e89df4</color>
        <color type="primary" scheme_preference="dark">#854091</color>
    </branding>
</component>
