{
    "id": "com.inventwithpython.flippy",
    "runtime": "org.freedesktop.Platform",
    "sdk": "org.freedesktop.Sdk",
    "runtime-version": "1.6",
    "finish-args": [
       "--socket=x11",
       "--command=/app/bin/flippy"
    ],
    "modules": [
        "shared-modules/pygame/pygame-1.9.3.json",
        {
            "name": "flippy",
            "sources": [
                {
                  "type": "archive",
                  "url": "http://invpy.com/flippyimages.zip",
                  "sha256": "09ca8543237b42b152e5256e7c996cbff9ca124534abba0cd915fa1c11fe2af2"
                }
            ],
            "buildsystem": "simple",
            "build-commands": [
              "install -Dt /app/share/flippy/ *"
            ]
        },
        {
            "name": "flippy-launcher",
            "sources": [
              {
                "type": "file",
                "path": "launch.py"
              },
              {
                "type": "file",
                "path": "icon_48.png"
              },
              {
                "type": "file",
                "path": "icon_64.png"
              },
              {
                "type": "file",
                "path": "icon_128.png"
              },
              {
                  "type": "file",
                  "path": "com.inventwithpython.flippy.desktop"
              }
            ],
            "buildsystem": "simple",
            "build-commands": [
              "install -TD launch.py /app/bin/flippy",
              "for size in 48 64 128; do install -TD icon_${size}.png /app/share/icons/hicolor/${size}x${size}/apps/com.inventwithpython.flippy.png; done",
              "mkdir /app/share/applications",
              "install com.inventwithpython.flippy.desktop /app/share/applications/"
            ]
        }
    ]
}
