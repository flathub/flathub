{
    "id": "io.github.b43NnUNF4vidFYFhpqaLWy2ANawtRbMtUXZY9Pf.jumpdf",
    "runtime": "org.gnome.Platform",
    "runtime-version": "46",
    "sdk": "org.gnome.Sdk",
    "command": "jumpdf",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri"
    ],
    "modules": [
        {
            "name": "poppler",
            "builddir": true,
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DBUILD_GTK_TESTS=OFF",
                "-DBUILD_QT5_TESTS=OFF",
                "-DBUILD_CPP_TESTS=OFF",
                "-DBUILD_QT6_TESTS=OFF",
                "-DBUILD_MANUAL_TESTS=OFF",
                "-DENABLE_UTILS=OFF",
                "-DENABLE_GTK_DOC=OFF",
                "-DENABLE_QT5=OFF",
                "-DENABLE_QT6=OFF",
                "-DENABLE_CPP=OFF"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://poppler.freedesktop.org/poppler-24.08.0.tar.xz",
                    "sha256": "97453fbddf0c9a9eafa0ea45ac710d3d49bcf23a62e864585385d3c0b4403174"
                }
            ],
            "modules": [
                {
                    "name": "boost",
                    "buildsystem": "simple",
                    "build-commands": [
                        "./bootstrap.sh --prefix=/app --with-libraries=system",
                        "./b2 -j $FLATPAK_BUILDER_N_JOBS install"
                    ],
                    "sources": [
                        {
                            "type": "archive",
                            "url": "https://boostorg.jfrog.io/artifactory/main/release/1.86.0/source/boost_1_86_0.tar.bz2",
                            "sha256": "1bed88e40401b2cb7a1f76d4bab499e352fa4d0c5f31c0dbae64e24d34d7513b"
                        }
                    ]
                }
            ]
        },
        {
            "name": "jumpdf",
            "builddir": true,
            "buildsystem": "meson",
            "config-opts": [
                "--buildtype=release"
            ],
            "sources": [
                {
                    "type": "git",
                    "tag": "v1.0.0",
                    "url": "https://github.com/b43NnUNF4vidFYFhpqaLWy2ANawtRbMtUXZY9Pf/jumpdf.git"
                }
            ]
        }
    ]
}
