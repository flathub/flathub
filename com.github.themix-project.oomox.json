{
    "app-id": "com.github.themix-project.oomox",
    "runtime": "org.gnome.Sdk",
    "runtime-version": "3.26",
    "sdk": "org.gnome.Sdk",
    "command": "oomox-gui",
    "finish-args": [
        "--share=ipc",
        "--filesystem=~/.themes:create",
        "--filesystem=~/.icons:create",
        "--socket=x11"
    ],
    "modules": [
        {
            "name": "sassc",
            "buildsystem": "simple",
            "build-commands": [
                "cd ./deps/libsass ; autoreconf -i ; ./configure --prefix=/app ; make ; make DESTDIR=/ install",
                "cd ./deps/sassc ; autoreconf -i ; ./configure --prefix=/app ; make ; make DESTDIR=/ install"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/sass/libsass/archive/3.4.7.tar.gz",
                    "sha256": "855c40528b897d06ae4d24606c2db3cd09bb38de5b46b28e835f9d4fd4d7ab95",
                    "dest": "./deps/libsass/"
                },
                {
                    "type": "archive",
                    "url": "https://github.com/sass/sassc/archive/3.4.2.tar.gz",
                    "sha256": "ad805f2d404d17cf2980c8079a7413cd58d2f2085120167997b85420a722e079",
                    "dest": "./deps/sassc/"
                }
            ]
        },
        {
            "name": "imagemagick",
            "config-opts": [
                "--enable-static=no",
                "--disable-docs",
                "--disable-deprecated",
                "--without-autotrace",
                "--without-bzlib",
                "--without-djvu",
                "--without-dps",
                "--without-fftw",
                "--without-fontconfig",
                "--without-fpx",
                "--without-freetype",
                "--without-gvc",
                "--without-jbig",
                "--without-jpeg",
                "--without-lcms",
                "--without-lzma",
                "--without-magick-plus-plus",
                "--without-openexr",
                "--without-openjp2",
                "--without-pango",
                "--without-raqm",
                "--without-tiff",
                "--without-webp",
                "--without-wmf",
                "--without-x",
                "--without-xml",
                "--without-zlib"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://www.imagemagick.org/download/ImageMagick-7.0.7-24.tar.xz",
                    "sha256": "2f83f8a1b7725e9d96a6f4ddf8dd2e70d44bc039bdc32f056805ab4d0f7485fb"
                }
            ]
        },
        {
            "name": "oomox",
            "buildsystem": "simple",
            "build-commands": [
                "./packaging/flatpak/install.sh"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/themix-project/oomox.git",
                    "tag": "1.6.2"
                }
            ]
        }
    ]
}
