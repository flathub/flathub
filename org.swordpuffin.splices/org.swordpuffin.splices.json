{
    "id" : "org.swordpuffin.splices",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "master",
    "sdk" : "org.gnome.Sdk",
    "command" : "splices",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "splices",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/SwordPuffin/Splices.git"
                }
            ]
        },
    "metadata": {
        "homepage": "https://github.com/SwordPuffin/YourApp",
        "description": "A brief description of your app.",
        "license": "MIT",
        "icon": "data/icon.png"
    }
    ]
}
