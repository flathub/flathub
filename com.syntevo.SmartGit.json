{
  "app-id": "com.syntevo.SmartGit",
  "command": "smartgit",
  "runtime": "org.gnome.Platform",
  "runtime-version": "3.28",
  "separate-locales": false,
  "sdk": "org.gnome.Sdk",
  "finish-args": [
    "--device=dri",
    "--env=SMARTGIT_JAVA_HOME=/app/smartgit/jre",
    "--filesystem=host",
    "--share=ipc",
    "--share=network",
    "--socket=ssh-auth",
    "--socket=wayland",
    "--socket=x11",
    "--talk-name=org.freedesktop.Notifications",
    "--talk-name=org.freedesktop.secrets"
  ],
  "modules": [
    {
      "name": "smartgit",
      "buildsystem": "simple",
      "build-commands": [
        "install -dm0755 /app/bin/",
        "install -dm0755 /app/smartgit/",
        "tar -xzvf smartgit-linux*.tar.gz --directory /app/smartgit/ --strip-components=1",
        "rm smartgit-linux*.tar.gz",
        "install -Dm0755 smartgit.sh /app/bin/smartgit",
        "install -Dm0644 /app/smartgit/bin/smartgit-64.png /app/share/icons/hicolor/64x64/apps/com.syntevo.SmartGit.png",
        "install -Dm0644 /app/smartgit/bin/smartgit-128.png /app/share/icons/hicolor/128x128/apps/com.syntevo.SmartGit.png",
        "install -Dm0644 /app/smartgit/bin/smartgit-256.png /app/share/icons/hicolor/256x256/apps/com.syntevo.SmartGit.png",
        "install -Dm0644 -t /app/share/appdata/ com.syntevo.SmartGit.appdata.xml",
        "install -Dm0644 -t /app/share/applications/ com.syntevo.SmartGit.desktop"
      ],
      "sources": [
        {
          "type": "file",
          "url": "https://www.syntevo.com/downloads/smartgit/smartgit-linux-18_1_4.tar.gz",
          "sha256": "95912b0264be6be4557cc046156db65e495046fff2076bb143b89f573473fea1"
        },
        {
          "type": "file",
          "path": "com.syntevo.SmartGit.appdata.xml"
        },
        {
          "type": "file",
          "path": "com.syntevo.SmartGit.desktop"
        },
        {
          "type": "script",
          "dest-filename": "smartgit.sh",
          "commands": ["exec env /app/smartgit/bin/smartgit.sh \"$@\""]
        }
      ]
    }
  ]
}
