{
    "id": "io.github.mohfy.word2ipa",
    "runtime": "org.gnome.Platform",
    "runtime-version": "48",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command": "word2ipa",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin",
        "env": {
            "RUST_BACKTRACE": "1",
            "RUST_LOG": "word2ipa=debug"
        }
    },
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "word2ipa",
            "builddir": true,
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/mohfy/word2ipa.git",
                    "commit": "a28bdbade914f81611379179f5091685e91b20a9"
                },
                {
                    "type": "file",
                    "path": "Cargo.lock"
                },
                {
                    "type": "file",
                    "path": "cargo-sources.json"
                }
            ]
        }
    ]
}
