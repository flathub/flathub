{
    "id": "org.gnome.Games.LibretroPlugin.PicoDrive",
    "runtime": "org.gnome.Games",
    "runtime-version": "3.24",
    "build-extension": true,
    "sdk": "org.gnome.Sdk",
    "finish-args": [
        /* Needed to find the ROMs */
        "--filesystem=home:ro"
    ],
    "build-options" : {
        "cflags": "-O2 -g",
        "cxxflags": "-O2 -g"
    },
    "cleanup": ["/include", "/lib/pkgconfig",
                "/share/pkgconfig", "/share/aclocal",
                "/man", "/share/man", "/share/gtk-doc",
                "*.la", "*.a",
                "/lib/girepository-1.0",
                "/share/dbus-1", "/share/doc", "/share/gir-1.0"
    ],
    "modules": [
        {
            "name": "libretro-picodrive",
            "no-autogen": true,
            "rm-configure": true,
            "make-args": [
                "--makefile=Makefile.install",
                "prefix=/app"
            ],
            "make-install-args": [
                "--makefile=Makefile.install",
                "prefix=/app"
            ],
            "post-install": [
                "mkdir -p /app/lib/libretro/extra.d/PicoDrive",
                "install -m644 -p picodrive.libretro /app/lib/libretro/extra.d/PicoDrive"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/libretro/picodrive/archive/f0a3d0dc4bd9060eb6bfdb16fb20dbb80a9e6ae9.zip",
                    "sha256": "574f942208ec283f9fc1fd95be4d9df771cc40c2748e4e476923b80adcd15583"
                },
                {
                    "type": "file",
                    "path": "picodrive-Makefile.install",
                    "dest-filename": "Makefile.install"
                },
                {
                    "type": "file",
                    "path": "picodrive.libretro"
                }
            ]
        },
        {
            "name": "appdata",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p ${FLATPAK_DEST}/share/appdata",
                "cp org.gnome.Games.LibretroPlugin.PicoDrive.metainfo.xml ${FLATPAK_DEST}/share/appdata",
                "appstream-compose --basename=org.gnome.Games.LibretroPlugin.PicoDrive --prefix=${FLATPAK_DEST} --origin=flatpak org.gnome.Games.LibretroPlugin.PicoDrive"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "org.gnome.Games.LibretroPlugin.PicoDrive.metainfo.xml"
                }
            ]
        }
    ]
}
