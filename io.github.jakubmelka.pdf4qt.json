{
    "id": "io.github.jakubmelka.pdf4qt",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-21.08",
    "sdk": "org.kde.Sdk",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland"
    ],
    "modules": [{
        "name": "qbs",
        "buildsystem": "cmake-ninja",
        "builddir": true,
        "config-opts": [
            "-DWITH_TESTS:BOOL=OFF"
        ],
        "cleanup": [
            "*"
        ],
        "sources": [{
            "type": "archive",
            "url": "https://download.qt.io/official_releases/qbs/1.23.0/qbs-src-1.23.0.tar.gz",
            "sha256": "c86aa775446aec728bcbbed782ec128f4e6e2c26536710017343e684bb616d7a"
        }]
    },

    {
        "name": "conan",
        "buildsystem": "simple",
        "build-commands": [
            "pip3 install --prefix=/app"
        ],
        "sources": [{
            "type": "archive",
            "url": "https://files.pythonhosted.org/packages/e7/9b/38313b597dfb6fef3f20a60a68c2378db5ecb0d72492cfdc0998c11568cd/conan-1.51.1.tar.gz",
            "sha256": "95fef899d03b89142ef1dd8675ddeef92ae3215ac9a5d1302f99e1527bdf49b5"
        }]
    },
    {
        "name": "PDF4QT",
        "buildsystem": "simple",
        "build-commands": [
            "qbs build"
        ],
        "sources": [{
            "type": "archive",
            "url": "https://github.com/JakubMelka/PDF4QT/archive/refs/tags/v1.2.1.tar.gz",
            "sha256": "53ed6f5f53d0c305bd176626a5491773574bebd5f01162c66752303c12538c0f"
        }]
    }
    ]
}
