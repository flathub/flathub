{
  "app-id": "io.github.strikerx3.ymir",
  "runtime": "org.freedesktop.Platform",
  "sdk": "org.freedesktop.Sdk",
  "runtime-version": "25.08",
  "command": "ymir-sdl3",
  "finish-args": [
    "--device=all",
    "--socket=fallback-x11",
    "--share=ipc",
    "--socket=wayland",
    "--socket=pulseaudio"
  ],
  "modules": [
    {
      "name": "ymir",
      "buildsystem": "cmake-ninja",
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/StrikerX3/Ymir.git",
          "tag": "v0.1.8",
          "commit": "1cfb43fbb293cdd304ea4a6e11acbf3ba984ae97"
        }
      ],
      "post-install": [
        "install -Dm 644 apps/ymir-sdl3/res/io.github.strikerx3.ymir.xml ${FLATPAK_DEST}/share/metainfo/${FLATPAK_ID}.metainfo.xml",
        "install -Dm 644 apps/ymir-sdl3/res/io.github.strikerx3.ymir.desktop ${FLATPAK_DEST}/share/applications/io.github.strikerx3.ymir.desktop",
        "install -Dm 644 apps/ymir-sdl3/res/ymir.png ${FLATPAK_DEST}/share/icons/hicolor/256x256/apps/ymir.png",
        "install -Dm 644 apps/ymir-sdl3/res/ymir.png ${FLATPAK_DEST}/share/icons/ymir.png"
      ]
    }
  ]
}
