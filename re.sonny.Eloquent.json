{
  "id": "re.sonny.Eloquent",
  "runtime": "org.gnome.Platform",
  "runtime-version": "47",
  "sdk": "org.gnome.Sdk",
  "command": "re.sonny.Eloquent",
  "sdk-extensions": ["org.freedesktop.Sdk.Extension.openjdk21"],
  "finish-args": [
    "--share=network",
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--device=dri",
    "--env=PATH=/app/jre/bin:/usr/bin:/app/bin"
  ],
  "modules": [
    {
      "name": "LanguageTool",
      "buildsystem": "simple",
      "build-commands": ["cp -r . /app/LanguageTool"],
      "sources": [
        {
          "type": "archive",
          "url": "https://languagetool.org/download/LanguageTool-6.5.zip",
          "sha256": "27f3ae5a29efbc8267a5a266908dfec205d16d312af8516e0b5bcec871edea0b"
        }
      ],
      "modules": [
        {
          "name": "openjdk",
          "buildsystem": "simple",
          "build-commands": ["/usr/lib/sdk/openjdk21/install.sh"]
        }
      ]
    },
    {
      "name": "blueprint-compiler",
      "buildsystem": "meson",
      "cleanup": ["*"],
      "sources": [
        {
          "type": "git",
          "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler.git",
          "commit": "04ef0944db56ab01307a29aaa7303df6067cb3c0",
          "tag": "v0.16.0"
        }
      ]
    },
    {
      "name": "Eloquent",
      "buildsystem": "meson",
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/sonnyp/Eloquent.git",
          "commit": "04e7d82f0bc7ff445355a17f34a2559c3bf56da1",
          "tag": "v1.0"
        }
      ]
    }
  ]
}
