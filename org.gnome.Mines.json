{
    "app-id": "org.gnome.Mines",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.32",
    "sdk": "org.gnome.Sdk",
    "command": "gnome-mines",
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--filesystem=xdg-run/dconf",
        "--filesystem=~/.config/dconf:ro",
        "--talk-name=ca.desrt.dconf",
        "--env=DCONF_USER_CONFIG_DIR=.config/dconf"
    ],
    "cleanup": [
        "/include",
        "/lib/*.la",
        "/lib/pkgconfig",
        "/share/man",
        "/share/vala"
    ],
    "modules": [{
            "name": "org.gnome.games-support.modules",
            "modules": [{
                    "name": "libgnome-games-support",
                    "sources": [{
                        "type": "git",
                        "url": "https://gitlab.gnome.org/GNOME/libgnome-games-support.git",
                        "tag": "1.4.3",
                        "commit": "ca0aee63ba7c8537c1da170d3735ef3c95648bf0"
                    }]
                }
            ]
        },
        {
            "name": "gnome-mines",
            "buildsystem": "meson",
            "sources": [{
                "type": "git",
                "url": "https://gitlab.gnome.org/GNOME/gnome-mines.git",
                "tag": "3.32.2",
                "commit": "00dd13739d4821f97659584b04f7a3d6420a1aaa"
            }]
        }
    ]
}
