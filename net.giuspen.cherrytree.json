    "runtime": "org.gnome.Platform",
    "runtime-version": "42",
    "sdk": "org.gnome.Sdk",
    "command": "cherrytree",
    "rename-desktop-file": "cherrytree.desktop",
    "rename-icon": "cherrytree",
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=x11",
        "--socket=wayland",
        "--filesystem=host",
        "--filesystem=xdg-config/gtk-3.0",
        "--filesystem=xdg-run/gvfs",
        "--filesystem=xdg-run/gvfsd",
        "--talk-name=org.gtk.vfs.*"
