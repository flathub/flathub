    "cleanup": [
        "/bin/poppler-glib-demo",
        "/bin/gsl-*",
        "/include",
        "/lib/pkgconfig",
        "/share/aclocal",
        "/share/devhelp",
        "/share/doc",
        "/share/gc",
        "/share/info",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
