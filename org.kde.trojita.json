{
  "app-id": "org.kde.trojita",
  "runtime": "org.kde.Platform",
  "runtime-version": "5.15-21.08",
  "sdk": "org.kde.Sdk",
  "base": "io.qt.qtwebkit.BaseApp",
  "base-version": "5.15-21.08",
  "command": "trojita",
  "rename-icon": "trojita",
  "finish-args": [
    "--share=ipc",
    "--share=network",
    "--socket=wayland",
    "--socket=fallback-x11",
    "--device=dri",
    "--persist=.abook"
  ],
  "modules": [
    {
      "name": "boost",
      "buildsystem": "simple",
      "build-commands": [
        "./bootstrap.sh --prefix=/app --with-libraries=system",
        "./b2 -j $FLATPAK_BUILDER_N_JOBS install"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://boostorg.jfrog.io/artifactory/main/release/1.79.0/source/boost_1_79_0.tar.bz2",
          "sha256": "475d589d51a7f8b3ba2ba4eda022b170e562ca3b760ee922c146b6c65856ef39",
          "x-checker-data": {
            "type": "anitya",
            "project-id": 6845,
            "stable-only": true,
            "url-template": "https://boostorg.jfrog.io/artifactory/main/release/$version/source/boost_${major}_${minor}_$patch.tar.bz2"
          }
        }
      ]
    },
    {
      "name": "QGpgme",
      "buildsystem": "autotools",
      "sources": [
        {
          "type": "archive",
          "url": "https://gnupg.org/ftp/gcrypt/gpgme/gpgme-1.18.0.tar.bz2",
          "sha256": "361d4eae47ce925dba0ea569af40e7b52c645c4ae2e65e5621bf1b6cdd8b0e9e",
          "x-checker-data": {
            "type": "anitya",
            "project-id": 1239,
            "stable-only": true,
            "url-template": "https://gnupg.org/ftp/gcrypt/gpgme/gpgme-$version.tar.bz2"
          }
        }
      ]
    },
    {
      "name": "trojita",
      "buildsystem": "cmake-ninja",
      "config-opts": [
        "-DWITH_TESTS=OFF",
        "-DWITH_QT5=ON",
        "-DWITH_ZLIB=ON",
        "-DWITH_RAGEL=OFF"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://invent.kde.org/pim/trojita.git",
          "commit": "70902f213dafe5bbdd4fc8b0f7288b222276c1c3"
        }
      ]
    }
  ]
}
