{
    "app-id": "com.github.muriloventuroso.givemelyrics",
    "runtime": "org.gnome.Platform",
    "runtime-version" : "3.30",
    "base" : "io.elementary.BaseApp",
    "base-version" : "juno",
    "sdk": "org.gnome.Sdk",
    "command": "com.github.muriloventuroso.givemelyrics",
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=x11",
        "--device=dri",
        "--socket=wayland",
        "--socket=system-bus",
        "--env=DCONF_USER_CONFIG_DIR=.config/dconf",
        "--filesystem=xdg-run/dconf",
        "--filesystem=~/.config/dconf:ro"
    ],

    "modules": [
        {
            "name": "givemelyrics",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/muriloventuroso/givemelyrics/archive/0.2.0.tar.gz",
                    "sha256": "6ddfec64e3cbe9afb93482b33b4a3c5238d36fe60dcd0a2b3d30a05b684685de"
                }
            ],
            "post-install": [
                "glib-compile-schemas /app/share/glib-2.0/schemas/"
            ]
        }
    ]
}


