{
    "id": "org.flarerpg.Flare",
    "command": "/app/games/flare",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "1.6",
    "sdk": "org.freedesktop.Sdk",
    "finish-args": [
        "--socket=pulseaudio",
        "--socket=x11",
        "--socket=wayland",
        "--share=ipc",
        "--device=dri"
    ],
    "rename-desktop-file": "flare.desktop",
    "rename-icon": "flare",
    "modules": [
        "shared-modules/SDL/SDL-1.2.15.json",
        {
            "name": "flare-engine",
            "buildsystem": "cmake",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/clintbellanger/flare-engine.git",
                    "tag": "v1.0"
                }
            ]
        },
        {
            "name": "flare-game",
            "buildsystem": "cmake",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/clintbellanger/flare-game.git",
                    "tag": "v1.0"
                }
            ]
        }
    ]
}
