{
    "id": "io.github.justinrdonnelly.bouncer",
    "runtime": "org.gnome.Platform",
    "runtime-version": "47",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": [
    ],
    "command": "io.github.justinrdonnelly.bouncer",
    "finish-args": [
        "--socket=wayland",
        "--device=dri",
        "--socket=fallback-x11",
        "--share=ipc",
        "--system-talk-name=org.freedesktop.NetworkManager",
        "--system-talk-name=org.fedoraproject.FirewallD1"
    ],
    "build-options": {
        "env": {}
    },
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "libportal",
            "buildsystem": "meson",
            "config-opts": [
                "--libdir=/app/lib",
                "-Dbackend-gtk3=disabled",
                "-Dbackend-gtk4=enabled",
                "-Dbackend-qt5=disabled",
                "-Dbackend-qt6=disabled",
                "-Ddocs=false",
                "-Dtests=false",
                "-Dvapi=false"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/flatpak/libportal/releases/download/0.9.0/libportal-0.9.0.tar.xz",
                    "sha256": "113910f06f39387328805397053d20c7acafb7388d8e6cd5e06e05efb9690735"
                }
            ]
        },
        {
            "name": "bouncer",
            "builddir": true,
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/justinrdonnelly/bouncer.git",
                    "tag": "47.0.0"
                }
            ],
            "config-opts": [
                "--libdir=lib"
            ]
        }
    ]
}
