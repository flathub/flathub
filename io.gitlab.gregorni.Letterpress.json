{
    "app-id" : "io.gitlab.gregorni.ASCIIImages",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "45",
    "sdk" : "org.gnome.Sdk",
    "command" : "letterpress",
    "finish-args" : [
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
    	{
  	    "name": "blueprint-compiler",
  	    "buildsystem": "meson",
  	    "cleanup": [ "*" ],
  	    "sources": [
	  	{
	      	    "type": "git",
	      	    "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler",
	      	    "tag": "v0.10.0",
	      	    "commit": "2a39a16391122af2f3d812e478c1c1398c98b972"
	    	}
	    ]
	},
        {
            "name" : "jp2a",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/Talinx/jp2a.git",
                    "commit" : "988ec7c519ed4b439c13358726559e53ebbdaf3c"
                },
                {
                    "type" : "shell",
                    "commands": [
                        "autoreconf -vfi"
                    ]
                }
            ]
        },
        {
	    "name": "python-pillow",
	    "buildsystem": "simple",
	    "build-commands": [
	    	"python3 setup.py install --prefix=/app --root=/"
	    ],
	    "sources": [
	      	{
	            "type": "git",
	            "url": "https://github.com/python-pillow/Pillow",
	            "tag": "10.0.0",
	            "commit": "6e28ed1f36d0eb74053af54e1eddc9c29db698cd"
	      	}
	    ]
        },
        {
            "name" : "letterpress",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/World/letterpress",
                    "commit" : "dcdf1115343bfdbc5421e8a4b8fa127d69510131"
                }
            ]
        }
    ]
}
