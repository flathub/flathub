{
    "app-id" : "io.github.fsobolev.TimeSwitch",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "43",
    "sdk" : "org.gnome.Sdk",
    "command" : "timeswitch",
    "finish-args" : [
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
        "--talk-name=org.gnome.SessionManager",
        "--system-talk-name=org.freedesktop.login1",
    	"--socket=pulseaudio"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
      "shared-modules/libcanberra/libcanberra.json",
    	{
            "name": "gsound",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/GNOME/gsound.git",
                    "tag": "1.0.3",
                    "commit": "95d36d60cf53e0e7c5d5325e0f1f4fc765a611ae"
                }
            ]
        },
        "shared-modules/intltool/intltool-0.51.json",
        {
            "name": "sound-theme-freedesktop",
            "sources": [
                {
                    "type": "archive",
                    "url": "http://people.freedesktop.org/~mccann/dist/sound-theme-freedesktop-0.8.tar.bz2",
                    "sha256": "cb518b20eef05ec2e82dda1fa89a292c1760dc023aba91b8aa69bafac85e8a14"
                }
            ]
        },

        {
            "name" : "timeswitch",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/fsobolev/timeswitch.git",
                    "tag": "v0.1.0",
                    "commit": "6e65b2847256fbd0475ee5a26fa9f95d05890c40"
                }
            ]
        }
    ]
}
