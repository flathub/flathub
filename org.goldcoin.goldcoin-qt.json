{
  "id": "org.goldcoin.goldcoin-qt",
  "runtime": "org.freedesktop.Platform",
  "sdk": "org.freedesktop.Sdk",
  "runtime-version": "20.08",
  "command": "goldcoin-qt",
  "finish-args": [
    /* Wayland and Xorg support */
    "--socket=x11",
    /* Sound */
    "--socket=pulseaudio",
    /* OpenGL access. */
    "--device=dri",
    /* IPC access. */
    "--share=ipc",
    /* Network acess. */
    "--share=network"
  ],
  "modules": [
    {
      "name": "goldcoin",
      "buildsystem": "simple",
      "build-commands": [
        "install -m 0744 -D -t /app/bin/internal bin/goldcoin-qt"
      ],
      "sources": [
        {
          "type": "archive",
          "only-arches": ["x86_64"],
          "url": "https://github.com/goldcoin/goldcoin/releases/download/v0.14.9.1/goldcoin-0.14.9.1-x86_64-linux-gnu.tar.gz",
          "sha256": "a9c6c6d6fdd9f021c1d8e22a18d4c83199f36362bf1579839f14af7c5c456204"
        }
      ]
    },
    {
      "name": "misc",
      "buildsystem": "simple",
      "build-commands": [
        "install -Dp -m 644 goldcoin-icon-transparent.png /app/share/icons/hicolor/scalable/apps/org.goldcoin.goldcoin-qt.png",
        "install -Dp -m 644 goldcoin-qt.desktop /app/share/applications/org.goldcoin.goldcoin-qt.desktop",
        "desktop-file-edit --set-key=Icon --set-value=org.goldcoin.goldcoin-qt.png /app/share/applications/org.goldcoin.goldcoin-qt.desktop",
        "install -Dp -m 644 org.goldcoin.goldcoin-qt.metainfo.xml /app/share/metainfo/org.goldcoin.goldcoin-qt.metainfo.xml",
        "bash install_wrapper.sh"
      ],
      "sources": [
        {
          "type": "file",
          "url": "https://raw.githubusercontent.com/expatjedi/flatpak-data/main/goldcoin-qt.desktop",
          "sha256": "8b2a9c8da281be2f65161a2d8d49e6fcb4c7e9b78f78847b34cb3604c93b0384"
        },
        {
          "type": "file",
          "path": "org.goldcoin.goldcoin-qt.metainfo.xml"
        },
        {
          "type": "file",
          "url": "https://raw.githubusercontent.com/expatjedi/flatpak-data/main/goldcoin-icon-transparent.png",
          "sha256": "998d8756c777b6723ff2c78b885f7d48fe752c49d6224f858b65c5561b63c470"
        },
        {
          "type": "file",
          "path": "install_wrapper.sh"
        }
      ]
    }
  ]
}
