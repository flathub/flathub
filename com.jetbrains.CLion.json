{
    "app-id": "com.jetbrains.CLion",
    "runtime": "org.freedesktop.Sdk",
    "runtime-version": "1.6",
    "sdk": "org.freedesktop.Sdk",
    "command": "clion",
    "finish-args": [
        "--device=all",
        "--device=dri",
        "--filesystem=host",
        "--filesystem=xdg-run/keyring",
        "--share=ipc",
        "--share=network",
        "--socket=session-bus",
        "--socket=wayland",
        "--socket=x11",
        "--talk-name=org.freedesktop.Notifications",
        "--talk-name=org.freedesktop.secrets"
    ],
    "modules": [
        {
            "name": "clion",
            "buildsystem": "simple",
            "build-commands": [
                "install -D apply_extra /app/bin/apply_extra",
                "install -D clion.sh /app/bin/clion",
                "install -Dm644 com.jetbrains.CLion.png /app/share/icons/hicolor/128x128/apps/com.jetbrains.CLion.png",
                "install -Dm644 com.jetbrains.CLion.appdata.xml /app/share/appdata/com.jetbrains.CLion.appdata.xml",
                "install -Dm644 com.jetbrains.CLion.desktop /app/share/applications/com.jetbrains.CLion.desktop"
            ],
            "sources": [
                {
                    "type": "script",
                    "dest-filename": "apply_extra",
                    "commands": [
                        "tar xzfv clion.tar.gz",
                        "rm clion.tar.gz",                        
                        "mv clion-*/* .",
                        "rmdir clion-*",
                        "sed -i 's/\"$JAVA_BIN\" \\\\/\"$JAVA_BIN\" -Duser.home=\"$XDG_CONFIG_HOME\" \\\\/g' /app/extra/bin/clion.sh"
                    ]
                },
                {
                    "type": "file",
                    "path": "com.jetbrains.CLion.appdata.xml"
                },
                {
                    "type": "file",
                    "path": "com.jetbrains.CLion.desktop"
                },
                {
                    "type": "file",
                    "path": "com.jetbrains.CLion.png"
                },
                {
                    "type": "script",
                    "commands": ["/app/extra/bin/clion.sh"],
                    "dest-filename": "clion.sh"
                },
                {
                    "type": "extra-data",
                    "filename": "clion.tar.gz",
                    "only-arches": ["x86_64"],
                    "url": "https://download.jetbrains.com/cpp/CLion-2018.2.1.tar.gz",
                    "sha256": "986956c4dee1bc1b930bfcf4b68d3f097493f481d0f4820eeaef4f0bcc29d999",
                    "size": 461884195
                }
            ]
        }
    ]
}
