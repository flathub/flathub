{
    "app-id": "mx.pwmc.Svgvi",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.32",
    "sdk": "org.gnome.Sdk",
    "command": "mx.pwmc.Svgvi",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--filesystem=home",
        "--filesystem=xdg-run/dconf",
        "--filesystem=~/.config/dconf:ro"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "/share/vala",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
                "name": "libgee",
    "make-install-args": [
      "girdir=/app/share/gir-1.0",
      "typelibdir=/app/lib/girepository-1.0"
    ],
                "sources": [
                        {
                                "type": "archive",
                                "url": "https://download.gnome.org/sources/libgee/0.20/libgee-0.20.1.tar.xz",
                                "sha256": "bb2802d29a518e8c6d2992884691f06ccfcc25792a5686178575c7111fea4630"
                        }
                ]
        },
        {
                "name": "gxml",
                "buildsystem": "meson",
                "sources": [
                        {
                        "type": "git",
                        "url": "https://gitlab.gnome.org/GNOME/gxml.git",
                        "commit": "182e8688019b9c8e050f2a014c8f995a840f2a68"
                        }
                ]
        },
        {
                "name": "gresg",
                "buildsystem": "meson",
                "sources": [
                        {
                                "type": "git",
                                "url": "https://gitlab.com/esodan/gresg.git",
                                "commit": "df55d69f853d781f7b2cc1aecadebf7a5662907f"
                        }
                ]
        },
        {
                "name": "gsvg",
                "buildsystem": "meson",
                "sources": [
                        {
                                "type": "git",
                                "url": "https://gitlab.com/pwmc/gsvg.git",
                                "commit": "a014c42fc8f4d6f0d6f6d0e58b5207fdbcb5061d"
                        }
                ]
        },
        {
                "name": "gsvgtk",
                "buildsystem": "meson",
                "config-opts": [ "-Ddisable-clutter=false" ],
                "sources": [
                        {
                                "type": "git",
                                "url": "https://gitlab.com/pwmc/gsvgtk.git",
                                "commit": "cc61bb2c4f6d310b5eb0221bd47b912cbb5af74b"
                        }
                ]
        },
        {
                "name": "gtksourceview",
                "builddir": true,
                "sources": [
                        {
                                "type": "archive",
                                "url": "https://download.gnome.org/sources/gtksourceview/3.24/gtksourceview-3.24.9.tar.xz",
                                "sha256": "699d76a453e6a3d3331906346e3dbfa25f2cbc9ec090e46635e9c6bb595e07c2"
                        }
                ]
        },
        {
                "name": "svgvi",
                "config-opts": [ "--libdir=lib" ],
                "builddir": true,
                "sources": [
                        {
                                "type": "git",
                                "url": "https://gitlab.com/pwmc/svgvi.git",
                                "commit":"437d294fbca9a7882e84be8246c42b5a83ba74f1"
                        }
                ]
        }
    ]
}
