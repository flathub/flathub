{
    "app-id": "mx.pwmc.Svgvi",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.30",
    "sdk": "org.gnome.Sdk",
    "writable-sdk": true,
    "command": "mx.pwmc.Svgvi",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--filesystem=home",
        "--filesystem=xdg-run/dconf",
        "--filesystem=~/.config/dconf:ro"
    ],
    "build-options": {
        "cflags": "-O2 -g",
        "cxxflags": "-O2 -g",
        "env": {
            "V": "1"
        }
    },
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "/share/vala",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
                "name": "libgee",
                "builddir": true,
                "sources": [
                        {
                                "type": "archive",
                                "url": "https://download.gnome.org/sources/libgee/0.20/libgee-0.20.1.tar.xz",
                                "sha256": "bb2802d29a518e8c6d2992884691f06ccfcc25792a5686178575c7111fea4630"
                        }
                ]
        },
        {
                "name": "gxml",
                "builddir": true,
                "sources": [
                        {
                        "type": "archive",
                        "url": "https://download.gnome.org/sources/gxml/0.16/gxml-0.16.3.tar.xz",
                        "sha256": "520d4d779b1d31591762b2a98f84072531b9e17ac401df9668493e189eafc6ba"
                        }
                ]
        },
        {
                "name": "gsvg",
                "buildsystem": "meson",
                "builddir": true,
                "sources": [
                        {
                                "type": "git",
                                "url": "https://gitlab.com/pwmc/gsvg.git",
                                "commit": "0a37a1815d276eb24b88d19be039fc6c87a71332"
                        }
                ]
        },
        {
                "name": "gresg",
                "buildsystem": "meson",
                "builddir": true,
                "sources": [
                        {
                                "type": "archive",
                                "url": "https://gitlab.com/esodan/gresg/-/archive/0.4.0/gresg-0.4.0.tar.gz",
                                "sha256": "e4f9d2b71545872f81b0417d0b72dd0c00844f8e4b9c0aa6bee28865c575968a"
                        }
                ]
        },

        {
                "name": "gsvgtk",
                "buildsystem": "meson",
                "config-opts": [ "-Ddisable-clutter=false" ],
                "builddir": true,
                "sources": [
                        {
                                "type": "git",
                                "url": "https://gitlab.com/pwmc/gsvgtk.git",
                                "sha256": "c87032af042245a78b0e33465658ee32d4989090"
                        }
                ]
        },
        {
                "name": "gtksourceview",
                "builddir": true,
                "sources": [
                        {
                                "type": "archive",
                                "url": "https://download.gnome.org/sources/gtksourceview/3.24/gtksourceview-3.24.9.tar.xz",
                                "sha256": "699d76a453e6a3d3331906346e3dbfa25f2cbc9ec090e46635e9c6bb595e07c2"
                        }
                ]
        },
        {
                "name": "svgvi",
                "buildsystem": "meson",
                "config-opts": [ "--libdir=lib" ],
                "builddir": true,
                "sources": [
                        {
                                "type": "archive",
                                "url": "https://gitlab.com/pwmc/svgvi/-/archive/1.2.1/svgvi-1.2.1.tar.bz2",
                                "sha256":"4bcc896e1931b90a4ca1ed6c4338343927c6aee1351ab36fe4daee7dfe43dbb4"
                        }
                ]
        }
    ]
}