{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "flatpak-builder",
            "args": [
                "--user",
                "--install",
                "--force-clean",
                "build-dir",
                "org.openscopeproject.TrguiNG.yml"
            ]
        },
        {
            "label": "run",
            "type": "shell",
            "command": "flatpak",
            "args": [
                "run",
                "org.openscopeproject.TrguiNG"
            ]
        }
    ]
}