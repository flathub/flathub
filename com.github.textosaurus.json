{
    "id": "com.github.textosaurus",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.9",
    "sdk": "org.kde.Sdk",
    "command": "textosaurus",
    "rename-icon": "textosaurus",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.gcc7"
    ],
    "build-options": {
        "env": {
            "CC": "/usr/lib/sdk/gcc7/bin/gcc",
            "CXX": "/usr/lib/sdk/gcc7/bin/g++"
        }
    },
    "finish-args": [ "--device=dri",
                     "--share=ipc",
                     "--share=network",
                     "--socket=x11",
                     "--socket=wayland",
                     "--filesystem=xdg-download",
                     "--talk-name=org.kde.StatusNotifierWatcher",
                     "--talk-name=org.freedesktop.Notifications" ],
    "modules": [
        {
            "name": "textosaurus",
            "buildsystem": "simple",
            "post-install": [
                "install -d /app/share/icons/hicolor/512x512/apps",
                "install -m644 /app/share/pixmaps/textosaurus.png /app/share/icons/hicolor/512x512/apps/textosaurus.png"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "git://github.com/martinrotter/textosaurus.git",
                    "branch" : "master"
                }
            ],
            "build-commands": [
                "mkdir -p /app",
                "$CXX --version",
                "qmake -v",
                "qmake QMAKE_CXX=$CXX textosaurus.pro -r CONFIG+=release PREFIX=/app",
                "make -j3",
                "make install"
            ]
        }
    ]
}