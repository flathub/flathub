{
    "app-id": "com.github.textosaurus",
    "rename-icon": "textosaurus",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.9",
    "sdk": "org.kde.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.gcc7"
    ],
    "build-options": {
        "env": {
            "CC": "/usr/lib/sdk/gcc7/bin/gcc",
            "CXX": "/usr/lib/sdk/gcc7/bin/g++"
        }
    },
    "command": "textosaurus",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--share=network",
        "--socket=x11",
        "--socket=wayland",
        "--filesystem=host"
    ],
    "modules": [
        {
            "build-commands": [
                "mkdir -p /app",
                "$CXX --version",
                "qmake -v",
                "qmake textosaurus.pro QMAKE_CXX=$CXX -r CONFIG+=release PREFIX=/app",
                "make -j3",
                "make install"
            ],
            "buildsystem": "simple",
            "name": "textosaurus",
            "sources": [
                {
                    "branch": "2018.04.15",
                    "type": "git",
                    "url": "git://github.com/martinrotter/textosaurus.git"
                }
            ]
        }
    ]
}
