{
  "app-id": "com.wire.WireDesktop",
  "base": "io.atom.electron.BaseApp",
  "base-version": "stable",
  "command": "/app/Wire/wire-desktop",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "18.08",
  "separate-locales": false,
  "sdk": "org.freedesktop.Sdk",
  "rename-desktop-file": "wire-desktop.desktop",
  "rename-icon": "wire-desktop",
  "finish-args": [
    "--device=all",
    "--device=dri",
    "--filesystem=home:ro",
    "--filesystem=xdg-download",
    "--share=ipc",
    "--share=network",
    "--socket=pulseaudio",
    "--socket=wayland",
    "--socket=x11",
    "--talk-name=org.freedesktop.Notifications",
    "--talk-name=org.freedesktop.secrets"
  ],
  "modules": [
    {
      "name": "libnotify",
      "cleanup": [
        "/bin"
      ],
      "config-opts": [
        "--disable-introspection",
        "--disable-static",
        "--disable-tests"
      ],
      "sources": [
        {
          "type": "archive",
          "sha256": "9cb4ce315b2655860c524d46b56010874214ec27e854086c1a1d0260137efc04",
          "url": "https://download.gnome.org/sources/libnotify/0.7/libnotify-0.7.7.tar.xz"
        }
      ]
    },
    {
      "name": "libsecret",
      "cleanup": [
        "/bin",
        "/include",
        "/lib/*.la",
        "/lib/pkgconfig"
      ],
      "config-opts": [
        "--disable-gtk-doc",
        "--disable-introspection",
        "--disable-manpages",
        "--disable-static"
      ],
      "sources": [
        {
          "type": "archive",
          "sha256": "f4fa198d4e131f94d9ec84cfeaf6c124245e7ff3c0af11c76cc35332bfae5585",
          "url": "https://gitlab.gnome.org/GNOME/libsecret/-/archive/0.18.6/libsecret-0.18.6.tar.gz"
        }
      ]
    },
    {
      "name": "wire",
      "buildsystem": "simple",
      "build-commands": [
        "ar x wire_*.deb",
        "tar xf data.tar.xz",
        "rm -f control.tar.gz data.tar.xz debian-binary wire_*.deb",
        "cp -r opt/* usr/* /app",
        "desktop-file-edit --remove-key=Version /app/share/applications/wire-desktop.desktop",
        "desktop-file-edit --set-key=Exec --set-value='/app/Wire/wire-desktop %U' /app/share/applications/wire-desktop.desktop",
        "install -Dm0644 -t /app/share/metainfo/ com.wire.WireDesktop.appdata.xml"
      ],
      "sources": [
        {
          "type": "file",
          "only-arches": ["i386"],
          "sha256": "0ba392aca71d85cce5465e1431eb6c35c8f0609e598c485cc67177a99827bc99",
          "url": "https://github.com/wireapp/wire-desktop/releases/download/release/3.3.2872/wire_3.3.2872_i386.deb"
        },
        {
          "type": "file",
          "only-arches": ["x86_64"],
          "sha256": "fca2cabdd934dca956525b60f97dd2712120499c7f10b10259fe4701439ada13",
          "url": "https://github.com/wireapp/wire-desktop/releases/download/release/3.3.2872/wire_3.3.2872_amd64.deb"
        },
        {
          "type": "file",
          "sha256": "35949658604dbd400f3d86925b5ef3754c1ead285324dd94d2d0ed1e2d485bc4",
          "url": "https://github.com/wireapp/wire-desktop/archive/release/3.3.2872.tar.gz"
        },
        {
          "type": "file",
          "path": "com.wire.WireDesktop.appdata.xml"
        }
      ]
    }
  ]
}
