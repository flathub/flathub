{
    "app-id": "io.github.aldrinzigmundv.InnerMirror",
    "runtime": "org.gnome.Platform",
    "runtime-version": "44",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": ["org.freedesktop.Sdk.Extension.rust-stable"],
    "command": "innermirror",
    "finish-args" : [
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--share=ipc"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/rust-stable/bin",
        "env" : {
            "CARGO_HOME" : "/run/build/rust-flatpak/cargo"
        }
    },
    "modules": [
        {
            "name": "innermirror",
            "buildsystem": "meson",
            "run-tests": true,
            "build-commands": [
                "cargo --offline fetch --manifest-path Cargo.toml --verbose",
                "cargo --offline build --release --verbose",
                "install -Dm755 ./target/debug/rust-flatpak -t /app/bin/",
                "install -Dm644 ./data/${FLATPAK_ID}.metainfo.xml.in.in -t /app/share/metainfo/",
                "install -Dm644 ./data/${FLATPAK_ID}.desktop.in.in -t /app/share/applications/",
                "install -Dm644 ./data/icons/${FLATPAK_ID}.svg -t /app/share/icons/hicolor/scalable/apps/"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/aldrinzigmundv/innermirror/releases/download/v0.1.0/innermirror-0.1.0.tar.xz",
                    "sha256": "97061eaed95476ca5090efd4c8c39df207fe60b61a1cc8413b21ac36a7bc27af"
                },
                "cargo-sources.json"
            ]
        }
    ]
}

