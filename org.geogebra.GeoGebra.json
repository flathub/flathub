{
    "app-id": "org.geogebra.GeoGebra",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "1.6",
    "sdk": "org.freedesktop.Sdk",
    "command": "geogebra",
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=x11",
        "--socket=wayland",
        "--filesystem=home",
        "--extra-data=GeoGebra-Linux-Portable-5-0-367-0.tar.bz2:935b424b84c3d1d164f72649fba8ebca2f15caa24f4e84b0914df39f9e5b6ee4:139982776::https://download.geogebra.org/installers/5.0/GeoGebra-Linux-Portable-5-0-367-0.tar.bz2"
    ],
    "modules": [
        {
            "name": "geogebra",
            "buildsystem": "simple",
            "sources": [
                {
                    "type": "file",
                    "path": "geogebra.desktop"
                },
                {
                    "type": "file",
                    "path": "geogebra.png"
                },
                {
                    "type": "file",
                    "path": "appdata.xml"
                },
                {
                    "type": "script",
                    "dest-filename": "apply_extra",
                    "commands": [
                        "tar -jxvf GeoGebra-Linux-Portable-5-0-367-0.tar.bz2",
                        "rm -f GeoGebra-Linux-Portable-5-0-367-0.tar.bz2",
                        "/app/bin/cleanup-other-arches.sh"
                    ]
                },
                {
                    "type": "script",
                    "commands": ["exec /app/extra/GeoGebra-Linux-Portable-5-0-367-0/geogebra-portable \"$@\""],
                    "dest-filename": "geogebra.sh"
                },
                {
                    "type": "script",
                    "dest-filename": "cleanup-other-arches.sh",
                    "commands": [
                        "rm -rf /app/extra/GeoGebra-Linux-Portable-5-0-367-0/jre1.8.0_121-i686/"
                    ],
                    "only-arches": ["x86_64"]
                },
                {
                    "type": "script",
                    "dest-filename": "cleanup-other-arches.sh",
                    "commands": [
                        "rm -rf /app/extra/GeoGebra-Linux-Portable-5-0-367-0/jre1.8.0_121-x86_64/"
                    ],
                    "only-arches": ["i386"]
                }
            ],
            "build-commands": [
                "mkdir -p /app/bin",
                "install -Dm755 apply_extra /app/bin",
                "install -Dm755 cleanup-other-arches.sh /app/bin",
                "install -Dm755 geogebra.sh /app/bin/geogebra",
                "install -Dm644 geogebra.desktop /app/share/applications/org.geogebra.GeoGebra.desktop",
                "install -Dm644 geogebra.png /app/share/icons/hicolor/256x256/apps/org.geogebra.GeoGebra.png",
                "install -Dm644 appdata.xml /app/share/appdata/org.geogebra.GeoGebra.appdata.xml"
            ]
        }
    ]
}

