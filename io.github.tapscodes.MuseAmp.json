{
  "app-id": "io.github.tapscodes.MuseAmp",
  "runtime": "org.kde.Platform",
  "runtime-version": "6.9",
  "sdk": "org.kde.Sdk",
  "base": "io.qt.PySide.BaseApp",
  "base-version": "6.9",
  "command": "MuseAmp.pyw",
  "add-extensions": {
    "org.freedesktop.Platform.ffmpeg-full": {
      "version": "24.08",
      "directory": "lib/ffmpeg",
      "add-ld-path": "."
    }
  },
  "cleanup-commands": [
    "mkdir -p /app/lib/ffmpeg"
  ],
  "finish-args": [
    "--share=ipc",
    "--socket=wayland",
    "--socket=fallback-x11"
  ],
  "modules": [
    {
      "name": "libebur128",
      "buildsystem": "cmake-ninja",
      "builddir": true,
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/jiixyj/libebur128/archive/refs/tags/v1.2.6.tar.gz",
          "sha256": "baa7fc293a3d4651e244d8022ad03ab797ca3c2ad8442c43199afe8059faa613"
        }
      ]
    },
    {
      "name": "inih",
      "buildsystem": "meson",
      "builddir": true,
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/benhoyt/inih/archive/refs/tags/r57.tar.gz",
          "sha256": "f03f98ca35c3adb56b2358573c8d3eda319ccd5287243d691e724b7eafa970b3"
        }
      ]
    },
    "python3-mutagen.json",
    {
      "name": "museamp",
      "buildsystem": "simple",
      "build-commands": [
        "install -Dm755 MuseAmp.pyw /app/bin/MuseAmp.pyw",
        "cp -r museamp /app/bin/",
        "install -Dm644 io.github.tapscodes.MuseAmp.svg /app/share/icons/hicolor/scalable/apps/io.github.tapscodes.MuseAmp.svg",
        "install -Dm644 io.github.tapscodes.MuseAmp.desktop /app/share/applications/io.github.tapscodes.MuseAmp.desktop",
        "install -Dm644 io.github.tapscodes.MuseAmp.appdata.xml /app/share/metainfo/io.github.tapscodes.MuseAmp.appdata.xml"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/tapscodes/MuseAmp/archive/refs/tags/v1.0.0.zip",
          "sha256": "522b0d74d8aaaa582e8dce2d5475477810e99c44d7dedc09662c0b952d07273f"
        }
      ]
    },
    {
      "name": "taglib",
      "buildsystem": "cmake-ninja",
      "builddir": true,
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/taglib/taglib/archive/refs/tags/v1.13.1.tar.gz",
          "sha256": "c8da2b10f1bfec2cd7dbfcd33f4a2338db0765d851a50583d410bacf055cfd0b"
        }
      ]
    },
    {
      "name": "fmt",
      "buildsystem": "cmake-ninja",
      "builddir": true,
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/fmtlib/fmt/archive/refs/tags/10.2.1.tar.gz",
          "sha256": "1250e4cc58bf06ee631567523f48848dc4596133e163f02615c97f78bab6c811"
        }
      ]
    },
    {
      "name": "ffmpeg",
      "buildsystem": "simple",
      "build-commands": [
        "./configure --prefix=/app --disable-static --disable-debug --disable-doc --disable-programs --enable-shared --disable-vulkan --disable-everything --enable-avformat --enable-avcodec --enable-swresample --enable-avutil --enable-protocol=file --enable-demuxer=mp3,flac --enable-muxer=mp3,flac --enable-decoder=mp3,mp3float,flac --enable-encoder=mp3,flac --enable-parser=mp3,flac",
        "make -j$(nproc)",
        "make install"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/FFmpeg/FFmpeg/archive/refs/tags/n7.1.1.tar.gz",
          "sha256": "f117507dc501f2a6c11f9241d8d0c3213846cfad91764361af37befd6b6c523d"
        }
      ]
    },
    {
      "name": "rsgain",
      "buildsystem": "cmake-ninja",
      "builddir": true,
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/complexlogic/rsgain.git",
          "tag": "v3.6"
        }
      ]
    }
  ],
  "cleanup": [
    "/include",
    "/lib/pkgconfig",
    "/lib/cmake",
    "/share/aclocal",
    "/share/doc",
    "/share/gtk-doc",
    "/share/man",
    "/share/info",
    "/lib/ffmpeg",
    "/bin/ffmpeg",
    "/lib/libav*.so*",
    "/lib/libswresample*.so*",
    "/.gitignore",
    "/screenshot1.jpg",
    "/screenshot2.jpg",
    "/screenshot3.jpg",
    "/setup.py",
    "/README.md",
    "/LICENSE",
    "/MuseAmp.png",
    "/MuseAmp.svg",
    "/pyinstaller.yml"
  ]
}
