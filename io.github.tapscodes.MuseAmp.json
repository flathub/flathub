{
  "app-id": "io.github.tapscodes.MuseAmp",
  "runtime": "org.kde.Platform",
  "runtime-version": "6.8",
  "sdk": "org.kde.Sdk",
  "base": "io.qt.PySide.BaseApp",
  "base-version": "6.8",
  "command": "MuseAmp.pyw",
  "add-extensions": {
    "org.kde.Platform.ffmpeg-full": {
      "directory": "lib/extensions/ffmpeg-full",
      "version": "6.8"
    }
  },
  "finish-args": [
    "--share=network",
    "--share=ipc",
    "--filesystem=host",
    "--socket=pulseaudio",
    "--device=all",
    "--socket=x11",
    "--socket=wayland"
  ],
  "modules": [
    {
      "name": "rsgain",
      "buildsystem": "simple",
      "build-commands": [
        "install -Dm755 rsgain /app/bin/rsgain"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/complexlogic/rsgain/releases/download/v3.6/rsgain-3.6-Linux.tar.xz",
          "sha256": "8cb89f10269adb5b455e36468454c3f387419055209e74d8d930aefde4155059"
        }
      ]
    },
    {
      "name": "python3-modules",
      "buildsystem": "simple",
      "build-commands": [],
      "sources": [
        {
          "type": "file",
          "path": "python3-mutagen.json"
        }
      ]
    },
    {
      "name": "museamp",
      "buildsystem": "simple",
      "build-commands": [
        "install -Dm755 MuseAmp.pyw /app/bin/MuseAmp.pyw",
        "cp -r museamp /app/bin/",
        "install -Dm644 io.github.tapscodes.MuseAmp.svg /app/share/icons/hicolor/scalable/apps/io.github.tapscodes.MuseAmp.svg",
        "install -Dm644 io.github.tapscodes.MuseAmp.desktop /app/share/applications/io.github.tapscodes.MuseAmp.desktop",
        "install -Dm644 io.github.tapscodes.MuseAmp.appdata.xml /app/share/metainfo/io.github.tapscodes.MuseAmp.appdata.xml"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/tapscodes/MuseAmp/archive/refs/tags/v1.0.0.zip",
          "sha256": "3ed6f871928ba0edaaa3cbfdf57743f151e19245d8da9f1764a04a94d758a654"
        }
      ]
    }
  ]
}
