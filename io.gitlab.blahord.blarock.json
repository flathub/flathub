{
    "app-id": "io.gitlab.blahord.blarock",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.9",
    "sdk": "org.kde.Sdk",
    "command": "blarock",
    "finish-args": [
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--device=dri",
        "--share=ipc",
        "--filesystem=xdg-music:ro"
    ],
    "build-options": {
        "cflags": "-O2",
        "cxxflags": "-O2",
        "env": {
            "CMAKE_BUILD_TYPE": "Release"
        }
    },
    "modules": [
        {
            "name": "blarock",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.com/blahord/blarock.git",
                    "tag": "1.0.0"
                }
            ],
            "config-opts": [
                "-DCMAKE_INSTALL_PREFIX=/app",
                "-DCMAKE_BUILD_TYPE=Release"
            ]
        }
    ]
}
