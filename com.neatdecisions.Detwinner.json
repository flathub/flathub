{
  "app-id": "com.neatdecisions.Detwinner",
  "runtime": "org.gnome.Sdk",
  "runtime-version": "3.32",
  "sdk": "org.gnome.Sdk",
  "command": "detwinner",
  "finish-args": [
    "--socket=x11",
    "--socket=wayland",
    "--filesystem=host",
    "--filesystem=xdg-config/gtk-3.0",
    "--talk-name=org.gtk.vfs",
    "--talk-name=org.gtk.vfs.*",
    "--talk-name=org.freedesktop.portal.Trash"
  ],
  "build-options": {
    "cflags": "-O2 -g",
    "cxxflags": "-O2 -g"
  },
  "cleanup": [
    "/bin/gm",
    "/bin/GraphicsMagick*",
    "/include",
    "/lib/atkmm-1.6",
    "/lib/cairomm-1.0",
    "/lib/cmake",
    "/lib/debug",
    "/lib/gdkmm-3.0",
    "/lib/giomm-2.4",
    "/lib/glibmm-2.4",
    "/lib/GraphicsMagick-1.3.33",
    "/lib/gtkmm-3.0",
    "/lib/pangomm-1.4",
    "/lib/pkgconfig",
    "/lib/sigc++-2.0",
    "/share/doc",
    "/share/GraphicsMagick-1.3.33",
    "/share/man",
    "/share/pkgconfig",
    "*.la",
    "*.a"
  ],
  "modules": [
    {
      "name": "graphicsmagick",
      "builddir": true,
      "config-opts": [
        "--enable-shared",
        "--disable-static",
        "--with-quantum-depth=8",
        "--with-threads",
        "--without-dps",
        "--without-lcms2",
        "--without-perl",
        "--without-trio",
        "--without-ttf",
        "--without-wmf",
	"--without-x"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "http://downloads.sourceforge.net/project/graphicsmagick/graphicsmagick/1.3.33/GraphicsMagick-1.3.33.tar.gz",
          "sha256":"00ea0df7c78c903cce325f402429bcd3924168cf39277f743a0641d47c411ee8"
        }
      ]
    },
    {
      "name": "sigc++",
      "config-opts": [
        "--disable-documentation"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "http://ftp.gnome.org/pub/GNOME/sources/libsigc++/2.10/libsigc++-2.10.2.tar.xz",
          "sha256": "b1ca0253379596f9c19f070c83d362b12dfd39c0a3ea1dd813e8e21c1a097a98"
        }
      ]
    },
    {
      "name": "glibmm",
      "config-opts": [
        "--disable-documentation"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "http://ftp.gnome.org/pub/GNOME/sources/glibmm/2.60/glibmm-2.60.0.tar.xz",
          "sha256": "a3a1b1c9805479a16c0018acd84b3bfff23a122aee9e3c5013bb81231aeef2bc"
        }
      ]
    },
    {
      "name": "cairomm",
      "config-opts": [
        "--disable-documentation"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://www.cairographics.org/releases/cairomm-1.12.2.tar.gz",
          "sha256": "45c47fd4d0aa77464a75cdca011143fea3ef795c4753f6e860057da5fb8bd599"
        }
      ]
    },
    {
      "name": "pangomm",
      "config-opts": [
        "--disable-documentation"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "http://ftp.gnome.org/pub/GNOME/sources/pangomm/2.42/pangomm-2.42.0.tar.xz",
          "sha256": "ca6da067ff93a6445780c0b4b226eb84f484ab104b8391fb744a45cbc7edbf56"
        }
      ]
    },
    {
      "name": "atkmm",
      "config-opts": [
        "--disable-documentation"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "http://ftp.gnome.org/pub/GNOME/sources/atkmm/2.28/atkmm-2.28.0.tar.xz",
          "sha256": "4c4cfc917fd42d3879ce997b463428d6982affa0fb660cafcc0bc2d9afcedd3a"
        }
      ]
    },
    {
      "name": "gtkmm",
      "config-opts": [
        "--disable-documentation"
      ],
      "build-options" : {
        "cxxflags": "-O2 -g -std=c++11"
       },
      "sources": [
        {
          "type": "archive",
          "url": "http://ftp.acc.umu.se/pub/GNOME/sources/gtkmm/3.24/gtkmm-3.24.0.tar.xz",
          "sha256":"cf5fc92805e581c8303e08d54519457ba07f15b766e9b1edde4862993ac1aa43"
        }
      ]
    },
    {
      "name": "gtest",
      "buildsystem": "cmake",
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/google/googletest/archive/release-1.8.1.tar.gz",
          "sha256": "9bf1fe5182a604b4135edc1a425ae356c9ad15e9b23f9f12a02e80184c3a249c"
        }
      ]
    },
    {
      "name": "detwinner",
      "buildsystem": "meson",
      "builddir": true,
      "config-opts": [
        "--buildtype=release"
      ],
      "build-options": {
        "cflags": "-O2 -g",
        "cxxflags": "-O2 -g"
      },
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/neatdecisions/detwinner/archive/v0.2.1.tar.gz",
          "sha256": "b83c17b6fc948e567da85c363828e905df8dd5e336ee496d58a36fd65f852344"
        }
      ]
    }
  ]
}
