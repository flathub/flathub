{
  "app-id": "com.neatdecisions.Detwinner",
  "runtime": "org.gnome.Sdk",
  "runtime-version": "3.28",
  "sdk": "org.gnome.Sdk",
  "command": "detwinner",
  "finish-args": [
    "--socket=x11",
    "--socket=wayland",
    "--filesystem=host",
    "--talk-name=org.gtk.vfs",
    "--talk-name=org.gtk.vfs.*"
  ],
  "build-options": {
    "cflags": "-O2 -g",
    "cxxflags": "-O2 -g"
  },
  "cleanup": [
    "/bin/gm",
    "/bin/GraphicsMagick*",
    "/include",
    "/lib/atkmm-1.6",
    "/lib/cairomm-1.0",
    "/lib/cmake",
    "/lib/debug",
    "/lib/gdkmm-3.0",
    "/lib/giomm-2.4",
    "/lib/glibmm-2.4",
    "/lib/GraphicsMagick-1.3.30",
    "/lib/gtkmm-3.0",
    "/lib/pangomm-1.4",
    "/lib/pkgconfig",
    "/lib/sigc++-2.0",
    "/share/doc",
    "/share/GraphicsMagick-1.3.30",
    "/share/man",
    "/share/pkgconfig",
    "*.la",
    "*.a"
  ],
  "modules": [
    {
      "name": "graphicsmagick",
      "builddir": true,
      "config-opts": [
        "--enable-shared",
        "--disable-static",
        "--with-quantum-depth=8",
        "--with-threads"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "http://downloads.sourceforge.net/project/graphicsmagick/graphicsmagick/1.3.30/GraphicsMagick-1.3.30.tar.gz",
          "sha256": "d566a0e10d7c6c901ca5f3c3f31dd441cb758d655fd7817dc205dca11b7cf5b6"
        }
      ]
    },
    {
      "name": "sigc++",
      "config-opts": [
        "--disable-documentation"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "http://ftp.gnome.org/pub/GNOME/sources/libsigc++/2.9/libsigc++-2.9.3.tar.xz",
          "sha256": "0bf9b301ad6198c550986c51150a646df198e8d1d235270c16486b0dda30097f"
        }
      ]
    },
    {
      "name": "glibmm",
      "config-opts": [
        "--disable-documentation"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "http://ftp.gnome.org/pub/GNOME/sources/glibmm/2.49/glibmm-2.49.7.tar.xz",
          "sha256": "571d8ecd082a66fa7248f500063409c1f478edc36f553d0eb27cf6199dee0b25"
        }
      ]
    },
    {
      "name": "cairomm",
      "config-opts": [
        "--disable-documentation"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "http://cairographics.org/releases/cairomm-1.12.0.tar.gz",
          "sha256": "50435aec6fdd976934b791e808993160113ad19ca53a5634a9b64ccbe55874cc"
        }
      ]
    },
    {
      "name": "pangomm",
      "config-opts": [
        "--disable-documentation"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "http://ftp.gnome.org/pub/GNOME/sources/pangomm/2.39/pangomm-2.39.1.tar.xz",
          "sha256": "10c06bbf12a03963ffe9c697887b57c72f1dac1671d09dba45cecd25db5dc6ed"
        }
      ]
    },
    {
      "name": "atkmm",
      "config-opts": [
        "--disable-documentation"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "http://ftp.gnome.org/pub/GNOME/sources/atkmm/2.24/atkmm-2.24.2.tar.xz",
          "sha256": "ff95385759e2af23828d4056356f25376cfabc41e690ac1df055371537e458bd"
        }
      ]
    },
    {
      "name": "gtkmm",
      "config-opts": [
        "--disable-documentation"
      ],
      "build-options": {
        "cxxflags": "-O2 -g -std=c++11"
      },
      "sources": [
        {
          "type": "archive",
          "url": "http://ftp.acc.umu.se/pub/GNOME/sources/gtkmm/3.22/gtkmm-3.22.2.tar.xz",
          "sha256": "91afd98a31519536f5f397c2d79696e3d53143b80b75778521ca7b48cb280090"
        }
      ]
    },
    {
      "name": "gtest",
      "buildsystem": "cmake",
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/google/googletest/archive/release-1.8.1.tar.gz",
          "sha256": "9bf1fe5182a604b4135edc1a425ae356c9ad15e9b23f9f12a02e80184c3a249c"
        }
      ]
    },
    {
      "name": "detwinner",
      "buildsystem": "meson",
      "builddir": true,
      "config-opts": [
        "--buildtype=release"
      ],
      "build-options": {
        "cflags": "-O2 -g",
        "cxxflags": "-O2 -g -DFLATPAK"
      },
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/neatdecisions/detwinner/archive/v0.1.0.tar.gz",
          "sha256": "59d26eaf00cced1ab5522d7e6fed88cbbbb58c42a6f3c4d93c71d6a6ddc5451d"
        }
      ]
    }
  ]
}
