{
	"app-id": "org.openclonk.OpenClonk",
	"runtime": "org.freedesktop.Platform",
	"runtime-version": "1.6",
	"sdk": "org.freedesktop.Sdk",
	"command": "openclonk",
	"rename-desktop-file": "openclonk.desktop",
	"rename-icon": "openclonk",
	"rename-appdata-file": "openclonk.appdata.xml",
	"finish-args": [
		"--socket=x11",
		"--share=network",
		"--persist=.clonk",
		"--socket=pulseaudio",
		"--device=dri",
		"--share=ipc"
	],
	"modules": [
		"shared-modules/glew/glew.json",
		"shared-modules/glu/glu-9.0.0.json",
		{
			"name": "freealut",
			"sources": [
				{
					"type": "archive",
					"url": "https://github.com/vancegroup/freealut/archive/freealut_1_1_0.tar.gz",
					"sha256": "c3880d7dbb90c7db54e1d6b88aa0a34dd9e2d828fd389be0d2cbb2632b0885dd"
				}
			],
			"cleanup": [
				"/include",
				"/lib/pkgconfig",
				"/lib/*.a",
				"/lib/*.la"
			]
		},
		{
			"name": "openclonk",
			"sources": [
				{
					"type": "archive",
					"url": "https://git.openclonk.org/openclonk.git/archive/openclonk-release-8.1-src.tar.bz2",
					"sha256": "337677f25457e7137eac7818adb4ad02992d562593386c19b885738aaec4b346"
				},
				{
					"type": "patch",
					"path": "cmake.diff"
				},
				{
					"type": "file",
					"url": "http://www.openclonk.org/download/Music.ocg",
					"sha256": "3327baa65d5e4a0110fef38b7c3b1d1c38e9da58dbddeb86281afbb37ebed96e",
					"dest-filename": "full-Music.ocg"
				},
				{
					"type": "patch",
					"path": "appstream.diff"
				}
			],
			"buildsystem": "cmake",
			"config-opts": [
				"-DCMAKE_BUILD_TYPE=Release",
				"-DAudio_FIND_REQUIRED=On",
				"-DAudio_TK=OpenAL",
				"-DCMAKE_CXX_FLAGS=-w",
				"-DCMAKE_C_FLAGS=-w"
			],
			"build-commands": [
				"rm -rf planet/Music.ocg",
				"mv full-Music.ocg planet/Music.ocg",
				"./c4group planet/Music.ocg -x"
			],
			"cleanup": [
				"/include",
				"/lib"
			]
		}
	]
}
