<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>org.doom2d.forever</id>
  
  <name>Doom 2D: Forever</name>
  <summary>A remake of the classic Doom game in 2D.</summary>
  
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-3.0-only</project_license>
  
  <supports>
    <control>pointing</control>
    <control>keyboard</control>
    <control>gamepad</control>
  </supports>
  
  <description>
    <p>
      A fork with the same name of Doom 2D: Forever, an open source OpenGL remake of Doom 2D with many extra features, available for Windows, Android, and Linux, that includes single player and multiplayer modes.
    </p>
  </description>
  
  <launchable type="desktop-id">org.doom2d.forever.desktop</launchable>
  <screenshots>
    <screenshot type="default">
      <image>https://raw.githubusercontent.com/Challenge9/doom2d-forever/master/docs/images/screenshots/screenshot-megadm.png</image>
    </screenshot>
    <screenshot>
      <image>https://raw.githubusercontent.com/Challenge9/doom2d-forever/master/docs/images/screenshots/screenshot-castlevania.png</image>
    </screenshot>
    <screenshot>
      <image>https://raw.githubusercontent.com/Challenge9/doom2d-forever/master/docs/images/screenshots/screenshot-prikolsoft.png</image>
    </screenshot>
  </screenshots>
  <releases>
    <release version="0.1.0" date="2023-04-30">
      <description>The initial release of the fork.</description>
    </release>
  </releases>

  <content_rating type="oars-1.1">
    <content_attribute id="violence-cartoon">intense</content_attribute>
    <content_attribute id="violence-bloodshed">intense</content_attribute>
    <content_attribute id="social-chat">mild</content_attribute>
  </content_rating>

  <url type="homepage">https://github.com/Challenge9/doom2d-forever</url>
</component>
