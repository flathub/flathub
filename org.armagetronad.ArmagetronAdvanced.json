{
    "app-id": "org.armagetronad.ArmagetronAdvanced",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "1.6",
    "sdk": "org.freedesktop.Sdk",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--socket=x11",
        "--socket=pulseaudio"
    ],
    "command": "armagetronad",
    "rename-appdata-file": "armagetronad.appdata.xml",
    "rename-desktop-file": "armagetronad.desktop",
    "rename-icon": "armagetronad",
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/aclocal",
        "/share/man",
        "*.la", "*.a"
    ],
    "modules": [
        "shared-modules/glu/glu-9.0.0.json",
        "shared-modules/SDL/SDL-1.2.15.json",
        "shared-modules/SDL/SDL_image-1.2.12.json",
        {
            "name": "armagetronad",
            "rm-configure": true,
            "config-opts": [
                "--disable-games"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://launchpad.net/armagetronad/0.2.8/0.2.8.3.4/+download/armagetronad-0.2.8.3.4.src.tar.bz2",
                    "sha256": "23afa6d961cdcdf391849e1a4fafe8fc3330d9a8cb6671565b0303c709baf794"
                },
                {
                    "type": "patch",
                    "path": "armagetronad-xml2-config.patch"
                },
                {
                    "type": "patch",
                    "path": "armagetronad-libpng-config.patch"
                },
                {
                    "type": "file",
                    "path": "armagetronad.appdata.xml"
                },
                {
                    "type": "script",
                    "dest-filename": "autogen.sh",
                    "commands": [
                        "autoreconf -vfi"
                    ]
                }
            ],
            "post-install": [
                "mkdir -p /app/share/appdata",
                "cp armagetronad.appdata.xml /app/share/appdata",
                "mkdir -p /app/share/applications",
                "mv /app/share/armagetronad/desktop/armagetronad.desktop /app/share/applications",
                "mkdir -p /app/share/icons/hicolor/16x16/apps",
                "mv /app/share/armagetronad/desktop/icons/small/armagetronad.png /app/share/icons/hicolor/16x16/apps",
                "mkdir -p /app/share/icons/hicolor/32x32/apps",
                "mv /app/share/armagetronad/desktop/icons/medium/armagetronad.png /app/share/icons/hicolor/32x32/apps",
                "mkdir -p /app/share/icons/hicolor/48x48/apps",
                "mv /app/share/armagetronad/desktop/icons/large/armagetronad.png /app/share/icons/hicolor/48x48/apps"
            ]
        }
    ]
}
