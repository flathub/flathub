{
    "app-id": "net.sourceforge.pdfchain",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "20.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "pdfchain",
    "sdk-extensions": ["org.freedesktop.Sdk.Extension.openjdk11"],
    "finish-args": [
        "--env=PATH=/app/jre/bin:/app/bin:/usr/bin",
        "--env=JAVA_HOME=/app/jre",
        "--env=JAVA=/app/jre/bin/java",
        "--persist=.java",
        "--filesystem=xdg-documents",
        "--filesystem=xdg-download",
        "--filesystem=xdg-pictures",
        "--filesystem=xdg-cache",
        "--filesystem=/run/media",
        "--filesystem=/media",
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--device=dri"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/pkgconfig",
        "/share/aclocal",
        "/man",
        "/share/man",
        "/share/gtk-doc",
        "/share/vala",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name" : "openjdk",
            "buildsystem" : "simple",
            "build-commands" : [ "/usr/lib/sdk/openjdk11/install.sh" ]
        },
        {
            "name": "xgetres",
            "buildsystem": "simple",
            "build-commands": [
                "make",
                "make install PREFIX=/app"
            ],
            "sources": [
              {
                "type": "git",
                "url": "https://github.com/tamirzb/xgetres",
                "tag": "1.0"
              }
            ]
        },
        {
            "name": "pdftk",
            "buildsystem": "simple",
            "build-commands": [
                "install -Dm644 pdftk-all.jar /app/pdftk/pdftk-all.jar",
                "install -Dm755 pdftk.sh /app/bin/pdftk"
            ],
            "sources": [
                {
                    "type": "file",
                    "url": "https://gitlab.com/pdftk-java/pdftk/-/jobs/924565145/artifacts/raw/build/libs/pdftk-all.jar",
                    "sha256": "3e0b7f6d159f1bed2ad485d583b0a903f9b1167ad67fb7edafd398a6e337d51c",
                    "dest-filename": "pdftk-all.jar"
                },
                {
                    "type": "file",
                    "path": "pdftk.sh"
                }
            ]
        },
        "gtkmm.json",
        {
            "name": "pdfchain",
            "buildsystem": "simple",
            "build-commands": [
                "sed -i 's,/usr/share/pixmaps/pdfchain.png,/app/share/pixmaps/net.sourceforge.pdfchain.png,g' src/constant.h",
                "sed -i 's,Icon=pdfchain,Icon=net.sourceforge.pdfchain,g' application/pdfchain.desktop",
                "sed -i 's,Terminal=false,Terminal=false\\nKeywords=pdf;pdfchain;,g' application/pdfchain.desktop",
                "./configure --prefix=/app",
                "make",
                "make install"
            ],
            "post-install": [
                "mv /app/share/pixmaps/pdfchain.png /app/share/pixmaps/net.sourceforge.pdfchain.png",
                "for i in 16 22 24 32 48 64 96 128 192 256; do
                    mv /app/share/icons/hicolor/${i}x${i}/apps/pdfchain.png /app/share/icons/hicolor/${i}x${i}/apps/net.sourceforge.pdfchain.png
                 done",
                "cp -f application/pdfchain.desktop application/net.sourceforge.pdfchain.desktop",
                "desktop-file-install --dir=/app/share/applications application/net.sourceforge.pdfchain.desktop",
                "install -Dm644 net.sourceforge.pdfchain.metainfo.xml /app/share/metainfo/net.sourceforge.pdfchain.metainfo.xml"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://deac-fra.dl.sourceforge.net/project/pdfchain/pdfchain-0.4.4.2/pdfchain-0.4.4.2.tar.gz",
                    "sha256": "1eee0f93dbe8c9cef9f9fe4ec0a10e0a45ca8cde67cd6ceffa2ce6c843752f3d"
                },
                {
                    "type": "file",
                    "path": "net.sourceforge.pdfchain.metainfo.xml"
                }
            ]
        }
    ]
}