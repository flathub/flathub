{
  "id" : "fr.dwightstudio.JArmEmu",
  "runtime" : "org.freedesktop.Platform",
  "runtime-version": "23.08",
  "sdk" : "org.freedesktop.Sdk",
  "command": "jarmemu",
  "sdk-extensions" : [ "org.freedesktop.Sdk.Extension.openjdk" ],
  "finish-args": [
    "--env=PATH=/app/jre/bin:/app/bin:/usr/bin",
    "--env=JAVA_HOME=/app/jre",
    "--env=JAVA=/app/jre/bin/java",
    "--socket=x11",
    "--share=ipc",
    "--filesystem=home"
  ],
  "modules": [
    {
      "name" : "openjdk",
      "buildsystem" : "simple",
      "build-commands" : [ "/usr/lib/sdk/openjdk/install.sh" ]
    },
    {
      "name": "jarmemu",
      "buildsystem": "simple",
      "build-commands": [
        "/usr/lib/sdk/openjdk/install.sh",
        "mkdir -p /app/share/java/JArmEmu/",
        "cp -r java/JArmEmu /app/share/java/",
        "cp -r icons/ /app/share/",
        "cp -r mime/ /app/share/",
        "cp -r metainfo/ /app/share/",
        "install -Dm755 jarmemu /app/bin/jarmemu",
        "desktop-file-install --dir=/app/share/applications fr.dwightstudio.JArmEmu.desktop"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/Dwight-Studio/JArmEmu/releases/download/v0.1.7/JArmEmu-0.1.7-BETA.flatpak-source.zip",
          "sha256": "5250830d0483617d665d0fd70194f76f14b4726a6f278ae58a78fb71c533c383"
        }
      ]
    }
  ]
}