{
  "id" : "fr.dwightstudio.JArmEmu",
  "runtime" : "org.freedesktop.Platform",
  "runtime-version": "22.08",
  "sdk" : "org.freedesktop.Sdk",
  "command": "jarmemu",
  "sdk-extensions" : [ "org.freedesktop.Sdk.Extension.openjdk" ],
  "finish-args": [
    "--env=PATH=/app/jre/bin:/app/bin:/usr/bin",
    "--env=JAVA_HOME=/app/jre",
    "--env=JAVA=/app/jre/bin/java",
    "--share=ipc",
    "--socket=x11",
    "--socket=pulseaudio",
    "--share=network",
    "--device=dri",
    "--filesystem=home",
    "--persist=.java"
  ],
  "modules": [
    {
      "name" : "openjdk",
      "buildsystem" : "simple",
      "build-commands" : [ "/usr/lib/sdk/openjdk/install.sh" ]
    },
    {
      "name": "flatpak-xdg-utils",
      "buildsystem": "meson",
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/flatpak/flatpak-xdg-utils.git",
          "tag": "1.0.5"
        }
      ]
    },
    {
      "name": "jarmemu",
      "buildsystem": "simple",
      "build-commands": [
        "/usr/lib/sdk/openjdk/install.sh",
        "mkdir -p /app/share/java/JArmEmu/",
        "cp -r java/* /app/share/java/JArmEmu/",
        "cp -r icons/ /app/share/",
        "cp -r mime/ /app/share/",
        "install jarmemu /app/bin/jarmemu"
      ],
      "post-install": [
        "install -Dm644 fr.dwightstudio.JArmEmu.metainfo.xml /app/share/metainfo/fr.dwightstudio.JArmEmu.metainfo.xml",
        "desktop-file-install --dir=/app/share/applications fr.dwightstudio.jarmemu.gui.JArmEmuApplication.desktop"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/Dwight-Studio/JArmEmu/releases/download/v0.1.3/JArmEmu-0.1.3-BETA.flatpak-source.zip",
          "sha256": "d02dcce68ce7309f7ce73db646116c5abe841637019f3b9367c8f9d7f898a976"
        },
        {
          "type": "file",
          "path": "fr.dwightstudio.JArmEmu.metainfo.xml"
        }
      ]
    }
  ]
}