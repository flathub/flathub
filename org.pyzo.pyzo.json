{
  "app-id" : "org.pyzo.pyzo",
  "runtime" : "org.kde.Platform",
  "runtime-version" : "5.10",
  "sdk" : "org.kde.Sdk",
  "command" : "pyzo",
  "finish-args" : [
    "--share=ipc",
    "--socket=x11",
    "--share=network",
    "--device=dri",
