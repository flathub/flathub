          "mkdir -p /app/share/icons/hicolor/64x64/apps",
          "cp org.pyzo.pyzo128x128.png /app/share/icons/hicolor/128x128/apps/org.pyzo.pyzo.png",
          "cp org.pyzo.pyzo64x64.png /app/share/icons/hicolor/64x64/apps/org.pyzo.pyzo.png",
          "mkdir -p /app/share/applications",
          "cp org.pyzo.pyzo.desktop /app/share/applications",
          "mkdir -p /app/share/appdata",
          "cp org.pyzo.pyzo.appdata.xml /app/share/appdata"
      ],
      "sources" : [
