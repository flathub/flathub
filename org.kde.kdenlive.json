{
    "app-id": "org.kde.kdenlive",
    "branch": "stable",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.9",
    "sdk": "org.kde.Sdk",
    "command": "kdenlive",
    "rename-icon": "kdenlive",
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--device=all",
        "--socket=pulseaudio",
        "--share=network",
        "--filesystem=host",
        "--env=FREI0R_PATH=/app/lib/frei0r-1"
    ],
    "cleanup": [
        "/include",
        "*.la",
        "*.cmake",
        "/lib/pkgconfig",
        "/lib/cmake",
        "/share/aclocal",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig"
    ],
    "modules": [
        {
            "name": "gtk2",
            "config-opts": [
                "--disable-gtk-doc",
                "--disable-introspection",
                "--disable-man",
                "--disable-static",
                "--with-xinput=xfree"
            ],
            "cleanup": [
                "/bin",
                "/share/gtk-2.0",
                "/lib/gtk-2.0/include"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "http://ftp.gnome.org/pub/gnome/sources/gtk+/2.24/gtk+-2.24.31.tar.xz",
                    "sha256": "68c1922732c7efc08df4656a5366dcc3afdc8791513400dac276009b40954658"
                }
            ]
        },
        {
            "name": "kfilemetadata",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release",
                "-DENABLE_TESTING=OFF",
                "-DCMAKE_INSTALL_LIBDIR=lib"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/frameworks/5.41/kfilemetadata-5.41.0.tar.xz",
                    "sha256": "714b78e075023a8047595ae8821d073e373e1bc0c283c044741a29bc50503e79"
                }
            ]
        },
        {
            "name": "eigen",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "cleanup": [
                "/share"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://bitbucket.org/eigen/eigen/get/3.3.4.tar.bz2",
                    "sha256": "dd254beb0bafc695d0f62ae1a222ff85b52dbaa3a16f76e781dce22d0d20a4a6"
                }
            ]
        },
        {
            "name": "fftw",
            "config-opts": [
                "--disable-static",
                "--enable-shared",
                "--disable-doc"
            ],
            "cleanup": [
                "/bin"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "http://www.fftw.org/fftw-3.3.7.tar.gz",
                    "sha256": "3b609b7feba5230e8f6dd8d245ddbefac324c5a6ae4186947670d9ac2cd25573"
                }
            ]
        },
        {
            "name": "movit",
            "config-opts": [
                "--disable-static",
                "GTEST_DIR=./googletest"
            ],
            "make-args": [
                "GTEST_DIR=./googletest"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://movit.sesse.net/movit-1.5.3.tar.gz",
                    "sha256": "ead191d717dbefbe914260ed0335cf04a7dfc6fde8f23293c5ca7f88e45ace81"
                },
                {
                    "type": "file",
                    "url": "https://github.com/google/googletest/archive/release-1.8.0.tar.gz",
                    "sha256": "58a6f4277ca2bc8565222b3bbd58a177609e9c488e8a72649359ba51450db7d8",
                    "dest-filename": "gtest.tar.gz"
                },
                {
                    "type": "shell",
                    "commands": [
                        "tar xf gtest.tar.gz --strip 1"
                    ]
                }
            ]
        },
        {
            "name": "libsamplerate",
            "rm-configure": true,
            "config-opts": [
                "--disable-static"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "http://www.mega-nerd.com/SRC/libsamplerate-0.1.9.tar.gz",
                    "sha256": "0a7eb168e2f21353fb6d84da152e4512126f7dc48ccb0be80578c565413444c1"
                },
                {
                    "type": "script",
                    "dest-filename": "autogen.sh",
                    "commands": [
                        "autoreconf -vfi"
                    ]
                }
            ]
        },
        {
            "name": "sox",
            "config-opts": [
                "--disable-static"
            ],
            "cleanup": [
                "/bin"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://sourceforge.net/projects/sox/files/sox/14.4.2/sox-14.4.2.tar.bz2",
                    "sha256": "81a6956d4330e75b5827316e44ae381e6f1e8928003c6aa45896da9041ea149c"
                }
            ]
        },
        {
            "name": "vidstab",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/georgmartius/vid.stab/archive/v1.1.0.tar.gz",
                    "sha256": "14d2a053e56edad4f397be0cb3ef8eb1ec3150404ce99a426c4eb641861dc0bb"
                }
            ]
        },
        {
            "name": "openjpeg",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "cleanup": [
                "/bin",
                "/lib/openjpeg-*",
                "*.a"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/uclouvain/openjpeg/archive/v2.3.0.tar.gz",
                    "sha256": "3dc787c1bb6023ba846c2a0d9b1f6e179f1cd255172bde9eb75b01f1e6c7d71a"
                }
            ]
        },
        {
            "name": "x264",
            "config-opts": [
                "--disable-cli",
                "--enable-shared"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.videolan.org/x264/snapshots/x264-snapshot-20171223-2245-stable.tar.bz2",
                    "sha256": "ee4ba2c3d1caf786ad66d3fa86bdc368a8f827318788a62a9c8444b2c35816bf"
                }
            ]
        },
        {
            "name": "x265",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release",
                "-DBUILD_STATIC_LIBS=OFF"
            ],
            "build-options": {
                "arch": {
                    "arm": {
                        "cxxflags": "-fPIC"
                    },
                    "aarch64": {
                        "cxxflags": "-fPIC"
                    }
                }
            },
            "cleanup": [
                "/bin",
                "*.a"
            ],
            "subdir": "source",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://bitbucket.org/multicoreware/x265/downloads/x265_2.6.tar.gz",
                    "sha256": "1bf0036415996af841884802161065b9e6be74f5f6808ac04831363e2549cdbf"
                }
            ]
        },
        {
            "name": "rtaudio",
            "config-opts": [
                "--disable-static",
                "--enable-shared"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "http://www.music.mcgill.ca/~gary/rtaudio/release/rtaudio-5.0.0.tar.gz",
                    "sha256": "799deae1192da52cc2c15a078ed3b42449580be7d096fe9bc841c5bba0289c57"
                }
            ]
        },
        {
            "name": "ffmpeg",
            "config-opts": [
                "--enable-gpl",
                "--disable-static",
                "--enable-shared",
                "--disable-ffserver",
                "--disable-doc",
                "--disable-alsa",
                "--enable-libfontconfig",
                "--enable-libfreetype",
                "--enable-libopenjpeg",
                "--enable-libopus",
                "--enable-libpulse",
                "--enable-librsvg",
                "--enable-libvidstab",
                "--enable-libvpx",
                "--enable-libx264",
                "--enable-libx265",
                "--enable-libxml2"
            ],
            "cleanup": [
                "/share/ffmpeg/examples"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://ffmpeg.org/releases/ffmpeg-3.4.1.tar.xz",
                    "sha256": "5a77278a63741efa74e26bf197b9bb09ac6381b9757391b922407210f0f991c0"
                }
            ]
        },
        {
            "name": "opencv",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release",
                "-DCMAKE_INSTALL_LIBDIR=lib",
                "-DBUILD_opencv_xfeatures2d=OFF"
            ],
            "cleanup": [
                "/bin"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/opencv/opencv/archive/3.4.0.tar.gz",
                    "sha256": "678cc3d2d1b3464b512b084a8cca1fad7de207c7abdf2caa1fed636c13e916da"
                },
                {
                    "type": "file",
                    "url": "https://github.com/opencv/opencv_contrib/archive/3.4.0.tar.gz",
                    "sha256": "699ab3eee7922fbd3e8f98c68e6d16a1d453b20ef364e76172e56466dc9c16cd",
                    "dest-filename": "opencv_contrib.tar.gz"
                },
                {
                    "type": "shell",
                    "commands": [
                        "tar xf opencv_contrib.tar.gz --strip 1"
                    ]
                }
            ]
        },
        {
            "name": "gavl",
            "config-opts": [
                "--without-doxygen",
                "--disable-static",
                "--enable-shared"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://sourceforge.net/projects/gmerlin/files/gavl/1.4.0/gavl-1.4.0.tar.gz",
                    "sha256": "51aaac41391a915bd9bad07710957424b046410a276e7deaff24a870929d33ce"
                }
            ]
        },
        {
            "name": "frei0r-plugins",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://files.dyne.org/frei0r/frei0r-plugins-1.6.1.tar.gz",
                    "sha256": "e0c24630961195d9bd65aa8d43732469e8248e8918faa942cfb881769d11515e"
                }
            ]
        },
        {
            "name": "mlt",
            "config-opts": [
                "--enable-gpl",
                "--enable-gpl3",
                "--enable-avformat",
                "--enable-core",
                "--enable-feeds",
                "--enable-frei0r",
                "--enable-gtk2",
                "--enable-kdenlive",
                "--enable-lumas",
                "--enable-motion_est",
                "--enable-normalize",
                "--enable-oldfilm",
                "--enable-opencv",
                "--enable-opengl",
                "--enable-plus",
                "--enable-plusgpl",
                "--enable-qt",
                "--enable-resample",
                "--enable-rtaudio",
                "--enable-sdl",
                "--enable-sox",
                "--enable-vid.stab",
                "--enable-videostab",
                "--enable-vmfx",
                "--enable-xml",
                "--disable-decklink",
                "--disable-dv",
                "--disable-jackrack",
                "--disable-kino",
                "--disable-linsys",
                "--disable-ndi",
                "--disable-swfdec",
                "--disable-vorbis",
                "--disable-xine"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/mltframework/mlt.git",
                    "commit": "ea973eb65c8ca79a859028a9e008360836ca4941"
                }
            ]
        },
        {
            "name": "kdenlive",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release",
                "-DCMAKE_INSTALL_LIBDIR=lib"
            ],
            "post-install": [
                "install -Dm755 xine.sh /app/bin/xine",
                "install -Dm755 mkisofs.sh /app/bin/mkisofs",
                "install -Dm755 dvdauthor.sh /app/bin/dvdauthor",
                "mv /app/share/mime/packages/kdenlive.xml /app/share/mime/packages/org.kde.kdenlive.xml",
                "mv /app/share/icons/hicolor/32x32/mimetypes/application-x-kdenlivetitle.png /app/share/icons/hicolor/32x32/mimetypes/org.kde.kdenlive-mime.png",
                "mv /app/share/icons/hicolor/64x64/mimetypes/application-x-kdenlivetitle.png /app/share/icons/hicolor/64x64/mimetypes/org.kde.kdenlive-mime.png",
                "mv /app/share/icons/hicolor/128x128/mimetypes/application-x-kdenlivetitle.png /app/share/icons/hicolor/128x128/mimetypes/org.kde.kdenlive-mime.png",
                "mv /app/share/icons/hicolor/scalable/mimetypes/application-x-kdenlivetitle.svgz /app/share/icons/hicolor/scalable/mimetypes/org.kde.kdenlive-mime.svgz"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/applications/17.12.0/src/kdenlive-17.12.0.tar.xz",
                    "sha256": "d756091521efaf36251b5747fd08ce87337e7cca1e637a6e630cead8f45ac8ca"
                },
                {
                    "type": "script",
                    "dest-filename": "xine.sh",
                    "commands": [
                        "echo \"xine dummy\""
                    ]
                },
                {
                    "type": "script",
                    "dest-filename": "mkisofs.sh",
                    "commands": [
                        "echo \"mkisofs dummy\""
                    ]
                },
                {
                    "type": "script",
                    "dest-filename": "dvdauthor.sh",
                    "commands": [
                        "echo \"dvdauthor dummy\""
                    ]
                }
            ]
        }
    ]
}