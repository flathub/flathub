{
  "app-id": "com.almaarijstudios.pxjr",
  "id": "com.almaarijstudios.pxjr",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "25.08",
  "sdk": "org.freedesktop.Sdk",
  "command": "PixelJr",
  "finish-args": [
    "--share=network",
    "--share=ipc",
    "--socket=x11",
    "--socket=pulseaudio",
    "--device=dri"
  ],
  "modules": [
    {
      "name": "PixelJunior",
      "buildsystem": "simple",
      "build-commands": [
        "install -Dm755 'PixelJr' '/app/bin/PixelJr'",
        "install -Dm644 'com.almaarijstudios.pxjr.desktop' '/app/share/applications/com.almaarijstudios.pxjr.desktop'",
        "install -Dm644 'com.almaarijstudios.pxjr.png' '/app/share/icons/hicolor/512x512/apps/com.almaarijstudios.pxjr.png'",
        "install -Dm644 'com.almaarijstudios.pxjr.metainfo.xml' '/app/share/metainfo/com.almaarijstudios.pxjr.metainfo.xml'",
        "cp -r * /app/bin/"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/medhallal/PixelJr-flathub/releases/download/6.1.4/PixelJr-6.1.4-x86_64.tar.gz",
          "sha256": "0558d12c0c279254400b14ef65a4266e75f377bb8efc3b013943fb716139b14d"
        }
      ]
    }
  ]
}
