{
    "app-id": "online.athn.browser.gnome",
    "runtime": "org.gnome.Platform",
    "runtime-version": "44",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command": "reference-browser-gnome",
    "finish-args": [
        "--share=ipc",
        "--socket=wayland",
        "--socket=fallback-x11",
        "--device=dri",
        "--share=network"
    ],
    "build-options": {
        "prepend-path": "/usr/lib/sdk/rust-stable/bin",
        "build-args": [
            "--share=network"
        ],
        "env": {
            "RUST_BACKTRACE": "1"
        },
        "strip": true
    },
    "modules": [
        {
            "name": "reference-browser-gnome",
            "buildsystem": "simple",
            "build-commands": [
                "cargo build --release",
                "install -D target/release/reference-browser-gnome /app/bin/reference-browser-gnome",
                "mkdir -p /app/share/glib-2.0/schemas /app/share/applications /app/share/metainfo /app/share/icons/hicolor/scalable/apps",
                "cp src/resources/online.athn.browser.gnome.gschema.xml /app/share/glib-2.0/schemas/",
                "glib-compile-schemas /app/share/glib-2.0/schemas/",
                "cp metadata/online.athn.browser.gnome.desktop /app/share/applications/online.athn.browser.gnome.desktop",
                "cp metadata/online.athn.browser.gnome.metainfo.xml /app/share/metainfo/online.athn.browser.gnome.metainfo.xml",
                "cp metadata/online.athn.browser.gnome.svg /app/share/icons/hicolor/scalable/apps/online.athn.browser.gnome.svg"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/itzgoldenleonard/reference-browser-gnome.git",
                    "tag": "v0.1.0",
                    "commit": "7d3e7a2b5d679b234cfbd8fec5e59da6aff5db2c"
                }
            ]
        }
    ]
}
