                {
                    "name": "unarchiver",
                    "buildsystem": "simple",
                    "build-commands": [
                        "cd XADMaster && make -j $FLATPAK_BUILDER_N_JOBS -f Makefile.linux",
                        "install -Dm755 XADMaster/unar XADMaster/lsar -t /app/bin/"
