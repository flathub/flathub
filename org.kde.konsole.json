{
    "id": "org.kde.konsole",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.14",
    "sdk": "org.kde.Sdk",
    "command": "konsole",
    "rename-icon": "utilities-terminal",
    "finish-args": [
        "--device=dri",
        "--filesystem=host",
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland"
    ],
    "modules": [
        {
            "name": "konsole",
            "buildsystem": "cmake-ninja",
            "post-install": [
                "for icon_size in 16 22 32 48 64 128; do install -Dm644 data/icons/${icon_size}-utilities-terminal.png /app/share/icons/hicolor/${icon_size}x${icon_size}/apps/utilities-terminal.png; done"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/20.08.0/src/konsole-20.08.0.tar.xz",
                    "sha256": "b641bc2f66195887a25ec588b638a78a0d00e6d2d41c126bca9a45f30f70aee9"
                },
                {
                    "type": "patch",
                    "path": "oars.patch"
                }
            ]
        }
    ]
}
