{
  "id": "org.gtk.Gtk3theme.Yaru-red-dark",
  "branch": "3.22",
  "runtime": "org.freedesktop.Platform",
  "build-extension": true,
  "sdk": "org.freedesktop.Sdk",
  "runtime-version": "21.08",
  "appstream-compose": false,
  "separate-locales": false,
  "modules": [
    {
      "name": "Yaru-red-dark",
      "buildsystem": "simple",
      "build-commands": [
        "ar x yaru-gtk-theme.deb",
        "tar -xf data.tar.zst",

        "install -dm755 /usr/share/runtime/share/themes/Yaru-red-dark/gtk-3.0",
        "cp -aL usr/share/themes/Yaru-red-dark/gtk-3.0/* /usr/share/runtime/share/themes/Yaru-red-dark/gtk-3.0",
        "cp -a usr/share/themes/Yaru-red-dark/index.theme /usr/share/runtime/share/themes/Yaru-red-dark"
      ],
      "sources": [
        {
            "type": "file",
            "url": "https://launchpad.net/ubuntu/+archive/primary/+files/yaru-theme-gtk_22.04.4_all.deb",
            "dest-filename": "yaru-gtk-theme.deb",
            "sha256": "a77949122ec8121a80fafc838f9868302d76ed214a66722d99b73ef56eae5972"
        }
      ]
    },
    {
      "name": "appdata",
      "buildsystem": "simple",
      "build-commands": [
        "mkdir -p ${FLATPAK_DEST}/share/appdata",
        "cp org.gtk.Gtk3theme.Yaru-red-dark.appdata.xml ${FLATPAK_DEST}/share/appdata",
        "appstream-compose --basename=org.gtk.Gtk3theme.Yaru-red-dark --prefix=${FLATPAK_DEST} --origin=flatpak org.gtk.Gtk3theme.Yaru-red-dark"
      ],
      "sources": [
        {
          "type": "file",
          "path": "org.gtk.Gtk3theme.Yaru-red-dark.appdata.xml"
        }
      ]
  }
  ]
}
