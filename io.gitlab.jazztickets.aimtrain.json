	"command": "godot-runner",
	"modules": [
		{
			"name": "aimtrain",
			"buildsystem": "simple",
			"build-commands": [
				"install -D aimtrain-0.1.0-680c57a.pck ${FLATPAK_DEST}/bin/godot-runner.pck",
