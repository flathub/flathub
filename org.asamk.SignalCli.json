{
  "id": "org.asamk.SignalCli",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "23.08",
  "sdk": "org.freedesktop.Sdk",
  "sdk-extensions" : [ "org.freedesktop.Sdk.Extension.openjdk21" ],
  "command": "signal-cli",
  "finish-args": [
    "--own-name=org.asamk.Signal",
    "--talk-name=org.asamk.Signal",
    "--filesystem=home",
    "--share=network",
    "--share=ipc",
    "--env=PATH=/app/bin:/app/jre/bin:/usr/bin"
  ],
  "modules": [
    {
      "name" : "openjdk",
      "buildsystem" : "simple",
      "build-commands" : [ "/usr/lib/sdk/openjdk21/install.sh" ]
    },
    {
      "name": "signal-cli",
      "buildsystem": "simple",
      "build-commands": [
        "cp -r signal-cli/* /app/",
        "install -Dm644 org.asamk.SignalCli.metainfo.xml /app/share/metainfo/org.asamk.SignalCli.metainfo.xml",
        "install -Dm644 org.asamk.SignalCli.svg /app/share/icons/hicolor/scalable/apps/org.asamk.SignalCli.svg"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/AsamK/signal-cli/releases/download/v0.12.7/signal-cli-0.12.7.tar.gz",
          "dest": "signal-cli",
          "sha256": "3e862fd32ab917e19c7645b184b0de841a818df2caa949e65adcfd9971890d5d",
          "x-checker-data": {
            "type": "json",
            "url": "https://api.github.com/repos/asamk/signal-cli/releases/latest",
            "version-query": ".tag_name | sub(\"^v\"; \"\")",
            "url-query": ".assets[] | select(.name==\"signal-cli-\" + $version + \".tar.gz\") | .browser_download_url"
          }
        }, {
          "type": "file",
          "path": "org.asamk.SignalCli.metainfo.xml"
        }, {
          "type": "file",
          "path": "org.asamk.SignalCli.svg"
        }
      ]
    }
  ]
}
