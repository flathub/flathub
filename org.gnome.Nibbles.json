{
    "app-id": "org.gnome.Nibbles",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.34",
    "sdk": "org.gnome.Sdk",
    "command": "gnome-nibbles",
    "finish-args": [
        /* X11 + XShm access */
        "--share=ipc", "--socket=x11",
        /* Wayland access */
        "--socket=wayland",
        /* Sound! */
        "--socket=pulseaudio",
        /* OpenGL access */
        "--device=dri"
    ],
    "cleanup": ["/include", "/lib/*.la", "/lib/pkgconfig",
                "/share/man", "/share/vala"],
    "modules": [
        {
            "name" : "gsound",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/gsound.git",
                    "tag": "1.0.2",
                    "commit": "a86946b494aa32782b3f6334344d07b5c11d5219"
                }
            ]
        },
        {
            "name": "libgnome-games-support",
            "sources": [{
                "type": "git",
                "url": "https://gitlab.gnome.org/GNOME/libgnome-games-support.git",
                "tag": "1.4.4-correct",
                "commit": "2db73333f2094fcae071028432b29cd82574c610"
            }]
        },      
        {
            "name": "gnome-nibbles",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/GNOME/gnome-nibbles.git",
                    "tag": "3.34.0",
                    "commit": "92b554b483742cfb8eab1e548d7c95893c44aebf"
                },
                {
                    "type": "patch",
                    "path": "appdata.patch"
                }
            ]
        }
    ]
}
