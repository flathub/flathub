{
    "id" : "org.kop316.stumbler",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "49",
    "sdk" : "org.gnome.Sdk",
    "command" : "geoclue-stumbler",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
        "--own-name=org.kop316.geoclue_stumbler_http"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name": "protobuf-c",
            "buildsystem": "autotools",
            "config-opts": [
                "--disable-protoc"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/protobuf-c/protobuf-c.git",
                    "tag": "v1.5.2",
                    "commit": "4719fdd7760624388c2c5b9d6759eb6a47490626",
                    "x-checker-data": {
                        "type": "git",
                        "tag-pattern": "^v(?:(\\d+\\.){2}\\d+)$",
                        "version-scheme": "semantic"
                    }
                }
            ]
        },
        {
            "name": "libshumate",
            "buildsystem": "meson",
            "config-opts": [
                "-Ddemos=false",
                "-Dgtk_doc=false",
                "-Dvapi=false"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/libshumate/1.5/libshumate-1.5.0.1.tar.xz",
                    "sha256": "a96fe7a9637ce819da121e83e26eb533cdc78c146fa51a960bbdcad557409e58",
                    "x-checker-data": {
                        "type": "gnome",
                        "name": "libshumate"
                    }
                }
            ]
        },
        {
            "name": "geoclue-stumbler",
            "builddir": true,
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.com/kop316/geoclue-stumbler.git",
                    "tag": "1.1",
                    "x-checker-data": {
                        "type": "git",
                        "tag-pattern": "^(?:(\\d+\\.){1,2}\\d+)$"
                    }
                }
            ]
        }
    ]
}

