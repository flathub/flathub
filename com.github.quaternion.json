{
    "id": "com.github.quaternion",
    "rename-icon": "quaternion",
    "rename-desktop-file": "quaternion.desktop",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.9",
    "sdk": "org.kde.Sdk",
    "command": "quaternion",
    "finish-args": ["--share=ipc", "--share=network", "--socket=x11", "--socket=wayland", "--env=QT_QPA_PLATFORM=flatpak", "--device=dri"],

    "modules": [
        {
            "name": "quaternion",
            "cmake": true,
            "sources": [
                {
                    "type": "git",
                    "url": "git://github.com/QMatrixClient/Quaternion.git",
                    "branch": "v0.0.4",
                    "commit": "e2a6ebe0c306f35d3d6d408a93e68b5a05f2bce0"
                },
                {
                    "type": "file",
                    "path": "com.github.quaternion.appdata.xml"
                }
            ],
            "post-install": [
                "mkdir -p /app/share/appdata",
                "install -Dm644 com.github.quaternion.appdata.xml /app/share/appdata/com.github.quaternion.appdata.xml"
            ]
        }
    ]
}
