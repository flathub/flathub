  "runtime-version": "47",
  "sdk": "org.gnome.Sdk",
  "command": "io.github.josephmawa.Bella",
  "finish-args": [
    "--share=ipc",
    "--socket=fallback-x11",
    "--device=dri",
    "--socket=wayland"
