{
    "id": "org.gnome.Sdk.Extension.gtkmm4",
    "runtime": "org.gnome.Sdk",
    "sdk": "org.gnome.Sdk",
    "runtime-version": "48",
    "build-options": {
        "prefix": "/usr/lib/sdk/gtkmm4",
        "env": {
            "PKG_CONFIG_PATH": "/usr/lib/sdk/gtkmm4/lib/pkgconfig:/usr/lib/sdk/gtkmm4/share/pkgconfig",
            "CXXFLAGS": "-I/usr/lib/sdk/gtkmm4/include",
            "LDFLAGS": "-L/usr/lib/sdk/gtkmm4/lib"
        }
    },
    "cleanup": [
        "/usr/lib/sdk/gtkmm4/include",
        "/usr/lib/sdk/gtkmm4/lib/sigc++-*",
        "/usr/lib/sdk/gtkmm4/lib/cairomm-*",
        "/usr/lib/sdk/gtkmm4/lib/glibmm-*",
        "/usr/lib/sdk/gtkmm4/lib/giomm-*",
        "/usr/lib/sdk/gtkmm4/lib/pangomm-*",
        "/usr/lib/sdk/gtkmm4/lib/gtkmm-*"
    ],
    "modules": [
        {
            "name": "info",
            "buildsystem": "simple",
            "sources": [
                {
                    "type": "file",
                    "path": "org.gnome.Sdk.Extension.gtkmm4.appdata.xml"
                }
            ],
            "build-commands": [
                "mkdir -p ${FLATPAK_DEST}/share/metainfo",
                "install -Dm0644 ${FLATPAK_ID}.appdata.xml ${FLATPAK_DEST}/share/metainfo/${FLATPAK_ID}.appdata.xml"
            ]
        },
        {
            "name": "sigc_3.6",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/libsigc++/3.6/libsigc%2B%2B-3.6.0.tar.xz",
                    "sha256": "c3d23b37dfd6e39f2e09f091b77b1541fbfa17c4f0b6bf5c89baef7229080e17"
                }
            ]
        },
        {
            "name": "cairomm_1.18.0",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://www.cairographics.org/releases/cairomm-1.18.0.tar.xz",
                    "sha256": "b81255394e3ea8e8aa887276d22afa8985fc8daef60692eb2407d23049f03cfb"
                }
            ]
        },
        {
            "name": "glibmm_2.84",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/glibmm/2.84/glibmm-2.84.0.tar.xz",
                    "sha256": "56ee5f51c8acfc0afdf46959316e4c8554cb50ed2b6bc5ce389d979cbb642509"
                }
            ]
        },
        {
            "name": "pangomm_2.56.1",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/pangomm/2.56/pangomm-2.56.1.tar.xz",
                    "sha256": "539f5aa60e9bdc6b955bb448e2a62cc14562744df690258040fbb74bf885755d"
                }
            ]
        },
        {
            "name": "gtkmm_4.18",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/gtkmm/4.18/gtkmm-4.18.0.tar.xz",
                    "sha256": "2ee31c15479fc4d8e958b03c8b5fbbc8e17bc122c2a2f544497b4e05619e33ec"
                }
            ]
        }
    ]
}