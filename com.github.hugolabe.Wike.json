{
  "app-id" : "com.github.hugolabe.Wike",
  "runtime" : "org.gnome.Platform",
  "runtime-version" : "3.38",
  "sdk" : "org.gnome.Sdk",
  "command" : "wike",
  "finish-args" : [
    "--share=network",
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--socket=pulseaudio"
  ],
  "cleanup" : [
    "/include",
    "/lib/pkgconfig",
    "/man",
    "/share/doc",
    "/share/gtk-doc",
    "/share/man",
    "/share/pkgconfig",
    "*.la",
    "*.a"
  ],
  "modules" : [
  	"python3-requests.json",
    {
      "name" : "wike",
      "buildsystem" : "meson",
      "config-opts" : [
        "--libdir=lib"
      ],
      "builddir" : true,
      "sources" : [
        {
          "type" : "git",
          "url" : "https://github.com/hugolabe/Wike.git"
        }
      ]
    }
  ]
}
