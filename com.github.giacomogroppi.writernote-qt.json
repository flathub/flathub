{
  "app-id": "com.github.giacomogroppi.writernote-qt",
  "runtime": "org.kde.Platform",
  "runtime-version": "6.2",
  "sdk": "org.kde.Sdk",
  "command": "writernote",
  "rename-appdata-file": "com.github.giacomogroppi.writernote-qt.appdata.xml",
  "finish-args": [
    "--socket=x11",
    "--socket=pulseaudio",
    "--share=network",
    "--share=ipc"
  ],
  "cleanup": [
    "/lib/pkgconfig",
    "/share/man",
   "/include",
    "*.la",
    "*.a"
  ],
  "modules": [
    {
      "name": "Libzip",
      "buildsystem": "cmake-ninja",
      "config-opts": [
        "-DCMAKE_BUILD_TYPE=Release"
      ],
      "cleanup": [
        "/bin"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/nih-at/libzip.git",
          "tag": "v1.8.0",
          "commit": "26ba5523db09213f532821875542dba7afa04b65"
        }
      ]
    },
    {
      "name": "Poppler",
      "buildsystem": "cmake-ninja",
      "config-opts":[
        "-DENABLE_BOOST=OFF",
        "-DENABLE_LIBOPENJPEG=none"
      ],
      "cleanup":[
        "/bin"
      ],
      "sources":[
        {
          "type": "git",
          "url": "https://github.com/freedesktop/poppler.git",
          "tag": "poppler-22.05.0"
        }
      ]
    },
    {
      "name": "writernote",
      "buildsystem": "cmake-ninja",
      "builddir": true,
      "config-opts": [
        "-DCMAKE_BUILD_TYPE=Release",
        "-DFLATPAK_BUILD=ON",
        "-DVERSION_SNAPCRAFT=4.0.0h"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/giacomogroppi/writernote-qt",
          "commit": "3864e55d155915d4017634d272370f1cc5761266"
        }
      ]
    }
  ]
}
