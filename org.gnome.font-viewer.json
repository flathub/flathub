{
    "app-id": "org.gnome.font-viewer",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.28",
    "sdk": "org.gnome.Sdk",
    "command": "gnome-font-viewer",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--socket=wayland",
        "--talk-name=org.gtk.vfs", "--talk-name=org.gtk.vfs.*",
        "--talk-name=ca.desrt.conf", "--env=DCONF_USER_CONFIG_DIR=.config/dconf"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig", "/share/pkgconfig",
        "/share/aclocal",
        "/man", "/share/man", "/share/gtk-doc",
        "*.la", ".a",
        "/lib/girepository-1.0",
        "/share/gir-1.0",
        "/share/doc"
    ],
    "modules": [
	{
	    "name": "gnome-desktop",
	    "buildsystem": "autotools",
	    "builddir": true,
	    "config-opts": [
		"--libdir=/app/lib"
	    ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://git.gnome.org/browse/gnome-desktop",
                    "tag": "3.28.2",
                    "commit": "5c6d3bf91ef2bec24e51ed80d32a7c8155116aa1"
                }
            ]
	},
	{
	    "name": "gnome-font-viewer",
	    "buildsystem": "meson",
	    "builddir": true,
            "sources": [
                {
                    "type": "git",
                    "url": "https://git.gnome.org/browse/gnome-font-viewer",
                    "tag": "3.28.0",
                    "commit": "ff2a81f3c71f1f6a970b079e9df8fefed88d96cd"
                },
                {
                    "type": "patch",
                    "path": "0001-We-don-t-install-any-icons.patch",
                    "use-git": true
                },
                {
                    "type": "patch",
                    "path": "0001-Fix-up-appdata.patch",
                    "use-git": true
                }
            ]
	}
    ]
}
