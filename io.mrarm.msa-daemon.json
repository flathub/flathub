{
    "id": "io.mrarm.msa-daemon",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.14",
    "sdk": "org.kde.Sdk",
    "base": "io.qt.qtwebengine.BaseApp",
    "base-version": "5.14",
    "command": "msa-daemon",
    "build-options" : {
        "cflags": "-O2 -g -DNDEBUG",
        "cxxflags": "-O2 -g -DNDEBUG",
        "config-opts": [ "-DENABLE_MSA_QT_UI=ON", "-DMSA_UI_PATH_DEV=OFF", "-DCMAKE_THREAD_LIBS_INIT=-lpthread", "-DCMAKE_HAVE_THREADS_LIBRARY=1", "-DCMAKE_USE_PTHREADS_INIT=1" ]
    },
    "finish-args": [
        "--socket=x11",
        "--share=network",
        "--filesystem=host",
        "--share=ipc",
        "--device=dri"
     ],
    "modules": [
        {
            "name": "msa",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/minecraft-linux/msa-manifest.git",
                    "branch": "master"
                }
            ],
            "buildsystem": "cmake-ninja"
        },
        {
            "sources": [
                {
                    "type": "file",
                    "path": "io.mrarm.msa-daemon.metainfo.xml"
                }
            ],
            "name": "compat",
            "buildsystem": "simple",
            "build-commands": [
                "install -Dm644 io.mrarm.msa-daemon.metainfo.xml /app/share/metainfo/io.mrarm.msa-daemon.xml"
            ]
        },
        {
            "name": "cleanup-base-app",
            "buildsystem": "simple",
            "build-commands": [
                "/app/cleanup-BaseApp.sh"
            ]
        }
    ]
}
