{
    "id": "org.kde.falkon",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-21.08",
    "base": "io.qt.qtwebengine.BaseApp",
    "base-version": "5.15-21.08",
    "sdk": "org.kde.Sdk",
    "command": "falkon",
    "rename-icon": "falkon",
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--device=dri",
        "--filesystem=home",
        "--system-talk-name=org.freedesktop.GeoClue2",
        "--system-talk-name=org.freedesktop.UPower.*",
        "--talk-name=org.kde.kwalletd5",
        "--own-name=org.mpris.MediaPlayer2.*"
    ],

    "modules": [
        {
            "buildsystem": "cmake-ninja",
            "name": "falkon",
            "config-opts": [
                "-DENABLE_TESTING=OFF"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/falkon/3.1/falkon-3.1.0.tar.xz",
                    "sha256": "ce743cd80c0e2d525a784e29c9b487f73480119b0567f9ce8ef1f44cca527587"
                },
                {
                    "type": "patch",
                    "path": "0001-Add-missing-include-in-last-qt5.14.patch"
                },
                {
                    "type": "patch",
                    "path": "0001-Fix-build-with-Qt-5.15.patch"
                },
                {
                    "type": "patch",
                    "path": "0001-Add-release-and-content-rating-appdata-tags.patch"
                }
            ]
        }
    ]
}
