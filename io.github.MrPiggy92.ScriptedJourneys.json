{
  "id": "io.github.MrPiggy92.ScriptedJourneys",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "22.08",
  "sdk": "org.freedesktop.Sdk",
  "command": "wrapper.sh",
  "finish-args": [
    "--filesystem=home",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--share=ipc"
  ],
  "modules": [
    {
      "name": "ScriptedJourneys",
      "buildsystem": "simple",
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/MrPiggy92/ScriptedJourneys.git",
          "tag": "1.0.0",
          "commit": "01ac99f998d0a04fc842d2cb8b7d3a66ab0733f1"
        }
      ],
      "build-commands": [
        "mkdir -p /app/bin",
        "mkdir -p /app/lib",
        "mkdir -p /app/share/applications",
        "mkdir -p /app/share/icons/hicolor/256x256/apps",
        "mkdir -p /app/share/metainfo",
        "cp src/*.py /app/bin/",
        "cp wrapper/wrapper.sh /app/bin/",
        "chmod +x /app/bin/wrapper.sh",
        "cp wrapper/first_run.sh /app/bin/",
        "chmod +x /app/bin/first_run.sh",
        "cp -r maps /app/lib",
        "cp LICENSE /app/lib",
        "cp wrapper/io.github.MrPiggy92.ScriptedJourneys.desktop /app/share/applications",
        "cp wrapper/io.github.MrPiggy92.ScriptedJourneys.png /app/share/icons/hicolor/256x256/apps",
        "cp wrapper/io.github.MrPiggy92.ScriptedJourneys.metainfo.xml /app/share/metainfo/"
      ]
    }
  ]
}
