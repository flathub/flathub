{
  "id": "org.gtk.Gtk3theme.Layan-dark",
  "branch": "3.20",
  "runtime": "org.gnome.Sdk",
  "build-extension": true,
  "sdk": "org.gnome.Sdk",
  "runtime-version": "3.20",
  "appstream-compose": false,
  "separate-locales": false,
  "modules": [
    {
      "name": "Layan-dark",
      "buildsystem": "simple",
      "build-commands": [
        "mkdir -pm 755 /usr/share/runtime/share/themes/Layan-dark/gtk-3.0/assets",
        "cp -fr gtk-3.0/assets/* /usr/share/runtime/share/themes/Layan-dark/gtk-3.0/assets/",
        "cp gtk-3.0/gtk.css /usr/share/runtime/share/themes/Layan-dark/gtk-3.0/gtk.css"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/HeitorAugustoLN/Layan-gtk-theme-flatpak/blob/main/Layan-dark.tar.xz",
          "sha256": "3ee86ab9cb7a8cdc319623f758bf346be6f82ddef977ba19653ee33c475e5ea1"
        }
      ]
    },
    {
      "name": "appdata",
      "buildsystem": "simple",
      "build-commands": [
        "mkdir -p ${FLATPAK_DEST}/share/appdata",
        "cp org.gtk.Gtk3theme.Layan-dark.appdata.xml ${FLATPAK_DEST}/share/appdata",
        "appstream-compose --basename=org.gtk.Gtk3theme.Layan-dark --prefix=${FLATPAK_DEST} --origin=flatpak org.gtk.Gtk3theme.Layan-dark"
      ],
      "sources": [
        {
          "type": "file",
          "path": "org.gtk.Gtk3theme.Layan-dark.appdata.xml"
        }
      ]
    }
  ]
}
