{
	"app-id": "io.gitlab.hamadmarri.gamma",
	"runtime": "org.gnome.Platform",
	"runtime-version": "3.34",
	"sdk": "org.gnome.Sdk",
	"command": "gamma",
	"finish-args": [
		"--share=network",
		"--socket=x11",
		"--socket=wayland",
		"--share=ipc",
		"--talk-name=org.freedesktop.DBus.Hello",
		"--talk-name=org.a11y.*",
		"--talk-name=org.freedesktop.DBus.AddMatch",
		"--talk-name=org.freedesktop.DBus.StartServiceByName",
		"--talk-name=org.freedesktop.DBus.GetNameOwner",
		"--talk-name=org.gtk.vfs.Daemon.ListMonitorImplementations",
		"--talk-name=org.freedesktop.DBus.RemoveMatch",
		"--talk-name=org.freedesktop.DBus.RequestName",
		"--talk-name=org.freedesktop.DBus.GetId",
		"--talk-name=org.freedesktop.DBus.Properties.GetAll",
		"--talk-name=org.freedesktop.DBus.Peer.Ping",
		"--talk-name=org.gtk.Actions.DescribeAll",
		"--talk-name=org.gtk.Private.RemoteVolumeMonitor.IsSupported",
		"--talk-name=org.gtk.Private.RemoteVolumeMonitor.List",
		"--talk-name=org.gtk.vfs.MountTracker.ListMounts2",
		"--talk-name=org.gtk.vfs.MountTracker.LookupMount",
		"--talk-name=org.gtk.vfs.Daemon.GetConnection",
		"--talk-name=org.freedesktop.DBus.Error.ServiceUnknown",
		"--filesystem=host",
		"--own-name=io.gitlab.hamadmarri.gamma"
	],
	"modules": [
		{
			"name": "gtksourceview",
			"config-opts": [ "--disable-Werror" ],
			"sources": [
			{
				"type": "archive",
				"url": "https://download.gnome.org/sources/gtksourceview/4.0/gtksourceview-4.0.0.tar.xz",
				"sha256": "6e5c7a28a7fa456a89f289f0659c57100cc09fe692db6abfcc23f7ade5d5b32a"
			}
			]
		},
		{
			"name": "gamma",
			"buildsystem": "simple",
			"build-commands": [
				"./flatpak/flatpak_setup.sh",
				"install -Dm644 ${FLATPAK_ID}.metainfo.xml -t /app/share/metainfo/"
			],
			"sources": [
				{
					"type": "git",
					"url": "https://gitlab.com/hamadmarri/gamma-text-editor",
					"branch": "flatpak-0.0.2",
					"commit": "af38413e5eeff9885f81568cf7573100727f2b31"
				}
			]
		}
	]
}
