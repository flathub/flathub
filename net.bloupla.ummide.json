{
  "app-id": "net.bloupla.ummide",
  "runtime": "org.gnome.Platform",
  "runtime-version": "48",
  "sdk": "org.gnome.Sdk",
  "command": "ummide",
  "finish-args": [
    "--socket=wayland",
    "--socket=fallback-x11",
    "--device=dri",
    "--share=ipc",
    "--filesystem=xdg-documents:rw",
    "--filesystem=xdg-download:rw",
    "--filesystem=xdg-desktop:rw"
  ],
  "modules": [
    {
      "name": "noto-cjk-fonts",
      "buildsystem": "simple",
      "build-commands": [
        "mkdir -p /app/share/fonts",
        "find . -name '*.otf' -exec cp {} /app/share/fonts/ \\;"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/notofonts/noto-cjk/releases/download/Sans2.004/01_NotoSansCJK-OTF-VF.zip",
          "sha256": "d5e33aebad9f8a0c0896a4a29199ef85ca966134db164426c74e83e6f13c43cd"
        }
      ]
    },
    {
      "name": "deno",
      "buildsystem": "simple",
      "build-commands": [
        "install -Dm755 deno /app/bin/deno"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/denoland/deno/releases/download/v2.4.5/deno-x86_64-unknown-linux-gnu.zip",
          "sha256": "6f9d8115bb3df582c0c5674507e906323b680be0f0b15e735d0cd5ec6be44444",
          "only-arches": ["x86_64"]
        },
        {
          "type": "archive",
          "url": "https://github.com/denoland/deno/releases/download/v2.4.5/deno-aarch64-unknown-linux-gnu.zip",
          "sha256": "4e3e86739fe527c6891dbfa73799a5ec1b11f45898aaebf73bf3247c2e6a53dd",
          "only-arches": ["aarch64"]
        }
      ]
    },
    {
      "name": "umjunsik-lang",
      "buildsystem": "simple",
      "build-commands": [
        "mkdir -p /app/share/umjunsik-lang",
        "cp -r * /app/share/umjunsik-lang/"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/rycont/umjunsik-lang.git",
          "commit": "e973f9d22b9803ee86b53d8e60f1b65ab08c7547"
        }
      ]
    },
    {
      "name": "ummide",
      "buildsystem": "meson",
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/llaa33219/ummIDE.git",
          "tag": "1.0.0"
        }
      ]
    }
  ]
}