{
   "id":"org.gtk.Gtk3theme.Yaru-remix-dark",
   "branch":"3.22",
   "runtime":"org.freedesktop.Sdk",
   "build-extension":true,
   "sdk":"org.freedesktop.Sdk",
   "runtime-version":"19.08",
   "appstream-compose":false,
   "separate-locales":false,
   "modules":[
      {
         "name":"Yaru-remix-dark",
         "buildsystem":"simple",
         "build-commands":[
            "install -dm755 /usr/share/runtime/share/themes/Yaru-remix-dark/gtk-3.0",
            "cp -aL gtk-3.20/* /usr/share/runtime/share/themes/Yaru-remix-dark/gtk-3.0",
