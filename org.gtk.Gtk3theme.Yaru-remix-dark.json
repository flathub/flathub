         ]
      },
      {
         "name":"appdata",
         "buildsystem":"simple",
         "build-commands":[
            "mkdir -p ${FLATPAK_DEST}/share/appdata",
            "cp org.gtk.Gtk3theme.Yaru-remix-dark.appdata.xml ${FLATPAK_DEST}/share/appdata",
            "appstream-compose --basename=org.gtk.Gtk3theme.Yaru-remix-dark --prefix=${FLATPAK_DEST} --origin=flatpak org.gtk.Gtk3theme.Yaru-remix-dark"
         ],
         "sources":[
            {
               "type":"file",
               "path":"org.gtk.Gtk3theme.Yaru-remix-dark.appdata.xml"
