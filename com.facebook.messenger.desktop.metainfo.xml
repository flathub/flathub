<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>com.facebook.messenger.desktop</id>
  <name>Messenger</name>
  <summary>Desktop client for Facebook Messenger</summary>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>MIT</project_license>
  <developer id="com.github.apotenza92">
    <name>Alex Potenza</name>
  </developer>
  <description>
    <p>
      A self-contained Electron desktop app wrapping Facebook Messenger (messenger.com) 
      with native OS integrations. Built because Facebook deprecated their official desktop app.
    </p>
    <p>Features include:</p>
    <ul>
      <li>Native desktop notifications</li>
      <li>Badge count for unread messages</li>
      <li>System tray integration</li>
      <li>Auto-updates</li>
      <li>Dark mode support</li>
    </ul>
  </description>
  <launchable type="desktop-id">com.facebook.messenger.desktop.desktop</launchable>
  <url type="homepage">https://github.com/apotenza92/facebook-messenger-desktop</url>
  <url type="bugtracker">https://github.com/apotenza92/facebook-messenger-desktop/issues</url>
  <screenshots>
    <screenshot type="default">
      <image>https://raw.githubusercontent.com/apotenza92/facebook-messenger-desktop/main/docs/screenshot.png</image>
      <caption>Messenger Desktop main window</caption>
    </screenshot>
  </screenshots>
  <content_rating type="oars-1.1">
    <content_attribute id="social-chat">intense</content_attribute>
    <content_attribute id="social-audio">intense</content_attribute>
  </content_rating>
  <releases>
    <release version="0.7.6" date="2026-01-03">
      <description>
        <p>Added comprehensive Linux support including Snap and Flatpak packages.</p>
      </description>
    </release>
  </releases>
</component>
