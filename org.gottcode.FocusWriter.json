{
	"app-id": "org.gottcode.FocusWriter",
	"runtime": "org.kde.Platform",
	"runtime-version": "5.9",
	"sdk": "org.kde.Sdk",
	"command": "focuswriter",
	"rename-icon": "focuswriter",
	"rename-desktop-file": "focuswriter.desktop",
	"rename-appdata-file": "focuswriter.appdata.xml",
	"finish-args": [
		"--socket=wayland",
		"--socket=x11",
		"--filesystem=home"
	],
	"modules": [
		{
			"name": "focuswriter",
			"buildsystem": "simple",
			"sources": [
				{
					"type": "git",
					"url": "https://github.com/gottcode/focuswriter.git",
					"branch": "v1.6.7",
					"commit": "df6fa47aff6368303b75cf7f8dcc5cd0734ccfee"
				}
			],
			"build-commands": [
				"qmake -makefile PREFIX=/app",
				"make",
				"make install"
			]
		}
	]
}
