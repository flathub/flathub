{
  "id": "io.github.guillaumechereau.Goxel",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "1.6",
  "sdk": "org.freedesktop.Sdk",
  "command": "goxel",
  "rename-desktop-file": "goxel.desktop",
  "rename-icon": "goxel",
  "finish-args": [
    "--socket=wayland",
    "--socket=x11",
    "--share=ipc",
    "--device=dri"
  ],
  "cleanup": [ "/lib/cmake" ],
  "modules": [
    {
      "name": "scons",
      "cleanup": [ "*" ],
      "buildsystem": "simple",
      "build-commands": [
        "python setup.py install --prefix=/app"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "http://downloads.sourceforge.net/project/scons/scons/2.5.1/scons-2.5.1.tar.gz",
          "sha256": "0b25218ae7b46a967db42f2a53721645b3d42874a65f9552ad16ce26d30f51f2"
        }
      ]
    },
    {
        "name": "glfw",
        "buildsystem": "cmake-ninja",
        "builddir": true,
        "config-opts": [
            "-DCMAKE_BUILD_TYPE=RelWithDebInfo",
            "-DBUILD_SHARED_LIBS:BOOL=ON"
        ],
        "sources": [
            {
                "type": "archive",
                "url": "https://github.com/glfw/glfw/releases/download/3.2.1/glfw-3.2.1.zip",
                "sha256": "b7d55e13e07095119e7d5f6792586dd0849c9fcdd867d49a4a5ac31f982f7326"
            }
        ],
        "cleanup": [
            "/include",
            "/lib/pkgconfig"
        ]
    },
    {
      "name": "goxel",
      "no-autogen": true,
      "make-args": ["release"],
      "make-install-args": ["PREFIX=/app"],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/guillaumechereau/goxel/archive/735080bc352f4f388b76d6af30cac696cb4800ed.zip",
          "sha256": "6106f7debea0b39aea1fd6711770d9ee315a798fdc59fe9ada2b92b44e147d0d"
        }
      ]
    }
  ]
}
