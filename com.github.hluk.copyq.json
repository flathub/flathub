{
    "app-id": "com.github.hluk.copyq",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.9",
    "sdk": "org.kde.Sdk",
    "command": "copyq",

    "finish-args": [
        "--socket=x11",
        "--socket=wayland",
        "--talk-name=org.kde.StatusNotifierWatcher",
        "--share=ipc",
        "--device=dri"
    ],

    "modules": [
        {
            "name": "copyq",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/hluk/CopyQ.git",
                    "tag": "v3.2.0",
                    "commit": "ac9f67ee99caa072e85951ba9b6b6f89c1e0ee39"
                },
                {
                    "type": "patch",
                    "path": "fix-desktop-file-path-in-appdata.patch"
                },
                {
                    "type": "patch",
                    "path": "add-releases-section-to-appdata.patch"
                }
            ],
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release",
                "-DDESKTOP_INSTALL_NAME=com.github.hluk.copyq.desktop",
                "-DAPPDATA_INSTALL_NAME=com.github.hluk.copyq.appdata.xml",
                "-DICON_NAME=com.github.hluk.copyq"
            ]
        }
    ]
}
