{
    "id": "org.kde.klevernotes",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.7",
    "sdk": "org.kde.Sdk",
    "base": "io.qt.qtwebengine.BaseApp",
    "base-version": "6.7",
    "command": "klevernotes",
    "finish-args": [
        "--device=dri",
        "--env=QML_IMPORT_PATH=/app/qml",
        "--share=ipc",
        "--socket=wayland",
        "--socket=fallback-x11"
    ],
    "cleanup-commands": "/app/cleanup-BaseApp.sh",
    "cleanup": [ "/include" ],

    "modules": [
        {
            "name": "kirigami-addons",
            "config-opts": [
                "-DBUILD_TESTING=OFF",
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/kirigami-addons/kirigami-addons-1.4.0.tar.xz",
                    "sha256": "56e3ceb52055b5603320ea08b27d3673d32a391a8d58646d998227d8b51f0a93",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 242933,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/kirigami-addons/kirigami-addons-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "klevernotes",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/klevernotes/1.1.0/klevernotes-1.1.0.tar.xz",
                    "sha256" : "6242016254efc1e4a0e0232a8feb07a0dc99257bb0a4200c3595195321f67581",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 374699,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/klevernotes/$version/klevernotes-$version.tar.xz"
                    }
                }
            ]
        }
    ]
}
